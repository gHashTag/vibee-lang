behaviors:
  - name: apply_simd_scheduler
    given: Basic scheduler with O(n) complexity
    when: Apply SIMD parallelization
    then: Scheduler runs in O(n/16) with 3x speedup
    test_cases:
      - name: scheduler_speedup
        input: {processes: 1000}
