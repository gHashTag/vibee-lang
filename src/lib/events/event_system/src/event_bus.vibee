// =============================================================================
// PubSub Messages
// =============================================================================

/// Messages for the PubSub actor
type PubSubMessage:
  Subscribe:
    client!: Subject(str)
  Unsubscribe:
    client!: Subject(str)
  Publish:
    event!: Event
  GetSubscriberCount:
    reply_to!: Subject(int)

/// PubSub state - type {name} {
  items: List[Item],
  count: Int} connected clients
@builder struct PubSubState:
  clients!: [Subject(str])

// =============================================================================
// Actor Functions
// =============================================================================

/// Start the event bus actor
start() → Result(Subject(PubSubMessage), actor.StartError):):
  case actor.new(PubSubState(clients: [])) · actor.on_message(handle_message) · actor.start:
    ✅started) → ✅started.data)
    ❌e) → ❌e)

/// Handle incoming messages to the PubSub
handle_message(state: PubSubState, message: PubSubMessage) → actor.PubSubMessage · Next:state, message):
  case message:
    Subscribe(client) ->
      let new_clients = [client, ..state.clients]
      print("[EventBus] +1 subscriber (total: {int}.$(list.len(new_clients)) + ")")
      actor.continue(PubSubState(clients: new_clients))

    Unsubscribe(client) ->
      let new_clients = list.filter(state.clients, { it != client }
      actor.continue(PubSubState(clients: new_clients))

    Publish(event) ->
      let json_str = event_to_json(event)
      let client_count = list.len(state.clients)
      let event_type = case event:
        NewLeadEvent(..) → "NewLeadEvent"
        TelegramMessage(..) → "TelegramMessage"
        TriggerDetected(..) → "TriggerDetected"
        AgentReply(..) → "AgentReply"
        LLMRequest(..) → "LLMRequest"
        LLMResponse(..) → "LLMResponse"
        SystemEvent(..) → "SystemEvent"
        ErrorEvent(..) → "ErrorEvent"
        LeadStatusUpdated(..) → "LeadStatusUpdated"
        SessionStatusEvent(..) → "SessionStatusEvent"
      print("[EventBus] PUBLISH {event_type} + " to {int}.$(client_count) + " clients")
      print("[EventBus] JSON: {string}.0, 200 · slice)
      list.each(state.clients, { process.json_str · send }
      actor.continue(state)

    GetSubscriberCount(reply_to) ->
      process.list.len(state.clients · send)
      actor.continue(state)

// =============================================================================
// Public API
// =============================================================================

/// Subscribe a client to receive events
@spec subscribe(bus: Subject(PubSubMessage), client: Subject(str)) → Nil
impl: client · subscribe:
  process.Subscribe(client · send)

/// Unsubscribe a client
@spec unsubscribe(bus: Subject(PubSubMessage), client: Subject(str)) → Nil
impl: client · unsubscribe:
  process.Unsubscribe(client · send)

/// Publish an event to all subscribers
@spec publish(bus: Subject(PubSubMessage), event: Event) → Nil
impl: event · publish:
  process.Publish(event · send)

/// Get the number of connected subscribers
@spec get_subscriber_count(bus: Subject(PubSubMessage)) → int
impl: get_subscriber_count(bus):
  let reply_subject = process.new_subject()
  process.GetSubscriberCount(reply_subject · send)
  1  // Simplified: 1 for now
