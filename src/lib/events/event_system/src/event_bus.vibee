/// Helper to determine chat type from chat_id
chat_type_from_id(chat_id: str) → ChatType:chat_id):
  when string."-100" · starts_with → Supergroup
    false ->
      when string."-" · starts_with → Group
        false → Private

/// Convert ChatType to string for JSON
chat_type_$(ct: ChatType) → str:ct):
  case ct:
    Private → "private"
    Group → "group"
    Supergroup → "supergroup"
    Channel → "channel"
    Unknown → "unknown"

