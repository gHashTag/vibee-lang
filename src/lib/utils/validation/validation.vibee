/// Validation rule
type ValidationRule = {
  field: String,
  rules: List<ValidationRuleItem>
}

/// Validation rule item
type ValidationRuleItem = {
  type: String,
  message: String,
  params: Map<String, Value>
}

/// Validation result
type ValidationResult = {
  valid: Bool,
  errors: List<ValidationError>,
  data: Map<String, Value>
}

/// Validation error
type ValidationError = {
  field: String,
  message: String,
  value: Value
}

/// Validate data
/// @param data - Data to validate
/// @param rules - Validation rules
fn validate(data: Map<String, Value>, rules: List<ValidationRule>) -> ValidationResult

/// Validate email
/// @param email - Email address
fn is_email(email: String) -> Bool

/// Validate URL
/// @param url - URL string
fn is_url(url: String) -> Bool

/// Validate phone
/// @param phone - Phone number
fn is_phone(phone: String) -> Bool

/// Validate UUID
/// @param uuid - UUID string
fn is_uuid(uuid: String) -> Bool

/// Validate number range
/// @param value - Number value
/// @param min - Minimum
/// @param max - Maximum
fn in_range(value: Float, min: Float, max: Float) -> Bool

/// Validate string length
/// @param value - String value
/// @param min - Minimum length
/// @param max - Maximum length
fn length_between(value: String, min: Int, max: Int) -> Bool

/// Validate regex pattern
/// @param value - String value
/// @param pattern - Regex pattern
fn matches(value: String, pattern: String) -> Bool

/// Validate enum value
/// @param value - Value to check
/// @param allowed - Allowed values
fn is_enum(value: Value, allowed: List<Value>) -> Bool
