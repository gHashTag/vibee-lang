{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "VIBEE",
  "scopeName": "source.vibee",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#blocks" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hash.vibee",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.vibee",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vibee",
          "begin": "#\\[",
          "end": "\\]#"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vibee",
          "match": "\\b(agent|state|tool|on|if|else|case|match|return|emit|await|spawn|with|as|from|to|guard|test|actor|receive|reply)\\b"
        },
        {
          "name": "keyword.other.vibee",
          "match": "\\b(import|export|type|let|const|fn|pub|priv)\\b"
        },
        {
          "name": "support.type.property-name.vibee",
          "match": "^\\s*(name|version|language|module|target|description|behaviors|given|when|then|test_cases|input|expected|types|functions|params|returns|imports):"
        },
        {
          "name": "storage.type.vibee",
          "match": "\\b(String|Int|Float|Bool|List|Map|Option|Result|Nil|Any|Error|Ok)\\b"
        },
        {
          "name": "constant.language.vibee",
          "match": "\\b(true|false|nil|none|some|ok|error|!impl)\\b"
        },
        {
          "name": "support.function.builtin.vibee",
          "match": "\\b(print|debug|println)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vibee",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vibee",
              "match": "\\\\."
            },
            {
              "name": "constant.other.placeholder.vibee",
              "match": "\\{[^}]+\\}"
            }
          ]
        },
        {
          "name": "string.quoted.triple.vibee",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.other.placeholder.vibee",
              "match": "\\{[^}]+\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.vibee",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.vibee",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.vibee",
          "match": "->"
        },
        {
          "name": "keyword.operator.pipe.vibee",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.comparison.vibee",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.vibee",
          "match": "="
        },
        {
          "name": "keyword.operator.logical.vibee",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.vibee",
          "match": "\\+|-|\\*|/|%"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "entity.name.type.agent.vibee",
          "match": "(?<=agent\\s+)[A-Z][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.type.state.vibee",
          "match": "(?<=state\\s+)[A-Z][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.function.tool.vibee",
          "match": "(?<=tool\\s+)[a-z][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.function.on.vibee",
          "match": "(?<=on\\s+)[a-z][a-zA-Z0-9_]*"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.vibee",
          "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.vibee",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
