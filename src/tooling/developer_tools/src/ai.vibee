// ============================================================
// Image Generation
// ============================================================

POST @SLOW /ai/bfl/generate "Generate image using FLUX model (Black Forest Labs)"
  @Image generated: valid_prompt(prompt) → generate(prompt) → res.image_url != null
  fallback(fallback_fn: "fallback_image_generation")

  prompt: str!
  width: int?
  height: int?
  steps: int?
  guidance: flt?
  seed: int?

POST @SLOW /ai/fal/neuro-photo "Generate AI portrait photo using FAL.ai"
  @Photo generated: valid_prompt(prompt) → neuro_photo(prompt) → res.image_url != null

  prompt: str!
  style: str?
  aspect_ratio: str?

// ============================================================
// Video Generation
// ============================================================

POST @AI /ai/kling/video "Generate video from text using Kling AI"
  @Video started: valid_prompt(prompt) → create_video(prompt) → res.task_id != null
  fallback(fallback_fn: "fallback_video_generation")

  prompt: str!
  duration: int?
  aspect_ratio: str?

POST @AI /ai/kling/image-to-video "Animate image to video using Kling AI"
  @Animation started: valid_image_url(image_url) → image_to_video(image_url) → res.task_id != null

  image_url: str!
  prompt: str?
  duration: int?

POST @AI /ai/hedra/avatar "Create talking avatar video using Hedra"
  @Avatar started: valid_audio_url(audio_url) → create_avatar(audio_url) → res.job_id != null

  audio_url: str!
  image_url: str?
  aspect_ratio: str?

// ============================================================
// Audio Generation
// ============================================================

POST @FAST /ai/elevenlabs/tts "Generate speech audio using ElevenLabs TTS"
  @Audio generated: valid_text(text) → tts(text) → res.audio_url != null
  rate_limit(10)
  fallback(fallback_fn: "fallback_tts_generation")

  text: str!
  voice_id: str?
  model_id: str?
  stability: flt?
  similarity_boost: flt?

POST @SLOW /ai/elevenlabs/clone "Clone voice from audio sample"
  @Voice cloned: valid_audio_url(audio_url) → clone_voice(audio_url) → res.voice_id != null

  name: str!
  audio_url: str!
  description: str?

// ============================================================
// Image Processing
// ============================================================

POST @AI /ai/replicate/lipsync "add lipsync to video using audio"
  @Lipsync applied: valid_video_url(video_url) → lipsync(video_url) → res.output_url != null

  video_url: str!
  audio_url: str!

POST @AI /ai/replicate/faceswap "Swap faces in image or video"
  @Face swapped: valid_source_url(source_url) → faceswap(source_url) → res.output_url != null

  source_url: str!
  target_url: str!

POST @SLOW /ai/replicate/upscale "Upscale image resolution"
  @Image upscaled: valid_image_url(image_url) → upscale(image_url) → res.output_url != null

  image_url: str!
  scale: int?

// ============================================================
// Transcription
// ============================================================

POST @FAST /ai/openai/transcribe "Transcribe audio to text using OpenAI Whisper"
  @Audio transcribed: valid_audio_url(audio_url) → transcribe(audio_url) → res.text != null

  audio_url: str!
  language: str?

