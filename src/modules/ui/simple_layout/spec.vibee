name: simple_layout
plugin:
  name: simple_layout
  version: 1.0.0
  category: ui
  description: Simple layout manager (temporary replacement for YogaLayout)

behaviors:
  - name: calculate_layout
    given: List of widgets with constraints
    when: Layout calculation is requested
    then: Returns positioned widgets with x, y, width, height

  - name: flexbox_row
    given: Widgets in a row
    when: Direction is horizontal
    then: Positions widgets left to right

  - name: flexbox_column
    given: Widgets in a column
    when: Direction is vertical
    then: Positions widgets top to bottom

functions:
  - name: calculate
    signature: "calculate(widgets: List(Widget), viewport: Viewport) -> List(PositionedWidget)"
    description: Calculate layout for all widgets

  - name: position_row
    signature: "position_row(widgets: List(Widget), x: Float, y: Float, width: Float) -> List(PositionedWidget)"
    description: Position widgets in a horizontal row

  - name: position_column
    signature: "position_column(widgets: List(Widget), x: Float, y: Float, height: Float) -> List(PositionedWidget)"
    description: Position widgets in a vertical column

types:
  - name: Widget
    description: Widget before positioning
    fields:
      - name: id
        type: String
      - name: width
        type: Float
      - name: height
        type: Float
      - name: flex
        type: Float

  - name: PositionedWidget
    description: Widget after positioning
    fields:
      - name: id
        type: String
      - name: x
        type: Float
      - name: y
        type: Float
      - name: width
        type: Float
      - name: height
        type: Float

  - name: Viewport
    description: Browser viewport
    fields:
      - name: width
        type: Float
      - name: height
        type: Float

  - name: Direction
    description: Layout direction
    variants:
      - Row
      - Column
