// [TOOL 1] Инициализировать агента
tool initialize_agent(agent_name: str) -> Result(Agent, str)
  @doc "Инициализирует и запускает SWE агента"
  @auto_log
  @auto_log

  let agent = Agent {
    id: generate_agent_id(),
    name: agent_name,
    status: "idle",
    current_task: "",
    completed_tasks: 0,
    failed_tasks: 0,
    last_activity: current_timestamp()
  }

  RETURN Ok(agent)

