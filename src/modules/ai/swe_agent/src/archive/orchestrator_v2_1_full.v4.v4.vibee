type Workflow(
  name: str,
  scenario: str  // "implement_feature" | "fix_bug" | "code_review"
  status: str  // "pending" | "running" | "success" | "failed"
  steps: [WorkflowStep]
  started_at: str,
  completed_at: str,
}

type WorkflowStep(
  id: int,
  name: str,
  component: str,
  status: str  // "pending" | "running" | "success" | "failed"
  duration_ms: int,
  result: str,
  error_message: str,
}

type Agent(
  id: str,
  name: str,
  status: str  // "idle" | "working" | "error"
  current_task: str,
  completed_tasks: int,
  failed_tasks: int,
  last_activity: str,
}

type ExecutionContext(
  workflow_id: str,
  task: str,
  branch_name: str,
  files_modified: [str]
  test_results: [str]
  deployment_status: str,
  logs: [str]
}

type WorkflowMetrics(
  total_duration_ms: int,
  steps_completed: int,
  steps_failed: int,
  success_rate: float,
  bottlenecks: [str]
}

