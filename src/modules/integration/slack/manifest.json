{
  "name": "slack",
  "version": "1.0.0",
  "description": "Slack API integration for messaging, channels, and user management",
  "category": "integration",
  "depends_on": ["event"],
  "exports": [
    "SlackConfig",
    "SlackEvent",
    "SlackMessage",
    "SlackUser",
    "create_client",
    "chat_post_message",
    "chat_me_message",
    "users_info",
    "conversations_list",
    "conversations_open"
  ],
  "commands": ["slack.send", "slack.message"],
  "events": {
    "emits": ["slack.message", "slack.reaction", "slack.error"],
    "listens": []
  }
}
