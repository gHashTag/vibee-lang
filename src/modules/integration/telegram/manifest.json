{
  "name": "telegram",
  "version": "1.0.0",
  "description": "Telegram Bot API integration for sending messages, photos, and handling webhooks",
  "category": "integration",
  "depends_on": ["event"],
  "exports": [
    "TelegramConfig",
    "TelegramUpdate",
    "TelegramMessage",
    "TelegramUser",
    "TelegramChat",
    "create_bot",
    "send_message",
    "send_photo",
    "set_webhook",
    "delete_webhook",
    "webhook_info",
    "answer_callback"
  ],
  "commands": ["telegram.send", "telegram.webhook"],
  "events": {
    "emits": ["telegram.message", "telegram.callback", "telegram.error"],
    "listens": []
  }
}
