// -----------------------------------------------------------------------------
// Version Information
// -----------------------------------------------------------------------------

/// Standard library version
pub const VERSION: &str = "1.0.0"

/// Vibee language version
pub const LANG_VERSION: &str = "1.0.0"

/// Get version info
pub fn version() -> String {
    format!("Vibee Standard Library v{} (lang v{})", VERSION, LANG_VERSION)
}

