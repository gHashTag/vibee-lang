// Email Template
// =============================================================================

/// Email template with subject, text, and HTML variants
struct EmailTemplate {
    name: String
    subject_template: String
    text_template: Option<String>
    html_template: Option<String>
    layout: Option<String>
    partials: Map<String, String>
    default_vars: Map<String, Value>
    locale: Option<String>
}

impl EmailTemplate {
    fn new(name: String) -> Self {
        EmailTemplate {
            name: name,
            subject_template: "",
            text_template: None,
            html_template: None,
            layout: None,
            partials: Map.empty(),
            default_vars: Map.empty(),
            locale: None
        }
    }
    
    fn subject(template: String) -> Self { self.subject_template = template; self }
    fn text(template: String) -> Self { self.text_template = Some(template); self }
    fn html(template: String) -> Self { self.html_template = Some(template); self }
    fn layout(name: String) -> Self { self.layout = Some(name); self }
    fn partial(name: String, content: String) -> Self { self.partials.set(name, content); self }
    fn default_var(name: String, value: Value) -> Self { self.default_vars.set(name, value); self }
    fn locale(loc: String) -> Self { self.locale = Some(loc); self }
    
    /// Render template with variables
    fn render(vars: Map<String, Value>) -> Result<RenderedEmail, TemplateError> {
        let merged_vars = self.merge_vars(vars)
        let context = Value.Object(merged_vars)
        
        let subject = render_string(self.subject_template.clone(), context.clone())?
        
        let text = match self.text_template.clone() {
            Some(t) => Some(render_string(t, context.clone())?)
            None => None
        }
        
        let html = match self.html_template.clone() {
            Some(t) => {
                let rendered = render_string(t, context.clone())?
                match self.layout.clone() {
                    Some(layout_name) => Some(self.apply_layout(layout_name, rendered)?)
                    None => Some(rendered)
                }
            }
            None => None
        }
        
        Ok(RenderedEmail { subject: subject, text: text, html: html })
    }
    
    fn merge_vars(vars: Map<String, Value>) -> Map<String, Value> {
        var merged = self.default_vars.clone()
        for (k, v) in vars { merged.set(k, v) }
        merged
    }
    
    fn apply_layout(layout_name: String, content: String) -> Result<String, TemplateError> {
        match self.partials.get(layout_name) {
            Some(layout) => {
                let vars = Map.from([("content", Value.String(content))])
                render_string(layout, Value.Object(vars))
            }
            None => Ok(content)
        }
    }
    
    /// Load template from file
    fn from_file(path: String) -> Result<Self, TemplateError> {
        let content = @native("read_file", path).map_err(|e| TemplateError.IoError(e))?
        Self.parse(content)
    }
    
    /// Parse template from YAML/JSON
    fn parse(content: String) -> Result<Self, TemplateError> {
        let data: JsonValue = json.parse(content).map_err(|e| TemplateError.ParseError(e.to_string()))?
        
        let name = data.get("name").and_then(|v| v.as_string()).unwrap_or("unnamed")
        var template = Self.new(name)
        
        if let Some(s) = data.get("subject").and_then(|v| v.as_string()) { template = template.subject(s) }
        if let Some(t) = data.get("text").and_then(|v| v.as_string()) { template = template.text(t) }
        if let Some(h) = data.get("html").and_then(|v| v.as_string()) { template = template.html(h) }
        if let Some(l) = data.get("layout").and_then(|v| v.as_string()) { template = template.layout(l) }
        
        Ok(template)
    }
}

/// Rendered email content
struct RenderedEmail {
    subject: String
    text: Option<String>
    html: Option<String>
}

impl RenderedEmail {
    /// Convert to Email struct
    fn to_email() -> Email {
        var email = Email.new().subject(self.subject.clone())
        if let Some(t) = self.text.clone() { email = email.text(t) }
        if let Some(h) = self.html.clone() { email = email.html(h) }
        email
    }
}

