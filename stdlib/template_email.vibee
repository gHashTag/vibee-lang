// =============================================================================
// Helper Functions
// =============================================================================

fn render_string(template: String, context: Value) -> Result<String, TemplateError> {
    HbsTemplate.parse(template)
        .map_err(|e| TemplateError.RenderError(e.to_string()))?
        .render(context)
        .map_err(|e| TemplateError.RenderError(e.to_string()))
}

// =============================================================================
// Errors
// =============================================================================

enum TemplateError {
    NotFound(String)
    ParseError(String)
    RenderError(String)
    IoError(String)
    ValidationError(String)
}

impl Display for TemplateError {
    fn fmt(f: Formatter) {
        match self {
            NotFound(n) => f.write(format!("Template not found: {}", n))
            ParseError(e) => f.write(format!("Parse error: {}", e))
            RenderError(e) => f.write(format!("Render error: {}", e))
            IoError(e) => f.write(format!("IO error: {}", e))
            ValidationError(e) => f.write(format!("Validation error: {}", e))
        }
    }
}

impl Error for TemplateError {}

// =============================================================================
// Tests
// =============================================================================

test "email template render" {
    let template = EmailTemplate.new("test")
        .subject("Hello {{name}}")
        .text("Welcome, {{name}}!")
    
    let vars = Map.from([("name", Value.String("Alice"))])
    let rendered = template.render(vars)?
    
    assert_eq(rendered.subject, "Hello Alice")?
    assert_eq(rendered.text, Some("Welcome, Alice!"))?
}

test "template builder" {
    let template = CommonTemplates.welcome()
    let email = TemplateBuilder.new(template)
        .var_string("app_name", "MyApp")
        .var_string("user_name", "Bob")
        .from("noreply@myapp.com")
        .to("bob@example.com")
        .build()?
    
    assert(email.subject.contains("Bob"))?
    assert_eq(email.to.len(), 1)?
}

test "template registry" {
    var registry = TemplateRegistry.new()
        .register("welcome", CommonTemplates.welcome())
        .register("reset", CommonTemplates.password_reset())
    
    assert(registry.get("welcome").is_some())?
    assert(registry.get("unknown").is_none())?
}

test "common templates" {
    let welcome = CommonTemplates.welcome()
    assert_eq(welcome.name, "welcome")?
    
    let reset = CommonTemplates.password_reset()
    assert(reset.subject_template.contains("password"))?
}
