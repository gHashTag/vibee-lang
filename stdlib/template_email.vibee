// Template Registry
// =============================================================================

/// Registry for managing email templates
struct TemplateRegistry {
    templates: Map<String, EmailTemplate>
    layouts: Map<String, String>
    partials: Map<String, String>
    base_path: Option<String>
}

impl TemplateRegistry {
    fn new() -> Self {
        TemplateRegistry {
            templates: Map.empty(),
            layouts: Map.empty(),
            partials: Map.empty(),
            base_path: None
        }
    }
    
    fn base_path(path: String) -> Self { self.base_path = Some(path); self }
    
    /// Register a template
    fn register(name: String, template: EmailTemplate) -> Self {
        self.templates.set(name, template)
        self
    }
    
    /// Register a layout
    fn register_layout(name: String, content: String) -> Self {
        self.layouts.set(name, content)
        self
    }
    
    /// Register a partial
    fn register_partial(name: String, content: String) -> Self {
        self.partials.set(name, content)
        self
    }
    
    /// Get template by name
    fn get(name: String) -> Option<EmailTemplate> {
        self.templates.get(name)
    }
    
    /// Render template by name
    fn render(name: String, vars: Map<String, Value>) -> Result<RenderedEmail, TemplateError> {
        match self.templates.get(name) {
            Some(template) => {
                var t = template.clone()
                for (k, v) in self.partials { t = t.partial(k, v) }
                for (k, v) in self.layouts { t = t.partial(k, v) }
                t.render(vars)
            }
            None => Err(TemplateError.NotFound(name))
        }
    }
    
    /// Load templates from directory
    fn load_from_dir(path: String) -> Result<Self, TemplateError> {
        var registry = Self.new().base_path(path.clone())
        
        let files = @native("list_dir", path).map_err(|e| TemplateError.IoError(e))?
        for file in files {
            if file.ends_with(".json") || file.ends_with(".yaml") {
                let template = EmailTemplate.from_file(format!("{}/{}", path, file))?
                registry = registry.register(template.name.clone(), template)
            }
        }
        
        Ok(registry)
    }
    
    fn template_names() -> [String] { self.templates.keys().collect() }
    fn layout_names() -> [String] { self.layouts.keys().collect() }
}

