/// Fluent builder for creating email templates
struct TemplateBuilder {
    template: EmailTemplate
    vars: Map<String, Value>
    from: Option<Address>
    to: [Address]
    cc: [Address]
    attachments: [Attachment]
}

impl TemplateBuilder {
    fn new(template: EmailTemplate) -> Self {
        TemplateBuilder {
            template: template,
            vars: Map.empty(),
            from: None,
            to: [],
            cc: [],
            attachments: []
        }
    }
    
    fn from_registry(registry: TemplateRegistry, name: String) -> Result<Self, TemplateError> {
        match registry.get(name) {
            Some(t) => Ok(Self.new(t))
            None => Err(TemplateError.NotFound(name))
        }
    }
    
    fn var(name: String, value: Value) -> Self { self.vars.set(name, value); self }
    fn vars(map: Map<String, Value>) -> Self { for (k, v) in map { self.vars.set(k, v) } self }
    fn var_string(name: String, value: String) -> Self { self.vars.set(name, Value.String(value)); self }
    fn var_int(name: String, value: Int) -> Self { self.vars.set(name, Value.Int(value)); self }
    fn var_bool(name: String, value: Bool) -> Self { self.vars.set(name, Value.Bool(value)); self }
    
    fn from(addr: String) -> Self { self.from = Address.parse(addr).ok(); self }
    fn from_named(name: String, addr: String) -> Self { self.from = Some(Address.named(name, addr)); self }
    fn to(addr: String) -> Self { if let Ok(a) = Address.parse(addr) { self.to.push(a) } self }
    fn cc(addr: String) -> Self { if let Ok(a) = Address.parse(addr) { self.cc.push(a) } self }
    fn attach(a: Attachment) -> Self { self.attachments.push(a); self }
    
    /// Build the final email
    fn build() -> Result<Email, TemplateError> {
        let rendered = self.template.render(self.vars.clone())?
        var email = rendered.to_email()
        
        if let Some(f) = self.from.clone() { email.from = f }
        email.to = self.to.clone()
        email.cc = self.cc.clone()
        email.attachments = self.attachments.clone()
        
        Ok(email)
    }
}

