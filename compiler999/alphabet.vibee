// ОПЕРАЦИИ НАД СИМВОЛАМИ
// ═══════════════════════════════════════════════════════════════

// Получить значение символа
Ⲇ значение(символ: Ⲅ) → Ⲛ:
  Ⲑ символ Ⲋ Ⲁ..Ⲑ: символ - Ⲁ + 1
  Ⲑ символ Ⲋ Ⲓ..Ⲣ: символ - Ⲓ + 10
  Ⲑ символ Ⲋ Ⲥ..Ⳃ: символ - Ⲥ + 19

// Получить царство символа
Ⲇ царство(символ: Ⲅ) → Царство:
  Ⲑ значение(символ):
    1..9: Царство.Медное
    10..18: Царство.Серебряное
    19..27: Царство.Золотое

// Символ из значения
Ⲇ символ_из(значение: Ⲛ) → Ⲅ:
  ТРИДЕВЯТИЦА[значение - 1]

// Сложение символов (mod 27)
Ⲇ сложить(а: Ⲅ, б: Ⲅ) → Ⲅ:
  Ⲗ сумма = (значение(а) + значение(б) - 1) % 27 + 1
  символ_из(сумма)

