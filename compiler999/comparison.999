  Ⲃ: Ⲥ                  // язык
  Ⲅ: Ⲋ                  // строк лексера
  Ⲇ: Ⲋ                  // строк парсера
  Ⲉ: Ⲋ                  // строк кодогена
  Ⲋ: Ⲋ                  // всего строк
  Ⲍ: Ⲋ                  // размер алфавита
  Ⲏ: Ⲅ                  // bootstrapping?
  Ⲑ: Ⲅ                  // самоэволюция?

