// v0: Zig (оригинальный)
Ⲙ ⲨⲄⲀ: ⲨⲂ = ⲨⲂ:
  Ⲁ: Ⲁ                  // версия: v0
  Ⲃ: "Zig"              // язык: Zig
  Ⲅ: Ⲋ Ⲇ Ⲋ             // лексер: 646 строк
  Ⲇ: Ⲍ Ⲋ Ⲁ             // парсер: 761 строка
  Ⲉ: Ⲁ Ⲃ Ⲃ Ⲅ           // кодоген: 1223 строки
  Ⲋ: Ⲃ Ⲋ Ⲅ Ⲁ           // всего: 2630 строк
  Ⲍ: Ⲁ Ⲃ Ⲏ             // алфавит: 128 (ASCII)
  Ⲏ: Ⲃ                  // bootstrapping: ложь
  Ⲑ: Ⲃ                  // самоэволюция: ложь

// v1: .vibee (русские слова)
Ⲙ ⲨⲄⲂ: ⲨⲂ = ⲨⲂ:
  Ⲁ: Ⲃ                  // версия: v1
  Ⲃ: ".vibee"           // язык: .vibee
  Ⲅ: Ⲇ Ⲅ Ⲅ             // лексер: 433 строки
  Ⲇ: Ⲃ Ⲇ Ⲉ             // парсер: 245 строк
  Ⲉ: Ⲅ Ⲍ Ⲋ             // кодоген: 376 строк
  Ⲋ: Ⲁ Ⲁ Ⲉ Ⲇ           // всего: 1054 строки
  Ⲍ: Ⳃ                  // алфавит: 27 + русские слова
  Ⲏ: Ⲁ                  // bootstrapping: истина
  Ⲑ: Ⲁ                  // самоэволюция: истина

// v2: .999 (чистая Тридевятица)
Ⲙ ⲨⲄⲄ: ⲨⲂ = ⲨⲂ:
  Ⲁ: Ⲅ                  // версия: v2
  Ⲃ: ".999"             // язык: .999
  Ⲅ: Ⲁ Ⲉ Ⲉ             // лексер: 155 строк
  Ⲇ: Ⲁ Ⲁ Ⲅ             // парсер: 113 строк
  Ⲉ: Ⲁ Ⲑ Ⲇ             // кодоген: 194 строки
  Ⲋ: Ⲇ Ⲋ Ⲃ             // всего: 462 строки
  Ⲍ: Ⳃ                  // алфавит: 27 (только Тридевятица!)
  Ⲏ: Ⲁ                  // bootstrapping: истина
  Ⲑ: Ⲁ                  // самоэволюция: истина

