# ═══════════════════════════════════════════════════════════════════════════════
# BENCHMARK SUITE v29 - MiBench/PolyBench/PAS Integration
# ═══════════════════════════════════════════════════════════════════════════════
# Industry-standard benchmarks + PAS-specific scenarios
# φ² + 1/φ² = 3.0 ✅ | 33 = 3 × 11 ✅ | 999 = 3³ × 37 ✅
# ═══════════════════════════════════════════════════════════════════════════════

name: benchmark_suite_v29
version: "29.0.0"
language: zig
module: benchmark_suite

sacred_constants:
  phi: 1.618033988749895
  golden_identity: 3.0
  trinity_prime: 33
  phoenix_generations: 999

creation_pattern:
  source: BenchmarkSpec
  transformer: BenchmarkRunner
  result: BenchmarkReport

# ═══════════════════════════════════════════════════════════════════════════════
# BENCHMARK CATEGORIES
# ═══════════════════════════════════════════════════════════════════════════════

categories:
  mibench:
    description: "MiBench embedded benchmark suite"
    benchmarks:
      - basicmath
      - bitcount
      - qsort
      - susan
      - dijkstra
      - patricia
      - stringsearch
      - blowfish
      - sha
      - crc32
      - fft
      - adpcm
      
  polybench:
    description: "PolyBench/C polyhedral benchmark suite"
    benchmarks:
      - 2mm
      - 3mm
      - atax
      - bicg
      - cholesky
      - correlation
      - covariance
      - doitgen
      - durbin
      - fdtd_2d
      - floyd_warshall
      - gemm
      - gemver
      - gesummv
      - gramschmidt
      - heat_3d
      - jacobi_1d
      - jacobi_2d
      - lu
      - ludcmp
      - mvt
      - nussinov
      - seidel_2d
      - symm
      - syr2k
      - syrk
      - trisolv
      - trmm
      
  pas_suite:
    description: "PAS-specific benchmarks for TRINITY"
    benchmarks:
      - simd_softmax
      - stencil_emission
      - fitness_cache
      - hash_lookup
      - symbolic_regression
      - pattern_matching
      - sacred_verification
      - spec_parsing
      - code_generation
      - antipattern_detection

# ═══════════════════════════════════════════════════════════════════════════════
# BENCHMARK METRICS
# ═══════════════════════════════════════════════════════════════════════════════

metrics:
  time:
    unit: nanoseconds
    aggregations: [min, max, avg, median, p95, p99, stddev]
    
  memory:
    unit: bytes
    aggregations: [peak, avg, allocations]
    
  code_size:
    unit: bytes
    aggregations: [total, text, data, bss]
    
  cold_start:
    unit: nanoseconds
    description: "Time to first execution"
    
  gc_pauses:
    unit: nanoseconds
    aggregations: [total, max, count]

# ═══════════════════════════════════════════════════════════════════════════════
# COMPARISON TARGETS
# ═══════════════════════════════════════════════════════════════════════════════

comparison_targets:
  trinity_versions:
    - name: "TRINITY v29 (phoenix)"
      tag: "v29"
      is_current: true
    - name: "TRINITY v28"
      tag: "v28"
    - name: "TRINITY v27"
      tag: "v27"
    - name: "TRINITY v26"
      tag: "v26"
      
  vibeec_versions:
    - name: "vibeec current"
      path: "src/vibeec/"
    - name: "vibeec legacy"
      path: "legacy/vibeec/"
      
  competitors:
    - name: "LLVM"
      category: "Compiler Infrastructure"
    - name: "GCC"
      category: "Compiler"
    - name: "Zig"
      category: "Systems Language"
    - name: "Rust"
      category: "Systems Language"
    - name: "Go"
      category: "Systems Language"
    - name: "TinyCC"
      category: "Fast Compiler"
    - name: "V8"
      category: "JavaScript Engine"
    - name: "BEAM"
      category: "Erlang VM"
    - name: "WASM"
      category: "WebAssembly"

codegen:
  targets:
    - format: zig
      output: "generated/benchmark_suite_v29.zig"
