# AnalogicalReasoning - Relational Learning and Abstraction
# Source: Analogical reasoning research
# PAS Analysis: ALG (structure mapping), D&C (decomposition), MLS (similarity)

name: analogical_reasoning
version: "1.0.0"
language: 999
module: ⲀⲚⲀⲖⲞⲄⲒⲔⲀⲖ_ⲢⲈⲀⲤⲞⲚⲒⲚⲄ

pas_analysis:
  source_paper: "Analogical reasoning research"
  current_complexity: "O(n!) structure matching"
  theoretical_lower_bound: "O(n²) polynomial matching"
  gap: "Factorial to polynomial"
  patterns_applicable:
    - symbol: ALG
      name: "Algebraic Reorganization"
      success_rate: 0.22
      rationale: "Structure mapping theory"
    - symbol: D&C
      name: "Divide-and-Conquer"
      success_rate: 0.31
      rationale: "Decompose into relations"
    - symbol: MLS
      name: "ML-Guided Search"
      success_rate: 0.06
      rationale: "Learn similarity metrics"
    - symbol: PRE
      name: "Precomputation"
      success_rate: 0.16
      rationale: "Cache relational structures"
  confidence: 0.75
  predicted_improvement: "Human-like analogical transfer"

creation_pattern:
  source: SourceDomain
  transformer: StructureMapper
  result: TargetInference

behaviors:
  - name: structure_mapping
    given: "Source and target domains"
    when: "Find structural correspondence"
    then: "Mapping between domains"
    test_cases:
      - name: atom_solar_system
        input:
          source: "solar_system"
          target: "atom"
        expected:
          mapping: {sun: nucleus, planets: electrons}
          systematicity: true

  - name: relational_abstraction
    given: "Multiple examples"
    when: "Extract common structure"
    then: "Abstract schema"
    test_cases:
      - name: schema_induction
        input:
          examples: ["A:B::C:D", "E:F::G:H"]
          relation: "same_as"
        expected:
          schema_extracted: true
          generalization: 0.9

  - name: analogical_inference
    given: "Partial mapping"
    when: "Complete the analogy"
    then: "Inferred elements"
    test_cases:
      - name: analogy_completion
        input:
          partial: "king:queen::man:?"
        expected:
          answer: "woman"
          confidence: 0.95

  - name: far_transfer
    given: "Distant domains"
    when: "Find deep structural similarity"
    then: "Cross-domain insight"
    test_cases:
      - name: cross_domain
        input:
          source: "water_flow"
          target: "electricity"
        expected:
          mapping_found: true
          insight: "current_flow"

algorithms:
  smt:
    name: "Structure Mapping Theory"
    principles: ["systematicity", "one_to_one", "parallel_connectivity"]
    
  mac_fac:
    retrieval: "MAC (Many Are Called)"
    mapping: "FAC (Few Are Chosen)"
    
  copycat:
    slipnet: "Conceptual network"
    workspace: "Active structures"
    temperature: "Randomness control"

analogy_types:
  proportional: "A:B::C:D"
  attributional: "Shared features"
  relational: "Shared relations"
  structural: "Shared higher-order relations"

metrics:
  mapping_accuracy: 0.9
  transfer_success: 0.8
  abstraction_quality: 0.85
  far_transfer: 0.7
