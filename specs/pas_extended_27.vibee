behaviors:
  - name: "count_patterns"
    given: "Все паттерны загружены"
    when: "Подсчитываем количество"
    then: "Получаем 27 = 3³"
    test_cases:
      - name: "total_27"
        input: {}
        expected: {count: 27}

  - name: "calculate_effectiveness"
    given: "Паттерн с известной эффективностью"
    when: "Запрашиваем эффективность D&C"
    then: "Получаем 0.31"
    test_cases:
      - name: "d_and_c"
        input: {pattern: "D&C"}
        expected: {effectiveness: 0.31}

  - name: "get_literary_use"
    given: "Паттерн HRJ (Hero's Journey)"
    when: "Запрашиваем литературное применение"
    then: "Получаем 'Структура Кэмпбелла'"
    test_cases:
      - name: "hero_journey"
        input: {pattern: "HRJ"}
        expected: {literary_use: "Структура Кэмпбелла"}

  - name: "analyze_chapter"
    given: "Номер главы 999"
    when: "Анализируем применимые паттерны"
    then: "Получаем список паттернов и уверенность"
    test_cases:
      - name: "chapter_999"
        input: {chapter: 999}
        expected: {patterns_count: 5, confidence: 0.85}

