# ═══════════════════════════════════════════════════════════════════════════════
# BEHAVIORS
# ═══════════════════════════════════════════════════════════════════════════════

behaviors:
  - name: "generate_chapter_999"
    given: "Номер главы от 1 до 999"
    when: "Вызывается generate_chapter(number)"
    then: "Возвращается Chapter999 с полной структурой"
    test_cases:
      - name: "chapter_1"
        input: {number: 1}
        expected: {title_ru: "Начало пути"}
      - name: "chapter_27"
        input: {number: 27}
        expected: {sacred_simple: {n: 1, k: 3, m: 0}}
      - name: "chapter_999"
        input: {number: 999}
        expected: {sacred_full: {n: 37, k: 3, m: 0, p: 0}}

  - name: "sacred_formula_simple"
    given: "Параметры n, k, m"
    when: "Вызывается compute()"
    then: "Возвращается V = n × 3^k × π^m"
    test_cases:
      - name: "v_27"
        input: {n: 1, k: 3, m: 0}
        expected: {value: 27.0}
      - name: "v_999"
        input: {n: 37, k: 3, m: 0}
        expected: {value: 999.0}

  - name: "sacred_formula_full"
    given: "Параметры n, k, m, p"
    when: "Вызывается compute()"
    then: "Возвращается V = n × 3^k × π^m × φ^p"
    test_cases:
      - name: "v_phi"
        input: {n: 1, k: 0, m: 0, p: 1}
        expected: {value: 1.618033988749895}

  - name: "three_systems_balance"
    given: "Глава с тремя системами"
    when: "Суммируются веса систем"
    then: "Сумма равна 1.0"
    test_cases:
      - name: "balance_check"
        input: {intuition: 0.20, analysis: 0.60, synthesis: 0.20}
        expected: {sum: 1.0}

  - name: "self_hosting"
    given: "Код модуля"
    when: "Вызывается self_generate()"
    then: "F(F(x)) = F(x) — fixpoint достигнут"

