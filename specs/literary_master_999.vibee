sacred_formulas:
  simple:
    name: "Простая Священная Формула"
    formula: "V = n × 3^k × π^m"
    description: "Минимальный базис: целое + тройка + пи"
    coverage: "70% констант"
    
  full:
    name: "Полная Священная Формула"
    formula: "V = n × 3^k × π^m × φ^p"
    description: "Полный базис: + золотое сечение"
    coverage: "100% констант"

  identities:
    - name: "Золотое-Троичное тождество"
      formula: "φ² + 1/φ² = 3"
      exact: true
      
    - name: "Золотое-Пи соединение"
      formula: "φ = 2cos(π/5)"
      exact: true

