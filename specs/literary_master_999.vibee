# 18 PAS ПАТТЕРНОВ ДЛЯ ЛИТЕРАТУРЫ
# ═══════════════════════════════════════════════════════════════════════════════

pas_patterns:
  classical:
    - symbol: "D&C"
      name: "Divide-and-Conquer"
      literary_use: "Разбиение на главы, части, тома"
      example: "3 тома × 9 книг × 37 глав = 999"
      effectiveness: 0.31
      
    - symbol: "ALG"
      name: "Algebraic Reorganization"
      literary_use: "Кольцевая композиция"
      example: "Начало = Конец (странная петля)"
      effectiveness: 0.22
      
    - symbol: "PRE"
      name: "Precomputation"
      literary_use: "Foreshadowing, предзнаменования"
      example: "Чехов: Ружьё на стене"
      effectiveness: 0.16
      
    - symbol: "FDT"
      name: "Frequency Domain Transform"
      literary_use: "Ритм прозы, чередование"
      example: "Диалог → Описание → Действие"
      effectiveness: 0.13
      
    - symbol: "MLS"
      name: "ML-Guided Search"
      literary_use: "A/B тестирование текста"
      example: "Анализ читательских реакций"
      effectiveness: 0.09
      
    - symbol: "TEN"
      name: "Tensor Decomposition"
      literary_use: "Многослойность смыслов"
      example: "Буквальный + Аллегорический + Моральный"
      effectiveness: 0.06
      
    - symbol: "HSH"
      name: "Hashing"
      literary_use: "Ключевые слова, лейтмотивы"
      example: "Тридевятое как хеш-тег"
      effectiveness: 0.06
      
    - symbol: "GRD"
      name: "Greedy Local"
      literary_use: "Локальная оптимизация абзацев"
      example: "Каждое предложение — лучшее"
      effectiveness: 0.06
      
    - symbol: "AMR"
      name: "Amortization"
      literary_use: "Распределение сложности"
      example: "Простое → Сложное → Простое"
      effectiveness: 0.05
      
    - symbol: "PRB"
      name: "Probabilistic"
      literary_use: "Неожиданные повороты"
      example: "Twist endings"
      effectiveness: 0.03

  new:
    - symbol: "IOT"
      name: "IO-Aware Tiling"
      literary_use: "Chunk-based reading"
      example: "Главы по 3000 слов"
      effectiveness: 0.15
      
    - symbol: "INC"
      name: "Incremental Computation"
      literary_use: "Постепенное раскрытие"
      example: "Детектив: улики по одной"
      effectiveness: 0.14
      
    - symbol: "SSM"
      name: "State Space Model"
      literary_use: "Арка героя: 3 состояния"
      example: "Незнание → Испытание → Мудрость"
      effectiveness: 0.12
      
    - symbol: "ZCP"
      name: "Zero Copy"
      literary_use: "Прямые цитаты, интертекст"
      example: "Эпиграфы, аллюзии"
      effectiveness: 0.12
      
    - symbol: "GSP"
      name: "Gaussian Splatting"
      literary_use: "Визуальные описания"
      example: "Показывай, не рассказывай"
      effectiveness: 0.10
      
    - symbol: "EQS"
      name: "Equality Saturation"
      literary_use: "Эквивалентные формулировки"
      example: "Синонимы, парафразы"
      effectiveness: 0.08
      
    - symbol: "CSD"
      name: "Consistency Distillation"
      literary_use: "Упрощение сложного"
      example: "Метафоры для формул"
      effectiveness: 0.07
      
    - symbol: "NRO"
      name: "Neuromorphic"
      literary_use: "Эмоциональные триггеры"
      example: "Катарсис, эмпатия"
      effectiveness: 0.05

