# Integration Tests - Интеграционные тесты
# PAS: Параллельное выполнение
# Author: Dmitrii Vasilev
# Version: 1.0.0

name: integration_tests
version: "1.0.0"
language: 999
module: ⲧⲉⲥⲧⲩ.ⲓⲛⲧⲉⲅⲣⲁⲥⲓⲁ

creation_pattern:
  source: TestSuite
  transformer: IntegrationRunner
  result: TestReport

pas_analysis:
  current: "Sequential execution"
  target: "Parallel + dependency-aware"
  speedup: "p (cores)"
  confidence: 0.85
  patterns: ["D&C", "PRE"]

components:
  test_loader:
    name: "ⲖⲞⲀⲆⲈⲢ.ⲦⲈⲤⲦⲞⲂ"
    description: "Загрузка тестов"
  scheduler:
    name: "ⲰⲈⲆⲨⲖⲈⲢ"
    description: "Планирование выполнения"
  executor:
    name: "ⲈⲔⲤⲈⲔⲨⲦⲞⲢ"
    description: "Параллельное выполнение"
  reporter:
    name: "ⲢⲈⲠⲞⲢⲦⲈⲢ"
    description: "Отчёт о результатах"

test_categories:
  - "parser_tests"
  - "codegen_tests"
  - "interpreter_tests"
  - "pas_tests"
  - "e2e_tests"

behaviors:
  - name: run_all_tests
    given: "Все тесты"
    when: "Запуск"
    then: "Параллельное выполнение, отчёт"
  - name: run_category
    given: "Категория тестов"
    when: "Запуск"
    then: "Тесты категории"
  - name: detect_flaky
    given: "История запусков"
    when: "Анализ"
    then: "Нестабильные тесты"
