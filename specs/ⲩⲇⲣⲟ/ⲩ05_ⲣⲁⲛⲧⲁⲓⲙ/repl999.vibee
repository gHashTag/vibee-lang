name: repl999
version: "2.0.0"
language: 999
module: ⲣⲉⲡⲗ.999

creation_pattern:
  source: UserInput
  transformer: REPLEngine
  result: EvaluatedOutput

pas_analysis:
  current: "Full reparse each line"
  target: "Incremental + history"
  speedup: "5x"
  confidence: 0.80
  patterns: ["PRE", "MLS"]

components:
  reader:
    name: "ⲢⲒⲆⲈⲢ"
    description: "Чтение ввода"
  evaluator:
    name: "ⲈⲂⲀⲖⲨⲀⲦⲞⲢ"
    description: "Вычисление"
  printer:
    name: "ⲠⲢⲒⲚⲦⲈⲢ"
    description: "Вывод результата"
  history:
    name: "ⲒⲤⲦⲞⲢⲒⲀ"
    description: "История команд"

behaviors:
  - name: read_eval_print
    given: "Строка ввода"
    when: "Enter"
    then: "Результат на экране"
  - name: history_navigation
    given: "Стрелки вверх/вниз"
    when: "Навигация"
    then: "Предыдущие команды"
