# Doc Generator - Генератор документации
# PAS: Инкрементальная генерация
# Author: Dmitrii Vasilev
# Version: 1.0.0

name: doc_generator
version: "1.0.0"
language: 999
module: ⲇⲟⲕⲩⲙⲉⲛⲧⲁⲥⲓⲁ

creation_pattern:
  source: SourceCode
  transformer: DocGenerator
  result: Documentation

pas_analysis:
  current: "Full regeneration"
  target: "Incremental + cached"
  speedup: "n/changed"
  confidence: 0.85
  patterns: ["PRE", "D&C"]

components:
  extractor:
    name: "ⲈⲔⲤⲦⲢⲀⲔⲦⲞⲢ"
    description: "Извлечение doc-комментариев"
  renderer:
    name: "ⲢⲈⲚⲆⲈⲢⲈⲢ"
    description: "Рендеринг в HTML/MD"
  linker:
    name: "ⲖⲒⲚⲔⲈⲢ"
    description: "Связывание ссылок"
  search_index:
    name: "ⲒⲚⲆⲈⲔⲤ.ⲠⲞⲒⲤⲔⲀ"
    description: "Индекс для поиска"

output_formats:
  - "html"
  - "markdown"
  - "json"

behaviors:
  - name: generate_docs
    given: "Исходный код"
    when: "Генерация"
    then: "Документация"
  - name: extract_api
    given: "Модуль"
    when: "Извлечение"
    then: "API reference"
  - name: build_search
    given: "Документация"
    when: "Индексация"
    then: "Поисковый индекс"
