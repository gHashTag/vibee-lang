# CLI - Интерфейс командной строки
# PAS: Быстрый парсинг аргументов
# Author: Dmitrii Vasilev
# Version: 1.0.0

name: cli
version: "1.0.0"
language: 999
module: ⲕⲗⲓ

creation_pattern:
  source: CommandLineArgs
  transformer: CLIParser
  result: ParsedCommand

pas_analysis:
  current: "Linear scan"
  target: "Hash-based lookup"
  speedup: "O(1) per arg"
  confidence: 0.90
  patterns: ["HSH", "PRE"]

components:
  parser:
    name: "ⲠⲀⲢⲤⲈⲢ.ⲀⲢⲄⲞⲂ"
    description: "Парсер аргументов"
  validator:
    name: "ⲂⲀⲖⲒⲆⲀⲦⲞⲢ"
    description: "Валидация команд"
  executor:
    name: "ⲈⲔⲤⲈⲔⲨⲦⲞⲢ"
    description: "Выполнение команд"
  help:
    name: "ⲠⲞⲘⲞⲰⲒ"
    description: "Справка"

commands:
  - name: "gen"
    description: "Генерация кода из .vibee"
    args: ["spec_file", "--target", "--output"]
  - name: "build"
    description: "Сборка проекта"
    args: ["--release", "--target"]
  - name: "test"
    description: "Запуск тестов"
    args: ["--filter", "--parallel"]
  - name: "repl"
    description: "Интерактивный режим"
    args: []

behaviors:
  - name: parse_args
    given: "Аргументы командной строки"
    when: "Парсинг"
    then: "Структурированная команда"
  - name: execute_command
    given: "Распознанная команда"
    when: "Выполнение"
    then: "Результат команды"
