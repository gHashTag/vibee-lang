# СВЯЩЕННЫЕ ЧИСЛА
# ═══════════════════════════════════════════════════════════════════════════════

sacred_numbers:
  - number: 3
    meaning: "Троица, базис"
    formula: "3 = 3¹"
    
  - number: 9
    meaning: "Квадрат тройки"
    formula: "9 = 3²"
    
  - number: 27
    meaning: "Куб тройки, Тридевятое"
    formula: "27 = 3³"
    
  - number: 37
    meaning: "Простое число мудрости"
    formula: "37 — простое"
    
  - number: 333
    meaning: "Граница Медного царства"
    formula: "333 = 9 × 37"
    
  - number: 666
    meaning: "Граница Серебряного царства"
    formula: "666 = 18 × 37"
    
  - number: 999
    meaning: "Полнота, OMEGA"
    formula: "999 = 27 × 37 = 3³ × 37"

# ═══════════════════════════════════════════════════════════════════════════════
# BEHAVIORS
# ═══════════════════════════════════════════════════════════════════════════════

behaviors:
  - name: "verify_structure"
    given: "Структура книги"
    when: "Проверяем 3 × 9 × 37"
    then: "Получаем 999"
    test_cases:
      - name: "total_chapters"
        input: {}
        expected: {result: 999}

  - name: "get_volume"
    given: "Номер главы"
    when: "Определяем том"
    then: "Возвращаем 1, 2 или 3"
    test_cases:
      - name: "chapter_1"
        input: {chapter: 1}
        expected: {volume: 1}
      - name: "chapter_500"
        input: {chapter: 500}
        expected: {volume: 2}
      - name: "chapter_999"
        input: {chapter: 999}
        expected: {volume: 3}

  - name: "get_book"
    given: "Номер главы"
    when: "Определяем книгу"
    then: "Возвращаем номер книги 1-27"
    test_cases:
      - name: "chapter_37"
        input: {chapter: 37}
        expected: {book: 1}
      - name: "chapter_38"
        input: {chapter: 38}
        expected: {book: 2}

