structure:
  formula: "999 = 3 × 9 × 37 = 3³ × 37"
  
  volumes:
    count: 3
    
    volume_1:
      number: 1
      name_ru: "Медное Царство"
      name_en: "Copper Kingdom"
      color: "copper"
      theme: "Теория"
      chapters: [1, 333]
      books: [1, 9]
      
