    n: "integer coefficient"
    k: "power of 3"
    m: "power of π"
    p: "power of φ"
    
  operators:
    mutation:
      rate: 0.1
      delta: [-2, 2]
      
    crossover:
      rate: 0.3
      method: "single_point"
      
    selection:
      method: "tournament"
      size: 3
      
  fitness:
    formula: "1 / (1 + |V(genome) - target| / target)"
    target: "physical constant"
    
  parameters:
