# Universal Test Specification
# Test export to all 39 languages
# φ² + 1/φ² = 3 | PHOENIX = 999

name: universal_test
version: "1.0.0"
language: zig
module: universal_test

types:
  Point:
    fields:
      x: Float
      y: Float

  Rectangle:
    fields:
      origin: Point
      width: Float
      height: Float

  Color:
    fields:
      r: Int
      g: Int
      b: Int
      a: Int

  Shape:
    fields:
      name: String
      rect: Rectangle
      color: Color
      visible: Bool

behaviors:
  - name: create_point
    given: x and y coordinates
    when: Point creation requested
    then: New Point returned

  - name: create_rectangle
    given: origin, width, height
    when: Rectangle creation requested
    then: New Rectangle returned

  - name: calculate_area
    given: Rectangle
    when: Area calculation requested
    then: Area as Float returned

  - name: move_shape
    given: Shape and delta x, delta y
    when: Move requested
    then: Shape position updated

  - name: set_color
    given: Shape and Color
    when: Color change requested
    then: Shape color updated

  - name: toggle_visibility
    given: Shape
    when: Visibility toggle requested
    then: Visibility flipped

  - name: clone_shape
    given: Shape
    when: Clone requested
    then: Deep copy returned

  - name: destroy_shape
    given: Shape
    when: Destruction requested
    then: Resources freed
