# ═══════════════════════════════════════════════════════════════════════════════
# BEHAVIORS
# ═══════════════════════════════════════════════════════════════════════════════

behaviors:
  - name: "verify_9_folders"
    given: "Директория 999/"
    when: "Подсчитываем папки"
    then: "Получаем ровно 9"
    test_cases:
      - name: "count_9"
        input: {path: "999/"}
        expected: {folders: 9}

  - name: "verify_subfolders"
    given: "Каждая из 9 папок"
    when: "Подсчитываем подпапки"
    then: "Получаем ровно 9 в каждой"
    test_cases:
      - name: "razum_9"
        input: {path: "999/ⲣⲁⲍⲩⲙ/"}
        expected: {subfolders: 9}

  - name: "verify_999_chapters"
    given: "Папка ⲕⲛⲓⲅⲁ"
    when: "Подсчитываем главы"
    then: "Получаем 999"
    test_cases:
      - name: "total_chapters"
        input: {path: "999/ⲕⲛⲓⲅⲁ/"}
        expected: {chapters: 999}

  - name: "self_improve"
    given: "Текущее состояние системы"
    when: "Запускаем цикл самоулучшения"
    then: "Система улучшается до fixpoint"
    test_cases:
      - name: "fixpoint"
        input: {iterations: 10}
        expected: {converged: true}

