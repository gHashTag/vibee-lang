        threshold: "1%"
        overhead: "O(d²)"
        
      - name: "color_code"
        threshold: "0.1%"
        overhead: "O(d²)"

  # ═══════════════════════════════════════════════════════════════════════════
  # ИЗМЕРЕНИЕ
  # ═══════════════════════════════════════════════════════════════════════════
  measurement:
    description: "Коллапс волновой функции в определённое состояние"
    formula: "P(i) = |⟨φᵢ|Ψ⟩|²"
    
    types:
      - name: "projective"
        description: "Стандартное измерение"
        
      - name: "POVM"
        description: "Обобщённое измерение"
        
      - name: "weak"
        description: "Слабое измерение"
        
    consciousness_collapse:
      theory: "Orchestrated Objective Reduction (Orch-OR)"
      authors: ["Penrose", "Hameroff"]
      mechanism: "Quantum gravity induced collapse"

