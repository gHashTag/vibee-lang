        description: "Квантовая когерентность"
        measure: "off-diagonal density matrix elements"
        
      - name: "interference"
        description: "Квантовая интерференция"
        measure: "probability amplitude"
        
    applications:
      - name: "parallel_search"
        classical: "O(N)"
        quantum: "O(√N)"
        algorithm: "Grover"
        
      - name: "optimization"
        classical: "O(2^n)"
