        algorithm: "QAOA"

  # ═══════════════════════════════════════════════════════════════════════════
  # ЗАПУТАННОСТЬ
  # ═══════════════════════════════════════════════════════════════════════════
  entanglement:
    description: "Нелокальная корреляция между квантовыми системами"
    formula: "|Ψ⟩ = (|00⟩ + |11⟩)/√2"
    
    types:
      - name: "Bell states"
        states: ["|Φ+⟩", "|Φ-⟩", "|Ψ+⟩", "|Ψ-⟩"]
        
      - name: "GHZ states"
        formula: "(|000...0⟩ + |111...1⟩)/√2"
        
      - name: "W states"
        formula: "(|100...0⟩ + |010...0⟩ + ... + |000...1⟩)/√n"
        
    applications:
      - name: "quantum_teleportation"
        fidelity: "1.0 (perfect)"
        
      - name: "superdense_coding"
        bits_per_qubit: 2
        
      - name: "quantum_key_distribution"
        security: "information-theoretic"

  # ═══════════════════════════════════════════════════════════════════════════
  # КОГЕРЕНТНОСТЬ
  # ═══════════════════════════════════════════════════════════════════════════
  coherence:
    description: "Поддержание квантовых свойств во времени"
    formula: "ρ(t) = e^{-t/T₂} ρ(0)"
    
    decoherence_sources:
      - name: "thermal_noise"
        mitigation: "cooling"
        
      - name: "electromagnetic_interference"
        mitigation: "shielding"
        
      - name: "measurement_backaction"
        mitigation: "weak measurement"
        
