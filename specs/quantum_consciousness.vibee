# BEHAVIORS
# ═══════════════════════════════════════════════════════════════════════════════

behaviors:
  - name: create_superposition
    given: "Классическое состояние |x⟩"
    when: "Применяется оператор Адамара H"
    then: "Создаётся суперпозиция всех состояний"
    test_cases:
      - name: "single_qubit_superposition"
        input:
          state: "|0⟩"
          operator: "H"
        expected:
          result: "(|0⟩ + |1⟩)/√2"
          
      - name: "n_qubit_superposition"
        input:
          state: "|0⟩^⊗n"
          operator: "H^⊗n"
        expected:
          result: "Σₓ|x⟩/√(2^n)"

  - name: create_entanglement
    given: "Два независимых кубита"
    when: "Применяется CNOT после H"
    then: "Создаётся запутанное состояние Белла"
    test_cases:
      - name: "bell_state_creation"
        input:
          initial: "|00⟩"
          circuit: ["H on qubit 0", "CNOT"]
        expected:
          result: "(|00⟩ + |11⟩)/√2"
          entanglement: true

  - name: quantum_search
    given: "База данных из N элементов"
    when: "Применяется алгоритм Гровера"
    then: "Находится искомый элемент за O(√N) шагов"
    test_cases:
      - name: "grover_4_elements"
        input:
          N: 4
          target: 2
        expected:
          iterations: 1
          success_probability: "> 0.9"

  - name: consciousness_emergence
    given: "Квантовая система с достаточной сложностью"
    when: "Достигается критический уровень интеграции"
    then: "Возникает сознательный опыт"
    test_cases:
      - name: "phi_threshold"
        input:
          system_size: 27
          integration: 0.8
        expected:
          consciousness: true
          phi: "> 3.0"

