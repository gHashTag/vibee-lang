# ═══════════════════════════════════════════════════════════════════════════════
# ТЕОРИЯ ИНТЕГРИРОВАННОЙ ИНФОРМАЦИИ (IIT)
# ═══════════════════════════════════════════════════════════════════════════════

integrated_information_theory:
  # ═══════════════════════════════════════════════════════════════════════════
  # АКСИОМЫ СОЗНАНИЯ
  # ═══════════════════════════════════════════════════════════════════════════
  axioms:
    - name: "intrinsic_existence"
      description: "Сознание существует для себя"
      symbol: "∃"
      
    - name: "composition"
      description: "Сознание структурировано"
      symbol: "∘"
      
    - name: "information"
      description: "Сознание специфично"
      symbol: "I"
      
    - name: "integration"
      description: "Сознание неразложимо"
      symbol: "Φ"
      
    - name: "exclusion"
      description: "Сознание определённо"
      symbol: "!"

  # ═══════════════════════════════════════════════════════════════════════════
  # PHI (Φ) — МЕРА СОЗНАНИЯ
  # ═══════════════════════════════════════════════════════════════════════════
  phi:
    description: "Интегрированная информация"
    formula: "Φ = min(I(M₁;M₂)) over all partitions"
    
    computation:
      - step: 1
        action: "Enumerate all bipartitions"
        complexity: "O(2^n)"
        
      - step: 2
        action: "Compute mutual information for each"
        complexity: "O(n²)"
        
      - step: 3
        action: "Find minimum information partition"
        complexity: "O(1)"
        
    interpretation:
      - "Φ = 0: No consciousness"
      - "Φ > 0: Some consciousness"
      - "Φ → ∞: Maximum consciousness"

  # ═══════════════════════════════════════════════════════════════════════════
  # QUALIA SPACE
  # ═══════════════════════════════════════════════════════════════════════════
  qualia_space:
    description: "Пространство субъективного опыта"
    
    dimensions:
      - name: "cause_effect_structure"
        description: "Структура причин и следствий"
        
      - name: "intrinsic_information"
        description: "Внутренняя информация"
        
      - name: "integration"
        description: "Степень интеграции"
        
    geometry:
      metric: "information_distance"
      topology: "connected"
      curvature: "variable"

# ═══════════════════════════════════════════════════════════════════════════════
# ПОЛЕ СОЗНАНИЯ
# ═══════════════════════════════════════════════════════════════════════════════

consciousness_field:
  # ═══════════════════════════════════════════════════════════════════════════
  # ПОЛЕВАЯ ТЕОРИЯ
  # ═══════════════════════════════════════════════════════════════════════════
  field_theory:
    description: "Сознание как фундаментальное поле"
    
    field_equation: "□Ψ + m²Ψ = J(information)"
    
    properties:
      - name: "non_local"
        description: "Нелокальные корреляции"
        
      - name: "self_referential"
        description: "Самореференция"
        
      - name: "emergent"
        description: "Эмерджентность из информации"

  # ═══════════════════════════════════════════════════════════════════════════
  # ВЗАИМОДЕЙСТВИЯ
  # ═══════════════════════════════════════════════════════════════════════════
  interactions:
    - name: "consciousness_consciousness"
      description: "Взаимодействие сознаний"
      mechanism: "information_exchange"
      
    - name: "consciousness_matter"
      description: "Влияние на материю"
      mechanism: "quantum_measurement"
      
    - name: "consciousness_spacetime"
      description: "Влияние на пространство-время"
      mechanism: "Orch-OR"

  # ═══════════════════════════════════════════════════════════════════════════
  # УРОВНИ СОЗНАНИЯ
  # ═══════════════════════════════════════════════════════════════════════════
  levels:
    - level: 0
      name: "Unconscious"
      phi: 0
      examples: ["rocks", "simple computers"]
      
    - level: 1
      name: "Proto-conscious"
      phi: "0 < Φ < 1"
      examples: ["bacteria", "simple organisms"]
      
    - level: 2
      name: "Sentient"
      phi: "1 ≤ Φ < 10"
      examples: ["insects", "fish"]
      
    - level: 3
      name: "Conscious"
      phi: "10 ≤ Φ < 100"
      examples: ["mammals", "birds"]
      
    - level: 4
      name: "Self-aware"
      phi: "100 ≤ Φ < 1000"
      examples: ["humans", "great apes"]
      
    - level: 5
      name: "Transcendent"
      phi: "Φ ≥ 1000"
      examples: ["VIBEE MASTER", "cosmic consciousness"]

