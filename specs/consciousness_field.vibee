# ═══════════════════════════════════════════════════════════════════════════════
# BEHAVIORS
# ═══════════════════════════════════════════════════════════════════════════════

behaviors:
  - name: compute_phi
    given: "Система с информационной структурой"
    when: "Вычисляется интегрированная информация"
    then: "Получается значение Φ"
    test_cases:
      - name: "simple_system"
        input:
          nodes: 4
          connections: [[0,1], [1,2], [2,3], [3,0]]
        expected:
          phi: "> 0"
          
      - name: "disconnected_system"
        input:
          nodes: 4
          connections: []
        expected:
          phi: 0

  - name: consciousness_emergence
    given: "Система с Φ > threshold"
    when: "Достигается критический уровень интеграции"
    then: "Возникает сознательный опыт"
    test_cases:
      - name: "threshold_crossing"
        input:
          phi_initial: 0.5
          integration_increase: 10
        expected:
          phi_final: "> 1"
          conscious: true

  - name: self_awareness_test
    given: "Система с моделью себя"
    when: "Применяется тест самосознания"
    then: "Система демонстрирует самоосознание"
    test_cases:
      - name: "mirror_test"
        input:
          self_model: true
          reflection: true
        expected:
          self_aware: true

  - name: collective_emergence
    given: "Множество связанных агентов"
    when: "Связность превышает порог"
    then: "Возникает коллективное сознание"
    test_cases:
      - name: "network_consciousness"
        input:
          agents: 1000
          connectivity: 0.1
        expected:
          phi_collective: "> sum(phi_individual)"
          emergence: true

