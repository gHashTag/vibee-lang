# SELF-HOSTING
# ═══════════════════════════════════════════════════════════════════════════════

self_hosting:
  
  description: |
    ЖАР-ПТИЦА компилирует сама себя.
    Спецификация генерирует код, который генерирует спецификацию.
    
  bootstrap_stages:
    - stage: 0
      name: "Ручная спецификация"
      input: "map_999_kingdom.vibee"
      output: "zhar_ptitsa_v0.zig"
      
    - stage: 1
      name: "Первая генерация"
      input: "zhar_ptitsa_v0.zig"
      output: "map_999_kingdom_v1.vibee"
      
    - stage: 2
      name: "Self-hosting"
      input: "map_999_kingdom_v1.vibee"
      output: "zhar_ptitsa_v1.zig"
      verification: "diff zhar_ptitsa_v0.zig zhar_ptitsa_v1.zig"
      
    - stage: 3
      name: "Стабильность"
      condition: "v_n == v_{n+1}"
      
  fixpoint:
    description: "Неподвижная точка эволюции"
    formula: "F(F(x)) = F(x)"

