behaviors:
  - name: reconstruct_dynamic_scene
    given: "Multi-view video sequence"
    when: "4D reconstruction requested"
    then: "Returns temporal Gaussian representation"
    
  - name: render_spacetime_view
    given: "Scene, camera pose, and timestamp"
    when: "Novel spacetime view requested"
    then: "Renders photorealistic dynamic view"
    
  - name: track_deformations
    given: "Temporal sequence"
    when: "Motion tracking requested"
    then: "Returns dense correspondence field"

test_cases:
