# VIBEE Specification v15910
# Neural Coding - Information in spike trains
name: neural_coding_v15910
version: "1.0.0"
language: zig
module: neural_coding

types:
  SpikeCode:
    fields:
      rate_code: String
      temporal_code: String
      population_code: String

  TuningCurve:
    fields:
      stimulus_values: String
      firing_rates: String
      preferred_stimulus: Float

  NeuralInformation:
    fields:
      mutual_info: Float
      noise_entropy: Float
      signal_entropy: Float

  CodingResult:
    fields:
      code_type: String
      efficiency: Float
      redundancy: Float

behaviors:
  - name: estimate_tuning
    given: Spikes and stimuli
    when: Estimation done
    then: Returns tuning curve

  - name: decode_stimulus
    given: Spike train
    when: Decoding done
    then: Returns stimulus estimate

  - name: compute_neural_info
    given: Spikes and stimuli
    when: Computation done
    then: Returns neural information

  - name: analyze_coding
    given: Neural data
    when: Analysis done
    then: Returns coding result
