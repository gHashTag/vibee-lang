name: locomotion_v17260
version: "1.0.0"
language: zig
module: locomotion

types:
  Gait:
    fields:
      gait_type: String
      phase_pattern: String
      speed: Float

  TerrainModel:
    fields:
      surface_type: String
      obstacles: String
      slope: Float

  LocomotionPlan:
    fields:
      gait: String
      footsteps: String
      trajectory: String

  LocomotionResult:
    fields:
      position: String
      stability: Float
      energy: Float

behaviors:
  - name: select_gait
    given: Terrain and speed
    when: Gait selection
    then: Return appropriate gait

  - name: plan_footsteps
    given: Goal and terrain
    when: Footstep planning
    then: Return footstep sequence

  - name: balance_control
    given: Current state
    when: Balance maintenance
    then: Return stabilizing actions
