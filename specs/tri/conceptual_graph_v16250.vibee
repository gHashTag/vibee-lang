name: conceptual_graph_v16250
version: "1.0.0"
language: zig
module: conceptual_graph

types:
  ConceptNode:
    fields:
      concept_type: String
      referent: String

  RelationNode:
    fields:
      relation_type: String
      arity: Int

  ConceptualGraph:
    fields:
      concepts: String
      relations: String
      arcs: String

  CGOperation:
    fields:
      operation_type: String
      operands: String

behaviors:
  - name: join_graphs
    given: Two conceptual graphs
    when: Find common concepts
    then: Return joined graph

  - name: project_graph
    given: Graph and pattern
    when: Subgraph matching
    then: Return projection

  - name: generalize_graph
    given: Conceptual graph
    when: Type hierarchy ascent
    then: Return generalized graph
