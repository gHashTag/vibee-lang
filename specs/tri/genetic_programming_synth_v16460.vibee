name: genetic_programming_synth_v16460
version: "1.0.0"
language: zig
module: genetic_programming_synth

types:
  GPTree:
    fields:
      root: String
      nodes: String
      depth: Int

  GPPopulation:
    fields:
      individuals: String
      generation: Int
      best_fitness: Float

  GPOperator:
    fields:
      operator_type: String
      probability: Float

  GPSynthResult:
    fields:
      best_program: String
      fitness: Float
      generations: Int

behaviors:
  - name: evolve_population
    given: Population and fitness function
    when: Selection and variation
    then: Return next generation

  - name: crossover_trees
    given: Two parent trees
    when: Subtree exchange
    then: Return offspring

  - name: mutate_tree
    given: Tree and mutation rate
    when: Random modification
    then: Return mutated tree
