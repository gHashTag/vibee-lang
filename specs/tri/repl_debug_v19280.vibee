name: repl_debug_v19280
version: "1.0.0"
language: zig
module: repl_debug_v19280

types:
  DebugState:
    fields:
      breakpoints: List<String>
      watch_vars: List<String>
      step_mode: Bool
      paused: Bool

  DebugResult:
    fields:
      location: String
      variables: Map<String,String>
      call_stack: List<String>

behaviors:
  - name: debug_break
    given: "Breakpoint hit"
    when: "REPL pauses"
    then: "Returns debug state"

  - name: debug_step
    given: "Step command"
    when: "REPL steps"
    then: "Returns next state"

  - name: debug_inspect
    given: "Variable name"
    when: "REPL inspects"
    then: "Returns variable value"
