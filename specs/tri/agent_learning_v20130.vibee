name: agent_learning_v20130
version: "1.0.0"
language: zig
module: agent_learning_v20130

types:
  LearningState:
    fields:
      experience: List<String>
      policy: String
      reward_history: List<Float>

  LearningResult:
    fields:
      improved: Bool
      new_policy: String
      performance_gain: Float

behaviors:
  - name: learn_from_feedback
    given: "Action and reward"
    when: "Agent updates policy"
    then: "Returns improved policy"

  - name: learn_from_demonstration
    given: "Expert trajectory"
    when: "Agent imitates"
    then: "Returns learned behavior"

  - name: learn_meta
    given: "Multiple tasks"
    when: "Agent learns to learn"
    then: "Returns meta-learner"
