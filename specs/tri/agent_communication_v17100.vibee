name: agent_communication_v17100
version: "1.0.0"
language: zig
module: agent_communication

types:
  Message:
    fields:
      sender: String
      receiver: String
      performative: String
      content: String
      timestamp: Int

  Protocol:
    fields:
      name: String
      roles: String
      messages: String
      constraints: String

  Conversation:
    fields:
      id: String
      participants: String
      history: String
      state: String

  CommunicationResult:
    fields:
      success: Bool
      response: String
      understanding: Float

behaviors:
  - name: send_message
    given: Message and channel
    when: Transmit message
    then: Deliver to receiver

  - name: interpret_message
    given: Received message
    when: Parse and understand
    then: Return interpretation

  - name: negotiate
    given: Agents and goal
    when: Multi-round dialogue
    then: Return agreement or failure
