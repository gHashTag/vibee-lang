# vibe_context_v12885.vibee - Контекст вайбкодинга
# Умный контекст для AI
# φ² + 1/φ² = 3 | PHOENIX = 999

name: vibe_context_v12885
version: "12885.0.0"
language: zig
module: vibe_context_v12885

types:
  VibeContext:
    fields:
      context_id: String
      open_files: List
      recent_edits: List
      cursor_context: Object
      project_info: Object

  ContextWindow:
    fields:
      window_id: String
      tokens: Int
      content: String
      relevance_score: Float

  ContextSource:
    fields:
      source_type: String
      path: String
      content: String
      priority: Int

  ContextConfig:
    fields:
      max_tokens: Int
      include_imports: Bool
      include_tests: Bool
      include_docs: Bool

  ContextMetrics:
    fields:
      tokens_used: Int
      sources_included: Int
      relevance_avg: Float

behaviors:
  - name: build_context
    given: ContextConfig
    when: Context building
    then: Return VibeContext

  - name: rank_sources
    given: ContextSource list
    when: Ranking
    then: Return ranked sources

  - name: extract_relevant
    given: Query and sources
    when: Extraction
    then: Return ContextWindow

  - name: update_context
    given: Edit event
    when: Update
    then: Return updated context

  - name: compress_context
    given: VibeContext
    when: Compression
    then: Return compressed context

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
