name: omega_config_v20060
version: "1.0.0"
language: zig
module: omega_config_v20060

types:
  OmegaConfig:
    fields:
      environment: String
      features: Map<String,String>
      limits: Map<String,String>
      secrets: Map<String,String>

  ConfigSource:
    fields:
      source_type: String
      path: String
      priority: Int

behaviors:
  - name: config_load
    given: "Config sources"
    when: "Loader loads"
    then: "Returns merged config"

  - name: config_validate
    given: "Configuration"
    when: "Validator validates"
    then: "Returns validation result"

  - name: config_watch
    given: "Watch request"
    when: "Watcher watches"
    then: "Monitors config changes"
