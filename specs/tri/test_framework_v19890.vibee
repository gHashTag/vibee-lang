name: test_framework_v19890
version: "1.0.0"
language: zig
module: test_framework_v19890

types:
  TestFramework:
    fields:
      core: String
      assertions: String
      suite: String
      mocks: String
      fixtures: String
      coverage: String
      property: String
      benchmark: String
      reporter: String

  FrameworkStats:
    fields:
      tests_run: Int
      tests_passed: Int
      coverage_percent: Float
      avg_duration_ms: Int

behaviors:
  - name: framework_init
    given: "Framework startup"
    when: "Test framework starts"
    then: "Returns ready framework"

  - name: framework_run_all
    given: "Run all request"
    when: "Framework runs all"
    then: "Returns all results"

  - name: framework_stats
    given: "Stats request"
    when: "Framework reports stats"
    then: "Returns framework stats"
