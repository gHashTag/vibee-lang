name: logic_programming_v16610
version: "1.0.0"
language: zig
module: logic_programming

types:
  Term:
    fields:
      term_type: String
      value: String
      arguments: String

  Clause:
    fields:
      head: String
      body: String

  Query:
    fields:
      goals: String

  LPResult:
    fields:
      success: Bool
      bindings: String
      alternatives: Int

behaviors:
  - name: unify_terms
    given: Two terms
    when: Unification algorithm
    then: Return MGU or failure

  - name: resolve_query
    given: Query and program
    when: SLD resolution
    then: Return solutions

  - name: cut_execution
    given: Choice points
    when: Prune search
    then: Commit to current branch
