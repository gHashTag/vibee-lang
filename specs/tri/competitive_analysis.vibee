# Competitive Analysis Specification
# AI Hardware Market Competitors
# Author: Dmitrii Vasilev

name: competitive_analysis
version: "1.0.0"
language: zig
module: competitive_analysis

types:
  AIChipCompany:
    fields:
      name: String
      valuation: String
      revenue: String
      architecture: String
      is_binary: Bool
      founded_year: Int
      employees: Int
      funding_total: String

  CompetitiveAdvantage:
    fields:
      category: String
      trinity_score: Int
      competitor_score: Int
      explanation: String

  MarketPosition:
    fields:
      company: String
      performance_axis: Float
      cost_axis: Float
      quadrant: String

behaviors:
  - name: analyze_cerebras
    given: Cerebras wafer-scale chip data
    when: Compare architecture approach
    then: Return competitive analysis showing binary limitation

  - name: analyze_groq
    given: Groq LPU architecture data
    when: Compare inference speed claims
    then: Return analysis showing ternary advantage

  - name: analyze_sambanova
    given: SambaNova dataflow architecture
    when: Compare flexibility claims
    then: Return analysis showing native ternary benefit

  - name: analyze_nvidia
    given: NVIDIA GPU dominance data
    when: Compare market position
    then: Return disruption opportunity analysis

  - name: analyze_google_tpu
    given: Google TPU specifications
    when: Compare cloud integration
    then: Return open vs closed ecosystem analysis

  - name: calculate_trinity_moat
    given: All competitor data
    when: Assess competitive moat
    then: Return moat strength score and factors

  - name: generate_comparison_matrix
    given: All companies and metrics
    when: Create visual comparison
    then: Return formatted comparison table

  - name: identify_market_gaps
    given: Competitor weaknesses
    when: Find opportunities
    then: Return list of exploitable gaps
