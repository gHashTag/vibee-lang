name: test_suite_v19820
version: "1.0.0"
language: zig
module: test_suite_v19820

types:
  TestSuite:
    fields:
      name: String
      tests: List<String>
      setup: String
      teardown: String

  SuiteResult:
    fields:
      total: Int
      passed: Int
      failed: Int
      skipped: Int
      duration_ms: Int

behaviors:
  - name: suite_run
    given: "Test suite"
    when: "Runner runs suite"
    then: "Returns suite result"

  - name: suite_setup
    given: "Setup function"
    when: "Runner sets up"
    then: "Prepares test environment"

  - name: suite_teardown
    given: "Teardown function"
    when: "Runner tears down"
    then: "Cleans up environment"
