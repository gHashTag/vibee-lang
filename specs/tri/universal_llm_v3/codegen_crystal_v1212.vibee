name: codegen_crystal_v1212
version: "1.0.0"
language: zig
module: codegen_crystal_v1212

types:
  CodeUnit:
    fields:
      name: String
      imports: List<String>
      code: String

  FunctionDef:
    fields:
      name: String
      params: List<String>
      body: String

behaviors:
  - name: generate_code
    given: VIBEE spec
    when: Code generation
    then: Returns crystal code

  - name: generate_function
    given: VIBEE behavior
    when: Function generation
    then: Returns crystal function

  - name: phi_constants
    given: Sacred values
    when: Constants needed
    then: Returns phi constants
