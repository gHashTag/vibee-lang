name: codegen_haxe_v1219
version: "1.0.0"
language: zig
module: codegen_haxe_v1219

types:
  CodeUnit:
    fields:
      name: String
      imports: List<String>
      code: String

  FunctionDef:
    fields:
      name: String
      params: List<String>
      body: String

behaviors:
  - name: generate_code
    given: VIBEE spec
    when: Code generation
    then: Returns haxe code

  - name: generate_function
    given: VIBEE behavior
    when: Function generation
    then: Returns haxe function

  - name: phi_constants
    given: Sacred values
    when: Constants needed
    then: Returns phi constants
