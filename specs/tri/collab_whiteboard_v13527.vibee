# VIBEE Specification v13527
# Whiteboard
# KOSCHEI CYCLE 11 - 1000000x SPEEDUP

name: collab_whiteboard
version: "13527"
language: zig
module: collab_whiteboard

types:
  Whiteboard:
    fields:
      id: String
      name: String
      elements: List<Object>
      background: String

  WhiteboardElement:
    fields:
      id: String
      element_type: String
      position: Object
      properties: Object
      created_by: String

  DrawingElement:
    fields:
      points: List<Object>
      stroke_color: String
      stroke_width: Int
      fill_color: String

  TextElement:
    fields:
      text: String
      font_size: Int
      font_family: String
      color: String

  WhiteboardConfig:
    fields:
      canvas_size: Object
      grid_enabled: Bool
      snap_to_grid: Bool

  WhiteboardMetrics:
    fields:
      elements_created: Int
      collaborators: Int
      edits_total: Int

behaviors:
  - name: create_whiteboard
    given: Whiteboard configuration
    When: Creation requested
    then: Whiteboard created

  - name: add_element
    given: Element to add
    When: Add requested
    then: Element added

  - name: update_element
    given: Element ID and changes
    When: Update requested
    then: Element updated

  - name: delete_element
    given: Element ID
    When: Delete requested
    then: Element deleted

  - name: move_element
    given: Element ID and position
    When: Move requested
    then: Element moved

  - name: export_whiteboard
    given: Export format
    When: Export requested
    then: Whiteboard exported

creation_pattern:
  source: WhiteboardConfig
  transformer: WhiteboardManager
  result: Whiteboard
