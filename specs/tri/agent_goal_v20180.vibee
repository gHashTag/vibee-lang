name: agent_goal_v20180
version: "1.0.0"
language: zig
module: agent_goal_v20180

types:
  Goal:
    fields:
      description: String
      priority: Int
      deadline: Timestamp
      subgoals: List<String>

  GoalResult:
    fields:
      achieved: Bool
      progress: Float
      blockers: List<String>

behaviors:
  - name: goal_decompose
    given: "High-level goal"
    when: "Agent decomposes"
    then: "Returns subgoals"

  - name: goal_prioritize
    given: "Multiple goals"
    when: "Agent prioritizes"
    then: "Returns ordered goals"

  - name: goal_track
    given: "Active goal"
    when: "Agent tracks progress"
    then: "Returns progress report"
