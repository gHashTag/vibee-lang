# VIBEE THEORY OF MIND v11080
# φ² + 1/φ² = 3 | PHOENIX = 999

name: theory_of_mind_v11080
version: "11080.0.0"
language: zig
module: theory_of_mind

types:
  MentalState:
    fields:
      state_id: String
      agent_id: String
      state_type: String
      content: String
      confidence: Float

  BeliefModel:
    fields:
      belief_id: String
      agent_id: String
      proposition: String
      truth_value: Bool
      certainty: Float

  DesireModel:
    fields:
      desire_id: String
      agent_id: String
      goal: String
      intensity: Float
      priority: Int

  IntentionModel:
    fields:
      intention_id: String
      agent_id: String
      planned_action: String
      commitment_level: Float

  EmotionAttribution:
    fields:
      attribution_id: String
      agent_id: String
      emotion: String
      cause: String
      intensity: Float

  PerspectiveTaking:
    fields:
      perspective_id: String
      self_view: String
      other_view: String
      divergence: Float

  FalseBeliefTask:
    fields:
      task_id: String
      scenario: String
      agent_belief: String
      reality: String
      prediction: String

  MindReading:
    fields:
      reading_id: String
      target_agent: String
      inferred_states: List<MentalState>
      evidence: List<String>

  SocialPrediction:
    fields:
      prediction_id: String
      agent_id: String
      predicted_action: String
      reasoning: String
      confidence: Float

  ToMMetrics:
    fields:
      belief_accuracy: Float
      desire_accuracy: Float
      intention_accuracy: Float
      false_belief_pass_rate: Float

behaviors:
  - name: infer_belief
    given: "Agent behavior and context"
    when: "Belief inference requested"
    then: "Returns belief model"

  - name: infer_desire
    given: "Agent behavior"
    when: "Desire inference requested"
    then: "Returns desire model"

  - name: infer_intention
    given: "Agent actions"
    when: "Intention inference requested"
    then: "Returns intention model"

  - name: attribute_emotion
    given: "Agent expression"
    when: "Emotion attribution requested"
    then: "Returns emotion attribution"

  - name: take_perspective
    given: "Situation and agent"
    when: "Perspective taking requested"
    then: "Returns perspective taking"

  - name: solve_false_belief
    given: "False belief task"
    when: "Solution requested"
    then: "Returns prediction"

  - name: read_mind
    given: "Target agent"
    when: "Mind reading requested"
    then: "Returns mind reading"

  - name: predict_social_action
    given: "Agent and situation"
    when: "Prediction requested"
    then: "Returns social prediction"

  - name: simulate_other_mind
    given: "Agent model"
    when: "Simulation requested"
    then: "Returns simulated mental states"

  - name: measure_tom
    given: "ToM evaluation"
    when: "Metrics requested"
    then: "Returns ToM metrics"
