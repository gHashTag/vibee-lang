name: agent_reasoning_v20100
version: "1.0.0"
language: zig
module: agent_reasoning_v20100

types:
  ReasoningState:
    fields:
      context: String
      hypotheses: List<String>
      confidence: Float
      depth: Int

  ReasoningResult:
    fields:
      conclusion: String
      evidence: List<String>
      certainty: Float

behaviors:
  - name: reason_deductive
    given: "Premises and rules"
    when: "Agent applies deduction"
    then: "Returns logical conclusion"

  - name: reason_inductive
    given: "Observations"
    when: "Agent generalizes"
    then: "Returns hypothesis"

  - name: reason_abductive
    given: "Observation"
    when: "Agent infers best explanation"
    then: "Returns most likely cause"
