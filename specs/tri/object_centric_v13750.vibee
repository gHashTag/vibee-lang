# VIBEE Specification v13750
# Object-Centric Learning - Structured object representations
name: object_centric_v13750
version: "1.0.0"
language: zig
module: object_centric

types:
  SlotType:
    fields:
      slot_attention: String
      monet: String
      genesis: String
      dinosaur: String

  ObjectSlot:
    fields:
      slot_id: Int
      features: String
      mask: String
      position: String

  SceneDecomposition:
    fields:
      slots: String
      num_objects: Int
      background: String

  ObjectInteraction:
    fields:
      object_a: Int
      object_b: Int
      relation: String

  ObjectConfig:
    fields:
      num_slots: Int
      slot_dim: Int
      num_iterations: Int

behaviors:
  - name: decompose_scene
    given: Image input
    when: Decomposition done
    then: Returns scene decomposition

  - name: track_objects
    given: Video frames
    when: Tracking done
    then: Returns object trajectories

  - name: predict_interactions
    given: Object slots
    when: Prediction done
    then: Returns object interactions

  - name: compose_scene
    given: Object slots
    when: Composition done
    then: Returns reconstructed image
