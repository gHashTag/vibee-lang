name: repl_multiline_v19240
version: "1.0.0"
language: zig
module: repl_multiline_v19240

types:
  MultilineBuffer:
    fields:
      lines: List<String>
      cursor_line: Int
      cursor_col: Int
      complete: Bool

  MultilineResult:
    fields:
      text: String
      line_count: Int
      is_complete: Bool

behaviors:
  - name: multiline_start
    given: "Incomplete expression"
    when: "REPL detects continuation"
    then: "Enters multiline mode"

  - name: multiline_add
    given: "Additional line"
    when: "User continues input"
    then: "Appends to buffer"

  - name: multiline_complete
    given: "Complete expression"
    when: "REPL detects end"
    then: "Returns full expression"
