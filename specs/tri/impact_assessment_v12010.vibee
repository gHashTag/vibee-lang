name: impact_assessment_v12010
version: "12010"
language: zig
module: impact_assessment

description: |
  TIER 285: Impact Assessment
  Assesses AI system impacts
  Based on: DPIA, AIA, HRIA

types:
  AssessmentConfig:
    fields:
      assessment_type: AssessmentType
      scope: String
      include_stakeholders: Bool

  AssessmentType:
    variants:
      - dpia
      - aia
      - hria
      - environmental
      - comprehensive

  ImpactAssessment:
    fields:
      assessment_id: String
      system_name: String
      impacts: List<String>
      risks: List<String>
      mitigations: List<String>
      overall_rating: String

  Impact:
    fields:
      impact_id: String
      category: String
      affected_groups: List<String>
      severity: Int
      likelihood: Float

behaviors:
  - name: conduct_dpia
    given: AI system
    when: Conducting DPIA
    then: Returns assessment

  - name: conduct_aia
    given: AI system
    when: Conducting AIA
    then: Returns assessment

  - name: identify_impacts
    given: System
    when: Identifying
    then: Returns impact list

  - name: assess_severity
    given: Impact
    when: Assessing
    then: Returns severity

  - name: identify_affected_groups
    given: Impact
    when: Identifying groups
    then: Returns affected groups

  - name: propose_mitigations
    given: Impacts
    when: Proposing
    then: Returns mitigations

  - name: generate_report
    given: Assessment
    when: Generating
    then: Returns report

  - name: submit_to_authority
    given: Assessment
    when: Submitting
    then: Returns submission status

creation_pattern:
  source: AISystem
  transformer: ImpactAssessor
  result: ImpactAssessment
