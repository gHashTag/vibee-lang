# E2E Network Tests
# Test network operations
# Interception, mocking, monitoring

name: e2e_network_tests
version: "1.0.0"
language: zig
module: e2e_network_tests

types:
  NetworkTest:
    fields:
      test_id: String
      test_type: String
      url_pattern: String

  InterceptionTest:
    fields:
      url_pattern: String
      expected_requests: Int

  MockTest:
    fields:
      url_pattern: String
      mock_response: String
      expected_body: String

  OfflineTest:
    fields:
      offline_mode: Bool
      expected_behavior: String

behaviors:
  - name: test_request_interception
    given: URL pattern
    when: Interception test
    then: Returns test result

  - name: test_response_mock
    given: Mock config
    when: Mock test
    then: Returns test result

  - name: test_request_abort
    given: URL pattern
    when: Abort test
    then: Returns test result

  - name: test_offline_mode
    given: Offline config
    when: Offline test
    then: Returns test result

  - name: test_wait_for_request
    given: URL pattern
    When: Wait request test
    then: Returns test result

  - name: test_wait_for_response
    given: URL pattern
    when: Wait response test
    then: Returns test result

  - name: test_network_timing
    given: URL
    when: Timing test
    then: Returns test result
