# VIBEE Specification v14040
# Neuromorphic Hardware - Hardware accelerators
name: neuromorphic_hardware_v14040
version: "1.0.0"
language: zig
module: neuromorphic_hardware

types:
  ChipType:
    fields:
      loihi: String
      truenorth: String
      spinnaker: String
      brainscales: String

  NeuroCoreConfig:
    fields:
      num_neurons: Int
      num_synapses: Int
      axon_types: Int

  HardwareMapping:
    fields:
      neuron_placement: String
      synapse_routing: String
      core_allocation: String

  PowerMetrics:
    fields:
      static_power: Float
      dynamic_power: Float
      energy_per_spike: Float

  HWConfig:
    fields:
      chip: String
      num_cores: Int
      clock_freq: Float

behaviors:
  - name: map_network
    given: SNN and chip
    when: Mapping done
    then: Returns hardware mapping

  - name: compile_to_chip
    given: Network and config
    when: Compilation done
    then: Returns binary

  - name: measure_power
    given: Running network
    when: Measurement done
    then: Returns power metrics

  - name: profile_latency
    given: Input spikes
    when: Profiling done
    then: Returns latency stats
