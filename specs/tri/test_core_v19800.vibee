name: test_core_v19800
version: "1.0.0"
language: zig
module: test_core_v19800

types:
  TestCase:
    fields:
      name: String
      description: String
      timeout_ms: Int
      tags: List<String>

  TestResult:
    fields:
      passed: Bool
      duration_ms: Int
      message: String
      stack_trace: String

behaviors:
  - name: test_run
    given: "Test case"
    when: "Runner runs test"
    then: "Returns test result"

  - name: test_skip
    given: "Skip condition"
    when: "Runner evaluates"
    then: "Skips test"

  - name: test_fail
    given: "Assertion failure"
    when: "Test fails"
    then: "Records failure"
