# E2E Browser Tests
# Test browser launch, context, close
# Browser lifecycle tests

name: e2e_browser_tests
version: "1.0.0"
language: zig
module: e2e_browser_tests

types:
  BrowserTest:
    fields:
      test_id: String
      browser_type: String
      expected_version: Option<String>

  LaunchTest:
    fields:
      headless: Bool
      args: List<String>
      expected_success: Bool

  ContextTest:
    fields:
      viewport: String
      user_agent: Option<String>
      locale: Option<String>

  CloseTest:
    fields:
      graceful: Bool
      timeout_ms: Int

behaviors:
  - name: test_chromium_launch
    given: Launch options
    when: Chromium launch test
    then: Returns test result

  - name: test_firefox_launch
    given: Launch options
    when: Firefox launch test
    then: Returns test result

  - name: test_webkit_launch
    given: Launch options
    when: WebKit launch test
    then: Returns test result

  - name: test_headless_mode
    given: Headless config
    when: Headless test
    then: Returns test result

  - name: test_context_creation
    given: Context options
    when: Context test
    then: Returns test result

  - name: test_browser_close
    given: Close options
    when: Close test
    then: Returns test result

  - name: test_multiple_contexts
    given: Context count
    when: Multi-context test
    then: Returns test result
