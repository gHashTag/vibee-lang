name: agent_interactor_v496
version: "496.0.0"
language: zig
module: agent_interactor_v496

types:
  InteractorAgent:
    fields:
      agent_id: String
      interaction_mode: String
      mouse_position: Object
      keyboard_state: Object

  ClickAction:
    fields:
      selector: String
      button: String
      click_count: Int
      modifiers: List<String>

  TypeAction:
    fields:
      selector: String
      text: String
      delay_ms: Int
      clear_first: Bool

  HoverAction:
    fields:
      selector: String
      duration_ms: Int
      offset_x: Int
      offset_y: Int

  DragAction:
    fields:
      source_selector: String
      target_selector: String
      steps: Int
      duration_ms: Int

  ScrollAction:
    fields:
      direction: String
      amount: Int
      selector: Option<String>
      smooth: Bool

behaviors:
  - name: click_element
    given: Element selector
    when: Click requested
    then: Perform click

  - name: double_click
    given: Element selector
    when: Double click requested
    then: Perform double click

  - name: right_click
    given: Element selector
    when: Context menu requested
    then: Perform right click

  - name: type_text
    given: Text and target
    when: Type requested
    then: Input text

  - name: press_key
    given: Key code
    when: Key press requested
    then: Simulate key press

  - name: hover_element
    given: Element selector
    when: Hover requested
    then: Move mouse to element

  - name: drag_and_drop
    given: Source and target
    when: Drag requested
    then: Perform drag operation

  - name: scroll_page
    given: Scroll parameters
    when: Scroll requested
    then: Scroll viewport

  - name: focus_element
    given: Element selector
    when: Focus requested
    then: Set focus to element
