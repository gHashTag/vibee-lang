name: agent_navigator_v495
version: "495.0.0"
language: zig
module: agent_navigator_v495

types:
  NavigatorAgent:
    fields:
      agent_id: String
      navigation_mode: String
      history: List<String>
      current_index: Int

  NavigationPlan:
    fields:
      plan_id: String
      steps: List<Object>
      current_step: Int
      status: String

  NavigationStep:
    fields:
      step_id: String
      action: String
      target: String
      wait_condition: Option<String>
      timeout_ms: Int

  PageTransition:
    fields:
      from_url: String
      to_url: String
      trigger: String
      duration_ms: Int
      success: Bool

  NavigationState:
    fields:
      can_go_back: Bool
      can_go_forward: Bool
      is_loading: Bool
      load_progress: Float

behaviors:
  - name: navigate_to
    given: Target URL
    when: Navigation requested
    then: Load target page

  - name: go_back
    given: History available
    when: Back requested
    then: Navigate to previous

  - name: go_forward
    given: Forward history
    when: Forward requested
    then: Navigate forward

  - name: refresh_page
    given: Current page
    when: Refresh requested
    then: Reload page

  - name: wait_for_navigation
    given: Navigation trigger
    when: Page change expected
    then: Wait for load complete

  - name: follow_link
    given: Link element
    when: Click link
    then: Navigate to href

  - name: submit_navigation
    given: Form submission
    when: Form submitted
    then: Handle navigation

  - name: handle_redirect
    given: Redirect response
    when: 3xx status
    then: Follow redirect chain

  - name: get_navigation_state
    given: Current context
    when: State query
    then: Return navigation state
