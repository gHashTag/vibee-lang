name: stimulus_demo
version: "1.0.0"
language: varlog
module: stimulus_demo

# Simple FSM for stimulus generation demo
# Without timers to avoid testbench bug

fsm:
  - name: simple_fsm
    initial: IDLE
    states:
      - IDLE
      - RUN
      - DONE
    transitions:
      - from: IDLE
        to: RUN
        condition: "start"
      - from: RUN
        to: DONE
        condition: "complete"
      - from: DONE
        to: IDLE
        condition: "reset_cmd"
    outputs:
      - state: IDLE
        busy: "1'b0"
        result: "8'd0"
      - state: RUN
        busy: "1'b1"
        result: "8'hAA"
      - state: DONE
        busy: "1'b0"
        result: "8'hFF"

behaviors:
  - name: simple_test
    given: FSM defined
    when: Stimulus applied
    then: State changes correctly
