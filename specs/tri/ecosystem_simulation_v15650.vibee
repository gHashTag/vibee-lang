# VIBEE Specification v15650
# Ecosystem Simulation - Artificial ecosystems
name: ecosystem_simulation_v15650
version: "1.0.0"
language: zig
module: ecosystem_simulation

types:
  EcoAgent:
    fields:
      species: String
      traits: String
      energy: Float

  FoodWeb:
    fields:
      species: String
      predation: String
      competition: String

  Ecosystem:
    fields:
      agents: String
      resources: String
      environment: String

  EcoResult:
    fields:
      biodiversity: Float
      stability: Float
      trophic_levels: Int

behaviors:
  - name: forage
    given: Agent and environment
    when: Foraging done
    then: Returns energy gained

  - name: reproduce
    given: Agent
    when: Reproduction done
    then: Returns offspring

  - name: interact
    given: Two agents
    when: Interaction done
    then: Returns outcome

  - name: simulate_ecosystem
    given: Initial ecosystem
    when: Simulation done
    then: Returns eco result
