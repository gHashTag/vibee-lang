# VIBEE v10001: CLI Command Parser
name: cli_command_parser
version: "10001.0.0"
language: zig
module: cli_command_parser

types:
  ParsedCommand:
    fields:
      name: String
      args: List<String>
      flags: List<String>
      options: List<String>

  ParserConfig:
    fields:
      strict_mode: Bool
      allow_unknown: Bool
      help_on_error: Bool
      version_flag: String

  ArgumentSpec:
    fields:
      name: String
      required: Bool
      default_value: String
      validator: String

  ParseError:
    fields:
      message: String
      position: Int
      expected: String
      found: String

behaviors:
  - name: parse_arguments
    given: "Raw arguments"
    when: "Parsing command line"
    then: "Returns parsed command"

  - name: validate_arguments
    given: "Parsed command and spec"
    when: "Validating"
    then: "Returns validation result"
