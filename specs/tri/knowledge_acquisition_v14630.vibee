# VIBEE Specification v14630
# Active Knowledge Acquisition - Seeking new knowledge
name: knowledge_acquisition_v14630
version: "1.0.0"
language: zig
module: knowledge_acquisition

types:
  KnowledgeGap:
    fields:
      domain: String
      uncertainty: Float
      importance: Float

  AcquisitionStrategy:
    fields:
      exploration: String
      exploitation: String
      curiosity_driven: String

  Query:
    fields:
      question: String
      expected_info_gain: Float
      cost: Float

  AcquisitionResult:
    fields:
      knowledge_gained: String
      uncertainty_reduced: Float
      queries_made: Int

behaviors:
  - name: identify_gaps
    given: Current knowledge
    when: Identification done
    then: Returns knowledge gaps

  - name: generate_queries
    given: Gap
    when: Generation done
    then: Returns queries

  - name: select_query
    given: Query set
    when: Selection done
    then: Returns best query

  - name: integrate_answer
    given: Query and answer
    when: Integration done
    then: Returns acquisition result
