    test_cases:
      - name: test_context
        input: { file: "main.zig" }
        expected: { contextual: true }

  - name: chat_ai_code
    given: Code request
    when: Generate code
    then: Code snippet
    test_cases:
      - name: test_code
        input: { request: "sort array" }
        expected: { code: true }

