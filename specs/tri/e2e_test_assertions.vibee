# E2E Test Assertions
# Assert functions for E2E tests
# Comparison and validation

name: e2e_test_assertions
version: "1.0.0"
language: zig
module: e2e_test_assertions

types:
  Assertion:
    fields:
      assertion_id: String
      assertion_type: String
      actual: String
      expected: String
      passed: Bool

  AssertionError:
    fields:
      error_id: String
      message: String
      actual: String
      expected: String
      diff: Option<String>

  Matcher:
    fields:
      matcher_type: String
      pattern: String
      options: Map<String,String>

behaviors:
  - name: assert_equals
    given: Actual and expected values
    when: Equality check needed
    then: Returns assertion result

  - name: assert_contains
    given: Text and substring
    when: Contains check needed
    then: Returns assertion result

  - name: assert_matches
    given: Text and pattern
    when: Regex match needed
    then: Returns assertion result

  - name: assert_visible
    given: Page and selector
    when: Visibility check needed
    then: Returns assertion result

  - name: assert_url
    given: Page and expected URL
    when: URL check needed
    then: Returns assertion result

  - name: assert_title
    given: Page and expected title
    when: Title check needed
    then: Returns assertion result

  - name: assert_element_text
    given: Page, selector, expected
    when: Element text check needed
    then: Returns assertion result

  - name: assert_element_count
    given: Page, selector, count
    when: Count check needed
    then: Returns assertion result
