name: quantum_gates_v20210
version: "1.0.0"
language: zig
module: quantum_gates_v20210

types:
  QuantumGate:
    fields:
      name: String
      matrix: String
      qubits_required: Int

  GateResult:
    fields:
      applied: Bool
      new_state: String

behaviors:
  - name: gate_hadamard
    given: "Qubit"
    when: "H gate applied"
    then: "Returns superposition"

  - name: gate_cnot
    given: "Control and target qubits"
    when: "CNOT applied"
    then: "Returns entangled state"

  - name: gate_phase
    given: "Qubit and angle"
    when: "Phase gate applied"
    then: "Returns rotated state"
