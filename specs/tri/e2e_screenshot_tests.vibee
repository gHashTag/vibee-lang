# E2E Screenshot Tests
# Test visual capture
# Page, element, comparison

name: e2e_screenshot_tests
version: "1.0.0"
language: zig
module: e2e_screenshot_tests

types:
  ScreenshotTest:
    fields:
      test_id: String
      capture_type: String
      expected_dimensions: String

  PageScreenshotTest:
    fields:
      full_page: Bool
      format: String
      expected_width: Int
      expected_height: Int

  ElementScreenshotTest:
    fields:
      selector: String
      format: String

  ComparisonTest:
    fields:
      baseline_path: String
      threshold: Float
      expected_match: Bool

behaviors:
  - name: test_page_screenshot
    given: Page and options
    when: Page screenshot test
    then: Returns test result

  - name: test_full_page_screenshot
    given: Page
    when: Full page test
    then: Returns test result

  - name: test_element_screenshot
    given: Selector
    when: Element screenshot test
    then: Returns test result

  - name: test_viewport_screenshot
    given: Viewport size
    when: Viewport test
    then: Returns test result

  - name: test_screenshot_format
    given: Format type
    When: Format test
    then: Returns test result

  - name: test_visual_comparison
    given: Baseline and current
    when: Comparison test
    then: Returns test result
