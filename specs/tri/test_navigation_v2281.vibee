types:
  NavigationTest:
    fields:
      name: String
      route: String
      expected_title: String
      expected_elements: List<String>
      timeout: Int

  NavigationTestResult:
    fields:
      test_name: String
      passed: Bool
      duration: Int
      error: Option<String>
      screenshot: Option<String>

behaviors:
  - name: test_home_route
    given: "Application loaded"
    when: "Navigate to home"
    then: "Home page displayed"
    test_cases:
      - name: test_home
        input: { route: "/" }
        expected: { title_contains: "VIBEE", elements: ["canvas", "nav"] }

  - name: test_modules_route
    given: "Application loaded"
    when: "Navigate to modules"
    then: "Modules page displayed"
    test_cases:
      - name: test_modules
        input: { route: "/modules" }
        expected: { modules_visible: true }

  - name: test_pas_route
    given: "Application loaded"
    when: "Navigate to PAS"
    then: "PAS page displayed"
    test_cases:
      - name: test_pas
        input: { route: "/pas" }
        expected: { pas_visible: true }

  - name: test_back_navigation
    given: "Navigation history"
    when: "Back button clicked"
    then: "Previous page displayed"
    test_cases:
      - name: test_back
        input: { from: "/modules", to: "/" }
        expected: { navigated_back: true }

  - name: test_deep_link
    given: "Direct URL"
    when: "Load deep link"
    then: "Correct page displayed"
    test_cases:
      - name: test_deep
        input: { url: "/modules/llm" }
        expected: { correct_page: true }

  - name: test_404_handling
    given: "Invalid route"
    when: "Navigate to unknown"
    then: "404 page or redirect"
    test_cases:
      - name: test_404
        input: { route: "/nonexistent" }
        expected: { handled: true }

