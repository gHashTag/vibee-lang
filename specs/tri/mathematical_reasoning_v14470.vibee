# VIBEE Specification v14470
# Mathematical Reasoning - Solving math problems
name: mathematical_reasoning_v14470
version: "1.0.0"
language: zig
module: mathematical_reasoning

types:
  MathDomain:
    fields:
      arithmetic: String
      algebra: String
      geometry: String
      calculus: String

  MathProblem:
    fields:
      statement: String
      domain: String
      difficulty: Float

  MathSolution:
    fields:
      answer: String
      steps: String
      verification: Bool

  MathConfig:
    fields:
      use_calculator: Bool
      show_work: Bool
      verify_answer: Bool

behaviors:
  - name: parse_problem
    given: Problem text
    when: Parsing done
    then: Returns math problem

  - name: solve_step_by_step
    given: Math problem
    when: Solving done
    then: Returns math solution

  - name: verify_solution
    given: Solution
    when: Verification done
    then: Returns correctness

  - name: generate_similar
    given: Problem template
    when: Generation done
    then: Returns new problem
