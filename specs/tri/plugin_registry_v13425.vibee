name: plugin_registry
version: "13425.0.0"
language: zig
module: plugin_registry

types:
  Plugin_registryConfig:
    fields:
      enabled: Bool
      sandbox: Bool
      permissions: String

  Plugin_registryInstance:
    fields:
      instance_id: String
      name: String
      version: String
      active: Bool

  Plugin_registryResult:
    fields:
      success: Bool
      data: String
      error_message: String

  Plugin_registryMetrics:
    fields:
      plugins_loaded: Int
      memory_mb: Int
      api_calls: Int

behaviors:
  - name: create_plugin_registry_config
    given: Config parameters
    when: Config creation
    then: Returns Plugin_registryConfig

  - name: load_plugin_registry
    given: Plugin path
    when: Loading
    then: Returns Plugin_registryInstance

  - name: execute_plugin_registry
    given: Operation
    when: Execution
    then: Returns Plugin_registryResult

  - name: get_plugin_registry_metrics
    given: Plugin_registryInstance
    when: Metrics query
    then: Returns Plugin_registryMetrics

  - name: unload_plugin_registry
    given: Plugin_registryInstance
    when: Unloading
    then: Returns unload status

  - name: update_plugin_registry
    given: Plugin_registryInstance
    when: Update
    then: Returns updated instance
