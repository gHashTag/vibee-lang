# VIBEE Specification v15960
# Decision Neuroscience - Neural basis of decisions
name: decision_neuroscience_v15960
version: "1.0.0"
language: zig
module: decision_neuroscience

types:
  EvidenceAccumulator:
    fields:
      drift_rate: Float
      threshold: Float
      noise: Float

  DecisionVariable:
    fields:
      value: Float
      uncertainty: Float
      time: Float

  NeuralDecision:
    fields:
      choice: String
      reaction_time: Float
      confidence: Float

  DecisionResult:
    fields:
      accuracy: Float
      mean_rt: Float
      neural_correlates: String

behaviors:
  - name: accumulate_evidence
    given: Sensory input
    when: Accumulation done
    then: Returns decision variable

  - name: make_decision
    given: Accumulated evidence
    when: Decision done
    then: Returns neural decision

  - name: fit_ddm
    given: Behavioral data
    when: Fitting done
    then: Returns model parameters

  - name: analyze_decisions
    given: Neural and behavioral
    when: Analysis done
    then: Returns decision result
