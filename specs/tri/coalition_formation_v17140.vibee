name: coalition_formation_v17140
version: "1.0.0"
language: zig
module: coalition_formation

types:
  Coalition:
    fields:
      members: String
      value: Float
      structure: String

  CoalitionGame:
    fields:
      agents: String
      characteristic_function: String

  PayoffDivision:
    fields:
      coalition: String
      shares: String
      method: String

  CoalitionResult:
    fields:
      stable_coalitions: String
      core: String
      shapley_values: String

behaviors:
  - name: compute_value
    given: Coalition
    when: Evaluate coalition
    then: Return value

  - name: find_stable_structure
    given: Coalition game
    when: Stability analysis
    then: Return stable coalitions

  - name: divide_payoff
    given: Coalition and value
    when: Fair division
    then: Return shares
