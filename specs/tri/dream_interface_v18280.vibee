name: dream_interface_v18280
version: "1.0.0"
language: zig
module: dream_interface

types:
  DreamState:
    fields:
      content: String
      lucidity: Float
  DreamRecord:
    fields:
      dream: String
      timestamp: Int

behaviors:
  - name: record_dream
    given: Sleep state
    when: Recording
    then: Return dream record
  - name: induce_dream
    given: Dream content
    when: Induction
    then: Return induced dream
  - name: share_dream
    given: Dream and recipient
    when: Sharing
    then: Return shared experience
