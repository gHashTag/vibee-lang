name: omega_metrics_v20050
version: "1.0.0"
language: zig
module: omega_metrics_v20050

types:
  Metric:
    fields:
      name: String
      metric_type: String
      value: Float
      timestamp: Timestamp

  MetricsReport:
    fields:
      metrics: List<String>
      period_start: Timestamp
      period_end: Timestamp

behaviors:
  - name: metrics_collect
    given: "Collection request"
    when: "Collector collects"
    then: "Returns metrics"

  - name: metrics_aggregate
    given: "Raw metrics"
    when: "Aggregator aggregates"
    then: "Returns aggregated metrics"

  - name: metrics_export
    given: "Export request"
    when: "Exporter exports"
    then: "Exports metrics data"
