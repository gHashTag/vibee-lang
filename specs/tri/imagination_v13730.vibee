# VIBEE Specification v13730
# Imagination - Mental simulation and planning
name: imagination_v13730
version: "1.0.0"
language: zig
module: imagination

types:
  ImaginationType:
    fields:
      rollout: String
      tree_search: String
      counterfactual: String
      creative: String

  ImaginedTrajectory:
    fields:
      states: String
      actions: String
      rewards: String
      horizon: Int

  PlanCandidate:
    fields:
      action_sequence: String
      expected_return: Float
      confidence: Float

  CounterfactualQuery:
    fields:
      actual_state: String
      hypothetical_action: String
      question: String

  ImaginationConfig:
    fields:
      horizon: Int
      num_rollouts: Int
      discount: Float
      use_mcts: Bool

behaviors:
  - name: imagine_rollout
    given: Start state and policy
    when: Rollout done
    then: Returns imagined trajectory

  - name: evaluate_plan
    given: Action sequence
    when: Evaluation done
    then: Returns plan candidate

  - name: counterfactual_reason
    given: Counterfactual query
    when: Reasoning done
    then: Returns hypothetical outcome

  - name: creative_imagine
    given: Goal description
    when: Imagination done
    then: Returns novel scenarios
