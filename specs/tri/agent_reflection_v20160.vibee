name: agent_reflection_v20160
version: "1.0.0"
language: zig
module: agent_reflection_v20160

types:
  ReflectionState:
    fields:
      action_history: List<String>
      outcomes: List<String>
      insights: List<String>

  ReflectionResult:
    fields:
      lesson: String
      improvement: String
      confidence: Float

behaviors:
  - name: reflect_on_action
    given: "Action and outcome"
    when: "Agent reflects"
    then: "Returns insight"

  - name: reflect_on_failure
    given: "Failed action"
    when: "Agent analyzes failure"
    then: "Returns correction"

  - name: reflect_meta
    given: "Reflection history"
    when: "Agent meta-reflects"
    then: "Returns meta-insight"
