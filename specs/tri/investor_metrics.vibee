# Investor Metrics Specification
# Key metrics for seed round investors
# Author: Dmitrii Vasilev

name: investor_metrics
version: "1.0.0"
language: zig
module: investor_metrics

types:
  FundingRound:
    fields:
      round_name: String
      amount: String
      equity_percent: Float
      valuation: String
      lead_investor: String
      close_date: String

  UseOfFunds:
    fields:
      category: String
      percent: Float
      amount: String
      description: String

  FinancialProjection:
    fields:
      year: Int
      revenue: String
      costs: String
      profit: String
      headcount: Int

  ReturnScenario:
    fields:
      scenario_name: String
      exit_valuation: String
      return_multiple: Float
      probability: Float
      timeline_years: Int

  KeyMetric:
    fields:
      name: String
      current_value: String
      target_value: String
      timeframe: String
      verified: Bool

behaviors:
  - name: calculate_valuation
    given: Ask amount and equity percent
    when: Derive implied valuation
    then: Return pre-money and post-money valuations

  - name: project_revenue
    given: Market size and penetration rate
    when: Model 5-year revenue
    then: Return year-by-year projections

  - name: calculate_burn_rate
    given: Team size and operational costs
    when: Estimate monthly burn
    then: Return runway in months

  - name: model_exit_scenarios
    given: Comparable exits and market conditions
    when: Project potential outcomes
    then: Return bull, base, bear scenarios

  - name: calculate_investor_return
    given: Investment amount and exit valuation
    when: Model dilution through rounds
    then: Return expected multiple and IRR

  - name: generate_cap_table
    given: Current ownership and new investment
    when: Model post-round ownership
    then: Return updated cap table

  - name: compare_to_comps
    given: Comparable company valuations
    when: Benchmark TRINITY valuation
    then: Return relative valuation analysis

  - name: calculate_unit_economics
    given: Product pricing and costs
    when: Model per-unit profitability
    then: Return gross margin and contribution

  - name: project_milestones_to_series_a
    given: Current traction and runway
    when: Plan path to next round
    then: Return milestone timeline with metrics
