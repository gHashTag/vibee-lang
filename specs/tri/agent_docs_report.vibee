name: agent_docs_report
version: "1.0.0"
language: zig
module: agent_docs_report

description: |
  Agent Docs Report - генерация отчётов
  OpenAI Operator: заполнение форм и отчётов
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  ReportTemplate:
    fields:
      template_name: String
      sections: List<String>
      format: String

  ReportData:
    fields:
      title: String
      sections: String
      data_sources: List<String>
      generated_at: Timestamp

  ReportConfig:
    fields:
      template: String
      include_charts: Bool
      include_sources: Bool
      export_format: String

  ExportResult:
    fields:
      success: Bool
      file_path: Option<String>
      file_size_bytes: Int
      format: String

behaviors:
  - name: create_report
    given: ReportConfig и данные
    when: Создание отчёта
    then: ReportData

  - name: add_section
    given: ReportData и новая секция
    when: Добавление секции
    then: Обновлённый ReportData

  - name: generate_chart
    given: Данные для графика
    when: Генерация графика
    then: Chart image или SVG

  - name: export_pdf
    given: ReportData для экспорта
    when: Экспорт в PDF
    then: ExportResult

  - name: export_docx
    given: ReportData для экспорта
    when: Экспорт в DOCX
    then: ExportResult

  - name: share_report
    given: ReportData и получатели
    when: Отправка отчёта
    then: Результат отправки
