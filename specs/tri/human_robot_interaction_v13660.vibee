# VIBEE Specification v13660
# Human-Robot Interaction - Safe human-robot collaboration
name: human_robot_interaction_v13660
version: "1.0.0"
language: zig
module: human_robot_interaction

types:
  InteractionMode:
    fields:
      collaborative: String
      assistive: String
      teleoperation: String
      social: String

  HumanState:
    fields:
      pose: String
      intent: String
      attention: String
      proximity: Float

  SafetyZone:
    fields:
      zone_type: String
      boundary: String
      speed_limit: Float

  InteractionCommand:
    fields:
      command_type: String
      parameters: String
      confidence: Float

  HRIConfig:
    fields:
      mode: String
      safety_distance: Float
      response_time_ms: Int

behaviors:
  - name: detect_human
    given: Sensor data
    when: Detection done
    then: Returns human state

  - name: predict_intent
    given: Human trajectory
    when: Prediction done
    then: Returns predicted intent

  - name: ensure_safety
    given: Robot and human states
    when: Safety check done
    then: Returns safety zone

  - name: interpret_command
    given: Gesture or speech
    when: Interpretation done
    then: Returns interaction command
