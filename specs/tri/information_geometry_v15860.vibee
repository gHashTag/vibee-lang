# VIBEE Specification v15860
# Information Geometry - Geometric view of probability
name: information_geometry_v15860
version: "1.0.0"
language: zig
module: information_geometry

types:
  StatisticalManifold:
    fields:
      parameters: String
      metric: String
      connection: String

  FisherMetric:
    fields:
      matrix: String
      determinant: Float

  Geodesic:
    fields:
      path: String
      length: Float
      curvature: Float

  IGResult:
    fields:
      manifold: String
      natural_gradient: String
      divergence: Float

behaviors:
  - name: compute_fisher_metric
    given: Distribution family
    when: Computation done
    then: Returns fisher metric

  - name: compute_geodesic
    given: Two distributions
    when: Computation done
    then: Returns geodesic

  - name: compute_divergence
    given: Two distributions
    when: Computation done
    then: Returns KL divergence

  - name: natural_gradient_descent
    given: Objective
    when: Optimization done
    then: Returns IG result
