name: motor_planning_v17500
version: "1.0.0"
language: zig
module: motor_planning

types:
  MotorPlan:
    fields:
      trajectory: String
      timing: String
      forces: String

  MotorPrimitive:
    fields:
      primitive_type: String
      parameters: String

behaviors:
  - name: plan_motion
    given: Goal and constraints
    when: Motion planning
    then: Return trajectory

  - name: optimize_trajectory
    given: Initial plan
    when: Optimization
    then: Return optimal trajectory
