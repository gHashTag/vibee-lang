# VIBEE Specification v14450
# Concept Learning - Learning abstract concepts
name: concept_learning_v14450
version: "1.0.0"
language: zig
module: concept_learning

types:
  ConceptType:
    fields:
      prototype: String
      exemplar: String
      theory_based: String
      probabilistic: String

  Concept:
    fields:
      name: String
      definition: String
      examples: String
      features: String

  ConceptHierarchy:
    fields:
      concepts: String
      is_a_relations: String
      part_of_relations: String

  ConceptResult:
    fields:
      learned_concept: String
      abstraction_level: Float
      generalization: Float

behaviors:
  - name: learn_concept
    given: Positive examples
    when: Learning done
    then: Returns concept

  - name: classify_instance
    given: Instance and concepts
    when: Classification done
    then: Returns concept membership

  - name: abstract_concept
    given: Specific concepts
    when: Abstraction done
    then: Returns abstract concept

  - name: compose_concepts
    given: Concept set
    when: Composition done
    then: Returns composed concept
