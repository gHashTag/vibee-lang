name: agent_input_select
version: "1.0.0"
language: zig
module: agent_input_select

description: |
  Agent Input Select - dropdown, select, checkbox, radio
  Сложность: custom dropdowns, multi-select
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  SelectTarget:
    fields:
      selector: String
      select_type: String
      options: List<String>
      current_value: Option<String>

  SelectOption:
    fields:
      value: String
      text: String
      index: Int
      selected: Bool

  SelectResult:
    fields:
      success: Bool
      selected_value: String
      selected_text: String
      previous_value: Option<String>

  CheckboxTarget:
    fields:
      selector: String
      label: String
      checked: Bool

  RadioGroup:
    fields:
      name: String
      options: List<String>
      selected: Option<String>

behaviors:
  - name: select_by_value
    given: SelectTarget и значение
    when: Выбор опции по value
    then: SelectResult

  - name: select_by_text
    given: SelectTarget и текст
    when: Выбор опции по видимому тексту
    then: SelectResult

  - name: select_by_index
    given: SelectTarget и индекс
    when: Выбор опции по индексу
    then: SelectResult

  - name: toggle_checkbox
    given: CheckboxTarget checkbox
    when: Переключение checkbox
    then: Новое состояние checked

  - name: select_radio
    given: RadioGroup и значение
    when: Выбор radio button
    then: RadioGroup с новым selected

  - name: multi_select
    given: SelectTarget и список значений
    when: Множественный выбор
    then: SelectResult со всеми выбранными
