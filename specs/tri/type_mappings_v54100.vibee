  # ═══════════════════════════════════════════════════════════════
  # PYTHON TYPE MAPPINGS
  # ═══════════════════════════════════════════════════════════════

  PythonTypeMap:
    fields:
      string_type: String
      int_type: String
      float_type: String
      bool_type: String
      optional_type: String
      list_type: String
      dict_type: String

  # ═══════════════════════════════════════════════════════════════
  # GO TYPE MAPPINGS
  # ═══════════════════════════════════════════════════════════════

  GoTypeMap:
    fields:
      string_type: String
