  # ═══════════════════════════════════════════════════════════════

  GleamTypeMap:
    fields:
      string_type: String
      int_type: String
      float_type: String
      bool_type: String
      option_type: String
      list_type: String
      dict_type: String

  # ═══════════════════════════════════════════════════════════════
  # C TYPE MAPPINGS
  # ═══════════════════════════════════════════════════════════════

  CTypeMap:
    fields:
      string_type: String
      int_type: String
      float_type: String
      bool_type: String
