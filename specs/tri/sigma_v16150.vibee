name: sigma_v16150
version: "1.0.0"
language: zig
module: sigma

types:
  GraphicalModel:
    fields:
      nodes: String
      edges: String
      factors: String

  ConditionFunction:
    fields:
      variables: String
      function_type: String
      parameters: String

  SigmaMemory:
    fields:
      working: String
      long_term: String
      perceptual: String

  SigmaState:
    fields:
      model: String
      memory: String
      inference_state: String

behaviors:
  - name: factor_graph_inference
    given: Graphical model
    when: Message passing
    then: Return marginals

  - name: learning_update
    given: Experience
    when: Gradient computation
    then: Update factors

  - name: cognitive_cycle
    given: Perception and goals
    when: Unified inference
    then: Return action
