language: zig
module: uncertainty

types:
  UncertaintyEstimate:
    fields:
      aleatoric: Float
      epistemic: Float
      total: Float

  UncertaintyMethod:
    fields:
      name: String
      method_type: String

  CalibrationMetric:
    fields:
      ece: Float
      mce: Float

  UncertaintyResult:
    fields:
      predictions: String
