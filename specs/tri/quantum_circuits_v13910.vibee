# VIBEE Specification v13910
# Quantum Circuits - Circuit composition and execution
name: quantum_circuits_v13910
version: "1.0.0"
language: zig
module: quantum_circuits

types:
  CircuitLayer:
    fields:
      gates: String
      depth: Int
      width: Int

  QuantumCircuit:
    fields:
      layers: String
      num_qubits: Int
      num_classical: Int
      total_depth: Int

  CircuitResult:
    fields:
      measurements: String
      probabilities: String
      shots: Int

  CircuitOptimization:
    fields:
      original_depth: Int
      optimized_depth: Int
      gate_count: Int

  CircuitConfig:
    fields:
      num_qubits: Int
      optimization_level: Int
      shots: Int

behaviors:
  - name: build_circuit
    given: Gate sequence
    when: Building done
    then: Returns quantum circuit

  - name: execute_circuit
    given: Circuit and backend
    when: Execution done
    then: Returns circuit result

  - name: optimize_circuit
    given: Unoptimized circuit
    when: Optimization done
    then: Returns circuit optimization

  - name: transpile_circuit
    given: Circuit and target
    when: Transpilation done
    then: Returns native circuit
