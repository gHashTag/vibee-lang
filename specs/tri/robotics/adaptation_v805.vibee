name: adaptation_v805
version: "8.0.5"
language: zig
module: adaptation
types:
  AdaptationConfig: { fields: { id: String, enabled: Bool, params: Object } }
  AdaptationState: { fields: { status: String, data: Object, timestamp: Timestamp } }
  AdaptationResult: { fields: { success: Bool, output: Object, error: Option<String> } }
behaviors:
  - name: init_adaptation
    given: Config
    when: Init
    then: State
  - name: process_adaptation
    given: State
    when: Process
    then: Result
