name: perception_v781
version: "7.8.1"
language: zig
module: perception
types:
  PerceptionConfig: { fields: { id: String, enabled: Bool, params: Object } }
  PerceptionState: { fields: { status: String, data: Object, timestamp: Timestamp } }
  PerceptionResult: { fields: { success: Bool, output: Object, error: Option<String> } }
behaviors:
  - name: init_perception
    given: Config
    when: Init
    then: State
  - name: process_perception
    given: State
    when: Process
    then: Result
