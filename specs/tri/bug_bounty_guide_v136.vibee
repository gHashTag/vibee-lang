name: bug_bounty_guide_v136
version: "136.0.0"
language: zig
module: bug_bounty_guide

creation_pattern:
  source: BugBountyKnowledge
  transformer: GuideBuilder
  result: HunterHandbook

# BUG BOUNTY: ЛЕГАЛЬНЫЙ ПУТЬ К ЗАРАБОТКУ
# Это НЕ хакинг - это легальное исследование безопасности
# с разрешения владельцев систем

# ВАЖНО: Всегда соблюдайте правила программы!

types:
  BugBountyProgram:
    fields:
      platform: String
      company: String
      scope: List<String>
      out_of_scope: List<String>
      rewards: String
      rules: List<String>
      safe_harbor: Bool

  RegistrationStep:
    fields:
      step_number: Int
      platform: String
      action: String
      requirements: List<String>
      tips: List<String>

  VulnerabilityClass:
    fields:
      class_id: String
      name: String
      severity: String
      typical_reward: String
      skills_required: List<String>
      learning_resources: List<String>

  HunterProfile:
    fields:
      level: String
      skills: List<String>
      certifications: List<String>
      reputation_score: Int
      earnings_potential: String

  LegalRequirement:
    fields:
      requirement: String
      description: String
      consequence_if_violated: String
      how_to_comply: String

  ReportTemplate:
    fields:
      section: String
      content: String
      example: String
      importance: String

  EthicalGuideline:
    fields:
      guideline: String
      rationale: String
      example: String

  HunterHandbook:
    fields:
      programs: List<BugBountyProgram>
      registration: List<RegistrationStep>
      vulnerabilities: List<VulnerabilityClass>
      legal: List<LegalRequirement>

behaviors:
  - name: register_hunter
    given: "New researcher"
    when: "Platform registration"
    then: "Verified hunter account"
    test_cases:
      - name: register
        input: "new user"
        expected: "account created"

  - name: select_program
    given: "Hunter skills"
    when: "Program selection"
    then: "Suitable programs"
    test_cases:
      - name: select
        input: "beginner skills"
        expected: "beginner programs"

  - name: understand_scope
    given: "Program rules"
    when: "Scope analysis"
    then: "Clear boundaries"
    test_cases:
      - name: scope
        input: "program rules"
        expected: "scope understood"

  - name: report_vulnerability
    given: "Found vulnerability"
    when: "Responsible disclosure"
    then: "Valid report"
    test_cases:
      - name: report
        input: "vulnerability"
        expected: "report submitted"

  - name: receive_reward
    given: "Valid report"
    when: "Verification"
    then: "Bounty payment"
    test_cases:
      - name: reward
        input: "valid report"
        expected: "payment received"

  - name: build_reputation
    given: "Successful reports"
    when: "Reputation building"
    then: "Higher tier access"
    test_cases:
      - name: reputation
        input: "reports"
        expected: "reputation increased"

