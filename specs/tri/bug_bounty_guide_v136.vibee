# ШАГ 2: ПОНИМАНИЕ ПРАВИЛ

program_rules:
  scope:
    description: "Что МОЖНО тестировать"
    examples:
      - "*.example.com - все поддомены"
      - "api.example.com - только API"
      - "Мобильное приложение v2.0+"
    warning: "НИКОГДА не тестируйте вне scope!"
    
  out_of_scope:
    description: "Что НЕЛЬЗЯ тестировать"
    examples:
      - "Сторонние сервисы"
      - "Физические атаки"
      - "Социальная инженерия сотрудников"
      - "DoS/DDoS атаки"
    warning: "Нарушение = бан + возможное уголовное преследование"
    
  safe_harbor:
    description: "Защита исследователя"
    meaning: |
      Компания обязуется не преследовать исследователя
      юридически, если он соблюдает правила программы.
    check: "Всегда проверяйте наличие Safe Harbor!"
    
  disclosure_policy:
    coordinated: "Раскрытие после фикса с согласия компании"
    full: "Полное раскрытие после фикса"
    private_only: "Никогда не раскрывать публично"

# ШАГ 3: ТИПЫ УЯЗВИМОСТЕЙ И НАГРАДЫ

vulnerability_rewards:
  critical:
    severity: "Critical (CVSS 9.0-10.0)"
    reward_range: "$10,000 - $1,000,000+"
    examples:
      - "Remote Code Execution (RCE)"
      - "SQL Injection с доступом к данным"
      - "Authentication Bypass"
      - "Privilege Escalation to Admin"
    skills_needed:
      - "Глубокое понимание веб-безопасности"
      - "Опыт эксплуатации"
      - "Знание языков программирования"
    time_to_learn: "1-3 года"
    
  high:
    severity: "High (CVSS 7.0-8.9)"
    reward_range: "$1,000 - $50,000"
    examples:
      - "Stored XSS"
      - "IDOR с доступом к чужим данным"
      - "SSRF"
      - "XXE"
    skills_needed:
      - "Хорошее понимание OWASP Top 10"
      - "Опыт работы с Burp Suite"
    time_to_learn: "6-12 месяцев"
    
  medium:
    severity: "Medium (CVSS 4.0-6.9)"
    reward_range: "$100 - $5,000"
    examples:
      - "Reflected XSS"
      - "CSRF"
      - "Information Disclosure"
      - "Subdomain Takeover"
    skills_needed:
      - "Базовые знания веб-безопасности"
      - "Умение использовать инструменты"
    time_to_learn: "3-6 месяцев"
    
  low:
    severity: "Low (CVSS 0.1-3.9)"
    reward_range: "$50 - $500"
    examples:
      - "Self-XSS"
      - "Missing security headers"
      - "Verbose error messages"
    skills_needed:
      - "Базовые знания"
    time_to_learn: "1-3 месяца"
    recommendation: "Хорошо для начинающих!"

