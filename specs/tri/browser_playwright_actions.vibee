# Playwright Actions Module
# Click, type, scroll, hover, drag
# Core interaction primitives

name: browser_playwright_actions
version: "1.0.0"
language: zig
module: browser_playwright_actions

types:
  ClickOptions:
    fields:
      button: String
      click_count: Int
      delay: Int
      force: Bool
      modifiers: List<String>
      position_x: Option<Int>
      position_y: Option<Int>

  TypeOptions:
    fields:
      delay: Int
      no_wait_after: Bool
      timeout: Int

  ScrollOptions:
    fields:
      direction: String
      amount: Int
      behavior: String

  HoverOptions:
    fields:
      force: Bool
      modifiers: List<String>
      position_x: Option<Int>
      position_y: Option<Int>
      timeout: Int

  DragOptions:
    fields:
      source_position_x: Int
      source_position_y: Int
      target_position_x: Int
      target_position_y: Int
      force: Bool

  KeyboardAction:
    fields:
      action_type: String
      key: String
      modifiers: List<String>

  ActionResult:
    fields:
      success: Bool
      duration_ms: Int
      error: Option<String>

behaviors:
  - name: click
    given: Page, selector, and click options
    when: Click action needed
    then: Returns action result

  - name: double_click
    given: Page, selector, and options
    when: Double click needed
    then: Returns action result

  - name: right_click
    given: Page, selector, and options
    when: Context menu needed
    then: Returns action result

  - name: type_text
    given: Page, selector, text, and options
    when: Text input needed
    then: Returns action result

  - name: fill
    given: Page, selector, and value
    when: Form fill needed
    then: Returns action result

  - name: clear
    given: Page and selector
    When: Input clear needed
    then: Returns action result

  - name: press_key
    given: Page and keyboard action
    when: Key press needed
    then: Returns action result

  - name: hover
    given: Page, selector, and hover options
    when: Hover needed
    then: Returns action result

  - name: scroll
    given: Page and scroll options
    when: Scrolling needed
    then: Returns action result

  - name: drag_and_drop
    given: Page, source, target, and options
    when: Drag operation needed
    then: Returns action result
