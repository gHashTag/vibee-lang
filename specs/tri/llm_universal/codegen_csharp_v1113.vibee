name: codegen_csharp
version: "11.1.3"
language: zig
module: codegen_csharp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: CSharpCodeGen
  result: CSharpCode

types:
  CSharpClass:
    fields:
      name: String
      namespace: String
      properties: List<CSharpProperty>
      is_record: Bool

  CSharpProperty:
    fields:
      name: String
      type_name: String
      is_nullable: Bool

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "C# class"
    pas_pattern: PRE
    test_cases:
      - name: test_class
        input: '{"type": {"name": "User"}}'
        expected: '{"code": "public class User"}'

  - name: generate_record
    given: "VIBEE type"
    when: "Record generation"
    then: "C# record"
    pas_pattern: PRE
    test_cases:
      - name: test_record
        input: '{"type": {"name": "Point"}}'
        expected: '{"code": "public record Point"}'

  - name: generate_interface
    given: "VIBEE interface"
    when: "Interface generation"
    then: "C# interface"
    pas_pattern: PRE
    test_cases:
      - name: test_interface
        input: '{"interface": {"name": "IReadable"}}'
        expected: '{"code": "public interface IReadable"}'

  - name: generate_async
    given: "Async behavior"
    when: "Async generation"
    then: "Async method"
    pas_pattern: ALG
    test_cases:
      - name: test_async
        input: '{"async": true}'
        expected: '{"code": "async Task"}'

type_mappings:
  String: "string"
  Int: "long"
  Float: "double"
  Bool: "bool"
  List: "List<object>"
  Map: "Dictionary<string, object>"
  Option: "T?"
  Timestamp: "long"

