name: syntax_validator
version: "11.0.6"
language: zig
module: syntax_validator

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: GeneratedCode
  transformer: SyntaxValidator
  result: ValidationReport

types:
  ValidationReport:
    fields:
      valid: Bool
      errors: List<SyntaxError>
      warnings: List<SyntaxWarning>

  SyntaxError:
    fields:
      line: Int
      column: Int
      message: String
      severity: ErrorSeverity

  SyntaxWarning:
    fields:
      line: Int
      message: String
      suggestion: String

  ErrorSeverity:
    enum:
      - Fatal
      - Error
      - Warning
      - Info

behaviors:
  - name: validate_syntax
    given: "Generated code and language"
    when: "Syntax validation"
    then: "Validation report"
    pas_pattern: ALG
    test_cases:
      - name: test_valid
        input: '{"code": "def f(): pass", "lang": "Python"}'
        expected: '{"valid": true}'

  - name: check_brackets
    given: "Code"
    when: "Bracket checking"
    then: "Bracket balance"
    pas_pattern: ALG
    test_cases:
      - name: test_brackets
        input: '{"code": "{{()}}"}'
        expected: '{"balanced": true}'

  - name: verify_keywords
    given: "Code and language"
    when: "Keyword verification"
    then: "Keyword validity"
    pas_pattern: PRE
    test_cases:
      - name: test_keywords
        input: '{"code": "...", "lang": "Rust"}'
        expected: '{"valid": true}'

  - name: suggest_fixes
    given: "Syntax errors"
    when: "Fix suggestion"
    then: "Suggested fixes"
    pas_pattern: MLS
    test_cases:
      - name: test_fix
        input: '{"error": "..."}'
        expected: '{"fix": "..."}'

