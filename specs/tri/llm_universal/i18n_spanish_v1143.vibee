name: i18n_spanish
version: "11.4.3"
language: zig
module: i18n_spanish

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: SpanishTranslator
  result: LocalizedSpec

types:
  LocalizedString:
    fields:
      key: String
      value: String
      language: String

behaviors:
  - name: translate_spec
    given: "VIBEE spec in English"
    when: "Translation to Español"
    then: "Localized spec"
    pas_pattern: MLS
    test_cases:
      - name: test_translate
        input: '{"spec": "name: test"}'
        expected: '{"localized": true}'

  - name: translate_comments
    given: "Code comments"
    when: "Comment translation"
    then: "Translated comments"
    pas_pattern: MLS
    test_cases:
      - name: test_comments
        input: '{"comment": "Hello"}'
        expected: '{"translated": "Hola"}'

locale_info:
  code: "es"
  name: "Español"
  direction: "ltr"

