name: i18n_french
version: "11.4.4"
language: zig
module: i18n_french

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: FrenchTranslator
  result: LocalizedSpec

types:
  LocalizedString:
    fields:
      key: String
      value: String

behaviors:
  - name: translate_spec
    given: "VIBEE spec in English"
    when: "Translation to Français"
    then: "Localized spec"
    pas_pattern: MLS
    test_cases:
      - name: test_translate
        input: '{"spec": "name: test"}'
        expected: '{"localized": true}'

locale_info:
  code: "fr"
  name: "Français"

