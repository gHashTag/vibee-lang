name: agent_memory_v20140
version: "1.0.0"
language: zig
module: agent_memory_v20140

types:
  MemoryStore:
    fields:
      short_term: List<String>
      long_term: Map<String,String>
      episodic: List<String>

  MemoryResult:
    fields:
      retrieved: String
      relevance: Float
      source: String

behaviors:
  - name: memory_store
    given: "New information"
    when: "Agent stores"
    then: "Updates memory"

  - name: memory_retrieve
    given: "Query"
    when: "Agent retrieves"
    then: "Returns relevant memories"

  - name: memory_consolidate
    given: "Short-term memories"
    when: "Agent consolidates"
    then: "Transfers to long-term"
