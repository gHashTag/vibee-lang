name: java_codegen
version: "10.8.5"
language: zig
module: java_codegen

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: JavaCodegen
  result: JavaSourceCode

types:
  JavaOutput:
    fields:
      source_code: String
      package_name: String
      imports: List<String>
      classes: List<String>
      tests: String

  JavaClass:
    fields:
      name: String
      fields: List<JavaField>
      methods: List<JavaMethod>
      annotations: List<String>

  JavaField:
    fields:
      name: String
      java_type: String
      access: String

  JavaMethod:
    fields:
      name: String
      params: List<String>
      return_type: String
      body: String

behaviors:
  - name: generate_java_class
    given: "VIBEE type definition"
    when: "Class generation requested"
    then: "Java class generated"
    pas_pattern: ALG
    test_cases:
      - name: test_simple_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "public class User {\\n    private Long id;\\n}"}'

  - name: generate_java_record
    given: "VIBEE immutable type"
    when: "Record generation requested"
    then: "Java record generated"
    pas_pattern: ALG
    test_cases:
      - name: test_record
        input: '{"name": "UserDTO"}'
        expected: '{"code": "public record UserDTO(Long id) {}"}'

  - name: generate_java_tests
    given: "VIBEE test cases"
    when: "Test generation requested"
    then: "JUnit tests generated"
    pas_pattern: ALG
    test_cases:
      - name: test_junit
        input: '{"test_name": "testCreate"}'
        expected: '{"code": "@Test\\nvoid testCreate() { ... }"}'

  - name: map_type_to_java
    given: "VIBEE type"
    when: "Type mapping"
    then: "Java type"
    pas_pattern: PRE
    test_cases:
      - name: test_string
        input: '{"vibee_type": "String"}'
        expected: '{"java_type": "String"}'
      - name: test_int
        input: '{"vibee_type": "Int"}'
        expected: '{"java_type": "Long"}'

  - name: generate_pom_xml
    given: "Project config"
    when: "pom.xml generation"
    then: "pom.xml content"
    pas_pattern: PRE
    test_cases:
      - name: test_pom
        input: '{"groupId": "com.vibee"}'
        expected: '{"xml": "<project>...</project>"}'

type_mappings:
  String: "String"
  Int: "Long"
  Float: "Double"
  Bool: "Boolean"
  List: "List"
  Option: "Optional"
  Object: "Map<String, Object>"
  Timestamp: "Instant"

