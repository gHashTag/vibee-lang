name: rust_codegen
version: "10.8.2"
language: zig
module: rust_codegen

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: RustCodegen
  result: RustSourceCode

types:
  RustOutput:
    fields:
      source_code: String
      uses: List<String>
      structs: List<String>
      impls: List<String>
      tests: String

  RustStruct:
    fields:
      name: String
      fields: List<RustField>
      derives: List<String>
      visibility: String

  RustField:
    fields:
      name: String
      rust_type: String
      visibility: String

  RustImpl:
    fields:
      struct_name: String
      methods: List<RustMethod>

  RustMethod:
    fields:
      name: String
      params: List<String>
      return_type: String
      body: String

behaviors:
  - name: generate_rust_struct
    given: "VIBEE type definition"
    when: "Struct generation requested"
    then: "Rust struct generated"
    pas_pattern: ALG
    test_cases:
      - name: test_simple_struct
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}, {"name": "name", "type": "String"}]}'
        expected: '{"code": "#[derive(Debug, Clone)]\\npub struct User {\\n    pub id: i64,\\n    pub name: String,\\n}"}'

  - name: generate_rust_impl
    given: "VIBEE behaviors"
    when: "Impl generation requested"
    then: "Rust impl block generated"
    pas_pattern: ALG
    test_cases:
      - name: test_impl
        input: '{"struct": "User", "methods": [{"name": "new", "params": [], "return": "Self"}]}'
        expected: '{"code": "impl User {\\n    pub fn new() -> Self { ... }\\n}"}'

  - name: generate_rust_tests
    given: "VIBEE test cases"
    when: "Test generation requested"
    then: "Rust tests generated"
    pas_pattern: ALG
    test_cases:
      - name: test_rust_test
        input: '{"test_name": "test_create"}'
        expected: '{"code": "#[test]\\nfn test_create() { ... }"}'

  - name: map_type_to_rust
    given: "VIBEE type"
    when: "Type mapping"
    then: "Rust type"
    pas_pattern: PRE
    test_cases:
      - name: test_string
        input: '{"vibee_type": "String"}'
        expected: '{"rust_type": "String"}'
      - name: test_int
        input: '{"vibee_type": "Int"}'
        expected: '{"rust_type": "i64"}'

  - name: generate_cargo_toml
    given: "Project config"
    when: "Cargo.toml generation"
    then: "Cargo.toml content"
    pas_pattern: PRE
    test_cases:
      - name: test_cargo
        input: '{"name": "vibee_user"}'
        expected: '{"toml": "[package]\\nname = \\"vibee_user\\""}'

type_mappings:
  String: "String"
  Int: "i64"
  Float: "f64"
  Bool: "bool"
  List: "Vec"
  Option: "Option"
  Object: "HashMap<String, Value>"
  Timestamp: "i64"

rust_templates:
  struct_header: "#[derive(Debug, Clone)]\npub struct {name} {"
  field: "    pub {name}: {type},"
  impl_header: "impl {name} {"
  method: "    pub fn {name}({params}) -> {return_type} {\n        {body}\n    }"
  test: "#[test]\nfn {name}() {\n    {assertions}\n}"

