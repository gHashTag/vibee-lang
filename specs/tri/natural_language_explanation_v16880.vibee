name: natural_language_explanation_v16880
version: "1.0.0"
language: zig
module: natural_language_explanation

types:
  NLExplanation:
    fields:
      text: String
      confidence: Float
      references: String

  ExplanationTemplate:
    fields:
      template: String
      slots: String

  NLEGenerator:
    fields:
      model: String
      templates: String

  NLEConfig:
    fields:
      verbosity: String
      audience: String

behaviors:
  - name: generate_explanation
    given: Prediction and attributions
    when: NL generation
    then: Return text explanation

  - name: template_based
    given: Attributions and template
    when: Slot filling
    then: Return templated explanation

  - name: evaluate_explanation
    given: Explanation
    when: Quality metrics
    then: Return evaluation scores
