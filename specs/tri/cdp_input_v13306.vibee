# cdp_input_v13306.vibee
# KOSCHEI CYCLE 9 - CDP Mouse/Keyboard Input
# φ² + 1/φ² = 3 | PHOENIX = 999

name: cdp_input
version: "13306.0.0"
language: zig
module: cdp_input

types:
  MouseEvent:
    fields:
      event_type: String
      x: Int
      y: Int
      button: String
      modifiers: Int

  KeyboardEvent:
    fields:
      event_type: String
      key: String
      code: String
      modifiers: Int
      text: String

  TouchEvent:
    fields:
      event_type: String
      touch_points: String
      modifiers: Int

  InputResult:
    fields:
      success: Bool
      latency_ns: Int
      error_message: String

behaviors:
  - name: mouse_move
    given: X, Y coordinates
    when: Move requested
    then: Returns InputResult

  - name: mouse_click
    given: X, Y and button
    when: Click requested
    then: Returns InputResult

  - name: mouse_drag
    given: Start and end points
    When: Drag requested
    then: Returns InputResult

  - name: key_press
    given: Key and modifiers
    When: Press requested
    then: Returns InputResult

  - name: type_text
    given: Text string
    When: Type requested
    then: Returns InputResult

  - name: touch_tap
    given: TouchEvent
    When: Tap requested
    then: Returns InputResult
