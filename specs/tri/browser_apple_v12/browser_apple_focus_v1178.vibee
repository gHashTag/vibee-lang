# VIBEE YOLO MODE XII - browser_apple_focus v1178
# Focus Modes - Attention Management
name: browser_apple_focus_v1178
version: "12.0.0"
language: zig
module: browser_apple_focus

sacred_constants:
  phi: 1.618033988749895
  phi_identity: 3
  phoenix: 999
  yolo_mode: 12

types:
  FocusMode:
    fields:
      id: String
      name: String
      icon: String
      color: String
      active: Bool

  FocusFilter:
    fields:
      app_id: String
      filter_type: String
      parameters: Map<String,String>

  FocusSchedule:
    fields:
      mode_id: String
      start_time: String
      end_time: String
      days: List<String>

  FocusStatus:
    fields:
      current_mode: String
      sharing_enabled: Bool
      status_message: String

behaviors:
  - name: activate_focus
    given: FocusMode
    when: Activate
    then: Focus mode activated
  - name: deactivate_focus
    given: FocusMode
    when: Deactivate
    then: Focus mode deactivated
  - name: apply_filter
    given: FocusFilter
    when: Apply
    then: Focus filter applied
  - name: schedule_focus
    given: FocusSchedule
    when: Schedule
    then: Focus scheduled
  - name: share_status
    given: FocusStatus
    when: Share
    then: Focus status shared

test_cases:
  - name: test_focus_activate
    input: {name: "Work"}
    expected: {activated: true}
  - name: test_focus_deactivate
    input: {name: "Work"}
    expected: {deactivated: true}
  - name: test_focus_filter
    input: {type: "notification"}
    expected: {applied: true}
  - name: test_focus_schedule
    input: {start: "09:00"}
    expected: {scheduled: true}
  - name: test_phi_focus
    input: {phi: 1.618033988749895}
    expected: {identity: 3}
