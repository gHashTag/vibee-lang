# VIBEE v9200: Recursion Theory Basics
name: recursion_theory_basics
version: "9200.0.0"
language: zig
module: recursion_theory_basics

types:
  RecursionConcept:
    fields:
      name: String
      definition: String
      properties: List<String>
      complexity: String

  TuringDegree:
    fields:
      representative: String
      jump: String
      below: List<String>
      above: List<String>

  HierarchyLevel:
    fields:
      sigma: Int
      pi: Int
      delta: Int
      complete_set: String

behaviors:
  - name: compute_degree
    given: "Set specification"
    when: "Finding Turing degree"
    then: "Returns degree"

  - name: classify_hierarchy
    given: "Set"
    when: "Determining level"
    then: "Returns hierarchy classification"
