name: browser_share_core_v880
version: "8.0.0"
language: zig
module: browser_share_core

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999

types:
  ShareData:
    fields:
      title: String
      text: String
      url: String
      files: List<String>

  ShareTarget:
    fields:
      action: String
      method: String
      enctype: String
      params: String

  ShareResult:
    fields:
      success: Bool
      target: String

behaviors:
  - name: can_share
    given: ShareData
    when: Check
    then: Web Share core capability checked
  - name: share_data
    given: ShareData
    when: Share
    then: Data shared
  - name: register_target
    given: ShareTarget
    when: Register
    then: Target registered
  - name: handle_share
    given: Incoming share
    when: Handle
    then: Share handled
  - name: copy_to_clipboard
    given: Data
    when: Copy
    then: Data copied

test_cases:
  - name: test_browser_share_core_can_share
    input: {data: valid}
    expected: {can_share: true}
  - name: test_browser_share_core_share
    input: {title: "Test"}
    expected: {shared: true}
  - name: test_browser_share_core_register
    input: {target: valid}
    expected: {registered: true}
  - name: test_browser_share_core_handle
    input: {incoming: true}
    expected: {handled: true}
  - name: test_phi_browser_share_core
    input: {phi: 1.618033988749895}
    expected: {golden: true}
