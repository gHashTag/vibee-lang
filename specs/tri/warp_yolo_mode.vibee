name: warp_yolo_mode
version: "1.0.0"
language: zig
module: warp_yolo_mode

description: |
  WARP YOLO Mode - режим без подтверждений
  You Only Live Once - максимальная скорость
  Ускорение: 3-5x за счёт пропуска confirmations
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  YoloConfig:
    fields:
      enabled: Bool
      safe_actions_only: Bool
      max_risk_level: Int
      auto_rollback: Bool
      timeout_ms: Int

  YoloAction:
    fields:
      action_type: String
      target: String
      risk_level: Int
      executed: Bool
      rollback_possible: Bool

  YoloSession:
    fields:
      session_id: String
      actions_executed: Int
      actions_skipped: Int
      total_time_saved_ms: Float
      errors_count: Int

  YoloMetrics:
    fields:
      speedup_factor: Float
      success_rate: Float
      avg_action_time_ms: Float
      rollbacks_count: Int

  YoloCheckpoint:
    fields:
      checkpoint_id: String
      state_snapshot: String
      created_at: Timestamp
      can_restore: Bool

behaviors:
  - name: enable_yolo
    given: YoloConfig конфигурация
    when: Включение YOLO режима
    then: YoloSession активирована

  - name: execute_without_confirm
    given: YoloAction действие
    when: Выполнение без подтверждения
    then: Результат за минимальное время

  - name: check_yolo_safe
    given: Действие для проверки
    when: Проверка безопасности для YOLO
    then: Bool можно выполнить без confirm

  - name: create_checkpoint
    given: Текущее состояние
    when: Создание точки восстановления
    then: YoloCheckpoint для rollback

  - name: rollback_to_checkpoint
    given: YoloCheckpoint для восстановления
    when: Откат после ошибки
    then: Состояние восстановлено

  - name: get_yolo_metrics
    given: YoloSession текущая сессия
    when: Запрос метрик YOLO
    then: YoloMetrics со статистикой
