# VIBEE Specification v15830
# Information Bottleneck - Optimal compression
name: information_bottleneck_v15830
version: "1.0.0"
language: zig
module: information_bottleneck

types:
  IBObjective:
    fields:
      compression: Float
      relevance: Float
      beta: Float

  IBSolution:
    fields:
      encoder: String
      compressed: String
      rate_distortion: String

  IBCurve:
    fields:
      points: String
      optimal_beta: Float

  IBResult:
    fields:
      solution: String
      information_plane: String
      compression_ratio: Float

behaviors:
  - name: compute_ib_objective
    given: X Y and T
    when: Computation done
    then: Returns IB objective

  - name: optimize_ib
    given: Data and beta
    when: Optimization done
    then: Returns IB solution

  - name: trace_ib_curve
    given: Data
    when: Tracing done
    then: Returns IB curve

  - name: analyze_bottleneck
    given: Model
    when: Analysis done
    then: Returns IB result
