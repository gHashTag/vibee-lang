name: goal_system_v17010
version: "1.0.0"
language: zig
module: goal_system

types:
  Goal:
    fields:
      description: String
      priority: Float
      deadline: Int
      status: String

  GoalHierarchy:
    fields:
      goals: String
      subgoal_relations: String

  GoalConflict:
    fields:
      goal_a: String
      goal_b: String
      conflict_type: String

  GoalResult:
    fields:
      active_goals: String
      plan: String
      conflicts: String

behaviors:
  - name: set_goal
    given: Goal specification
    when: Goal adoption
    then: Add to goal hierarchy

  - name: decompose_goal
    given: High-level goal
    when: Subgoal generation
    then: Return subgoals

  - name: resolve_conflicts
    given: Conflicting goals
    when: Conflict resolution
    then: Return resolution strategy
