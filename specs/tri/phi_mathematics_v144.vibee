  limit_theorem:
    statement: "lim(n→∞) F(n+1)/F(n) = φ"
    proof: "From recurrence relation"
    convergence: "Exponentially fast"
    
  binet_formula:
    statement: "F(n) = (φⁿ - ψⁿ) / √5"
    significance: "Closed form for Fibonacci"
    
  lucas_numbers:
    statement: "L(n) = φⁿ + ψⁿ"
    relation: "L(n) = F(n-1) + F(n+1)"
    
  cassini_identity:
    statement: "F(n-1)·F(n+1) - F(n)² = (-1)ⁿ"
    significance: "Determinant property"

