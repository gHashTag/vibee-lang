name: agent_dev_stackoverflow
version: "1.0.0"
language: zig
module: agent_dev_stackoverflow

description: |
  Agent Dev StackOverflow - поиск на StackOverflow
  OpenAI Operator: поиск на StackOverflow
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  SOQuestion:
    fields:
      question_id: Int
      title: String
      body: String
      tags: List<String>
      score: Int
      answer_count: Int
      is_answered: Bool

  SOAnswer:
    fields:
      answer_id: Int
      body: String
      score: Int
      is_accepted: Bool
      author: String

  SOSearch:
    fields:
      query: String
      tags: List<String>
      sort_by: String
      has_accepted_answer: Option<Bool>

  SOSearchResult:
    fields:
      questions: List<String>
      total_count: Int
      search_time_ms: Float

behaviors:
  - name: search_questions
    given: SOSearch запрос
    when: Поиск вопросов
    then: SOSearchResult

  - name: get_question
    given: question_id
    when: Получение вопроса
    then: SOQuestion с деталями

  - name: get_answers
    given: SOQuestion вопрос
    when: Получение ответов
    then: Список SOAnswer

  - name: get_accepted_answer
    given: SOQuestion вопрос
    when: Получение принятого ответа
    then: SOAnswer или null

  - name: extract_code_snippets
    given: SOAnswer ответ
    when: Извлечение кода
    then: Список code snippets

  - name: find_similar_questions
    given: Описание проблемы
    when: Поиск похожих вопросов
    then: Список SOQuestion
