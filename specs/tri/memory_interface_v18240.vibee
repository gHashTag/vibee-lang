name: memory_interface_v18240
version: "1.0.0"
language: zig
module: memory_interface

types:
  MemoryAccess:
    fields:
      memory_id: String
      access_type: String
  ExternalMemory:
    fields:
      storage: String
      retrieval_speed: Float

behaviors:
  - name: store_memory
    given: Experience
    when: Storage
    then: Return stored memory
  - name: retrieve_memory
    given: Query
    when: Retrieval
    then: Return memory
  - name: share_memory
    given: Memory and recipient
    when: Sharing
    then: Return shared memory
