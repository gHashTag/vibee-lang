# ui_split_layout_v12360.vibee - Split Layout (Browser|Chat|VSCode)
# Разделенный макет
# φ² + 1/φ² = 3 | PHOENIX = 999

name: ui_split_layout_v12360
version: "12360.0.0"
language: zig
module: ui_split_layout_v12360

types:
  SplitPane:
    fields:
      pane_id: String
      pane_type: String
      width_percent: Float
      min_width: Int
      max_width: Int
      visible: Bool

  LayoutConfig:
    fields:
      panes: List
      orientation: String
      resizable: Bool
      collapse_threshold: Int

  PaneState:
    fields:
      pane_id: String
      collapsed: Bool
      focused: Bool
      content_type: String

  ResizeEvent:
    fields:
      pane_id: String
      new_width: Int
      delta: Int

  LayoutPreset:
    fields:
      preset_name: String
      pane_widths: List
      description: String

behaviors:
  - name: create_layout
    given: LayoutConfig
    when: Layout creation
    then: Return layout_id

  - name: resize_pane
    given: ResizeEvent
    when: Resize
    then: Return new dimensions

  - name: toggle_pane
    given: Pane ID
    when: Toggle visibility
    then: Return PaneState

  - name: apply_preset
    given: LayoutPreset
    when: Preset application
    then: Return success

  - name: save_layout
    given: Layout ID
    when: Save
    then: Return saved config

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
