# VIBEE Specification v14340
# Task-Incremental Learning - Sequential task learning
name: task_incremental_v14340
version: "1.0.0"
language: zig
module: task_incremental

types:
  TaskBoundary:
    fields:
      task_id: Int
      start_class: Int
      end_class: Int

  TaskHead:
    fields:
      head_id: Int
      output_dim: Int
      weights: String

  MultiHeadModel:
    fields:
      shared_backbone: String
      task_heads: String
      num_tasks: Int

  TILResult:
    fields:
      task_accuracies: String
      forgetting: Float
      forward_transfer: Float

behaviors:
  - name: add_task_head
    given: New task config
    when: Addition done
    then: Returns updated model

  - name: select_head
    given: Task id
    when: Selection done
    then: Returns task head

  - name: train_incremental
    given: New task data
    when: Training done
    then: Returns TIL result

  - name: measure_forgetting
    given: All task data
    when: Measurement done
    then: Returns forgetting metric
