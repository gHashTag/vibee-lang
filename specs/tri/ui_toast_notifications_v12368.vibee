# ui_toast_notifications_v12368.vibee - Toast Notifications
# Всплывающие уведомления
# φ² + 1/φ² = 3 | PHOENIX = 999

name: ui_toast_notifications_v12368
version: "12368.0.0"
language: zig
module: ui_toast_notifications_v12368

types:
  Toast:
    fields:
      toast_id: String
      message: String
      toast_type: String
      duration_ms: Int
      action: Object

  ToastConfig:
    fields:
      position: String
      max_visible: Int
      animation: String
      stack_direction: String

  ToastAction:
    fields:
      label: String
      callback_id: String

  ToastQueue:
    fields:
      pending: List
      visible: List
      dismissed: List

  ToastStyle:
    fields:
      background: String
      text_color: String
      icon: String
      border_radius: Int

behaviors:
  - name: show_toast
    given: Toast
    when: Toast show
    then: Return toast_id

  - name: dismiss_toast
    given: Toast ID
    when: Dismiss
    then: Return success

  - name: dismiss_all
    given: Toast type filter
    when: Dismiss all
    then: Return dismissed count

  - name: success_toast
    given: Message
    when: Success notification
    then: Return toast_id

  - name: error_toast
    given: Message
    when: Error notification
    then: Return toast_id

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
