# VIBEE Specification v13840
# Fairness - Algorithmic fairness and bias mitigation
name: fairness_v13840
version: "1.0.0"
language: zig
module: fairness

types:
  FairnessMetric:
    fields:
      demographic_parity: String
      equalized_odds: String
      calibration: String
      individual: String

  ProtectedAttribute:
    fields:
      name: String
      groups: String
      distribution: String

  BiasReport:
    fields:
      metrics: String
      disparities: String
      recommendations: String

  MitigationMethod:
    fields:
      preprocessing: String
      inprocessing: String
      postprocessing: String

  FairnessConfig:
    fields:
      metrics: String
      protected_attrs: String
      threshold: Float

behaviors:
  - name: audit_fairness
    given: Model and data
    when: Audit done
    then: Returns bias report

  - name: mitigate_bias
    given: Model and method
    when: Mitigation done
    then: Returns fair model

  - name: compute_disparity
    given: Predictions and groups
    when: Computation done
    then: Returns disparity scores

  - name: balance_dataset
    given: Imbalanced data
    when: Balancing done
    then: Returns balanced data
