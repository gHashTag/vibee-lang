creation_pattern:
  source: NotificationConfig
  transformer: GlassNotificationRenderer
  result: GlassNotificationUI

types:
  NotificationProps:
    fields:
      title: String
      message: String
      type: String
      duration: Int
      position: String
      closable: Bool
      icon: Option<String>

  NotificationState:
    fields:
      notifications: List<Notification>
      max_visible: Int

  Notification:
    fields:
      id: String
      props: NotificationProps
      visible: Bool
      progress: Float

behaviors:
  - name: show_notification
    given: "Notification config"
    when: "Notify called"
    then: "Notification appears"
    test_cases:
      - name: test_show
        input: { title: "Success", type: "success" }
        expected: { visible: true }

  - name: auto_dismiss
    given: "Notification with duration"
    when: "Duration elapsed"
    then: "Notification dismissed"
    test_cases:
      - name: test_auto_dismiss
        input: { duration: 3000 }
        expected: { dismissed_after: 3000 }

  - name: manual_dismiss
    given: "Closable notification"
    when: "Close button clicked"
    then: "Notification dismissed"
    test_cases:
      - name: test_manual_dismiss
        input: { closable: true }
        expected: { dismissed: true }

  - name: stack_notifications
    given: "Multiple notifications"
    when: "New notification added"
    then: "Notifications stacked"
    test_cases:
      - name: test_stack
        input: { existing: 2, new: 1 }
        expected: { total_visible: 3 }

  - name: limit_visible
    given: "Max visible reached"
    when: "New notification added"
    then: "Oldest dismissed"
    test_cases:
      - name: test_limit
        input: { max: 3, current: 3, new: 1 }
        expected: { dismissed: 1, visible: 3 }

  - name: show_progress
    given: "Notification with duration"
    when: "Notification visible"
    then: "Progress bar shown"
    test_cases:
      - name: test_progress
        input: { duration: 5000, elapsed: 2500 }
        expected: { progress: 0.5 }

  - name: pause_on_hover
    given: "Notification hovered"
    when: "Mouse enters"
    then: "Auto-dismiss paused"
    test_cases:
      - name: test_pause
        input: { hovered: true }
        expected: { paused: true }

