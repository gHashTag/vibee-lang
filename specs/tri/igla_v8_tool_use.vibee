# iGLA v8 Tool Use - Function Calling
# Source: OpenAI Function Calling, Anthropic Tool Use
# φ² + 1/φ² = 3 | КОЩЕЙ БЕССМЕРТЕН

name: igla_v8_tool_use
version: "8.0.0"
language: zig
module: igla_v8_tool_use

types:
  ToolUseConfig:
    fields:
      tools_available: String
      parallel_calls: Bool
      max_iterations: Int
      
  ToolDefinition:
    fields:
      name: String
      description: String
      parameters: String
      
  ToolCall:
    fields:
      tool_name: String
      arguments: String
      result: String

behaviors:
  - name: tool_selection
    given: "User query"
    when: "Tool needed"
    then: "Select appropriate tool"
    
  - name: argument_generation
    given: "Tool selected"
    when: "Argument parsing"
    then: "Generate valid arguments"
    
  - name: tool_execution
    given: "Tool call"
    when: "External execution"
    then: "Get result"
    
  - name: result_integration
    given: "Tool result"
    when: "Response generation"
    then: "Integrate into response"
    
  - name: parallel_tools
    given: "Multiple tools needed"
    when: "Parallel execution"
    then: "Concurrent tool calls"
    
  - name: iterative_tool_use
    given: "Complex task"
    when: "Multi-step"
    then: "Chain of tool calls"
