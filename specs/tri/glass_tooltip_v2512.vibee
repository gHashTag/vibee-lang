# glass_tooltip_v2512.vibee - Glass Tooltip Component
# YOLO MODE XXV - Glassmorphism tooltip
# φ² + 1/φ² = 3 | PHOENIX = 999

name: glass_tooltip_v2512
version: "2512.0.0"
language: zig
module: glass_tooltip_v2512

types:
  GlassTooltip:
    fields:
      id: String
      content: String
      position: String
      delay_ms: Int
      max_width: Int

  TooltipStyle:
    fields:
      blur: Float
      opacity: Float
      arrow_size: Int
      padding: Int

  TooltipTrigger:
    fields:
      element_id: String
      event: String
      offset: Int

behaviors:
  - name: show_tooltip
    given: Trigger element and content
    when: Hover/focus detected
    then: Position and show with animation

  - name: hide_tooltip
    given: Active tooltip
    when: Mouse leaves or blur
    then: Fade out and remove

  - name: position_tooltip
    given: Trigger bounds and viewport
    when: Positioning needed
    then: Calculate optimal position

  - name: update_content
    given: Tooltip and new content
    when: Content change needed
    then: Update without repositioning

sacred_constants:
  phi: 1.618033988749895
  phi_squared_plus_inverse_squared: 3
  phoenix: 999
