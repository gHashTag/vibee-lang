name: pkg_core_v19600
version: "1.0.0"
language: zig
module: pkg_core_v19600

types:
  Package:
    fields:
      name: String
      version: String
      description: String
      dependencies: Map<String,String>
      dev_dependencies: Map<String,String>

  PackageManifest:
    fields:
      package: String
      lock_file: String
      checksum: String

behaviors:
  - name: pkg_init
