name: agent_memory_semantic
version: "1.0.0"
language: zig
module: agent_memory_semantic

description: |
  Agent Memory Semantic - семантическая память
  Знания о мире, фактах, концепциях
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  Concept:
    fields:
      concept_id: String
      name: String
      description: String
      related_concepts: List<String>
      confidence: Float

  Fact:
    fields:
      fact_id: String
      subject: String
      predicate: String
      object: String
      source: String
      verified: Bool

  KnowledgeGraph:
    fields:
      concepts: List<String>
      facts: List<String>
      relations: List<String>

  SemanticQuery:
    fields:
      query: String
      context: Option<String>
      max_results: Int

behaviors:
  - name: store_concept
    given: Concept новый концепт
    when: Сохранение концепта
    then: Concept в памяти

  - name: store_fact
    given: Fact новый факт
    when: Сохранение факта
    then: Fact в памяти

  - name: query_knowledge
    given: SemanticQuery запрос
    when: Поиск в знаниях
    then: Релевантные Concept и Fact

  - name: relate_concepts
    given: Два Concept
    when: Установление связи
    then: Связь создана

  - name: verify_fact
    given: Fact для проверки
    when: Верификация факта
    then: Fact с обновлённым verified

  - name: export_knowledge
    given: Область знаний
    when: Экспорт графа знаний
    then: KnowledgeGraph
