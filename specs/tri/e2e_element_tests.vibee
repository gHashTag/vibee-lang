# E2E Element Tests
# Test element interactions
# Click, type, hover, select

name: e2e_element_tests
version: "1.0.0"
language: zig
module: e2e_element_tests

types:
  ElementTest:
    fields:
      test_id: String
      selector: String
      action: String
      expected_result: String

  ClickTest:
    fields:
      selector: String
      button: String
      click_count: Int
      expected_change: String

  TypeTest:
    fields:
      selector: String
      text: String
      expected_value: String

  HoverTest:
    fields:
      selector: String
      expected_state: String

  SelectTest:
    fields:
      selector: String
      option: String
      expected_selected: String

behaviors:
  - name: test_click_button
    given: Button selector
    when: Click test
    then: Returns test result

  - name: test_click_link
    given: Link selector
    when: Link click test
    then: Returns test result

  - name: test_double_click
    given: Element selector
    when: Double click test
    then: Returns test result

  - name: test_type_input
    given: Input and text
    when: Type test
    then: Returns test result

  - name: test_fill_input
    given: Input and value
    when: Fill test
    then: Returns test result

  - name: test_clear_input
    given: Input selector
    When: Clear test
    then: Returns test result

  - name: test_hover_element
    given: Element selector
    when: Hover test
    then: Returns test result

  - name: test_select_option
    given: Select and option
    when: Select test
    then: Returns test result

  - name: test_checkbox_toggle
    given: Checkbox selector
    when: Toggle test
    then: Returns test result
