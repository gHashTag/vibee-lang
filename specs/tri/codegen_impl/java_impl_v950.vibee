name: java_impl
version: "9.5.0"
language: zig
module: java_impl

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: JavaGenerator
  result: JavaPackage

types:
  JavaPackage:
    fields:
      main_java: String
      pom_xml: String
      tests: String

  JavaClass:
    fields:
      name: String
      fields: List<String>
      annotations: List<String>
      package_name: String

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "Java class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}, {"name": "name", "type": "String"}]}'
        expected: '{"code": "public class User {\\n    private Long id;\\n    private String name;\\n    // getters/setters\\n}"}'

  - name: generate_record
    given: "VIBEE immutable type"
    when: "Record generation"
    then: "Java record"
    pas_pattern: ALG
    test_cases:
      - name: test_record
        input: '{"name": "UserDTO", "fields": [...]}'
        expected: '{"code": "public record UserDTO(Long id, String name) {}"}'

  - name: generate_tests
    given: "VIBEE test cases"
    when: "Test generation"
    then: "JUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_tests
        input: '{"test_cases": [...]}'
        expected: '{"code": "@Test\\nvoid testCreate() { ... }"}'

  - name: generate_pom
    given: "Project config"
    when: "POM generation"
    then: "pom.xml content"
    pas_pattern: PRE
    test_cases:
      - name: test_pom
        input: '{"groupId": "com.vibee", "artifactId": "user"}'
        expected: '{"xml": "<project>...</project>"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

java_type_mapping:
  String: "String"
  Int: "Long"
  Float: "Double"
  Bool: "Boolean"
  List: "List"
  Option: "Optional"
  Object: "Map<String, Object>"
  Timestamp: "Instant"

