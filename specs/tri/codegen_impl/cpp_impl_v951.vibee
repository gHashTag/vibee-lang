name: cpp_impl
version: "9.5.1"
language: zig
module: cpp_impl

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: CppGenerator
  result: CppModule

types:
  CppModule:
    fields:
      header_hpp: String
      source_cpp: String
      cmake: String
      tests: String

  CppClass:
    fields:
      name: String
      members: List<String>
      namespace: String

behaviors:
  - name: generate_header
    given: "VIBEE type"
    when: "Header generation"
    then: "C++ header"
    pas_pattern: ALG
    test_cases:
      - name: test_header
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}, {"name": "name", "type": "String"}]}'
        expected: '{"code": "#pragma once\\n\\nclass User {\\npublic:\\n    int64_t id;\\n    std::string name;\\n};"}'

  - name: generate_source
    given: "VIBEE behaviors"
    when: "Source generation"
    then: "C++ source"
    pas_pattern: ALG
    test_cases:
      - name: test_source
        input: '{"class": "User", "methods": [...]}'
        expected: '{"code": "#include \\"User.hpp\\"\\n\\nUser::User() { ... }"}'

  - name: generate_tests
    given: "VIBEE test cases"
    when: "Test generation"
    then: "Google Test tests"
    pas_pattern: ALG
    test_cases:
      - name: test_tests
        input: '{"test_cases": [...]}'
        expected: '{"code": "TEST(UserTest, Create) { ... }"}'

  - name: generate_cmake
    given: "Project config"
    when: "CMake generation"
    then: "CMakeLists.txt"
    pas_pattern: PRE
    test_cases:
      - name: test_cmake
        input: '{"project": "vibee_user"}'
        expected: '{"cmake": "cmake_minimum_required(VERSION 3.20)\\nproject(vibee_user)"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

cpp_type_mapping:
  String: "std::string"
  Int: "int64_t"
  Float: "double"
  Bool: "bool"
  List: "std::vector"
  Option: "std::optional"
  Object: "std::unordered_map<std::string, std::any>"
  Timestamp: "std::chrono::time_point<std::chrono::system_clock>"

