name: go_impl
version: "9.4.8"
language: zig
module: go_impl

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: GoGenerator
  result: GoPackage

types:
  GoPackage:
    fields:
      main_go: String
      go_mod: String
      tests: String

  GoStruct:
    fields:
      name: String
      fields: List<String>
      tags: List<String>

behaviors:
  - name: generate_struct
    given: "VIBEE type"
    when: "Struct generation"
    then: "Go struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": [{"name": "ID", "type": "Int"}, {"name": "Name", "type": "String"}]}'
        expected: '{"code": "type User struct {\\n\\tID   int64  `json:\\"id\\"`\\n\\tName string `json:\\"name\\"`\\n}"}'

  - name: generate_method
    given: "VIBEE behavior"
    when: "Method generation"
    then: "Go method"
    pas_pattern: ALG
    test_cases:
      - name: test_method
        input: '{"receiver": "User", "name": "Create"}'
        expected: '{"code": "func (u *User) Create() error { ... }"}'

  - name: generate_tests
    given: "VIBEE test cases"
    when: "Test generation"
    then: "Go tests"
    pas_pattern: ALG
    test_cases:
      - name: test_tests
        input: '{"test_cases": [...]}'
        expected: '{"code": "func TestCreate(t *testing.T) { ... }"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

go_type_mapping:
  String: "string"
  Int: "int64"
  Float: "float64"
  Bool: "bool"
  List: "[]"
  Option: "*"
  Object: "map[string]interface{}"
  Timestamp: "time.Time"

