# VIBEE Specification v15400
# Genetic Algorithm - Evolution-based optimization
name: genetic_algorithm_v15400
version: "1.0.0"
language: zig
module: genetic_algorithm

types:
  Chromosome:
    fields:
      genes: String
      fitness: Float
      age: Int

  Population:
    fields:
      individuals: String
      generation: Int
      best_fitness: Float

  GeneticOperator:
    fields:
      crossover: String
      mutation: String
      selection: String

  GAResult:
    fields:
      best_individual: String
      best_fitness: Float
      generations: Int

behaviors:
  - name: initialize_population
    given: Population size
    when: Initialization done
    then: Returns population

  - name: evaluate_fitness
    given: Individual
    when: Evaluation done
    then: Returns fitness

  - name: select_parents
    given: Population
    when: Selection done
    then: Returns parent pairs

  - name: evolve
    given: Population and operators
    when: Evolution done
    then: Returns GA result
