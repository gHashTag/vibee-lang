name: test_coverage_v19850
version: "1.0.0"
language: zig
module: test_coverage_v19850

types:
  CoverageData:
    fields:
      file: String
      lines_total: Int
      lines_covered: Int
      branches_total: Int
      branches_covered: Int

  CoverageReport:
    fields:
      files: List<String>
      total_coverage: Float
      uncovered_lines: List<String>

behaviors:
  - name: coverage_collect
    given: "Test execution"
    when: "Collector collects"
    then: "Returns coverage data"

  - name: coverage_report
    given: "Coverage data"
    when: "Reporter reports"
    then: "Generates coverage report"

  - name: coverage_threshold
    given: "Threshold value"
    when: "Checker checks"
    then: "Returns threshold result"
