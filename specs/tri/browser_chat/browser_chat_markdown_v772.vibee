# VIBEE YOLO MODE VII - browser_chat_markdown v772
name: browser_chat_markdown_v772
version: "7.0.0"
language: zig
module: browser_chat_markdown

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999

types:
  ChatMessage:
    fields:
      id: String
      content: String
      timestamp: Timestamp
      role: String

  ChatState:
    fields:
      messages: List<ChatMessage>
      streaming: Bool
      connected: Bool

behaviors:
  - name: send_message
    given: ChatMessage
    when: Send
    then: markdown rendering processed
  - name: receive_message
    given: Incoming message
    when: Receive
    then: Message displayed
  - name: stream_response
    given: AI response
    when: Streaming
    then: Response streamed
  - name: persist_history
    given: Chat session
    when: Persist
    then: History saved

test_cases:
  - name: test_browser_chat_markdown_send
    input: {message: "hello"}
    expected: {sent: true}
  - name: test_browser_chat_markdown_receive
    input: {incoming: true}
    expected: {displayed: true}
  - name: test_browser_chat_markdown_stream
    input: {streaming: true}
    expected: {streamed: true}
  - name: test_browser_chat_markdown_persist
    input: {session: active}
    expected: {persisted: true}
  - name: test_phi_browser_chat_markdown
    input: {phi: 1.618033988749895}
    expected: {golden: true}
