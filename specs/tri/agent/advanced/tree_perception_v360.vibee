name: tree_perception_v360
version: "1.0.0"
language: zig
module: tree_perception_v360

types:
  PerceptionSkill:
    fields:
      id: String
      name: String
      level: Int
      xp: Int
      max_level: Int

  VisualPerception:
    fields:
      acuity: Float
      color_depth: Int
      motion_detection: Bool
      ocr_accuracy: Float

  AuditoryPerception:
    fields:
      speech_recognition: Float
      sound_detection: Bool
      audio_analysis: Bool

  SemanticPerception:
    fields:
      text_understanding: Float
      intent_recognition: Float
      context_awareness: Float

  PerceptionTree:
    fields:
      visual: List<PerceptionSkill>
      auditory: List<PerceptionSkill>
      semantic: List<PerceptionSkill>

behaviors:
  - name: skill_visual_basic
    given: New agent
    When: Training runs
    then: Basic screenshot analysis

  - name: skill_visual_ocr
    given: Visual basic unlocked
    When: Training runs
    then: Text extraction from images

  - name: skill_visual_object
    given: Visual OCR unlocked
    When: Training runs
    then: Object detection in screenshots

  - name: skill_semantic_basic
    given: New agent
    When: Training runs
    then: Basic text understanding

  - name: skill_semantic_intent
    given: Semantic basic unlocked
    When: Training runs
    then: User intent recognition

  - name: skill_semantic_context
    given: Semantic intent unlocked
    When: Training runs
    then: Context-aware understanding

  - name: level_up_skill
    given: Enough XP
    When: Level up runs
    then: Skill level increased

  - name: unlock_skill
    given: Prerequisites met
    When: Unlock runs
    then: New skill available
