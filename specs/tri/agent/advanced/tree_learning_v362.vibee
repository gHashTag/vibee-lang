name: tree_learning_v362
version: "1.0.0"
language: zig
module: tree_learning_v362

types:
  LearningSkill:
    fields:
      id: String
      name: String
      level: Int
      learning_rate: Float

  ReinforcementLearning:
    fields:
      reward_shaping: Bool
      exploration_rate: Float
      policy_type: String

  ImitationLearning:
    fields:
      demo_efficiency: Float
      generalization: Float
      few_shot: Bool

  TransferLearning:
    fields:
      domain_adaptation: Float
      task_transfer: Float
      zero_shot: Bool

  LearningTree:
    fields:
      reinforcement: List<LearningSkill>
      imitation: List<LearningSkill>
      transfer: List<LearningSkill>

behaviors:
  - name: skill_rl_basic
    given: New agent
    When: Training runs
    then: Basic reward learning

  - name: skill_rl_shaped
    given: RL basic unlocked
    When: Training runs
    then: Shaped reward learning

  - name: skill_rl_curiosity
    given: RL shaped unlocked
    When: Training runs
    then: Curiosity-driven exploration

  - name: skill_imitation_basic
    given: New agent
    When: Training runs
    then: Basic demonstration learning

  - name: skill_imitation_few
    given: Imitation basic unlocked
    When: Training runs
    then: Few-shot learning

  - name: skill_transfer_domain
    given: Imitation few unlocked
    When: Training runs
    then: Cross-domain transfer

  - name: skill_transfer_zero
    given: Transfer domain unlocked
    When: Training runs
    then: Zero-shot generalization

  - name: combine_learning
    given: Multiple skills
    When: Combination runs
    then: Hybrid learning approach
