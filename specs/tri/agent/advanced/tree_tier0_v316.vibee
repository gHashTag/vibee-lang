name: tree_tier0_v316
version: "1.0.0"
language: zig
module: tree_tier0_v316

types:
  TechNode:
    fields:
      id: String
      name: String
      tier: Int
      prerequisites: List<String>
      unlocks: List<String>
      status: String

  TechTier:
    fields:
      tier: Int
      name: String
      nodes: List<TechNode>
      total_xp: Int

  TechProgress:
    fields:
      current_tier: Int
      unlocked: List<String>
      in_progress: String
      xp: Int

  TechRequirement:
    fields:
      tech_id: String
      xp_cost: Int
      time_hours: Int
      difficulty: String

behaviors:
  - name: tier0_basic_navigation
    given: New agent
    When: Tier 0 starts
    then: Basic goto/click/type unlocked

  - name: tier0_element_selection
    given: Navigation unlocked
    When: Learning runs
    then: CSS/XPath selectors unlocked

  - name: tier0_assertions
    given: Selection unlocked
    When: Learning runs
    then: Basic assertions unlocked

  - name: tier1_waits
    given: Tier 0 complete
    When: Tier 1 starts
    then: Explicit/implicit waits unlocked

  - name: tier1_screenshots
    given: Waits unlocked
    When: Learning runs
    then: Screenshot capture unlocked

  - name: tier1_network
    given: Screenshots unlocked
    When: Learning runs
    then: Network interception unlocked

  - name: tier2_frames
    given: Tier 1 complete
    When: Tier 2 starts
    then: Frame handling unlocked

  - name: tier2_popups
    given: Frames unlocked
    When: Learning runs
    then: Popup/dialog handling unlocked
