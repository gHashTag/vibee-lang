name: tree_tier3_v317
version: "1.0.0"
language: zig
module: tree_tier3_v317

types:
  IntermediateTech:
    fields:
      id: String
      name: String
      tier: Int
      category: String
      mastery: Float

  TechBranch:
    fields:
      name: String
      nodes: List<IntermediateTech>
      specialization: String

  SkillTree:
    fields:
      branches: List<TechBranch>
      synergies: List<String>
      total_nodes: Int

behaviors:
  - name: tier3_parallel_execution
    given: Tier 2 complete
    When: Tier 3 starts
    then: Parallel test execution unlocked

  - name: tier3_visual_testing
    given: Parallel unlocked
    When: Learning runs
    then: Visual regression testing unlocked

  - name: tier3_api_testing
    given: Visual unlocked
    When: Learning runs
    then: API testing integration unlocked

  - name: tier4_performance
    given: Tier 3 complete
    When: Tier 4 starts
    then: Performance testing unlocked

  - name: tier4_load_testing
    given: Performance unlocked
    When: Learning runs
    then: Load testing unlocked

  - name: tier4_accessibility
    given: Load unlocked
    When: Learning runs
    then: Accessibility testing unlocked

  - name: tier5_mobile
    given: Tier 4 complete
    When: Tier 5 starts
    then: Mobile testing unlocked

  - name: tier5_cross_browser
    given: Mobile unlocked
    When: Learning runs
    then: Cross-browser testing unlocked
