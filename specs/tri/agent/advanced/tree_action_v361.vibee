name: tree_action_v361
version: "1.0.0"
language: zig
module: tree_action_v361

types:
  ActionSkill:
    fields:
      id: String
      name: String
      level: Int
      precision: Float
      speed: Float

  NavigationAction:
    fields:
      goto_accuracy: Float
      reload_speed: Float
      history_nav: Bool

  InteractionAction:
    fields:
      click_precision: Float
      type_speed: Float
      drag_accuracy: Float

  FormAction:
    fields:
      fill_accuracy: Float
      validation_aware: Bool
      auto_complete: Bool

  ActionTree:
    fields:
      navigation: List<ActionSkill>
      interaction: List<ActionSkill>
      form: List<ActionSkill>

behaviors:
  - name: skill_nav_basic
    given: New agent
    When: Training runs
    then: Basic URL navigation

  - name: skill_nav_history
    given: Nav basic unlocked
    When: Training runs
    then: Back/forward navigation

  - name: skill_nav_frames
    given: Nav history unlocked
    When: Training runs
    then: Frame navigation

  - name: skill_interact_click
    given: New agent
    When: Training runs
    then: Basic click actions

  - name: skill_interact_type
    given: Click unlocked
    When: Training runs
    then: Keyboard input

  - name: skill_interact_drag
    given: Type unlocked
    When: Training runs
    then: Drag and drop

  - name: skill_form_fill
    given: Type unlocked
    When: Training runs
    then: Form filling

  - name: skill_form_validate
    given: Form fill unlocked
    When: Training runs
    then: Validation-aware filling
