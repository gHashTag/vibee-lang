# vscode_git_v13317.vibee
# KOSCHEI CYCLE 9 - Git Integration
# φ² + 1/φ² = 3 | PHOENIX = 999

name: vscode_git
version: "13317.0.0"
language: zig
module: vscode_git

types:
  GitRepository:
    fields:
      path: String
      branch: String
      remote: String
      status: String

  GitChange:
    fields:
      file: String
      status: String
      staged: Bool
      diff: String

  GitCommit:
    fields:
      hash: String
      message: String
      author: String
      date: Int

  GitResult:
    fields:
      success: Bool
      output: String
      error_message: String

behaviors:
  - name: get_repository
    given: Workspace path
    when: Repo requested
    then: Returns GitRepository

  - name: get_changes
    given: GitRepository
    when: Changes requested
    then: Returns GitChange list

  - name: stage_file
    given: File path
    when: Stage requested
    then: Returns GitResult

  - name: commit_changes
    given: Message
    when: Commit requested
    then: Returns GitResult

  - name: push_changes
    given: Remote and branch
    When: Push requested
    then: Returns GitResult

  - name: pull_changes
    given: Remote and branch
    When: Pull requested
    then: Returns GitResult
