name: certification_v12020
version: "12020"
language: zig
module: certification

description: |
  TIER 286: Certification
  Manages AI system certification
  Based on: ISO certification, AI certification schemes

types:
  CertificationConfig:
    fields:
      scheme: CertificationScheme
      level: String
      validity_period: Int

  CertificationScheme:
    variants:
      - iso_42001
      - eu_ai_act
      - industry_specific
      - custom

  Certificate:
    fields:
      cert_id: String
      system_name: String
      scheme: String
      level: String
      issue_date: Int
      expiry_date: Int
      status: CertStatus

  CertStatus:
    variants:
      - pending
      - active
      - suspended
      - revoked
      - expired

behaviors:
  - name: apply_for_certification
    given: System and scheme
    when: Applying
    then: Returns application

  - name: conduct_audit
    given: Application
    when: Auditing
    then: Returns audit result

  - name: issue_certificate
    given: Passed audit
    when: Issuing
    then: Returns certificate

  - name: verify_certificate
    given: Certificate
    when: Verifying
    then: Returns verification

  - name: renew_certificate
    given: Expiring certificate
    when: Renewing
    then: Returns renewed cert

  - name: suspend_certificate
    given: Non-compliance
    when: Suspending
    then: Returns suspension

  - name: revoke_certificate
    given: Serious violation
    when: Revoking
    then: Returns revocation

  - name: list_certificates
    given: Organization
    when: Listing
    then: Returns certificate list

creation_pattern:
  source: CertificationRequest
  transformer: CertificationAuthority
  result: Certificate
