# VIBEE Specification v14270
# Few-Shot Learning - Learning from limited examples
name: few_shot_learning_v14270
version: "1.0.0"
language: zig
module: few_shot_learning

types:
  FewShotMethod:
    fields:
      metric_based: String
      optimization_based: String
      hallucination: String
      graph_based: String

  FewShotEpisode:
    fields:
      support: String
      query: String
      n_way: Int
      k_shot: Int

  FewShotModel:
    fields:
      encoder: String
      classifier: String
      method: String

  FewShotResult:
    fields:
      predictions: String
      confidence: String
      accuracy: Float

behaviors:
  - name: create_episode
    given: Dataset and config
    when: Creation done
    then: Returns few shot episode

  - name: train_few_shot
    given: Episodes
    When: Training done
    then: Returns few shot model

  - name: classify_few_shot
    given: Episode and model
    when: Classification done
    then: Returns few shot result

  - name: augment_support
    given: Support set
    when: Augmentation done
    then: Returns augmented support
