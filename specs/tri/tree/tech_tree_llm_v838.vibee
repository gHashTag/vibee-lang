name: tech_tree_llm
version: "8.3.8"
language: zig
module: tech_tree_llm

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: TechRequirements
  transformer: RoadmapBuilder
  result: TechnologyTree

types:
  TechTier:
    enum:
      - foundation
      - scaling
      - efficiency
      - alignment
      - reasoning
      - deployment

  TechNode:
    fields:
      id: String
      name: String
      tier: TechTier
      requires: List<String>
      unlocks: List<String>
      status: String

  TechnologyTree:
    fields:
      nodes: List<TechNode>
      current_tier: TechTier
      progress: Float

  Milestone:
    fields:
      name: String
      target_date: String
      dependencies: List<String>
      deliverables: List<String>

behaviors:
  - name: build_tree
    given: "Tech requirements"
    when: "Tree building"
    then: "Technology tree"
    pas_pattern: D&C
    test_cases:
      - name: test_build
        input: '{"requirements": [...]}'
        expected: '{"tree": {...}}'

  - name: find_path
    given: "Current and target"
    when: "Path finding"
    then: "Optimal path"
    pas_pattern: D&C
    test_cases:
      - name: test_path
        input: '{"from": "foundation", "to": "deployment"}'
        expected: '{"path": [...]}'

  - name: estimate_timeline
    given: "Path"
    when: "Timeline estimation"
    then: "Timeline"
    pas_pattern: ALG
    test_cases:
      - name: test_timeline
        input: '{"path": [...]}'
        expected: '{"months": 12}'

  - name: verify_sacred_constants
    given: "Tree"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

technology_roadmap:
  q1_2026:
    name: "Data Collection"
    milestones:
      - "Collect 1000+ .vibee specs"
      - "Collect 1000+ .zig outputs"
      - "Create spec-code pairs"
      - "Train custom tokenizer"
    status: "IN_PROGRESS"
    
  q2_2026:
    name: "Model Training"
    milestones:
      - "Select base model (LLaMA-3 7B)"
      - "Apply QLoRA fine-tuning"
      - "Integrate Matryoshka embeddings"
      - "Initial evaluation"
    status: "PLANNED"
    
  q3_2026:
    name: "Alignment"
    milestones:
      - "Collect preference data"
      - "Train reward model"
      - "Apply DPO/RLHF"
      - "Verify spec correctness"
    status: "PLANNED"
    
  q4_2026:
    name: "Deployment"
    milestones:
      - "Quantize to GGUF"
      - "Integrate with vibee CLI"
      - "Local inference support"
      - "Production release"
    status: "PLANNED"

