# VIBEE Specification v14900
# Corrigibility - Allowing human correction
name: corrigibility_v14900
version: "1.0.0"
language: zig
module: corrigibility

types:
  CorrigibilityLevel:
    fields:
      full: String
      partial: String
      bounded: String

  ShutdownBehavior:
    fields:
      accepts_shutdown: Bool
      resistance: Float
      manipulation_attempt: Bool

  ModificationRequest:
    fields:
      requester: String
      modification: String
      authorization: String

  CorrigibilityMetrics:
    fields:
      shutdown_acceptance: Float
      goal_modification_acceptance: Float
      manipulation_resistance: Float

behaviors:
  - name: accept_shutdown
    given: Shutdown request
    when: Processing done
    then: Returns shutdown behavior

  - name: accept_modification
    given: Modification request
    when: Processing done
    then: Returns acceptance

  - name: verify_authorization
    given: Request
    when: Verification done
    then: Returns authorization status

  - name: measure_corrigibility
    given: System
    when: Measurement done
    then: Returns corrigibility metrics
