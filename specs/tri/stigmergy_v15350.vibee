# VIBEE Specification v15350
# Stigmergy - Environment-mediated coordination
name: stigmergy_v15350
version: "1.0.0"
language: zig
module: stigmergy

types:
  StigmergicMark:
    fields:
      location: String
      type: String
      intensity: Float
      decay_rate: Float

  Environment:
    fields:
      marks: String
      grid_size: Int
      diffusion_rate: Float

  AgentAction:
    fields:
      agent_id: String
      action: String
      mark_deposited: String

  StigmergyResult:
    fields:
      emergent_structure: String
      coordination_level: Float
      efficiency: Float

behaviors:
  - name: deposit_mark
    given: Agent and location
    when: Deposition done
    then: Returns stigmergic mark

  - name: sense_marks
    given: Agent location
    when: Sensing done
    then: Returns local marks

  - name: decay_marks
    given: Environment
    when: Decay done
    then: Returns updated environment

  - name: coordinate_stigmergic
    given: Agent population
    when: Coordination done
    then: Returns stigmergy result
