# VIBEE Specification v13560
# Code Generation - AI code synthesis
name: code_generation_v13560
version: "1.0.0"
language: zig
module: code_generation

types:
  CodeModel:
    fields:
      codex: String
      starcoder: String
      codellama: String
      deepseek_coder: String

  CodeContext:
    fields:
      prefix: String
      suffix: String
      language: String
      file_path: String

  CodeCompletion:
    fields:
      code: String
      confidence: Float
      alternatives: String

  CodeEdit:
    fields:
      original: String
      edited: String
      diff: String

  CodeGenConfig:
    fields:
      model: String
      max_tokens: Int
      temperature: Float
      stop_tokens: String

behaviors:
  - name: complete_code
    given: Code context
    when: Completion done
    then: Returns code completion

  - name: generate_function
    given: Docstring
    when: Generation done
    then: Returns function code

  - name: edit_code
    given: Code and instruction
    when: Edit done
    then: Returns code edit

  - name: explain_code
    given: Code snippet
    when: Explanation done
    then: Returns explanation
