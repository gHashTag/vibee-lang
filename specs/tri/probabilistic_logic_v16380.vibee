name: probabilistic_logic_v16380
version: "1.0.0"
language: zig
module: probabilistic_logic

types:
  ProbabilisticFact:
    fields:
      atom: String
      probability: Float

  ProbabilisticRule:
    fields:
      head: String
      body: String
      weight: Float

  ProbLogProgram:
    fields:
      facts: String
      rules: String

  ProbabilisticQuery:
    fields:
      query: String
      evidence: String
      probability: Float

behaviors:
  - name: compute_probability
    given: Program and query
    when: Weighted model counting
    then: Return probability

  - name: mpe_inference
    given: Program and evidence
    when: Most probable explanation
    then: Return MPE

  - name: parameter_learning
    given: Program and data
    when: EM algorithm
    then: Return learned weights
