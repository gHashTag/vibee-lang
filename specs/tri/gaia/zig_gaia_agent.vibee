name: zig_gaia_agent
version: "1.0.0"
language: zig
module: gaia_agent

description: |
  GAIA Agent - Main architecture for General AI Assistant benchmark.
  Target: #1 on WebArena leaderboard (>71.6%)
  Sacred Formula: V = n × 3^k × π^m × φ^p × e^q
  φ² + 1/φ² = 3

constants:
  PHI: 1.618033988749895
  PHI_SQUARED: 2.618033988749895
  GOLDEN_IDENTITY: 3.0
  MAX_STEPS: 30
  DEFAULT_TIMEOUT_MS: 60000

types:
  AgentState:
    enum:
      - idle
      - thinking
      - acting
      - observing
      - evaluating
      - success
      - failure

  AgentConfig:
    fields:
      max_steps: Int
      timeout_ms: Int
      model_name: String
      temperature: Float
      use_vision: Bool
      use_accessibility_tree: Bool
      verbose: Bool

  AgentContext:
    fields:
      task_intent: String
      current_url: String
      step_count: Int
      history: List<String>
      observations: List<String>
      actions_taken: List<String>

  AgentResult:
    fields:
      success: Bool
      final_answer: Option<String>
      steps_taken: Int
      elapsed_ms: Int
      trajectory: List<String>

behaviors:
  - name: init_agent
    given: AgentConfig
    when: Creating new agent instance
    then: Returns initialized GaiaAgent

  - name: run_task
    given: Task intent and start URL
    when: Executing full ReAct loop
    then: Returns AgentResult with success/failure

  - name: get_state
    given: Agent instance
    when: Querying current state
    then: Returns AgentState enum

  - name: reset
    given: Agent instance
    when: Resetting for new task
    then: Clears context and history
