# VIBEE v10016: Agent Tool Interface
name: agent_tool_interface
version: "10016.0.0"
language: zig
module: agent_tool_interface

types:
  Tool:
    fields:
      name: String
      description: String
      parameters: List<String>
      returns: String

  ToolCall:
    fields:
      tool_name: String
      arguments: List<String>
      context: String
      timeout: Int

  ToolResult:
    fields:
      success: Bool
      output: String
      error: String
      duration: Int

  ToolRegistry:
    fields:
      tools: List<String>
      categories: List<String>
      permissions: List<String>
      usage_stats: List<String>

behaviors:
  - name: register_tool
    given: "Tool definition"
    when: "Registering"
    then: "Returns registration status"

  - name: call_tool
    given: "Tool call"
    when: "Invoking"
    then: "Returns tool result"

  - name: discover_tools
    given: "Query"
    when: "Searching"
    then: "Returns matching tools"
