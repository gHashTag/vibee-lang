# VIBEE v10013: Agent Planning System
name: agent_planning_system
version: "10013.0.0"
language: zig
module: agent_planning_system

types:
  Plan:
    fields:
      goal: String
      steps: List<String>
      resources: List<String>
      estimated_cost: Float

  PlanStep:
    fields:
      action: String
      preconditions: List<String>
      effects: List<String>
      duration: Int

  PlanningProblem:
    fields:
      initial_state: String
      goal_state: String
      actions: List<String>
      constraints: List<String>

  PlanEvaluation:
    fields:
      feasible: Bool
      optimal: Bool
      cost: Float
      risk: Float

behaviors:
  - name: create_plan
    given: "Planning problem"
    when: "Planning"
    then: "Returns plan"

  - name: evaluate_plan
    given: "Plan"
    when: "Evaluating"
    then: "Returns evaluation"

  - name: replan
    given: "Failed plan and state"
    when: "Replanning"
    then: "Returns new plan"
