# VIBEE v10019: Agent Communication
name: agent_communication
version: "10019.0.0"
language: zig
module: agent_communication

types:
  Message:
    fields:
      sender: String
      receiver: String
      content: String
      type: String

  Channel:
    fields:
      name: String
      participants: List<String>
      type: String
      buffer_size: Int

  Protocol:
    fields:
      name: String
      message_types: List<String>
      handshake: Bool
      encryption: Bool

behaviors:
  - name: send_message
    given: "Message"
    when: "Sending"
    then: "Returns send status"

  - name: receive_message
    given: "Channel"
    when: "Receiving"
    then: "Returns message"

  - name: broadcast
    given: "Message and channel"
    when: "Broadcasting"
    then: "Returns delivery status"
