# VIBEE Specification v12400
# Agent Tools - Tool use and function calling
name: agent_tools_v12400
version: "1.0.0"
language: zig
module: agent_tools

types:
  ToolCategory:
    fields:
      computation: String
      retrieval: String
      action: String
      observation: String

  Tool:
    fields:
      id: String
      name: String
      category: String
      description: String
      parameters: String
      returns: String

  ToolCall:
    fields:
      id: String
      tool_id: String
      arguments: String
      called_at: Timestamp

  ToolResult:
    fields:
      call_id: String
      output: String
      success: Bool
      duration_ms: Int

  ToolRegistry:
    fields:
      id: String
      tools: String
      total_count: Int

behaviors:
  - name: register_tool
    given: Tool definition
    when: Tool registered
    then: Returns registered tool

  - name: call_tool
    given: Tool and arguments
    when: Tool called
    then: Returns tool result

  - name: discover_tools
    given: Category filter
    when: Discovery requested
    then: Returns matching tools

  - name: validate_call
    given: Tool call
    when: Validation requested
    then: Returns validation result
