# GAIA Task Solver Module
# General AI Assistants benchmark
# Target: #1 on GAIA Level 3

name: gaia_task_solver
version: "1.0.0"
language: zig
module: gaia_task_solver

types:
  GAIATask:
    fields:
      task_id: String
      question: String
      level: Int
      file_path: Option<String>
      expected_answer: String

  GAIASolution:
    fields:
      solution_id: String
      task_id: String
      answer: String
      reasoning_trace: String
      tools_used: List<String>
      confidence: Float

  GAIALevel:
    fields:
      level_number: Int
      description: String
      avg_steps: Int
      requires_tools: List<String>

  SolverStrategy:
    fields:
      strategy_id: String
      level: Int
      approach: String
      tool_chain: List<String>

  GAIAResult:
    fields:
      result_id: String
      task_id: String
      is_correct: Bool
      answer_match: Float
      execution_time_ms: Int

behaviors:
  - name: solve_task
    given: GAIA task
    when: Task solving needed
    then: Returns solution with reasoning

  - name: select_strategy
    given: Task and level
    when: Strategy selection needed
    then: Returns optimal strategy

  - name: verify_answer
    given: Solution and expected
    when: Answer verification needed
    then: Returns verification result

  - name: handle_file_input
    given: Task with file
    when: File processing needed
    then: Returns processed file content

  - name: chain_tools
    given: Task requirements
    When: Tool chaining needed
    then: Returns tool execution chain

  - name: extract_final_answer
    given: Reasoning trace
    when: Answer extraction needed
    then: Returns extracted answer
