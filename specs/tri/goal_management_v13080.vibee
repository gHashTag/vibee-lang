# VIBEE Specification v13080
# Goal Management - Cognitive goal stack and management
name: goal_management_v13080
version: "1.0.0"
language: zig
module: goal_management

types:
  GoalState:
    fields:
      active: String
      suspended: String
      achieved: String
      failed: String

  CognitiveGoal:
    fields:
      id: String
      description: String
      priority: Float
      state: String
      parent_goal: String

  GoalStack:
    fields:
      id: String
      goals: String
      current_goal: String
      depth: Int

  SubgoalDecomposition:
    fields:
      parent_id: String
      subgoals: String
      decomposition_method: String

  GoalConflict:
    fields:
      goal_a: String
      goal_b: String
      conflict_type: String
      resolution: String

behaviors:
  - name: push_goal
    given: Goal
    When: Goal pushed
    then: Returns updated stack

  - name: pop_goal
    given: Goal stack
    When: Goal popped
    then: Returns achieved goal

  - name: decompose_goal
    given: Goal
    When: Decomposition done
    then: Returns subgoal decomposition

  - name: resolve_conflict
    given: Conflicting goals
    When: Resolution done
    then: Returns goal conflict
