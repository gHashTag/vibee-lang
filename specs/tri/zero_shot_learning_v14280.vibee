# VIBEE Specification v14280
# Zero-Shot Learning - Generalization without examples
name: zero_shot_learning_v14280
version: "1.0.0"
language: zig
module: zero_shot_learning

types:
  ZSLMethod:
    fields:
      attribute_based: String
      embedding_based: String
      generative: String
      transductive: String

  ClassAttribute:
    fields:
      class_name: String
      attributes: String
      embedding: String

  SemanticSpace:
    fields:
      attribute_matrix: String
      class_embeddings: String
      dimension: Int

  ZSLResult:
    fields:
      predictions: String
      seen_accuracy: Float
      unseen_accuracy: Float

behaviors:
  - name: build_semantic_space
    given: Class attributes
    When: Building done
    then: Returns semantic space

  - name: project_to_semantic
    given: Visual features
    when: Projection done
    then: Returns semantic embedding

  - name: classify_zero_shot
    given: Features and space
    when: Classification done
    then: Returns ZSL result

  - name: calibrate_predictions
    given: Seen and unseen
    when: Calibration done
    then: Returns calibrated scores
