name: plugin_core
version: "13421.0.0"
language: zig
module: plugin_core

types:
  Plugin_coreConfig:
    fields:
      enabled: Bool
      sandbox: Bool
      permissions: String

  Plugin_coreInstance:
    fields:
      instance_id: String
      name: String
      version: String
      active: Bool

  Plugin_coreResult:
    fields:
      success: Bool
      data: String
      error_message: String

  Plugin_coreMetrics:
    fields:
      plugins_loaded: Int
      memory_mb: Int
      api_calls: Int

behaviors:
  - name: create_plugin_core_config
    given: Config parameters
    when: Config creation
    then: Returns Plugin_coreConfig

  - name: load_plugin_core
    given: Plugin path
    when: Loading
    then: Returns Plugin_coreInstance

  - name: execute_plugin_core
    given: Operation
    when: Execution
    then: Returns Plugin_coreResult

  - name: get_plugin_core_metrics
    given: Plugin_coreInstance
    when: Metrics query
    then: Returns Plugin_coreMetrics

  - name: unload_plugin_core
    given: Plugin_coreInstance
    when: Unloading
    then: Returns unload status

  - name: update_plugin_core
    given: Plugin_coreInstance
    when: Update
    then: Returns updated instance
