# ui_context_menu_v12366.vibee - Context Menus
# Контекстные меню
# φ² + 1/φ² = 3 | PHOENIX = 999

name: ui_context_menu_v12366
version: "12366.0.0"
language: zig
module: ui_context_menu_v12366

types:
  MenuItem:
    fields:
      item_id: String
      label: String
      icon: String
      shortcut: String
      disabled: Bool
      submenu: List

  MenuConfig:
    fields:
      menu_id: String
      items: List
      position: Object
      context: String

  MenuAction:
    fields:
      action_id: String
      item_id: String
      context_data: Object

  MenuState:
    fields:
      visible: Bool
      position: Object
      active_item: String

  MenuTemplate:
    fields:
      template_id: String
      context_type: String
      items: List

behaviors:
  - name: show_menu
    given: MenuConfig
    when: Menu show
    then: Return MenuState

  - name: hide_menu
    given: Menu ID
    when: Menu hide
    then: Return success

  - name: handle_action
    given: MenuAction
    when: Action
    then: Return result

  - name: register_template
    given: MenuTemplate
    when: Registration
    then: Return template_id

  - name: update_item
    given: Item ID and changes
    when: Update
    then: Return success

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
