# agent_reflection_v2723.vibee - Self-Reflection
# Самоанализ и улучшение агента
# φ² + 1/φ² = 3 | PHOENIX = 999

name: agent_reflection_v2723
version: "2723.0.0"
language: zig
module: agent_reflection_v2723

types:
  ReflectionPrompt:
    fields:
      context: String
      action_taken: String
      outcome: String
      question: String

  ReflectionResult:
    fields:
      analysis: String
      lessons_learned: List
      improvements: List
      confidence: Float

  SelfCritique:
    fields:
      strengths: List
      weaknesses: List
      suggestions: List

  PerformanceReview:
    fields:
      task_success_rate: Float
      error_patterns: List
      improvement_areas: List

  ReflectionConfig:
    fields:
      reflect_on_failure: Bool
      reflect_on_success: Bool
      reflection_depth: Int

behaviors:
  - name: reflect_on_action
    given: ReflectionPrompt
    when: Post-action
    then: Return ReflectionResult

  - name: self_critique
    given: Recent actions
    when: Self-analysis
    then: Return SelfCritique

  - name: identify_patterns
    given: Action history
    when: Pattern analysis
    then: Return patterns

  - name: generate_improvements
    given: SelfCritique
    when: Improvement gen
    then: Return action items

  - name: review_performance
    given: Time period
    when: Review
    then: Return PerformanceReview

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
