name: body_schema_v17240
version: "1.0.0"
language: zig
module: body_schema

types:
  BodyPart:
    fields:
      name: String
      position: String
      orientation: String
      capabilities: String

  BodySchema:
    fields:
      parts: String
      joints: String
      kinematics: String

  ProprioceptiveState:
    fields:
      joint_angles: String
      velocities: String
      forces: String

  BodyResult:
    fields:
      current_pose: String
      reachable_space: String
      self_collision: Bool

behaviors:
  - name: update_body_state
    given: Proprioception
    when: State estimation
    then: Return body state

  - name: compute_kinematics
    given: Target pose
    when: Inverse kinematics
    then: Return joint angles

  - name: check_feasibility
    given: Desired motion
    when: Feasibility check
    then: Return feasibility
