# VIBEE v10185: Transactions
# TIER 102: Web3 - Blockchain/Web3
name: web3_transactions
version: "10185.0.0"
language: zig
module: web3_transactions

types:
  Block:
    fields:
      number: Int
      hash: String
      parent_hash: String
      transactions: List<String>

  Transaction:
    fields:
      hash: String
      from_addr: String
      to_addr: String
      value: Int

  Web3Result:
    fields:
      success: Bool
      tx_hash: String
      gas_used: Int
      block_number: Int

behaviors:
  - name: send_transaction
    given: "Transaction data"
    when: "Sending"
    then: "Returns web3 result"

  - name: deploy_contract
    given: "Contract bytecode"
    when: "Deploying"
    then: "Returns contract address"

  - name: call_contract
    given: "Contract and method"
    when: "Calling"
    then: "Returns call result"
