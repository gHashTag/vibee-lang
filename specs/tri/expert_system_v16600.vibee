name: expert_system_v16600
version: "1.0.0"
language: zig
module: expert_system

types:
  Rule:
    fields:
      id: String
      conditions: String
      actions: String
      priority: Int

  Fact:
    fields:
      name: String
      value: String
      certainty: Float

  WorkingMemory:
    fields:
      facts: String

  InferenceEngine:
    fields:
      rules: String
      strategy: String

behaviors:
  - name: forward_chain
    given: Facts and rules
    when: Match and fire rules
    then: Return derived facts

  - name: backward_chain
    given: Goal and rules
    when: Goal-directed search
    then: Return proof or failure

  - name: explain_reasoning
    given: Conclusion
    when: Trace rule firings
    then: Return explanation
