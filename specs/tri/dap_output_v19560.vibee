name: dap_output_v19560
version: "1.0.0"
language: zig
module: dap_output_v19560

types:
  OutputEvent:
    fields:
      category: String
      output: String
      source_path: String
      line: Int

  OutputCategory:
    fields:
      console: Bool
      stdout: Bool
      stderr: Bool
      telemetry: Bool

behaviors:
  - name: output_console
    given: "Console output"
    when: "Adapter outputs"
    then: "Sends to console"

  - name: output_stdout
    given: "Stdout output"
    when: "Program outputs"
    then: "Sends to stdout"

  - name: output_stderr
    given: "Stderr output"
    when: "Program errors"
    then: "Sends to stderr"
