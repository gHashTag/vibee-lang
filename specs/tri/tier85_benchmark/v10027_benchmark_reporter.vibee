# VIBEE v10027: Benchmark Reporter
name: benchmark_reporter
version: "10027.0.0"
language: zig
module: benchmark_reporter

types:
  BenchmarkReport:
    fields:
      title: String
      runs: List<String>
      summary: String
      recommendations: List<String>

  ReportFormat:
    fields:
      type: String
      include_charts: Bool
      include_raw_data: Bool
      template: String

  ReportSection:
    fields:
      name: String
      content: String
      charts: List<String>
      tables: List<String>

behaviors:
  - name: generate_report
    given: "Benchmark runs and format"
    when: "Generating"
    then: "Returns report"

  - name: export_report
    given: "Report and path"
    when: "Exporting"
    then: "Returns export status"
