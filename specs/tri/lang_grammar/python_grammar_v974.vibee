name: python_grammar
version: "9.7.4"
language: zig
module: python_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: PythonGrammar
  result: PythonCode

types:
  PythonAST:
    fields:
      module: String
      body: List<Statement>

  Statement:
    fields:
      stmt_type: String
      content: String

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "Python class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "class User:\\n    def __init__(self, id: int):\\n        self.id = id"}'

  - name: generate_function
    given: "VIBEE behavior"
    when: "Function generation"
    then: "Python function"
    pas_pattern: ALG
    test_cases:
      - name: test_func
        input: '{"name": "create", "params": [...]}'
        expected: '{"code": "def create(...):\\n    pass"}'

  - name: generate_dataclass
    given: "VIBEE type"
    when: "Dataclass generation"
    then: "Python dataclass"
    pas_pattern: ALG
    test_cases:
      - name: test_dataclass
        input: '{"name": "User"}'
        expected: '{"code": "@dataclass\\nclass User:\\n    id: int"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Pytest tests"
    pas_pattern: ALG
    test_cases:
      - name: test_pytest
        input: '{"test_cases": [...]}'
        expected: '{"code": "def test_create():\\n    assert ..."}'

python_keywords: ["def", "class", "if", "else", "elif", "for", "while", "try", "except", "finally", "with", "as", "import", "from", "return", "yield", "lambda", "pass", "break", "continue", "raise", "assert", "global", "nonlocal", "del", "True", "False", "None", "and", "or", "not", "in", "is"]

