    given: "VIBEE behavior"
    when: "Function generation"
    then: "Terraform function"
    pas_pattern: ALG
    test_cases:
      - name: test_fn
        input: '{"name": "create"}'
        expected: '{"code": "..."}'
  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Terraform tests"
    pas_pattern: ALG
    test_cases:
      - name: test_terraform
        input: '{"test_cases": [...]}'
        expected: '{"code": "..."}'
