name: cpp_grammar
version: "9.7.9"
language: zig
module: cpp_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: CppGrammar
  result: CppCode

types:
  CppAST:
    fields:
      namespace: String
      includes: List<String>
      declarations: List<String>

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "C++ class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "class User {\\npublic:\\n    int64_t id;\\n};"}'

  - name: generate_struct
    given: "VIBEE POD type"
    when: "Struct generation"
    then: "C++ struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "Point"}'
        expected: '{"code": "struct Point { ... };"}'

  - name: generate_header
    given: "VIBEE module"
    when: "Header generation"
    then: "C++ header"
    pas_pattern: ALG
    test_cases:
      - name: test_header
        input: '{"module": "user"}'
        expected: '{"code": "#pragma once\\n..."}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Google Test"
    pas_pattern: ALG
    test_cases:
      - name: test_gtest
        input: '{"test_cases": [...]}'
        expected: '{"code": "TEST(UserTest, Create) { ... }"}'

cpp_keywords: ["alignas", "alignof", "and", "and_eq", "asm", "auto", "bitand", "bitor", "bool", "break", "case", "catch", "char", "char8_t", "char16_t", "char32_t", "class", "compl", "concept", "const", "consteval", "constexpr", "constinit", "const_cast", "continue", "co_await", "co_return", "co_yield", "decltype", "default", "delete", "do", "double", "dynamic_cast", "else", "enum", "explicit", "export", "extern", "false", "float", "for", "friend", "goto", "if", "inline", "int", "long", "mutable", "namespace", "new", "noexcept", "not", "not_eq", "nullptr", "operator", "or", "or_eq", "private", "protected", "public", "register", "reinterpret_cast", "requires", "return", "short", "signed", "sizeof", "static", "static_assert", "static_cast", "struct", "switch", "template", "this", "thread_local", "throw", "true", "try", "typedef", "typeid", "typename", "union", "unsigned", "using", "virtual", "void", "volatile", "wchar_t", "while", "xor", "xor_eq"]

