name: php_grammar
version: "9.8.4"
language: zig
module: php_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: PHPGrammar
  result: PHPCode

types:
  PHPAST:
    fields:
      namespace: String
      uses: List<String>
      classes: List<String>

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "PHP class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "class User {\\n    private int $id;\\n}"}'

  - name: generate_interface
    given: "VIBEE behaviors"
    when: "Interface generation"
    then: "PHP interface"
    pas_pattern: ALG
    test_cases:
      - name: test_interface
        input: '{"name": "UserServiceInterface"}'
        expected: '{"code": "interface UserServiceInterface { ... }"}'

  - name: generate_trait
    given: "VIBEE mixin"
    when: "Trait generation"
    then: "PHP trait"
    pas_pattern: ALG
    test_cases:
      - name: test_trait
        input: '{"name": "Timestampable"}'
        expected: '{"code": "trait Timestampable { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "PHPUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_phpunit
        input: '{"test_cases": [...]}'
        expected: '{"code": "public function testCreate(): void { ... }"}'

php_keywords: ["abstract", "and", "array", "as", "break", "callable", "case", "catch", "class", "clone", "const", "continue", "declare", "default", "die", "do", "echo", "else", "elseif", "empty", "enddeclare", "endfor", "endforeach", "endif", "endswitch", "endwhile", "eval", "exit", "extends", "final", "finally", "fn", "for", "foreach", "function", "global", "goto", "if", "implements", "include", "include_once", "instanceof", "insteadof", "interface", "isset", "list", "match", "namespace", "new", "or", "print", "private", "protected", "public", "readonly", "require", "require_once", "return", "static", "switch", "throw", "trait", "try", "unset", "use", "var", "while", "xor", "yield", "yield from"]

