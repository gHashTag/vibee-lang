name: elixir_grammar
version: "9.8.7"
language: zig
module: elixir_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: ElixirGrammar
  result: ElixirCode

types:
  ElixirAST:
    fields:
      module_name: String
      uses: List<String>
      functions: List<String>

behaviors:
  - name: generate_module
    given: "VIBEE module"
    when: "Module generation"
    then: "Elixir module"
    pas_pattern: ALG
    test_cases:
      - name: test_module
        input: '{"name": "User"}'
        expected: '{"code": "defmodule User do\\n  ...\\nend"}'

  - name: generate_struct
    given: "VIBEE type"
    when: "Struct generation"
    then: "Elixir struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": ["id", "name"]}'
        expected: '{"code": "defstruct [:id, :name]"}'

  - name: generate_protocol
    given: "VIBEE behaviors"
    when: "Protocol generation"
    then: "Elixir protocol"
    pas_pattern: ALG
    test_cases:
      - name: test_protocol
        input: '{"name": "Serializable"}'
        expected: '{"code": "defprotocol Serializable do ... end"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "ExUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_exunit
        input: '{"test_cases": [...]}'
        expected: '{"code": "test \\"creates user\\" do\\n  ...\\nend"}'

elixir_keywords: ["after", "and", "catch", "cond", "def", "defcallback", "defdelegate", "defexception", "defguard", "defguardp", "defimpl", "defmacro", "defmacrop", "defmodule", "defoverridable", "defp", "defprotocol", "defstruct", "do", "else", "end", "false", "fn", "for", "if", "import", "in", "nil", "not", "or", "quote", "raise", "receive", "require", "rescue", "super", "true", "try", "unless", "unquote", "unquote_splicing", "use", "when", "with"]

