name: rust_grammar
version: "9.7.5"
language: zig
module: rust_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: RustGrammar
  result: RustCode

types:
  RustAST:
    fields:
      crate_name: String
      items: List<Item>

  Item:
    fields:
      item_type: String
      visibility: String
      content: String

behaviors:
  - name: generate_struct
    given: "VIBEE type"
    when: "Struct generation"
    then: "Rust struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "#[derive(Debug, Clone)]\\npub struct User {\\n    pub id: i64,\\n}"}'

  - name: generate_impl
    given: "VIBEE behaviors"
    when: "Impl generation"
    then: "Rust impl"
    pas_pattern: ALG
    test_cases:
      - name: test_impl
        input: '{"struct": "User", "methods": [...]}'
        expected: '{"code": "impl User {\\n    pub fn new() -> Self { ... }\\n}"}'

  - name: generate_enum
    given: "VIBEE enum"
    when: "Enum generation"
    then: "Rust enum"
    pas_pattern: ALG
    test_cases:
      - name: test_enum
        input: '{"name": "Status", "variants": ["Active", "Inactive"]}'
        expected: '{"code": "pub enum Status {\\n    Active,\\n    Inactive,\\n}"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Rust tests"
    pas_pattern: ALG
    test_cases:
      - name: test_rust
        input: '{"test_cases": [...]}'
        expected: '{"code": "#[test]\\nfn test_create() { ... }"}'

rust_keywords: ["fn", "let", "mut", "const", "static", "struct", "enum", "impl", "trait", "type", "where", "for", "loop", "while", "if", "else", "match", "return", "break", "continue", "pub", "mod", "use", "crate", "self", "super", "as", "in", "ref", "move", "async", "await", "dyn", "unsafe"]

