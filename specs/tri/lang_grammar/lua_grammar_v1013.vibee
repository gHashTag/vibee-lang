name: lua_grammar
version: "10.1.3"
language: zig
module: lua_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: LuaGrammar
  result: LuaCode

types:
  LuaAST:
    fields:
      chunk: String
      functions: List<String>

behaviors:
  - name: generate_table
    given: "VIBEE type"
    when: "Table generation"
    then: "Lua table"
    pas_pattern: ALG
    test_cases:
      - name: test_table
        input: '{"name": "User"}'
        expected: '{"code": "local User = { ... }"}'

  - name: generate_function
    given: "VIBEE behavior"
    when: "Function generation"
    then: "Lua function"
    pas_pattern: ALG
    test_cases:
      - name: test_fn
        input: '{"name": "create"}'
        expected: '{"code": "function create() ... end"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Busted tests"
    pas_pattern: ALG
    test_cases:
      - name: test_lua
        input: '{"test_cases": [...]}'
        expected: '{"code": "describe(\\"...\\" function() ... end)"}'

lua_keywords: ["and", "break", "do", "else", "elseif", "end", "false", "for", "function", "goto", "if", "in", "local", "nil", "not", "or", "repeat", "return", "then", "true", "until", "while"]

