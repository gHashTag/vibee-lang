name: go_grammar
version: "9.7.6"
language: zig
module: go_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: GoGrammar
  result: GoCode

types:
  GoAST:
    fields:
      package_name: String
      imports: List<String>
      declarations: List<Decl>

  Decl:
    fields:
      decl_type: String
      name: String
      content: String

behaviors:
  - name: generate_struct
    given: "VIBEE type"
    when: "Struct generation"
    then: "Go struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": [{"name": "ID", "type": "Int"}]}'
        expected: '{"code": "type User struct {\\n\\tID int64 `json:\\"id\\"`\\n}"}'

  - name: generate_method
    given: "VIBEE behavior"
    when: "Method generation"
    then: "Go method"
    pas_pattern: ALG
    test_cases:
      - name: test_method
        input: '{"receiver": "User", "name": "Create"}'
        expected: '{"code": "func (u *User) Create() error { ... }"}'

  - name: generate_interface
    given: "VIBEE behaviors"
    when: "Interface generation"
    then: "Go interface"
    pas_pattern: ALG
    test_cases:
      - name: test_interface
        input: '{"name": "UserService", "methods": [...]}'
        expected: '{"code": "type UserService interface { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Go tests"
    pas_pattern: ALG
    test_cases:
      - name: test_go
        input: '{"test_cases": [...]}'
        expected: '{"code": "func TestCreate(t *testing.T) { ... }"}'

go_keywords: ["break", "case", "chan", "const", "continue", "default", "defer", "else", "fallthrough", "for", "func", "go", "goto", "if", "import", "interface", "map", "package", "range", "return", "select", "struct", "switch", "type", "var"]

