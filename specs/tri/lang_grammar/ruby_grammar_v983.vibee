name: ruby_grammar
version: "9.8.3"
language: zig
module: ruby_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: RubyGrammar
  result: RubyCode

types:
  RubyAST:
    fields:
      module_name: String
      requires: List<String>
      classes: List<String>

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "Ruby class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "class User\\n  attr_accessor :id\\nend"}'

  - name: generate_module
    given: "VIBEE module"
    when: "Module generation"
    then: "Ruby module"
    pas_pattern: ALG
    test_cases:
      - name: test_module
        input: '{"name": "UserService"}'
        expected: '{"code": "module UserService\\n  ...\\nend"}'

  - name: generate_struct
    given: "VIBEE simple type"
    when: "Struct generation"
    then: "Ruby Struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "Point", "fields": ["x", "y"]}'
        expected: '{"code": "Point = Struct.new(:x, :y)"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "RSpec tests"
    pas_pattern: ALG
    test_cases:
      - name: test_rspec
        input: '{"test_cases": [...]}'
        expected: '{"code": "describe User do\\n  it \\"creates\\" do\\n    ...\\n  end\\nend"}'

ruby_keywords: ["__ENCODING__", "__LINE__", "__FILE__", "BEGIN", "END", "alias", "and", "begin", "break", "case", "class", "def", "defined?", "do", "else", "elsif", "end", "ensure", "false", "for", "if", "in", "module", "next", "nil", "not", "or", "redo", "rescue", "retry", "return", "self", "super", "then", "true", "undef", "unless", "until", "when", "while", "yield"]

