name: scala_grammar
version: "9.8.5"
language: zig
module: scala_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: ScalaGrammar
  result: ScalaCode

types:
  ScalaAST:
    fields:
      package_name: String
      imports: List<String>
      definitions: List<String>

behaviors:
  - name: generate_case_class
    given: "VIBEE type"
    when: "Case class generation"
    then: "Scala case class"
    pas_pattern: ALG
    test_cases:
      - name: test_case
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "case class User(id: Long)"}'

  - name: generate_trait
    given: "VIBEE behaviors"
    when: "Trait generation"
    then: "Scala trait"
    pas_pattern: ALG
    test_cases:
      - name: test_trait
        input: '{"name": "UserService"}'
        expected: '{"code": "trait UserService { ... }"}'

  - name: generate_object
    given: "VIBEE singleton"
    when: "Object generation"
    then: "Scala object"
    pas_pattern: ALG
    test_cases:
      - name: test_object
        input: '{"name": "UserFactory"}'
        expected: '{"code": "object UserFactory { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "ScalaTest tests"
    pas_pattern: ALG
    test_cases:
      - name: test_scalatest
        input: '{"test_cases": [...]}'
        expected: '{"code": "\\"User\\" should \\"create\\" in { ... }"}'

scala_keywords: ["abstract", "case", "catch", "class", "def", "do", "else", "extends", "false", "final", "finally", "for", "forSome", "if", "implicit", "import", "lazy", "macro", "match", "new", "null", "object", "override", "package", "private", "protected", "return", "sealed", "super", "this", "throw", "trait", "true", "try", "type", "val", "var", "while", "with", "yield", "given", "using", "enum", "export", "then", "end", "extension", "inline", "opaque", "open", "transparent", "derives"]

