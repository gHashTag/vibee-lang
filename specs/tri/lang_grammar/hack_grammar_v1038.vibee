# φ² + 1/φ² = 3 | PHOENIX = 999
name: hack_grammar
version: "10.3.8"
language: zig
module: hack_grammar
sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999
creation_pattern:
  source: VIBEESpec
  transformer: HackGrammar
  result: HackCode
types:
  HackAST:
    fields:
      root: String
      declarations: List<String>
behaviors:
  - name: generate_type
    given: "VIBEE type"
    when: "Type generation"
    then: "Hack type"
    pas_pattern: ALG
    test_cases:
      - name: test_type
        input: '{"name": "User"}'
        expected: '{"code": "..."}'
  - name: generate_function
    given: "VIBEE behavior"
    when: "Function generation"
    then: "Hack function"
    pas_pattern: ALG
    test_cases:
      - name: test_fn
        input: '{"name": "create"}'
        expected: '{"code": "..."}'
  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Hack tests"
    pas_pattern: ALG
    test_cases:
      - name: test_hack
        input: '{"test_cases": [...]}'
        expected: '{"code": "..."}'
