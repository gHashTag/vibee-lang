name: haskell_grammar
version: "9.8.6"
language: zig
module: haskell_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: HaskellGrammar
  result: HaskellCode

types:
  HaskellAST:
    fields:
      module_name: String
      imports: List<String>
      declarations: List<String>

behaviors:
  - name: generate_data
    given: "VIBEE type"
    when: "Data type generation"
    then: "Haskell data"
    pas_pattern: ALG
    test_cases:
      - name: test_data
        input: '{"name": "User", "fields": [{"name": "userId", "type": "Int"}]}'
        expected: '{"code": "data User = User { userId :: Int64 }"}'

  - name: generate_newtype
    given: "VIBEE wrapper type"
    when: "Newtype generation"
    then: "Haskell newtype"
    pas_pattern: ALG
    test_cases:
      - name: test_newtype
        input: '{"name": "UserId", "wraps": "Int"}'
        expected: '{"code": "newtype UserId = UserId Int64"}'

  - name: generate_typeclass
    given: "VIBEE behaviors"
    when: "Typeclass generation"
    then: "Haskell typeclass"
    pas_pattern: ALG
    test_cases:
      - name: test_typeclass
        input: '{"name": "UserService"}'
        expected: '{"code": "class UserService a where ..."}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "HSpec tests"
    pas_pattern: ALG
    test_cases:
      - name: test_hspec
        input: '{"test_cases": [...]}'
        expected: '{"code": "describe \\"User\\" $ do\\n  it \\"creates\\" $ ..."}'

haskell_keywords: ["as", "case", "class", "data", "default", "deriving", "do", "else", "family", "forall", "foreign", "hiding", "if", "import", "in", "infix", "infixl", "infixr", "instance", "let", "mdo", "module", "newtype", "of", "proc", "qualified", "rec", "then", "type", "where"]

