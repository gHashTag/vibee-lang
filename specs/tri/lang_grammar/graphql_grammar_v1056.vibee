name: graphql_grammar
version: "10.5.6"
language: zig
module: graphql_grammar
sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999
creation_pattern:
  source: VIBEESpec
  transformer: GraphqlGrammar
  result: GraphqlCode
types:
  GraphqlAST:
    fields:
      root: String
      declarations: List<String>
behaviors:
  - name: generate_type
    given: "VIBEE type"
    when: "Type generation"
    then: "Graphql type"
    pas_pattern: ALG
    test_cases:
      - name: test_type
        input: '{"name": "User"}'
        expected: '{"code": "..."}'
  - name: generate_function
    given: "VIBEE behavior"
    when: "Function generation"
    then: "Graphql function"
    pas_pattern: ALG
    test_cases:
      - name: test_fn
        input: '{"name": "create"}'
        expected: '{"code": "..."}'
  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Graphql tests"
    pas_pattern: ALG
    test_cases:
      - name: test_graphql
        input: '{"test_cases": [...]}'
        expected: '{"code": "..."}'
