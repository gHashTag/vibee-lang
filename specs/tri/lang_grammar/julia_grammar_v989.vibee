name: julia_grammar
version: "9.8.9"
language: zig
module: julia_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: JuliaGrammar
  result: JuliaCode

types:
  JuliaAST:
    fields:
      module_name: String
      usings: List<String>
      definitions: List<String>

behaviors:
  - name: generate_struct
    given: "VIBEE type"
    when: "Struct generation"
    then: "Julia struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "struct User\\n    id::Int64\\nend"}'

  - name: generate_mutable_struct
    given: "VIBEE mutable type"
    when: "Mutable struct generation"
    then: "Julia mutable struct"
    pas_pattern: ALG
    test_cases:
      - name: test_mutable
        input: '{"name": "Counter"}'
        expected: '{"code": "mutable struct Counter\\n    ...\\nend"}'

  - name: generate_abstract_type
    given: "VIBEE abstract"
    when: "Abstract type generation"
    then: "Julia abstract type"
    pas_pattern: ALG
    test_cases:
      - name: test_abstract
        input: '{"name": "AbstractUser"}'
        expected: '{"code": "abstract type AbstractUser end"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Test.jl tests"
    pas_pattern: ALG
    test_cases:
      - name: test_julia
        input: '{"test_cases": [...]}'
        expected: '{"code": "@testset \\"User\\" begin\\n    @test ...\\nend"}'

julia_keywords: ["baremodule", "begin", "break", "catch", "const", "continue", "do", "else", "elseif", "end", "export", "false", "finally", "for", "function", "global", "if", "import", "let", "local", "macro", "module", "mutable", "primitive", "quote", "return", "struct", "true", "try", "type", "using", "while", "abstract", "where"]

