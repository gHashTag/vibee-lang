name: java_grammar
version: "9.7.8"
language: zig
module: java_grammar

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: JavaGrammar
  result: JavaCode

types:
  JavaAST:
    fields:
      package_name: String
      imports: List<String>
      class_decls: List<ClassDecl>

  ClassDecl:
    fields:
      name: String
      modifiers: List<String>
      members: List<String>

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "Java class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "public class User {\\n    private Long id;\\n}"}'

  - name: generate_record
    given: "VIBEE immutable type"
    when: "Record generation"
    then: "Java record"
    pas_pattern: ALG
    test_cases:
      - name: test_record
        input: '{"name": "UserDTO"}'
        expected: '{"code": "public record UserDTO(Long id) {}"}'

  - name: generate_interface
    given: "VIBEE behaviors"
    when: "Interface generation"
    then: "Java interface"
    pas_pattern: ALG
    test_cases:
      - name: test_interface
        input: '{"name": "UserService"}'
        expected: '{"code": "public interface UserService { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "JUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_junit
        input: '{"test_cases": [...]}'
        expected: '{"code": "@Test\\nvoid testCreate() { ... }"}'

java_keywords: ["abstract", "assert", "boolean", "break", "byte", "case", "catch", "char", "class", "const", "continue", "default", "do", "double", "else", "enum", "extends", "final", "finally", "float", "for", "goto", "if", "implements", "import", "instanceof", "int", "interface", "long", "native", "new", "package", "private", "protected", "public", "return", "short", "static", "strictfp", "super", "switch", "synchronized", "this", "throw", "throws", "transient", "try", "void", "volatile", "while", "var", "record", "sealed", "permits"]

