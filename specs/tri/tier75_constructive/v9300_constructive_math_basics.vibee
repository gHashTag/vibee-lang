# VIBEE v9300: Constructive Mathematics Basics
name: constructive_math_basics
version: "9300.0.0"
language: zig
module: constructive_math_basics

types:
  ConstructiveConcept:
    fields:
      name: String
      definition: String
      computational_content: String
      classical_equivalent: String

  ProofTerm:
    fields:
      proposition: String
      term: String
      type: String
      normalizes: Bool

  RealizabilityModel:
    fields:
      formula: String
      realizer: String
      valid: Bool
      extraction: String

behaviors:
  - name: extract_program
    given: "Constructive proof"
    when: "Applying realizability"
    then: "Returns extracted program"

  - name: check_constructive
    given: "Classical proof"
    when: "Testing constructivity"
    then: "Returns constructive status"
