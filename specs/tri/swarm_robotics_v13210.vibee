# VIBEE Specification v13210
# Swarm Robotics - Multi-robot swarm coordination
name: swarm_robotics_v13210
version: "1.0.0"
language: zig
module: swarm_robotics

types:
  RobotCapability:
    fields:
      locomotion: String
      sensing: String
      manipulation: String
      communication: String

  SwarmRobot:
    fields:
      id: String
      capabilities: String
      position: String
      battery_level: Float
      status: String

  SwarmTask:
    fields:
      id: String
      type: String
      location: String
      required_robots: Int
      priority: Int

  Formation:
    fields:
      id: String
      pattern: String
      robots: String
      center: String
      scale: Float

  SwarmPerformance:
    fields:
      task_id: String
      completion_time_ms: Int
      robots_used: Int
      energy_consumed: Float
      success: Bool

behaviors:
  - name: allocate_task
    given: Task and swarm
    When: Allocation done
    then: Returns robot assignments

  - name: form_formation
    given: Pattern and robots
    When: Formation achieved
    then: Returns formation

  - name: coordinate_movement
    given: Robots and target
    When: Movement coordinated
    then: Returns movement plan

  - name: measure_performance
    given: Task execution
    When: Measurement done
    then: Returns swarm performance
