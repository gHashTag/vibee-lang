# iGLA KOSHEY v4 - Monte Carlo Tree Search
# MCTS for planning
# φ² + 1/φ² = 3 | PHOENIX = 999

name: igla_koshey_planning_mcts
version: "4.0.0"
language: zig
module: igla_koshey_planning_mcts

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

types:
  MCTSNode:
    fields:
      visits: Int
      value: Float
      ucb_score: Float
      children: Int

  MCTSConfig:
    fields:
      exploration_constant: Float
      simulations: Int
      max_depth: Int
      rollout_policy: String

behaviors:
  - name: select
    given: "Tree root"
    when: "Selection"
    then: "Best child selected via UCB"

  - name: expand
    given: "Leaf node"
    when: "Expansion"
    then: "Node expanded with children"

  - name: simulate
    given: "Expanded node"
    when: "Simulation"
    then: "Rollout simulated to terminal"

  - name: backpropagate
    given: "Simulation result"
    when: "Backpropagation"
    then: "Values backpropagated to root"

  - name: phi_exploration
    given: "Base constant"
    when: "Exploration tuning"
    then: "Exploration = base × φ for balance"
