# VIBEE Specification v15550
# Indirect Encoding - Compressed network representations
name: indirect_encoding_v15550
version: "1.0.0"
language: zig
module: indirect_encoding

types:
  EncodingType:
    fields:
      cppn: String
      l_system: String
      cellular: String
      fractal: String

  CompressedGenome:
    fields:
      encoding: String
      parameters: String
      compression_ratio: Float

  DecodedNetwork:
    fields:
      architecture: String
      weights: String
      size: Int

  IEResult:
    fields:
      genome: String
      network: String
      regularity: Float

behaviors:
  - name: encode_network
    given: Network and method
    when: Encoding done
    then: Returns compressed genome

  - name: decode_genome
    given: Compressed genome
    when: Decoding done
    then: Returns decoded network

  - name: evolve_encoding
    given: Task
    when: Evolution done
    then: Returns IE result

  - name: measure_regularity
    given: Network
    when: Measurement done
    then: Returns regularity score
