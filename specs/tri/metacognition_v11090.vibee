# VIBEE METACOGNITION v11090
# φ² + 1/φ² = 3 | PHOENIX = 999

name: metacognition_v11090
version: "11090.0.0"
language: zig
module: metacognition

types:
  MetaKnowledge:
    fields:
      knowledge_id: String
      knowledge_type: String
      content: String
      certainty: Float

  ConfidenceEstimate:
    fields:
      estimate_id: String
      task: String
      predicted_accuracy: Float
      actual_accuracy: Float
      calibration_error: Float

  LearningStrategy:
    fields:
      strategy_id: String
      strategy_type: String
      applicability: List<String>
      effectiveness: Float

  CognitiveMonitor:
    fields:
      monitor_id: String
      monitored_process: String
      performance_estimate: Float
      resource_usage: Float

  MetaMemory:
    fields:
      memory_id: String
      feeling_of_knowing: Float
      tip_of_tongue: Bool
      retrieval_confidence: Float

  ProblemDifficulty:
    fields:
      difficulty_id: String
      problem: String
      estimated_difficulty: Float
      actual_difficulty: Float

  StrategySelection:
    fields:
      selection_id: String
      available_strategies: List<LearningStrategy>
      selected_strategy: String
      selection_reason: String

  ErrorDetection:
    fields:
      detection_id: String
      process: String
      error_detected: Bool
      error_type: String
      correction: String

  MetaControl:
    fields:
      control_id: String
      allocation_decision: String
      time_allocation: Float
      effort_allocation: Float

  MetacognitionMetrics:
    fields:
      calibration: Float
      resolution: Float
      monitoring_accuracy: Float
      control_effectiveness: Float

behaviors:
  - name: estimate_confidence
    given: "Task and response"
    when: "Confidence estimation requested"
    then: "Returns confidence estimate"

  - name: monitor_cognition
    given: "Cognitive process"
    when: "Monitoring requested"
    then: "Returns cognitive monitor"

  - name: assess_difficulty
    given: "Problem"
    when: "Assessment requested"
    then: "Returns problem difficulty"

  - name: select_strategy
    given: "Task and strategies"
    when: "Selection requested"
    then: "Returns strategy selection"

  - name: detect_error
    given: "Process output"
    when: "Error detection requested"
    then: "Returns error detection"

  - name: allocate_resources
    given: "Tasks and resources"
    when: "Allocation requested"
    then: "Returns meta control"

  - name: judge_learning
    given: "Learning progress"
    when: "Judgment requested"
    then: "Returns learning judgment"

  - name: predict_performance
    given: "Task"
    when: "Prediction requested"
    then: "Returns performance prediction"

  - name: reflect_on_thinking
    given: "Thought process"
    when: "Reflection requested"
    then: "Returns meta reflection"

  - name: measure_metacognition
    given: "Metacognitive evaluation"
    when: "Metrics requested"
    then: "Returns metacognition metrics"
