    measured: 1836.15
    accuracy: 99.99

  muon_electron:
    name: "Muon/Electron Mass Ratio"
    formula: "m_μ/m_e = (20/3)π³"
    calculated: 206.7
    measured: 206.768
    accuracy: 99.97

  tau_electron:
    name: "Tau/Electron Mass Ratio"
    formula: "m_τ/m_e = 36π⁴"
