# VIBEE v10042: Test Reporter
name: test_reporter
version: "10042.0.0"
language: zig
module: test_reporter

types:
  TestReport:
    fields:
      summary: String
      results: List<String>
      duration: Int
      coverage: Float

  ReporterConfig:
    fields:
      format: String
      verbose: Bool
      include_stack: Bool
      output_path: String

  ReportSection:
    fields:
      name: String
      passed: Int
      failed: Int
      details: List<String>

behaviors:
  - name: generate_report
    given: "Test run and config"
    when: "Generating"
    then: "Returns test report"

  - name: export_report
    given: "Report and format"
    when: "Exporting"
    then: "Returns export status"
