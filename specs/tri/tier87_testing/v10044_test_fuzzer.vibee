# VIBEE v10044: Test Fuzzer
name: test_fuzzer
version: "10044.0.0"
language: zig
module: test_fuzzer

types:
  FuzzConfig:
    fields:
      iterations: Int
      seed: Int
      corpus: List<String>
      mutations: List<String>

  FuzzResult:
    fields:
      iterations_run: Int
      crashes_found: Int
      unique_paths: Int
      coverage_increase: Float

  FuzzInput:
    fields:
      data: String
      mutation: String
      generation: Int
      interesting: Bool

behaviors:
  - name: fuzz
    given: "Target and config"
    when: "Fuzzing"
    then: "Returns fuzz result"

  - name: minimize_crash
    given: "Crash input"
    when: "Minimizing"
    then: "Returns minimal input"

  - name: generate_corpus
    given: "Specification"
    when: "Generating"
    then: "Returns initial corpus"
