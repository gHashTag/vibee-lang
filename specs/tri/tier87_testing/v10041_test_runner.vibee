# VIBEE v10041: Test Runner
name: test_runner
version: "10041.0.0"
language: zig
module: test_runner

types:
  TestRun:
    fields:
      tests: List<String>
      passed: Int
      failed: Int
      skipped: Int

  RunnerConfig:
    fields:
      parallel: Bool
      timeout: Int
      retry_failed: Bool
      fail_fast: Bool

  TestResult:
    fields:
      name: String
      status: String
      duration: Int
      error: String

behaviors:
  - name: run_tests
    given: "Tests and config"
    when: "Running"
    then: "Returns test run"

  - name: run_single
    given: "Test case"
    when: "Running single"
    then: "Returns test result"

  - name: retry_failed
    given: "Failed tests"
    when: "Retrying"
    then: "Returns retry results"
