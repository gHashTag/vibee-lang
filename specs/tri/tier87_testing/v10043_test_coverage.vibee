# VIBEE v10043: Test Coverage
name: test_coverage
version: "10043.0.0"
language: zig
module: test_coverage

types:
  CoverageReport:
    fields:
      line_coverage: Float
      branch_coverage: Float
      function_coverage: Float
      uncovered: List<String>

  CoverageConfig:
    fields:
      threshold: Float
      include_patterns: List<String>
      exclude_patterns: List<String>
      report_format: String

  CoverageData:
    fields:
      file: String
      lines_covered: Int
      lines_total: Int
      branches_covered: Int

behaviors:
  - name: measure_coverage
    given: "Test run"
    when: "Measuring"
    then: "Returns coverage report"

  - name: find_uncovered
    given: "Coverage data"
    when: "Finding gaps"
    then: "Returns uncovered areas"

  - name: check_threshold
    given: "Coverage and threshold"
    when: "Checking"
    then: "Returns threshold status"
