# VIBEE Specification v15630
# Artificial Chemistry - Computational chemistry systems
name: artificial_chemistry_v15630
version: "1.0.0"
language: zig
module: artificial_chemistry

types:
  Molecule:
    fields:
      structure: String
      properties: String
      concentration: Float

  Reaction:
    fields:
      reactants: String
      products: String
      rate: Float

  ReactionVessel:
    fields:
      molecules: String
      reactions: String
      volume: Float

  ACResult:
    fields:
      final_state: String
      emergent_structures: String
      self_organization: Float

behaviors:
  - name: define_reaction
    given: Reactants and products
    when: Definition done
    then: Returns reaction

  - name: simulate_chemistry
    given: Vessel and time
    when: Simulation done
    then: Returns AC result

  - name: detect_autocatalysis
    given: Reaction network
    when: Detection done
    then: Returns autocatalytic sets

  - name: measure_organization
    given: Vessel state
    when: Measurement done
    then: Returns organization level
