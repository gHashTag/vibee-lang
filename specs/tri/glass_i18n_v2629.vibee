# glass_i18n_v2629.vibee - Internationalization
# Локализация интерфейса
# φ² + 1/φ² = 3 | PHOENIX = 999

name: glass_i18n_v2629
version: "2629.0.0"
language: zig
module: glass_i18n_v2629

types:
  Locale:
    fields:
      code: String
      name: String
      direction: String
      date_format: String
      number_format: String

  Translation:
    fields:
      key: String
      locale: String
      value: String
      context: String

  TranslationBundle:
    fields:
      locale: String
      translations: Object
      version: String

  PluralRule:
    fields:
      locale: String
      zero: String
      one: String
      two: String
      few: String
      many: String
      other: String

behaviors:
  - name: translate
    given: Key and locale
    when: Translation requested
    then: Return translated string

  - name: format_date
    given: Date and locale
    when: Date formatting
    then: Return formatted date

  - name: format_number
    given: Number and locale
    when: Number formatting
    then: Return formatted number

  - name: pluralize
    given: Key count and locale
    when: Pluralization
    then: Return plural form

  - name: load_bundle
    given: Locale code
    when: Bundle loading
    then: Return TranslationBundle

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
