# golden_vscode_v13324.vibee
# KOSCHEI CYCLE 9 - VS Code Panel 23.6%
# φ² + 1/φ² = 3 | PHOENIX = 999

name: golden_vscode
version: "13324.0.0"
language: zig
module: golden_vscode

types:
  VSCodePanel:
    fields:
      panel_id: String
      width_ratio: Float
      x: Int
      y: Int
      width: Int
      height: Int

  VSCodeLayout:
    fields:
      sidebar_visible: Bool
      sidebar_width: Int
      editor_area: String
      panel_visible: Bool
      panel_height: Int

  VSCodeView:
    fields:
      active_view: String
      explorer_open: Bool
      search_open: Bool
      git_open: Bool
      debug_open: Bool

  VSCodeState:
    fields:
      workspace: String
      active_file: String
      dirty_files: Int
      terminal_open: Bool

behaviors:
  - name: create_vscode_panel
    given: Container dimensions
    when: Panel creation
    then: Returns VSCodePanel at 23.6%

  - name: configure_layout
    given: VSCodeLayout options
    when: Layout config
    then: Returns configured layout

  - name: toggle_sidebar
    given: VSCodePanel
    when: Toggle requested
    then: Returns updated layout

  - name: toggle_panel
    given: VSCodePanel
    when: Panel toggle
    then: Returns updated layout

  - name: switch_view
    given: View name
    When: View switch
    then: Returns VSCodeView

  - name: resize_panel
    given: New dimensions
    When: Resize requested
    then: Returns resized VSCodePanel
