# iGLA Training Ablation
# Ablation studies for architecture decisions
# φ² + 1/φ² = 3 | V = n × 3^k × π^m × φ^p

name: igla_training_ablation
version: "1.0.0"
language: zig
module: igla_training_ablation

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

types:
  AblationConfig:
    fields:
      base_config: Object
      ablation_vars: List<String>
      num_seeds: Int
      eval_steps: Int

  AblationExperiment:
    fields:
      experiment_id: String
      variable: String
      values: List<String>
      results: List<Float>

  AblationResult:
    fields:
      variable: String
      best_value: String
      improvement: Float
      significance: Float

  AblationMetrics:
    fields:
      experiments_run: Int
      significant_findings: Int
      compute_used: Float
      best_config: Object

behaviors:
  - name: design_ablation
    given: "Research question"
    when: "Design"
    then: "Ablation experiment designed"

  - name: run_ablation
    given: "Config variants"
    when: "Execution"
    then: "Multiple configs trained"

  - name: analyze_results
    given: "Ablation results"
    when: "Analysis"
    then: "Statistical significance computed"

  - name: ablate_attention
    given: "Attention variants"
    when: "Attention ablation"
    then: "GQA vs MHA vs MQA"

  - name: ablate_activation
    given: "Activation variants"
    when: "Activation ablation"
    then: "SwiGLU vs GELU vs ReLU"

  - name: ablate_normalization
    given: "Norm variants"
    when: "Norm ablation"
    then: "RMSNorm vs LayerNorm"

  - name: phi_ablation_harmony
    given: "Ablations"
    when: "Harmony"
    then: "φ-optimal architecture found"
