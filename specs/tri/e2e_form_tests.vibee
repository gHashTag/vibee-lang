# E2E Form Tests
# Test form interactions
# Fill, submit, validate

name: e2e_form_tests
version: "1.0.0"
language: zig
module: e2e_form_tests

types:
  FormTest:
    fields:
      test_id: String
      form_selector: String
      fields: Map<String,String>
      expected_result: String

  FormFieldTest:
    fields:
      field_selector: String
      field_type: String
      value: String

  FormSubmitTest:
    fields:
      form_selector: String
      submit_selector: String
      expected_url: Option<String>

  FormValidationTest:
    fields:
      form_selector: String
      invalid_fields: List<String>
      expected_errors: List<String>

behaviors:
  - name: test_fill_form
    given: Form and field values
    when: Fill test
    then: Returns test result

  - name: test_submit_form
    given: Form selector
    when: Submit test
    then: Returns test result

  - name: test_form_validation
    given: Invalid form data
    when: Validation test
    then: Returns test result

  - name: test_file_upload
    given: File input and path
    when: Upload test
    then: Returns test result

  - name: test_multi_select
    given: Select and options
    When: Multi-select test
    then: Returns test result

  - name: test_radio_buttons
    given: Radio group and value
    when: Radio test
    then: Returns test result

  - name: test_form_reset
    given: Filled form
    when: Reset test
    then: Returns test result
