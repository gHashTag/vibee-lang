name: omega_agent_v20020
version: "1.0.0"
language: zig
module: omega_agent_v20020

types:
  OmegaAgent:
    fields:
      model: String
      context: String
      tools: List<String>
      memory: String

  AgentAction:
    fields:
      action_type: String
      target: String
      params: Map<String,String>
      result: String

behaviors:
  - name: agent_think
    given: "User input"
    when: "Agent thinks"
    then: "Returns reasoning"

  - name: agent_act
    given: "Action plan"
    when: "Agent acts"
    then: "Executes action"

  - name: agent_learn
    given: "Feedback"
    when: "Agent learns"
    then: "Updates knowledge"
