name: ui_breadcrumb_v2239
version: "2239.0.0"
language: zig
module: ui_breadcrumb

sacred_formula:
  phi: 1.618033988749895
  identity: "φ² + 1/φ² = 3"
  phoenix: 999

creation_pattern:
  source: PathHierarchy
  transformer: BreadcrumbGenerator
  result: BreadcrumbUI

types:
  BreadcrumbItem:
    fields:
      label: String
      path: String
      icon: Option<String>
      is_current: Bool
      is_clickable: Bool

  BreadcrumbConfig:
    fields:
      separator: String
      max_items: Int
      collapse_mode: String
      show_home: Bool
      home_icon: String

  BreadcrumbState:
    fields:
      items: List<BreadcrumbItem>
      collapsed: Bool
      dropdown_open: Bool

behaviors:
  - name: generate_breadcrumbs
    given: "Current route path"
    when: "Breadcrumb component renders"
    then: "Path segments converted to breadcrumb items"
    test_cases:
      - name: test_generate
        input: { path: "/modules/llm/openai" }
        expected: { items: 4, labels: ["Home", "Modules", "LLM", "OpenAI"] }

  - name: collapse_breadcrumbs
    given: "More items than max_items"
    when: "Breadcrumb renders"
    then: "Middle items collapsed with ellipsis"
    test_cases:
      - name: test_collapse
        input: { items: 6, max_items: 4 }
        expected: { visible: 4, collapsed: 2 }

  - name: expand_collapsed
    given: "Collapsed breadcrumbs"
    when: "Ellipsis clicked"
    then: "Dropdown shows hidden items"
    test_cases:
      - name: test_expand
        input: { collapsed: true }
        expected: { dropdown_open: true }

  - name: navigate_to_crumb
    given: "Breadcrumb item clicked"
    when: "Click event on non-current item"
    then: "Navigation to that path"
    test_cases:
      - name: test_navigate
        input: { item_path: "/modules" }
        expected: { navigated: true }

  - name: render_separator
    given: "Separator configuration"
    when: "Breadcrumb renders"
    then: "Separator displayed between items"
    test_cases:
      - name: test_separator
        input: { separator: "/" }
        expected: { separator_count: 3 }

