name: rlhf_reward_model_v1281
version: "1.0.0"
language: zig
module: rlhf_reward_model_v1281

types:
  Config:
    fields:
      name: String
      params: String
      enabled: Bool

  State:
    fields:
      step: Int
      loss: Float
      metrics: List<Float>

  Output:
    fields:
      result: String
      score: Float
      metadata: String

behaviors:
  - name: initialize
    given: Configuration
    when: Initialization
    then: Returns initialized state

  - name: forward
    given: Input tensor
    when: Forward pass
    then: Returns output

  - name: backward
    given: Loss gradient
    when: Backward pass
    then: Updates parameters

  - name: phi_constants
    given: Sacred values
    when: Constants needed
    then: Returns phi constants
