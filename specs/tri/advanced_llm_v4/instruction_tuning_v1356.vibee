name: instruction_tuning_v1356
version: "1.0.0"
language: zig
module: instruction_tuning_v1356

types:
  FilterConfig:
    fields:
      threshold: Float
      categories: List<String>
      action: String

  SafetyResult:
    fields:
      safe: Bool
      score: Float
      flags: List<String>

  CompressionResult:
    fields:
      compressed: String
      ratio: Float
      preserved: Bool

behaviors:
  - name: analyze
    given: Input text
    when: Analysis requested
    then: Returns analysis result

  - name: filter
    given: Content to filter
    when: Filtering requested
    then: Returns filtered content

  - name: compress
    given: Long context
    when: Compression needed
    then: Returns compressed context

  - name: phi_constants
    given: Sacred values
    when: Constants needed
    then: Returns phi constants
