name: codegen_moonbit_v1315
version: "1.0.0"
language: zig
module: codegen_moonbit_v1315

types:
  EncoderConfig:
    fields:
      input_size: Int
      hidden_size: Int
      num_layers: Int

  EncoderOutput:
    fields:
      embeddings: String
      attention: String
      pooled: String

  CodeOutput:
    fields:
      code: String
      language: String
      valid: Bool

behaviors:
  - name: encode
    given: Input data
    when: Encoding requested
    then: Returns encoded representation

  - name: generate
    given: VIBEE spec
    when: Code generation
    then: Returns generated code

  - name: validate
    given: Generated code
    when: Validation needed
    then: Returns validation result

  - name: phi_constants
    given: Sacred values
    when: Constants needed
    then: Returns phi constants
