name: sliding_window_v1296
version: "1.0.0"
language: zig
module: sliding_window_v1296

types:
  LayerConfig:
    fields:
      hidden_size: Int
      num_heads: Int
      dropout: Float

  AttentionOutput:
    fields:
      output: String
      weights: List<Float>
      cache: String

  RouterOutput:
    fields:
      expert_ids: List<Int>
      weights: List<Float>
      load: Float

behaviors:
  - name: compute
    given: Input embeddings
    when: Computation requested
    then: Returns computed output

  - name: route
    given: Input tokens
    when: Routing needed
    then: Returns expert assignments

  - name: update_cache
    given: New key-values
    when: Cache update
    then: Returns updated cache

  - name: phi_constants
    given: Sacred values
    when: Constants needed
    then: Returns phi constants
