name: repl_completion_v19220
version: "1.0.0"
language: zig
module: repl_completion_v19220

types:
  Completion:
    fields:
      text: String
      kind: String
      description: String
      score: Float

  CompletionContext:
    fields:
      prefix: String
      position: Int
      scope: String

behaviors:
  - name: complete_command
    given: "Partial command"
    when: "Tab pressed"
    then: "Returns command completions"

  - name: complete_path
    given: "Partial path"
    when: "Tab pressed"
    then: "Returns path completions"

  - name: complete_symbol
    given: "Partial symbol"
    when: "Tab pressed"
    then: "Returns symbol completions"
