# VIBEE Specification v15080
# Neural Turing Machine - Differentiable computer
name: neural_turing_machine_v15080
version: "1.0.0"
language: zig
module: neural_turing_machine

types:
  MemoryBank:
    fields:
      memory: String
      num_slots: Int
      slot_size: Int

  ReadHead:
    fields:
      weights: String
      read_vector: String

  WriteHead:
    fields:
      weights: String
      erase_vector: String
      add_vector: String

  NTMState:
    fields:
      memory: String
      read_heads: String
      write_heads: String
      controller_state: String

behaviors:
  - name: read_memory
    given: Read head
    when: Reading done
    then: Returns read vector

  - name: write_memory
    given: Write head
    when: Writing done
    then: Returns updated memory

  - name: address_memory
    given: Key and mode
    when: Addressing done
    then: Returns attention weights

  - name: step_ntm
    given: Input and state
    when: Step done
    then: Returns NTM state
