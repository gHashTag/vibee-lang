# Best-of-N Sampling
# φ² + 1/φ² = 3 | PHOENIX = 999

name: best_of_n_v1487
version: "1.0.0"
language: zig
module: best_of_n_v1487

types:
  AugmentConfig:
    fields:
      num_augments: Int
      temperature: Float
      diversity: Float

  SyntheticSample:
    fields:
      input: String
      output: String
      quality: Float

  SamplingResult:
    fields:
      samples: List<String>
      scores: List<Float>
      best_idx: Int

behaviors:
  - name: augment
    given: Original sample
    when: Augmentation
    then: Returns augmented samples

  - name: generate
    given: Seed prompt
    when: Generation
    then: Returns synthetic data

  - name: select_best
    given: Multiple samples
    when: Selection
    then: Returns best sample

  - name: phi_constants
    given: Sacred values
    when: Constants needed
    then: Returns φ-based parameters
