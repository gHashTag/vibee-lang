name: cli_test_v19130
version: "1.0.0"
language: zig
module: cli_test_v19130

types:
  TestConfig:
    fields:
      pattern: String
      parallel: Bool
      timeout_ms: Int
      verbose: Bool

  TestResult:
    fields:
      total: Int
      passed: Int
      failed: Int
      skipped: Int
      duration_ms: Int

behaviors:
  - name: test_single
    given: "Single .zig file"
    when: "Test runner executes"
    then: "Returns test result"

  - name: test_all
    given: "All generated files"
    when: "Test runner executes batch"
    then: "Returns aggregated results"

  - name: test_watch
    given: "Watch mode enabled"
    when: "Files change"
    then: "Re-runs affected tests"
