# E2E Test Runner
# Execute end-to-end tests
# Full pipeline testing

name: e2e_test_runner
version: "1.0.0"
language: zig
module: e2e_test_runner

types:
  TestRunner:
    fields:
      runner_id: String
      config: String
      status: String

  TestSuite:
    fields:
      suite_id: String
      name: String
      tests: List<String>
      setup: Option<String>
      teardown: Option<String>

  TestResult:
    fields:
      test_id: String
      passed: Bool
      duration_ms: Int
      error: Option<String>

  RunConfig:
    fields:
      parallel: Bool
      timeout_ms: Int
      retry_count: Int

behaviors:
  - name: run_suite
    given: Test suite and config
    when: Suite execution needed
    then: Returns suite results

  - name: run_single
    given: Single test case
    when: Single test needed
    then: Returns test result

  - name: setup_environment
    given: Test config
    when: Setup needed
    then: Returns setup result

  - name: teardown_environment
    given: Test context
    when: Teardown needed
    then: Returns teardown result

  - name: collect_results
    given: All test results
    when: Collection needed
    then: Returns aggregated results

  - name: generate_report
    given: Test results
    when: Report needed
    then: Returns test report
