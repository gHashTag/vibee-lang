# VIBEE Specification v15620
# Digital Organisms - Self-replicating programs
name: digital_organisms_v15620
version: "1.0.0"
language: zig
module: digital_organisms

types:
  Organism:
    fields:
      genome: String
      cpu_state: String
      energy: Float

  AvidaWorld:
    fields:
      organisms: String
      resources: String
      environment: String

  ReplicationEvent:
    fields:
      parent: String
      offspring: String
      mutations: String

  DOResult:
    fields:
      population: String
      generations: Int
      complexity_evolved: Float

behaviors:
  - name: execute_organism
    given: Organism
    when: Execution done
    then: Returns updated organism

  - name: replicate
    given: Parent organism
    when: Replication done
    then: Returns replication event

  - name: compete_resources
    given: Population
    when: Competition done
    then: Returns survivors

  - name: evolve_organisms
    given: World
    when: Evolution done
    then: Returns DO result
