# VIBEE v10281: Transformers
# TIER 112: NLP
name: nlp_transformers
version: "10281.0.0"
language: zig
module: nlp_transformers

types:
  Token:
    fields:
      text: String
      id: Int
      start: Int
      end: Int

  Document:
    fields:
      text: String
      tokens: List<String>
      entities: List<String>
      embeddings: List<Float>

  NLPResult:
    fields:
      success: Bool
      output: String
      confidence: Float
      tokens_used: Int

behaviors:
  - name: process
    given: "Text input"
    when: "Processing"
    then: "Returns NLP result"

  - name: embed
    given: "Text"
    when: "Embedding"
    then: "Returns embeddings"

  - name: generate
    given: "Prompt"
    when: "Generating"
    then: "Returns generated text"
