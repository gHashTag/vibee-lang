# VIBEE Specification v12430
# Agent Context - Context management and attention
name: agent_context_v12430
version: "1.0.0"
language: zig
module: agent_context

types:
  ContextType:
    fields:
      conversation: String
      task: String
      environment: String
      user: String

  ContextWindow:
    fields:
      id: String
      type: String
      content: String
      tokens: Int
      max_tokens: Int

  AttentionWeight:
    fields:
      context_id: String
      item_id: String
      weight: Float
      reason: String

  ContextSummary:
    fields:
      window_id: String
      summary: String
      key_points: String
      compression_ratio: Float

  ContextSwitch:
    fields:
      from_context: String
      to_context: String
      preserved_items: String
      switched_at: Timestamp

behaviors:
  - name: create_context
    given: Context type and content
    when: Context created
    then: Returns context window

  - name: update_attention
    given: Context and new input
    when: Attention updated
    then: Returns attention weights

  - name: summarize_context
    given: Context window
    when: Summarization requested
    then: Returns context summary

  - name: switch_context
    given: Current and target context
    when: Switch executed
    then: Returns context switch result
