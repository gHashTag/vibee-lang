name: omega_integration_v20040
version: "1.0.0"
language: zig
module: omega_integration_v20040

types:
  Integration:
    fields:
      name: String
      integration_type: String
      config: Map<String,String>
      enabled: Bool

  IntegrationResult:
    fields:
      success: Bool
      data: String
      latency_ms: Int

behaviors:
  - name: integration_connect
    given: "Integration config"
    when: "Connector connects"
    then: "Establishes connection"

  - name: integration_sync
    given: "Sync request"
    when: "Syncer syncs"
    then: "Synchronizes data"

  - name: integration_disconnect
    given: "Disconnect request"
    when: "Disconnector disconnects"
    then: "Closes connection"
