# VIBEE Specification v15880
# Information Dynamics - Temporal information processing
name: information_dynamics_v15880
version: "1.0.0"
language: zig
module: information_dynamics

types:
  ActiveInformation:
    fields:
      storage: Float
      transfer: Float
      modification: Float

  InformationAtom:
    fields:
      redundancy: Float
      unique: Float
      synergy: Float

  DynamicsState:
    fields:
      past: String
      present: String
      future: String

  IDResult:
    fields:
      decomposition: String
      information_flow: String
      processing_signature: String

behaviors:
  - name: compute_active_info
    given: Time series
    when: Computation done
    then: Returns active information

  - name: decompose_information
    given: Multiple sources
    when: Decomposition done
    then: Returns information atom

  - name: track_dynamics
    given: Process
    when: Tracking done
    then: Returns dynamics state

  - name: analyze_dynamics
    given: System
    when: Analysis done
    then: Returns ID result
