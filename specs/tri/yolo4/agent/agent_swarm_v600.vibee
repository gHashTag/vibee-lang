name: agent_swarm_v600
version: "600.0.0"
language: zig
module: agent_swarm_v600

types:
  AgentSwarm:
    fields:
      swarm_id: String
      agents: List<String>
      swarm_size: Int
      phi_coordination: Bool

  SwarmAgent:
    fields:
      agent_id: String
      position: Object
      velocity: Object
      neighbors: List<String>

  SwarmBehavior:
    fields:
      behavior_id: String
      separation_weight: Float
      alignment_weight: Float
      cohesion_weight: Float

  SwarmMetrics:
    fields:
      agents_active: Int
      avg_velocity: Float
      convergence: Float
      phi_efficiency: Float

behaviors:
  - name: create_swarm
    given: Swarm config
    when: Swarm creation
    then: Initialize agent swarm

  - name: add_agent
    given: Agent config
    when: Agent addition
    then: Add to swarm

  - name: update_swarm
    given: Time step
    when: Update cycle
    then: Update all agents

  - name: find_neighbors
    given: Agent
    When: Neighbor search
    then: Return nearby agents

  - name: apply_rules
    given: Agent and neighbors
    When: Behavior update
    then: Calculate new velocity

  - name: converge_to_target
    given: Target position
    When: Convergence needed
    then: Guide swarm to target

  - name: phi_distribute
    given: Task
    When: Distribution needed
    then: Distribute by phi

  - name: get_metrics
    given: Swarm state
    When: Metrics query
    then: Return swarm metrics
