name: agent_colony_v602
version: "602.0.0"
language: zig
module: agent_colony_v602

types:
  AntColony:
    fields:
      colony_id: String
      ants: List<String>
      pheromone_map: Object
      phi_evaporation: Float

  Ant:
    fields:
      ant_id: String
      position: Object
      path: List<Object>
      carrying: Option<Object>

  Pheromone:
    fields:
      position: Object
      intensity: Float
      type: String
      age: Int

  ColonyMetrics:
    fields:
      paths_found: Int
      best_path_length: Float
      pheromone_coverage: Float
      phi_convergence: Float

behaviors:
  - name: create_colony
    given: Colony config
    when: Colony creation
    then: Initialize ant colony

  - name: move_ant
    given: Ant
    when: Movement
    then: Choose next position

  - name: deposit_pheromone
    given: Ant and path
    when: Path found
    then: Lay pheromone trail

  - name: evaporate_pheromones
    given: Time step
    When: Evaporation cycle
    then: Reduce intensities

  - name: find_path
    given: Start and end
    When: Pathfinding needed
    then: ACO path search

  - name: optimize_path
    given: Current best
    When: Optimization needed
    then: Improve solution

  - name: phi_evaporate
    given: Pheromone
    When: Phi evaporation
    then: Decay by phi rate

  - name: get_metrics
    given: Colony state
    When: Metrics query
    then: Return colony metrics
