name: agent_collective_v605
version: "605.0.0"
language: zig
module: agent_collective_v605

types:
  CollectiveIntelligence:
    fields:
      collective_id: String
      members: List<String>
      knowledge_base: Object
      phi_aggregation: Bool

  CollectiveMember:
    fields:
      member_id: String
      expertise: List<String>
      contribution_score: Float
      trust_level: Float

  CollectiveDecision:
    fields:
      decision_id: String
      options: List<Object>
      votes: Map<String,String>
      consensus: Option<String>

  CollectiveMetrics:
    fields:
      decisions_made: Int
      accuracy: Float
      diversity_index: Float
      phi_wisdom: Float

behaviors:
  - name: create_collective
    given: Collective config
    when: Collective creation
    then: Initialize collective

  - name: add_member
    given: Member
    when: Member addition
    then: Add to collective

  - name: propose_decision
    given: Options
    when: Decision needed
    then: Start voting

  - name: aggregate_votes
    given: All votes
    When: Aggregation needed
    then: Combine with phi weights

  - name: update_trust
    given: Decision outcome
    When: Trust update
    then: Adjust trust levels

  - name: share_knowledge
    given: Knowledge
    When: Sharing needed
    then: Add to knowledge base

  - name: query_collective
    given: Question
    When: Query needed
    then: Aggregate answers

  - name: get_metrics
    given: Collective state
    When: Metrics query
    then: Return collective metrics
