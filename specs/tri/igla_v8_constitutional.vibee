# iGLA v8 Constitutional AI - Self-Improvement
# Source: Anthropic "Constitutional AI"
# φ² + 1/φ² = 3 | КОЩЕЙ БЕССМЕРТЕН

name: igla_v8_constitutional
version: "8.0.0"
language: zig
module: igla_v8_constitutional

types:
  ConstitutionalConfig:
    fields:
      principles: String
      critique_model: String
      revision_rounds: Int
      
  Principle:
    fields:
      name: String
      description: String
      priority: Int
      
  CritiqueRevision:
    fields:
      original: String
      critique: String
      revised: String

behaviors:
  - name: self_critique
    given: "Model output"
    when: "Critique generation"
    then: "Identify issues"
    
  - name: self_revision
    given: "Critique"
    when: "Revision"
    then: "Improved output"
    
  - name: principle_following
    given: "Constitutional principles"
    when: "Generation"
    then: "Aligned outputs"
    
  - name: harmlessness
    given: "Safety principles"
    when: "Content check"
    then: "Safe responses"
    
  - name: helpfulness
    given: "Utility principles"
    when: "Task completion"
    then: "Useful outputs"
    
  - name: iterative_improvement
    given: "Multiple rounds"
    when: "Revision loop"
    then: "Progressive refinement"
