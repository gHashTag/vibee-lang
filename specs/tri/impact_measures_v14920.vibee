# VIBEE Specification v14920
# Impact Measures - Limiting unintended effects
name: impact_measures_v14920
version: "1.0.0"
language: zig
module: impact_measures

types:
  ImpactType:
    fields:
      reversible: String
      irreversible: String
      side_effect: String

  ImpactMeasure:
    fields:
      attainable_utility: String
      relative_reachability: String
      empowerment: String

  ImpactPenalty:
    fields:
      penalty_type: String
      magnitude: Float
      threshold: Float

  ImpactResult:
    fields:
      total_impact: Float
      breakdown: String
      acceptable: Bool

behaviors:
  - name: measure_impact
    given: Action and state
    when: Measurement done
    then: Returns impact result

  - name: compute_penalty
    given: Impact
    when: Computation done
    then: Returns impact penalty

  - name: predict_side_effects
    given: Planned action
    when: Prediction done
    then: Returns predicted effects

  - name: minimize_impact
    given: Goal and constraints
    when: Minimization done
    then: Returns low-impact plan
