# glass_modal_v2511.vibee - Glass Modal Component
# YOLO MODE XXV - Glassmorphism modal dialog
# φ² + 1/φ² = 3 | PHOENIX = 999

name: glass_modal_v2511
version: "2511.0.0"
language: zig
module: glass_modal_v2511

types:
  GlassModal:
    fields:
      id: String
      title: String
      content: String
      size: String
      closable: Bool

  ModalStyle:
    fields:
      blur: Float
      backdrop_opacity: Float
      border_radius: Float
      shadow: String

  ModalAnimation:
    fields:
      enter: String
      exit: String
      duration_ms: Int

behaviors:
  - name: show_modal
    given: GlassModal config
    when: Modal open requested
    then: Render with entrance animation

  - name: close_modal
    given: Modal ID
    when: Close triggered
    then: Animate exit and cleanup

  - name: handle_backdrop_click
    given: Modal with closable=true
    when: Backdrop clicked
    then: Close modal

  - name: trap_focus
    given: Open modal
    when: Tab key pressed
    then: Keep focus within modal

sacred_constants:
  phi: 1.618033988749895
  phi_squared_plus_inverse_squared: 3
  phoenix: 999
