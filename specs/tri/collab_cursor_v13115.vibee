# Collab Cursor v13115
# Multi-user collaborative cursors
# VIBEE v13115 | φ² + 1/φ² = 3 | PHOENIX = 999

name: collab_cursor_v13115
version: "13115.0.0"
language: zig
module: collab_cursor

types:
  CursorState:
    fields:
      user_id: String
      position: Int
      selection_start: Int
      selection_end: Int
      color: String
      
  CursorUpdate:
    fields:
      user_id: String
      new_position: Int
      timestamp: Int
      
  CursorConfig:
    fields:
      show_names: Bool
      fade_inactive: Bool
      animation_ms: Int

behaviors:
  - name: update_cursor
    given: "Cursor moved"
    when: "Update sent"
    then: "All users see update"
    
  - name: render_cursors
    given: "Multiple cursors"
    when: "Render requested"
    then: "All cursors visible"
    
  - name: animate_movement
    given: "Cursor position changed"
    when: "Animation triggered"
    then: "Smooth cursor movement"
    
  - name: show_selection
    given: "Text selected"
    when: "Selection rendered"
    then: "Selection highlighted"
    
  - name: handle_collision
    given: "Cursors overlap"
    when: "Collision detected"
    then: "Cursors offset"
