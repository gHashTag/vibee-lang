# VIBEE Specification v12410
# Agent Reflection - Self-evaluation and metacognition
name: agent_reflection_v12410
version: "1.0.0"
language: zig
module: agent_reflection

types:
  ReflectionType:
    fields:
      performance: String
      strategy: String
      knowledge: String
      behavior: String

  Reflection:
    fields:
      id: String
      type: String
      subject: String
      insights: String
      confidence: Float
      created_at: Timestamp

  SelfAssessment:
    fields:
      agent_id: String
      strengths: String
      weaknesses: String
      improvement_areas: String
      score: Float

  MetaCognition:
    fields:
      id: String
      thought_about: String
      meta_insight: String
      action_suggested: String

  ImprovementPlan:
    fields:
      assessment_id: String
      goals: String
      actions: String
      timeline: String

behaviors:
  - name: reflect_on_action
    given: Action and outcome
    when: Reflection triggered
    then: Returns reflection insights

  - name: assess_self
    given: Performance history
    when: Assessment requested
    then: Returns self assessment

  - name: think_about_thinking
    given: Reasoning chain
    when: Metacognition applied
    then: Returns meta insights

  - name: plan_improvement
    given: Self assessment
    when: Planning requested
    then: Returns improvement plan
