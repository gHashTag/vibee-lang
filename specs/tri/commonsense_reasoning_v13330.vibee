# VIBEE Specification v13330
# Commonsense Reasoning - Everyday knowledge reasoning
name: commonsense_reasoning_v13330
version: "1.0.0"
language: zig
module: commonsense_reasoning

types:
  CommonsenseType:
    fields:
      physical: String
      social: String
      temporal: String
      causal: String

  CommonsenseFact:
    fields:
      id: String
      type: String
      subject: String
      relation: String
      object: String
      confidence: Float

  CommonsenseKB:
    fields:
      id: String
      facts: String
      rules: String
      exceptions: String

  InferenceChain:
    fields:
      id: String
      steps: String
      conclusion: String
      plausibility: Float

  CommonsenseQuery:
    fields:
      question: String
      context: String
      answer: String
      explanation: String

behaviors:
  - name: add_fact
    given: Commonsense fact
    When: Fact added
    then: Returns updated KB

  - name: infer_implicit
    given: Situation
    When: Inference done
    then: Returns inference chain

  - name: answer_question
    given: Question and context
    When: Answer generated
    then: Returns commonsense query

  - name: detect_anomaly
    given: Situation
    When: Detection done
    then: Returns anomalies
