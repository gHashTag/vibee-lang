name: action_search_web
version: "11.0.0"
language: zig
module: action_search_web

# ACTION: Web Search
# Search engine queries

types:
  SearchRequest:
    fields:
      query: String
      num_results: Int
      search_engine: String
      safe_search: Bool

  SearchResult:
    fields:
      title: String
      url: String
      snippet: String
      position: Int

  SearchResponse:
    fields:
      query: String
      results: List<String>
      total_results: Int
      search_time_ms: Int

  SearchFilter:
    fields:
      site: Option<String>
      date_range: Option<String>
      file_type: Option<String>
      language: Option<String>

behaviors:
  - name: search
    given: SearchRequest
    when: Performing web search
    then: Return SearchResponse

  - name: search_google
    given: Query and num_results
    when: Searching Google
    then: Return SearchResponse

  - name: search_with_filter
    given: Query and SearchFilter
    when: Filtered search
    then: Return SearchResponse

  - name: get_search_suggestions
    given: Partial query
    when: Getting autocomplete
    then: Return list of suggestions

  - name: search_images
    given: Query
    when: Searching images
    then: Return image results

  - name: search_news
    given: Query
    when: Searching news
    then: Return news results
