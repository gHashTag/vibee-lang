name: tool_validation
version: "11.0.0"
language: zig
module: tool_validation

# TOOL: Validation
# Input/output validation

types:
  ValidationRule:
    fields:
      field: String
      rule_type: String
      constraint: String
      message: String

  ValidationResult:
    fields:
      valid: Bool
      errors: List<String>
      warnings: List<String>

  Schema:
    fields:
      schema_type: String
      properties: Map<String,String>
      required: List<String>

  TypeConstraint:
    fields:
      type_name: String
      min_value: Option<Float>
      max_value: Option<Float>
      pattern: Option<String>

behaviors:
  - name: validate_input
    given: Input and Schema
    when: Validating tool input
    then: Return ValidationResult

  - name: validate_output
    given: Output and Schema
    when: Validating tool output
    then: Return ValidationResult

  - name: add_rule
    given: ValidationRule
    when: Adding validation rule
    then: Return add status

  - name: check_type
    given: Value and TypeConstraint
    when: Type checking
    then: Return type check result

  - name: sanitize_input
    given: Input
    when: Cleaning input
    then: Return sanitized input

  - name: coerce_type
    given: Value and target_type
    when: Type coercion
    then: Return coerced value
