name: tool_registry
version: "11.0.0"
language: zig
module: tool_registry

# TOOL: Registry
# Tool registration and discovery

types:
  ToolDef:
    fields:
      name: String
      description: String
      category: String
      parameters: String
      returns: String

  ToolRegistry:
    fields:
      tools: Map<String,String>
      categories: List<String>
      total_tools: Int

  ToolQuery:
    fields:
      category: Option<String>
      keyword: Option<String>
      capability: Option<String>

behaviors:
  - name: register
    given: ToolDef
    when: Adding tool to registry
    then: Return registration status

  - name: unregister
    given: Tool name
    when: Removing tool
    then: Return unregister status

  - name: get_tool
    given: Tool name
    when: Getting tool definition
    then: Return ToolDef

  - name: search
    given: ToolQuery
    when: Finding tools
    then: Return matching tools

  - name: list_all
    given: Nothing
    when: Getting all tools
    then: Return ToolRegistry

  - name: get_for_task
    given: Task description
    when: Finding relevant tools
    then: Return relevant ToolDefs
