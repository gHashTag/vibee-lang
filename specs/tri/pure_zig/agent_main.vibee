name: agent_main
version: "11.0.0"
language: zig
module: agent_main

# AGENT: Main Module
# Pure Zig Agent entry point
# GAIA/WebArena champion

types:
  Agent:
    fields:
      agent_id: String
      config: String
      state: String
      running: Bool

  AgentCapabilities:
    fields:
      reasoning: List<String>
      actions: List<String>
      memory_types: List<String>
      benchmarks: List<String>

  AgentVersion:
    fields:
      version: String
      build_date: String
      features: List<String>

behaviors:
  - name: create_agent
    given: AgentConfig
    when: Creating new agent
    then: Return Agent

  - name: run_task
    given: Agent and task
    when: Executing task
    then: Return task result

  - name: get_capabilities
    given: Agent
    when: Getting agent capabilities
    then: Return AgentCapabilities

  - name: get_version
    given: Nothing
    when: Getting version info
    then: Return AgentVersion

  - name: shutdown
    given: Agent
    when: Shutting down agent
    then: Return shutdown status

  - name: health_check
    given: Agent
    when: Checking agent health
    then: Return health status
