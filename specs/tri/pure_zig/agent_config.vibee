name: agent_config
version: "11.0.0"
language: zig
module: agent_config

# AGENT: Configuration
# Agent configuration management

types:
  AgentConfig:
    fields:
      llm_provider: String
      llm_model: String
      llm_api_key: String
      max_steps: Int
      timeout_ms: Int
      reasoning_strategy: String

  MemoryConfig:
    fields:
      episodic_enabled: Bool
      semantic_enabled: Bool
      working_size: Int
      long_term_path: Option<String>

  BrowserConfig:
    fields:
      headless: Bool
      viewport_width: Int
      viewport_height: Int
      user_agent: Option<String>

  ConfigValidation:
    fields:
      valid: Bool
      errors: List<String>
      warnings: List<String>

behaviors:
  - name: load_config
    given: Config path
    when: Loading configuration
    then: Return AgentConfig

  - name: save_config
    given: AgentConfig and path
    when: Saving configuration
    then: Return save status

  - name: validate_config
    given: AgentConfig
    when: Validating configuration
    then: Return ConfigValidation

  - name: merge_configs
    given: Base and override configs
    when: Merging configurations
    then: Return merged AgentConfig

  - name: get_default
    given: Nothing
    when: Getting default config
    then: Return default AgentConfig

  - name: from_env
    given: Nothing
    when: Loading from environment
    then: Return AgentConfig
