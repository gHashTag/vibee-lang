name: learning_system_v17060
version: "1.0.0"
language: zig
module: learning_system

types:
  LearningMode:
    fields:
      mode: String
      supervision: String

  LearningExperience:
    fields:
      input: String
      outcome: String
      feedback: String

  KnowledgeUpdate:
    fields:
      old_knowledge: String
      new_knowledge: String
      confidence_change: Float

  LearningResult:
    fields:
      learned: String
      generalization: Float
      retention: Float

behaviors:
  - name: learn_from_experience
    given: Experience
    when: Learning algorithm
    then: Update knowledge

  - name: transfer_learning
    given: Source and target domain
    when: Knowledge transfer
    then: Return transferred knowledge

  - name: curriculum_learning
    given: Task sequence
    when: Progressive learning
    then: Return learning progress
