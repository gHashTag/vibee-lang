name: german_nlp
version: "9.9.4"
language: zig
module: german_nlp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: GermanText
  transformer: GermanNLP
  result: ParsedIntent

types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float

behaviors:
  - name: parse_intent
    given: "German text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "Erstelle einen Benutzerdienst"}'
        expected: '{"intent": "create_service", "entities": ["Benutzer"]}'

  - name: extract_entities
    given: "German text"
    when: "Entity extraction"
    then: "Entities"
    pas_pattern: ALG
    test_cases:
      - name: test_entities
        input: '{"text": "Benutzer hat Kennung und Name"}'
        expected: '{"entities": [{"text": "Benutzer", "type": "TYPE"}]}'

  - name: decompound
    given: "German compound word"
    when: "Decompounding"
    then: "Components"
    pas_pattern: ALG
    test_cases:
      - name: test_decompound
        input: '{"word": "Benutzerdienst"}'
        expected: '{"components": ["Benutzer", "dienst"]}'

  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type"}'
        expected: '{"spec": "name: user\\n..."}'

