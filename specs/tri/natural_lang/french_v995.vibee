name: french_nlp
version: "9.9.5"
language: zig
module: french_nlp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: FrenchText
  transformer: FrenchNLP
  result: ParsedIntent

types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float

behaviors:
  - name: parse_intent
    given: "French text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "Créer un service utilisateur"}'
        expected: '{"intent": "create_service", "entities": ["utilisateur"]}'

  - name: extract_entities
    given: "French text"
    when: "Entity extraction"
    then: "Entities"
    pas_pattern: ALG
    test_cases:
      - name: test_entities
        input: '{"text": "Utilisateur a identifiant et nom"}'
        expected: '{"entities": [{"text": "Utilisateur", "type": "TYPE"}]}'

  - name: lemmatize
    given: "French word"
    when: "Lemmatization"
    then: "Lemma"
    pas_pattern: ALG
    test_cases:
      - name: test_lemma
        input: '{"word": "utilisateurs"}'
        expected: '{"lemma": "utilisateur"}'

  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type"}'
        expected: '{"spec": "name: user\\n..."}'

