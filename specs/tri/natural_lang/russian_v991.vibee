# RUSSIAN NLP v991 - Russian Natural Language Processing
# ═══════════════════════════════════════════════════════════════════════════════
# φ² + 1/φ² = 3 | ФЕНИКС = 999
# ═══════════════════════════════════════════════════════════════════════════════

name: russian_nlp
version: "9.9.1"
language: zig
module: russian_nlp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: RussianText
  transformer: RussianNLP
  result: ParsedIntent

types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float

  Entity:
    fields:
      text: String
      entity_type: String
      case: String
      gender: String

behaviors:
  - name: parse_intent
    given: "Russian text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "Создай сервис пользователей с авторизацией"}'
        expected: '{"intent": "create_service", "entities": ["пользователь", "авторизация"]}'

  - name: extract_entities
    given: "Russian text"
    when: "Entity extraction"
    then: "Entities with morphology"
    pas_pattern: ALG
    test_cases:
      - name: test_entities
        input: '{"text": "Пользователь имеет идентификатор и имя"}'
        expected: '{"entities": [{"text": "Пользователь", "case": "nominative"}]}'

  - name: lemmatize
    given: "Russian word"
    when: "Lemmatization"
    then: "Lemma"
    pas_pattern: ALG
    test_cases:
      - name: test_lemma
        input: '{"word": "пользователей"}'
        expected: '{"lemma": "пользователь"}'

  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type"}'
        expected: '{"spec": "name: user\\n..."}'

