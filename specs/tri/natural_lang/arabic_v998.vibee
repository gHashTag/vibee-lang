name: arabic_nlp
version: "9.9.8"
language: zig
module: arabic_nlp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: ArabicText
  transformer: ArabicNLP
  result: ParsedIntent

types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float

  Entity:
    fields:
      text: String
      root: String
      entity_type: String

behaviors:
  - name: parse_intent
    given: "Arabic text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "أنشئ خدمة المستخدم"}'
        expected: '{"intent": "create_service", "entities": ["مستخدم"]}'

  - name: tokenize
    given: "Arabic text"
    when: "Tokenization"
    then: "Tokens"
    pas_pattern: ALG
    test_cases:
      - name: test_tokenize
        input: '{"text": "أنشئ المستخدم"}'
        expected: '{"tokens": ["أنشئ", "المستخدم"]}'

  - name: extract_root
    given: "Arabic word"
    when: "Root extraction"
    then: "Root"
    pas_pattern: ALG
    test_cases:
      - name: test_root
        input: '{"word": "مستخدم"}'
        expected: '{"root": "خدم"}'

  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type"}'
        expected: '{"spec": "name: user\\n..."}'

