name: korean_nlp
version: "9.9.7"
language: zig
module: korean_nlp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: KoreanText
  transformer: KoreanNLP
  result: ParsedIntent

types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float

behaviors:
  - name: parse_intent
    given: "Korean text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "사용자 서비스를 생성하세요"}'
        expected: '{"intent": "create_service", "entities": ["사용자"]}'

  - name: tokenize
    given: "Korean text"
    when: "Morphological analysis"
    then: "Tokens"
    pas_pattern: ALG
    test_cases:
      - name: test_tokenize
        input: '{"text": "사용자를 생성"}'
        expected: '{"tokens": ["사용자", "를", "생성"]}'

  - name: extract_entities
    given: "Tokenized text"
    when: "Entity extraction"
    then: "Entities"
    pas_pattern: ALG
    test_cases:
      - name: test_entities
        input: '{"text": "사용자는 ID와 이름을 가집니다"}'
        expected: '{"entities": [{"text": "사용자", "type": "TYPE"}]}'

  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type"}'
        expected: '{"spec": "name: user\\n..."}'

