# φ² + 1/φ² = 3 | ققنوس = 999
name: persian_nlp
version: "10.8.0"
language: zig
module: persian_nlp
sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999
creation_pattern:
  source: PersianText
  transformer: PersianNLP
  result: ParsedIntent
types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float
  Entity:
    fields:
      text: String
      entity_type: String
behaviors:
  - name: parse_intent
    given: "فارسی text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "..."}'
        expected: '{"intent": "create_service"}'
  - name: extract_entities
    given: "فارسی text"
    when: "Entity extraction"
    then: "Entities"
    pas_pattern: ALG
    test_cases:
      - name: test_entities
        input: '{"text": "..."}'
        expected: '{"entities": [...]}'
  - name: tokenize
    given: "فارسی text"
    when: "Tokenization"
    then: "Tokens"
    pas_pattern: ALG
    test_cases:
      - name: test_tokenize
        input: '{"text": "..."}'
        expected: '{"tokens": [...]}'
  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type"}'
        expected: '{"spec": "name: user"}'
# φ² + 1/φ² = 3 | ققنوس = 999
