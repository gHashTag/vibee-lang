name: english_nlp
version: "9.9.0"
language: zig
module: english_nlp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: EnglishText
  transformer: EnglishNLP
  result: ParsedIntent

types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float

  Entity:
    fields:
      text: String
      entity_type: String
      start: Int
      end: Int

behaviors:
  - name: parse_intent
    given: "English text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "Create a user service with login"}'
        expected: '{"intent": "create_service", "entities": ["user", "login"]}'

  - name: extract_entities
    given: "English text"
    when: "Entity extraction"
    then: "Entities"
    pas_pattern: ALG
    test_cases:
      - name: test_entities
        input: '{"text": "User has id and name fields"}'
        expected: '{"entities": [{"text": "User", "type": "TYPE"}, {"text": "id", "type": "FIELD"}]}'

  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type", "entities": [...]}'
        expected: '{"spec": "name: user\\nfields: ..."}'

  - name: tokenize
    given: "English text"
    when: "Tokenization"
    then: "Tokens"
    pas_pattern: ALG
    test_cases:
      - name: test_tokenize
        input: '{"text": "Create a function"}'
        expected: '{"tokens": ["Create", "a", "function"]}'

