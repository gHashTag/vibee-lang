name: spanish_nlp
version: "9.9.3"
language: zig
module: spanish_nlp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: SpanishText
  transformer: SpanishNLP
  result: ParsedIntent

types:
  ParsedIntent:
    fields:
      intent: String
      entities: List<Entity>
      confidence: Float

behaviors:
  - name: parse_intent
    given: "Spanish text"
    when: "Intent parsing"
    then: "Parsed intent"
    pas_pattern: ALG
    test_cases:
      - name: test_intent
        input: '{"text": "Crear un servicio de usuarios"}'
        expected: '{"intent": "create_service", "entities": ["usuario"]}'

  - name: extract_entities
    given: "Spanish text"
    when: "Entity extraction"
    then: "Entities"
    pas_pattern: ALG
    test_cases:
      - name: test_entities
        input: '{"text": "Usuario tiene identificador y nombre"}'
        expected: '{"entities": [{"text": "Usuario", "type": "TYPE"}]}'

  - name: lemmatize
    given: "Spanish word"
    when: "Lemmatization"
    then: "Lemma"
    pas_pattern: ALG
    test_cases:
      - name: test_lemma
        input: '{"word": "usuarios"}'
        expected: '{"lemma": "usuario"}'

  - name: to_spec
    given: "Parsed intent"
    when: "Spec generation"
    then: "VIBEE spec"
    pas_pattern: ALG
    test_cases:
      - name: test_spec
        input: '{"intent": "create_type"}'
        expected: '{"spec": "name: user\\n..."}'

