# VIBEE Specification v12860
# Neuromorphic Chip - Hardware abstraction for neuromorphic processors
name: neuromorphic_chip_v12860
version: "1.0.0"
language: zig
module: neuromorphic_chip

types:
  ChipArchitecture:
    fields:
      loihi: String
      truenorth: String
      spinnaker: String
      brainscales: String

  NeuromorphicCore:
    fields:
      id: String
      architecture: String
      neuron_capacity: Int
      synapse_capacity: Int
      power_mw: Float

  CoreMapping:
    fields:
      network_id: String
      core_id: String
      neuron_assignments: String
      synapse_assignments: String

  ChipConfig:
    fields:
      id: String
      cores: String
      clock_frequency_mhz: Int
      total_power_mw: Float

  ExecutionStats:
    fields:
      config_id: String
      spikes_processed: Int
      energy_per_spike_pj: Float
      latency_us: Int

behaviors:
  - name: configure_chip
    given: Chip architecture
    when: Configuration created
    then: Returns chip config

  - name: map_network
    given: SNN and chip
    when: Mapping done
    then: Returns core mapping

  - name: execute_timestep
    given: Config and inputs
    when: Timestep executed
    then: Returns output spikes

  - name: get_stats
    given: Execution history
    when: Stats requested
    then: Returns execution stats
