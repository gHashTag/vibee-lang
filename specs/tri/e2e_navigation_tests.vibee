# E2E Navigation Tests
# Test page navigation
# URL, history, redirects

name: e2e_navigation_tests
version: "1.0.0"
language: zig
module: e2e_navigation_tests

types:
  NavigationTest:
    fields:
      test_id: String
      url: String
      expected_url: String
      expected_title: Option<String>

  GotoTest:
    fields:
      url: String
      wait_until: String
      timeout_ms: Int

  HistoryTest:
    fields:
      actions: List<String>
      expected_url: String

  RedirectTest:
    fields:
      start_url: String
      expected_final_url: String
      redirect_count: Int

behaviors:
  - name: test_goto_url
    given: URL and options
    when: Goto test
    then: Returns test result

  - name: test_go_back
    given: Navigation history
    when: Back test
    then: Returns test result

  - name: test_go_forward
    given: Navigation history
    when: Forward test
    then: Returns test result

  - name: test_reload
    given: Page state
    when: Reload test
    then: Returns test result

  - name: test_redirect_follow
    given: Redirect URL
    when: Redirect test
    then: Returns test result

  - name: test_wait_for_navigation
    given: Navigation trigger
    When: Wait test
    then: Returns test result

  - name: test_navigation_timeout
    given: Slow URL
    when: Timeout test
    then: Returns test result
