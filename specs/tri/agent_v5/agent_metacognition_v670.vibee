# VIBEE YOLO MODE V - Agent Metacognition v670
# φ² + 1/φ² = 3 | PHOENIX = 999
# Metacognitive agents that think about thinking

name: agent_metacognition_v670
version: "5.0.0"
language: zig
module: agent_metacognition

sacred_constants:
  phi: 1.618033988749895
  phi_squared_plus_inverse_squared: 3
  phoenix: 999

creation_pattern:
  source: CognitiveState
  transformer: MetacognitiveEngine
  result: EnhancedCognition

types:
  MetacognitiveState:
    fields:
      confidence: Float
      uncertainty: Float
      knowledge_gaps: String
      strategy_effectiveness: Float

  ThinkingProcess:
    fields:
      current_strategy: String
      alternatives: String
      monitoring_active: Bool

  MetacognitiveAction:
    fields:
      action_type: String
      target: String
      expected_improvement: Float

  MetacognitiveMetrics:
    fields:
      self_awareness_score: Float
      strategy_switches: Int
      accuracy_improvement: Float

behaviors:
  - name: monitor_thinking
    given: Active reasoning
    when: Continuous monitoring
    then: Thinking process observed

  - name: assess_confidence
    given: Current belief
    when: Confidence assessment
    then: Confidence level calibrated

  - name: identify_gaps
    given: Knowledge state
    when: Gap identification
    then: Knowledge gaps detected

  - name: select_strategy
    given: Problem type
    when: Strategy selection
    then: Optimal strategy chosen

  - name: evaluate_progress
    given: Problem-solving state
    when: Progress evaluation
    then: Progress toward goal assessed

  - name: adjust_approach
    given: Poor progress
    when: Approach adjustment
    then: Strategy modified or switched

  - name: calibrate_confidence
    given: Feedback
    when: Calibration
    then: Confidence aligned with accuracy

  - name: reflect_on_learning
    given: Completed task
    when: Reflection
    then: Learning insights extracted

test_cases:
  - name: test_thinking_monitor
    input:
      reasoning: active
    expected:
      monitored: true

  - name: test_confidence_assess
    input:
      belief: valid
    expected:
      confidence_computed: true

  - name: test_gaps_identify
    input:
      knowledge: partial
    expected:
      gaps_found: true

  - name: test_strategy_select
    input:
      problem: complex
    expected:
      strategy_chosen: true

  - name: test_progress_evaluate
    input:
      state: mid_problem
    expected:
      progress_assessed: true

  - name: test_approach_adjust
    input:
      progress: poor
    expected:
      adjusted: true

  - name: test_confidence_calibrate
    input:
      feedback: provided
    expected:
      calibrated: true

  - name: test_learning_reflect
    input:
      task: completed
    expected:
      insights_extracted: true

  - name: test_phi_metacognition
    input:
      phi: 1.618033988749895
    expected:
      golden_confidence: 0.618033988749895
