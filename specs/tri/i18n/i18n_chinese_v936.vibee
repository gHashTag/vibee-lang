name: i18n_chinese
version: "9.3.6"
language: zig
module: i18n_chinese

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: ChineseInput
  transformer: ChineseProcessor
  result: ProcessedChinese

types:
  ChineseVariant:
    enum:
      - simplified
      - traditional

  ChineseInput:
    fields:
      text: String
      variant: ChineseVariant

  ProcessedChinese:
    fields:
      normalized: String
      tokens: List<String>
      spec_keywords: List<String>

behaviors:
  - name: parse_chinese_spec
    given: "Chinese specification text"
    when: "Parsing"
    then: "Parsed specification"
    pas_pattern: MLS
    test_cases:
      - name: test_parse_type
        input: '{"text": "创建类型用户包含字段姓名和年龄"}'
        expected: '{"spec": "types:\\n  User:\\n    fields:\\n      name: String\\n      age: Int"}'

  - name: translate_keywords
    given: "Chinese keywords"
    when: "Translation"
    then: "VIBEE keywords"
    pas_pattern: HSH
    test_cases:
      - name: test_type
        input: '{"chinese": "类型"}'
        expected: '{"vibee": "types"}'
      - name: test_field
        input: '{"chinese": "字段"}'
        expected: '{"vibee": "fields"}'

  - name: verify_sacred_constants
    given: "Output"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

chinese_keywords:
  types:
    类型: "types"
    结构: "types"
    类: "types"
    
  fields:
    字段: "fields"
    属性: "fields"
    
  behaviors:
    行为: "behaviors"
    函数: "behaviors"
    方法: "behaviors"
    
  data_types:
    字符串: "String"
    整数: "Int"
    浮点数: "Float"
    布尔: "Bool"
    列表: "List"

