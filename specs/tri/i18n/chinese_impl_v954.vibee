name: chinese_impl
version: "9.5.4"
language: zig
module: chinese_impl

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: EnglishText
  transformer: ChineseTranslator
  result: ChineseText

types:
  ChineseTranslation:
    fields:
      key: String
      simplified: String
      traditional: String
      pinyin: String

  MeasureWord:
    fields:
      word: String
      classifier: String
      usage: String

behaviors:
  - name: translate_term
    given: "English term"
    when: "Translation"
    then: "Chinese term"
    pas_pattern: PRE
    test_cases:
      - name: test_sacred
        input: '{"term": "sacred formula"}'
        expected: '{"simplified": "神圣公式", "traditional": "神聖公式"}'
      - name: test_phoenix
        input: '{"term": "phoenix"}'
        expected: '{"simplified": "凤凰", "traditional": "鳳凰"}'

  - name: add_classifier
    given: "Noun and count"
    when: "Classifier needed"
    then: "Correct classifier"
    pas_pattern: ALG
    test_cases:
      - name: test_classifier
        input: '{"noun": "公式", "count": 3}'
        expected: '{"text": "三个公式"}'

  - name: convert_script
    given: "Text and target"
    when: "Script conversion"
    then: "Converted text"
    pas_pattern: ALG
    test_cases:
      - name: test_to_traditional
        input: '{"text": "凤凰", "target": "traditional"}'
        expected: '{"text": "鳳凰"}'

  - name: add_pinyin
    given: "Chinese text"
    when: "Pinyin annotation"
    then: "Text with pinyin"
    pas_pattern: PRE
    test_cases:
      - name: test_pinyin
        input: '{"text": "凤凰"}'
        expected: '{"pinyin": "fèng huáng"}'

  - name: verify_sacred_constants
    given: "Translation"
    when: "Verification"
    then: "Sacred terms correct"
    pas_pattern: ALG
    test_cases:
      - name: test_trinity
        input: '{"term": "trinity"}'
        expected: '{"translation": "三位一体", "value": 3.0}'

translations:
  sacred_formula: "神圣公式"
  golden_identity: "黄金恒等式"
  phoenix: "凤凰"
  trinity: "三位一体"
  creation_pattern: "创建模式"
  source: "源"
  transformer: "转换器"
  result: "结果"
  specification: "规范"
  behavior: "行为"
  test_case: "测试用例"

