# φ² + 1/φ² = 3 | PHOENIX = 999
# ═══════════════════════════════════════════════════════════════════════════════

name: i18n_core
version: "9.3.4"
language: zig
module: i18n_core

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: NaturalLanguageInput
  transformer: I18NEngine
  result: TranslatedOutput

types:
  NaturalLanguage:
    enum:
      - english
      - russian
      - chinese
      - spanish
      - french
      - german
      - japanese
      - korean
      - portuguese
      - arabic
      - hindi
      - italian
      - dutch
      - polish
      - turkish
      - vietnamese
      - thai
      - indonesian
      - ukrainian
      - hebrew

  TranslationDirection:
    enum:
      - spec_to_natural
      - natural_to_spec
      - natural_to_natural

  NaturalLanguageInput:
    fields:
      text: String
      source_lang: NaturalLanguage
      target_lang: NaturalLanguage

  TranslatedOutput:
    fields:
      text: String
      language: NaturalLanguage
      confidence: Float

  LanguageConfig:
    fields:
      language: NaturalLanguage
      code: String
      name_native: String
      rtl: Bool

  TranslationContext:
    fields:
      domain: String
      terminology: Object
      style: String

behaviors:
  - name: detect_language
    given: "Text input"
    when: "Language detection"
    then: "Detected language"
    pas_pattern: MLS
    test_cases:
      - name: test_detect_english
        input: '{"text": "Create a user with name and email"}'
        expected: '{"language": "english", "confidence": 0.99}'
      - name: test_detect_russian
        input: '{"text": "Создать пользователя с именем и email"}'
        expected: '{"language": "russian", "confidence": 0.99}'
      - name: test_detect_chinese
        input: '{"text": "创建一个包含姓名和电子邮件的用户"}'
        expected: '{"language": "chinese", "confidence": 0.99}'

  - name: translate_to_spec
    given: "Natural language description"
    when: "Spec generation"
    then: "VIBEE specification"
    pas_pattern: MLS
    test_cases:
      - name: test_english_to_spec
        input: '{"text": "Create a User type with id and name fields", "lang": "english"}'
        expected: '{"spec": "types:\\n  User:\\n    fields:\\n      id: Int\\n      name: String"}'
      - name: test_russian_to_spec
        input: '{"text": "Создать тип User с полями id и name", "lang": "russian"}'
        expected: '{"spec": "types:\\n  User:\\n    fields:\\n      id: Int\\n      name: String"}'

  - name: translate_spec_to_natural
    given: "VIBEE specification"
    when: "Natural language generation"
    then: "Human-readable description"
    pas_pattern: MLS
    test_cases:
      - name: test_spec_to_english
        input: '{"spec": "types:\\n  User:\\n    fields:\\n      id: Int", "lang": "english"}'
        expected: '{"text": "A User type with an integer id field"}'
      - name: test_spec_to_russian
        input: '{"spec": "types:\\n  User:\\n    fields:\\n      id: Int", "lang": "russian"}'
        expected: '{"text": "Тип User с целочисленным полем id"}'

  - name: translate_natural_to_natural
    given: "Text in source language"
    when: "Translation"
    then: "Text in target language"
    pas_pattern: MLS
    test_cases:
      - name: test_en_to_ru
        input: '{"text": "Create user", "source": "english", "target": "russian"}'
        expected: '{"text": "Создать пользователя"}'
      - name: test_ru_to_en
        input: '{"text": "Создать пользователя", "source": "russian", "target": "english"}'
        expected: '{"text": "Create user"}'

  - name: verify_sacred_constants
    given: "Translation"
    when: "Verification"
    then: "Constants preserved"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

supported_languages:
  tier_1_full:
    - code: "en"
      name: "English"
      native: "English"
    - code: "ru"
      name: "Russian"
      native: "Русский"
    - code: "zh"
      name: "Chinese"
      native: "中文"
    - code: "es"
      name: "Spanish"
      native: "Español"
      
  tier_2_partial:
    - code: "fr"
      name: "French"
      native: "Français"
    - code: "de"
      name: "German"
      native: "Deutsch"
    - code: "ja"
      name: "Japanese"
      native: "日本語"
    - code: "ko"
      name: "Korean"
      native: "한국어"
    - code: "pt"
      name: "Portuguese"
      native: "Português"
      
  tier_3_basic:
    - code: "ar"
      name: "Arabic"
      native: "العربية"
      rtl: true
    - code: "hi"
      name: "Hindi"
      native: "हिन्दी"
    - code: "it"
      name: "Italian"
      native: "Italiano"
    - code: "uk"
      name: "Ukrainian"
      native: "Українська"
    - code: "he"
      name: "Hebrew"
      native: "עברית"
      rtl: true

