name: russian_impl
version: "9.5.3"
language: zig
module: russian_impl

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: EnglishText
  transformer: RussianTranslator
  result: RussianText

types:
  RussianTranslation:
    fields:
      key: String
      value: String
      gender: String
      case: String

  PluralForm:
    fields:
      one: String
      few: String
      many: String
      other: String

  GrammaticalCase:
    fields:
      nominative: String
      genitive: String
      dative: String
      accusative: String
      instrumental: String
      prepositional: String

behaviors:
  - name: translate_term
    given: "English term"
    when: "Translation"
    then: "Russian term"
    pas_pattern: PRE
    test_cases:
      - name: test_sacred
        input: '{"term": "sacred formula"}'
        expected: '{"translation": "священная формула"}'
      - name: test_phoenix
        input: '{"term": "phoenix"}'
        expected: '{"translation": "феникс"}'

  - name: pluralize
    given: "Word and count"
    when: "Pluralization"
    then: "Correct form"
    pas_pattern: ALG
    test_cases:
      - name: test_one
        input: '{"word": "элемент", "count": 1}'
        expected: '{"form": "1 элемент"}'
      - name: test_few
        input: '{"word": "элемент", "count": 3}'
        expected: '{"form": "3 элемента"}'
      - name: test_many
        input: '{"word": "элемент", "count": 5}'
        expected: '{"form": "5 элементов"}'

  - name: decline
    given: "Noun and case"
    when: "Declension"
    then: "Declined form"
    pas_pattern: ALG
    test_cases:
      - name: test_genitive
        input: '{"noun": "формула", "case": "genitive"}'
        expected: '{"form": "формулы"}'

  - name: verify_sacred_constants
    given: "Translation"
    when: "Verification"
    then: "Sacred terms correct"
    pas_pattern: ALG
    test_cases:
      - name: test_trinity
        input: '{"term": "trinity"}'
        expected: '{"translation": "троица", "value": 3.0}'

translations:
  sacred_formula: "священная формула"
  golden_identity: "золотая идентичность"
  phoenix: "феникс"
  trinity: "троица"
  creation_pattern: "паттерн создания"
  source: "источник"
  transformer: "трансформер"
  result: "результат"
  specification: "спецификация"
  behavior: "поведение"
  test_case: "тестовый случай"

