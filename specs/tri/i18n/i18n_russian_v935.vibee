name: i18n_russian
version: "9.3.5"
language: zig
module: i18n_russian

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: RussianInput
  transformer: RussianProcessor
  result: ProcessedRussian

types:
  RussianCase:
    enum:
      - nominative
      - genitive
      - dative
      - accusative
      - instrumental
      - prepositional

  RussianGender:
    enum:
      - masculine
      - feminine
      - neuter

  RussianInput:
    fields:
      text: String
      context: String

  ProcessedRussian:
    fields:
      normalized: String
      tokens: List<String>
      spec_keywords: List<String>

  RussianKeyword:
    fields:
      russian: String
      english: String
      vibee_keyword: String

behaviors:
  - name: parse_russian_spec
    given: "Russian specification text"
    when: "Parsing"
    then: "Parsed specification"
    pas_pattern: MLS
    test_cases:
      - name: test_parse_type
        input: '{"text": "Создать тип Пользователь с полями имя и возраст"}'
        expected: '{"spec": "types:\\n  User:\\n    fields:\\n      name: String\\n      age: Int"}'
      - name: test_parse_behavior
        input: '{"text": "Поведение: создать пользователя когда данные валидны"}'
        expected: '{"spec": "behaviors:\\n  - name: create_user\\n    when: data is valid"}'

  - name: translate_keywords
    given: "Russian keywords"
    when: "Translation"
    then: "VIBEE keywords"
    pas_pattern: HSH
    test_cases:
      - name: test_type
        input: '{"russian": "тип"}'
        expected: '{"vibee": "types"}'
      - name: test_field
        input: '{"russian": "поле"}'
        expected: '{"vibee": "fields"}'
      - name: test_behavior
        input: '{"russian": "поведение"}'
        expected: '{"vibee": "behaviors"}'

  - name: generate_russian_docs
    given: "VIBEE specification"
    when: "Documentation generation"
    then: "Russian documentation"
    pas_pattern: MLS
    test_cases:
      - name: test_docs
        input: '{"spec": {...}}'
        expected: '{"docs": "Тип User содержит поля..."}'

  - name: verify_sacred_constants
    given: "Output"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

russian_keywords:
  types:
    тип: "types"
    структура: "types"
    класс: "types"
    
  fields:
    поле: "fields"
    поля: "fields"
    атрибут: "fields"
    
  behaviors:
    поведение: "behaviors"
    функция: "behaviors"
    метод: "behaviors"
    
  data_types:
    строка: "String"
    целое: "Int"
    число: "Float"
    логическое: "Bool"
    список: "List"
    
  keywords:
    создать: "create"
    удалить: "delete"
    обновить: "update"
    получить: "get"
    найти: "find"

