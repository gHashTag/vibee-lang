# VIBEE Specification v13310
# Concept Learning - Learning symbolic concepts
name: concept_learning_v13310
version: "1.0.0"
language: zig
module: concept_learning

types:
  ConceptType:
    fields:
      primitive: String
      composite: String
      relational: String
      probabilistic: String

  Concept:
    fields:
      id: String
      type: String
      definition: String
      examples: String
      counter_examples: String

  ConceptHypothesis:
    fields:
      id: String
      concept_id: String
      hypothesis: String
      coverage: Float
      consistency: Float

  LearningExample:
    fields:
      id: String
      features: String
      label: String
      is_positive: Bool

  ConceptModel:
    fields:
      concept_id: String
      learned_definition: String
      accuracy: Float
      generalization: Float

behaviors:
  - name: propose_hypothesis
    given: Examples
    When: Hypothesis proposed
    then: Returns concept hypothesis

  - name: refine_concept
    given: Hypothesis and new example
    When: Refinement done
    then: Returns refined hypothesis

  - name: generalize
    given: Positive examples
    When: Generalization done
    then: Returns generalized concept

  - name: specialize
    given: Negative example
    When: Specialization done
    then: Returns specialized concept
