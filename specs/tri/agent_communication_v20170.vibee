name: agent_communication_v20170
version: "1.0.0"
language: zig
module: agent_communication_v20170

types:
  Message:
    fields:
      sender: String
      receiver: String
      content: String
      intent: String

  CommunicationResult:
    fields:
      delivered: Bool
      response: String
      understood: Bool

behaviors:
  - name: communicate_send
    given: "Message"
    when: "Agent sends"
    then: "Delivers message"

  - name: communicate_receive
    given: "Incoming message"
    when: "Agent receives"
    then: "Processes message"

  - name: communicate_negotiate
    given: "Conflicting goals"
    when: "Agents negotiate"
    then: "Returns agreement"
