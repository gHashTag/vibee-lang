# VIBEE Specification v15500
# NEAT - NeuroEvolution of Augmenting Topologies
name: neat_v15500
version: "1.0.0"
language: zig
module: neat

types:
  NEATGenome:
    fields:
      nodes: String
      connections: String
      fitness: Float

  Innovation:
    fields:
      innovation_number: Int
      in_node: Int
      out_node: Int

  Species:
    fields:
      representative: String
      members: String
      avg_fitness: Float

  NEATResult:
    fields:
      best_genome: String
      species_count: Int
      generations: Int

behaviors:
  - name: mutate_add_node
    given: Genome
    when: Mutation done
    then: Returns mutated genome

  - name: mutate_add_connection
    given: Genome
    when: Mutation done
    then: Returns mutated genome

  - name: crossover_neat
    given: Two parents
    when: Crossover done
    then: Returns offspring

  - name: evolve_neat
    given: Population
    when: Evolution done
    then: Returns NEAT result
