name: codegen_php
version: "9.3.1"
language: zig
module: codegen_php

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: PHPCodegen
  result: PHPCode

types:
  PHPVersion:
    enum:
      - php81
      - php82
      - php83

  PHPCode:
    fields:
      code: String
      uses: List<String>
      tests: String
      namespace_name: String

behaviors:
  - name: generate_class
    given: "Type definition"
    when: "Class generation"
    then: "PHP class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "class User {\\n    public int $id;\\n}"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "PHPUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_phpunit
        input: '{"test_cases": [...]}'
        expected: '{"code": "public function testCreate(): void { ... }"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

