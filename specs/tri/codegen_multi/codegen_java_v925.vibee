name: codegen_java
version: "9.2.5"
language: zig
module: codegen_java

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: JavaCodegen
  result: JavaCode

types:
  JavaVersion:
    enum:
      - java11
      - java17
      - java21

  JavaCode:
    fields:
      code: String
      imports: List<String>
      tests: String
      package_name: String

behaviors:
  - name: generate_record
    given: "Type definition"
    when: "Record generation"
    then: "Java record"
    pas_pattern: ALG
    test_cases:
      - name: test_record
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "public record User(long id) {}"}'

  - name: generate_class
    given: "Type with behaviors"
    when: "Class generation"
    then: "Java class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "UserService"}'
        expected: '{"code": "public class UserService { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "JUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_junit
        input: '{"test_cases": [...]}'
        expected: '{"code": "@Test\\nvoid test..."}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

