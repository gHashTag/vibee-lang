# ═══════════════════════════════════════════════════════════════════════════════

name: codegen_gleam
version: "9.3.2"
language: zig
module: codegen_gleam

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: GleamCodegen
  result: GleamCode

types:
  GleamVersion:
    enum:
      - gleam10
      - gleam11

  GleamCode:
    fields:
      code: String
      imports: List<String>
      tests: String

behaviors:
  - name: generate_type
    given: "Type definition"
    when: "Type generation"
    then: "Gleam type"
    pas_pattern: ALG
    test_cases:
      - name: test_type
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "pub type User {\\n  User(id: Int)\\n}"}'

  - name: generate_function
    given: "Behavior"
    when: "Function generation"
    then: "Gleam function"
    pas_pattern: ALG
    test_cases:
      - name: test_function
        input: '{"name": "create_user"}'
        expected: '{"code": "pub fn create_user(...) -> User { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Gleam tests"
    pas_pattern: ALG
    test_cases:
      - name: test_gleam
        input: '{"test_cases": [...]}'
        expected: '{"code": "pub fn test_create() { ... }"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

