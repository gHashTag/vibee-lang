name: codegen_kotlin
version: "9.2.9"
language: zig
module: codegen_kotlin

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: KotlinCodegen
  result: KotlinCode

types:
  KotlinVersion:
    enum:
      - kotlin18
      - kotlin19
      - kotlin20

  KotlinCode:
    fields:
      code: String
      imports: List<String>
      tests: String

behaviors:
  - name: generate_data_class
    given: "Type definition"
    when: "Data class generation"
    then: "Kotlin data class"
    pas_pattern: ALG
    test_cases:
      - name: test_data_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "data class User(val id: Long)"}'

  - name: generate_class
    given: "Type with behaviors"
    when: "Class generation"
    then: "Kotlin class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "UserService"}'
        expected: '{"code": "class UserService { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "JUnit5 tests"
    pas_pattern: ALG
    test_cases:
      - name: test_junit5
        input: '{"test_cases": [...]}'
        expected: '{"code": "@Test\\nfun testCreate() { ... }"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

