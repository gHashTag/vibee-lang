name: codegen_elixir
version: "9.3.3"
language: zig
module: codegen_elixir

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: ElixirCodegen
  result: ElixirCode

types:
  ElixirVersion:
    enum:
      - elixir114
      - elixir115
      - elixir116

  ElixirCode:
    fields:
      code: String
      uses: List<String>
      tests: String

behaviors:
  - name: generate_module
    given: "Type definition"
    when: "Module generation"
    then: "Elixir module"
    pas_pattern: ALG
    test_cases:
      - name: test_module
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "defmodule User do\\n  defstruct [:id]\\nend"}'

  - name: generate_function
    given: "Behavior"
    when: "Function generation"
    then: "Elixir function"
    pas_pattern: ALG
    test_cases:
      - name: test_function
        input: '{"name": "create_user"}'
        expected: '{"code": "def create_user(...) do\\n  ...\\nend"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "ExUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_exunit
        input: '{"test_cases": [...]}'
        expected: '{"code": "test \\"create user\\" do\\n  ...\\nend"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

