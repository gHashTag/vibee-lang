name: codegen_csharp
version: "9.2.7"
language: zig
module: codegen_csharp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: CSharpCodegen
  result: CSharpCode

types:
  DotNetVersion:
    enum:
      - net6
      - net7
      - net8

  CSharpCode:
    fields:
      code: String
      usings: List<String>
      tests: String
      namespace_name: String

behaviors:
  - name: generate_record
    given: "Type definition"
    when: "Record generation"
    then: "C# record"
    pas_pattern: ALG
    test_cases:
      - name: test_record
        input: '{"name": "User", "fields": [{"name": "Id", "type": "Int"}]}'
        expected: '{"code": "public record User(long Id);"}'

  - name: generate_class
    given: "Type with behaviors"
    when: "Class generation"
    then: "C# class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "UserService"}'
        expected: '{"code": "public class UserService { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "xUnit tests"
    pas_pattern: ALG
    test_cases:
      - name: test_xunit
        input: '{"test_cases": [...]}'
        expected: '{"code": "[Fact]\\npublic void Test..."}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

