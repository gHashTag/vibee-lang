name: codegen_cpp
version: "9.2.6"
language: zig
module: codegen_cpp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: CppCodegen
  result: CppCode

types:
  CppStandard:
    enum:
      - cpp17
      - cpp20
      - cpp23

  CppCode:
    fields:
      header: String
      source: String
      tests: String
      includes: List<String>

behaviors:
  - name: generate_struct
    given: "Type definition"
    when: "Struct generation"
    then: "C++ struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "struct User {\\n    int64_t id;\\n};"}'

  - name: generate_class
    given: "Type with behaviors"
    when: "Class generation"
    then: "C++ class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "UserService"}'
        expected: '{"code": "class UserService { ... };"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Google Test tests"
    pas_pattern: ALG
    test_cases:
      - name: test_gtest
        input: '{"test_cases": [...]}'
        expected: '{"code": "TEST(UserTest, Create) { ... }"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

