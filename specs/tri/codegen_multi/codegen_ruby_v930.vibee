name: codegen_ruby
version: "9.3.0"
language: zig
module: codegen_ruby

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: RubyCodegen
  result: RubyCode

types:
  RubyVersion:
    enum:
      - ruby31
      - ruby32
      - ruby33

  RubyCode:
    fields:
      code: String
      requires: List<String>
      tests: String

behaviors:
  - name: generate_class
    given: "Type definition"
    when: "Class generation"
    then: "Ruby class"
    pas_pattern: ALG
    test_cases:
      - name: test_class
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "class User\\n  attr_accessor :id\\nend"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "RSpec tests"
    pas_pattern: ALG
    test_cases:
      - name: test_rspec
        input: '{"test_cases": [...]}'
        expected: '{"code": "describe User do\\n  it ..."}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

