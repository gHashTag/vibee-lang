name: codegen_rust
version: "9.2.2"
language: zig
module: codegen_rust

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: RustCodegen
  result: RustCode

types:
  RustEdition:
    enum:
      - edition2018
      - edition2021
      - edition2024

  RustCode:
    fields:
      code: String
      uses: List<String>
      tests: String
      derives: List<String>

behaviors:
  - name: generate_struct
    given: "Type definition"
    when: "Struct generation"
    then: "Rust struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "#[derive(Debug, Clone)]\\npub struct User {\\n    pub id: i64,\\n}"}'

  - name: generate_impl
    given: "Behaviors"
    when: "Impl generation"
    then: "Rust impl block"
    pas_pattern: ALG
    test_cases:
      - name: test_impl
        input: '{"struct": "User", "methods": [...]}'
        expected: '{"code": "impl User { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Rust tests"
    pas_pattern: ALG
    test_cases:
      - name: test_tests
        input: '{"test_cases": [...]}'
        expected: '{"code": "#[test]\\nfn test_..."}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

rust_templates:
  struct: |
    #[derive({derives})]
    pub struct {name} {{
        {fields}
    }}
    
  impl: |
    impl {name} {{
        {methods}
    }}
    
  test: |
    #[test]
    fn test_{name}() {{
        // Given: {given}
        // When: {when}
        // Then: {then}
        {test_body}
    }}

