name: codegen_python
version: "9.2.1"
language: zig
module: codegen_python

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: PythonCodegen
  result: PythonCode

types:
  PythonVersion:
    enum:
      - python39
      - python310
      - python311
      - python312

  PythonStyle:
    enum:
      - pep8
      - google
      - numpy

  PythonCode:
    fields:
      code: String
      imports: List<String>
      tests: String
      type_hints: Bool

  DataclassConfig:
    fields:
      frozen: Bool
      slots: Bool
      kw_only: Bool

behaviors:
  - name: generate_dataclass
    given: "Type definition"
    when: "Dataclass generation"
    then: "Python dataclass"
    pas_pattern: ALG
    test_cases:
      - name: test_dataclass
        input: '{"name": "User", "fields": [{"name": "id", "type": "Int"}]}'
        expected: '{"code": "@dataclass\\nclass User:\\n    id: int"}'

  - name: generate_function
    given: "Behavior"
    when: "Function generation"
    then: "Python function"
    pas_pattern: ALG
    test_cases:
      - name: test_function
        input: '{"name": "create_user", "params": [...], "return": "User"}'
        expected: '{"code": "def create_user(...) -> User:"}'

  - name: generate_pytest
    given: "Test cases"
    when: "Test generation"
    then: "Pytest tests"
    pas_pattern: ALG
    test_cases:
      - name: test_pytest
        input: '{"test_cases": [...]}'
        expected: '{"code": "def test_..."}'

  - name: generate_imports
    given: "Dependencies"
    when: "Import generation"
    then: "Import statements"
    pas_pattern: PRE
    test_cases:
      - name: test_imports
        input: '{"deps": ["dataclasses", "typing"]}'
        expected: '{"imports": ["from dataclasses import dataclass", "from typing import List, Optional"]}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

python_templates:
  dataclass: |
    @dataclass
    class {name}:
        {fields}
        
  function: |
    def {name}({params}) -> {return_type}:
        \"\"\"
        {docstring}
        \"\"\"
        {body}
        
  test: |
    def test_{name}():
        # Given: {given}
        # When: {when}
        # Then: {then}
        {test_body}

