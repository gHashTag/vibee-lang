name: codegen_go
version: "9.2.3"
language: zig
module: codegen_go

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpecification
  transformer: GoCodegen
  result: GoCode

types:
  GoVersion:
    enum:
      - go119
      - go120
      - go121
      - go122

  GoCode:
    fields:
      code: String
      imports: List<String>
      tests: String
      package_name: String

behaviors:
  - name: generate_struct
    given: "Type definition"
    when: "Struct generation"
    then: "Go struct"
    pas_pattern: ALG
    test_cases:
      - name: test_struct
        input: '{"name": "User", "fields": [{"name": "ID", "type": "Int"}]}'
        expected: '{"code": "type User struct {\\n\\tID int64\\n}"}'

  - name: generate_method
    given: "Behavior"
    when: "Method generation"
    then: "Go method"
    pas_pattern: ALG
    test_cases:
      - name: test_method
        input: '{"receiver": "User", "name": "Create"}'
        expected: '{"code": "func (u *User) Create() error { ... }"}'

  - name: generate_tests
    given: "Test cases"
    when: "Test generation"
    then: "Go tests"
    pas_pattern: ALG
    test_cases:
      - name: test_tests
        input: '{"test_cases": [...]}'
        expected: '{"code": "func TestCreate(t *testing.T) { ... }"}'

  - name: verify_sacred_constants
    given: "Code"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

go_templates:
  struct: |
    type {name} struct {{
        {fields}
    }}
    
  method: |
    func ({receiver}) {name}({params}) {return_type} {{
        {body}
    }}
    
  test: |
    func Test{name}(t *testing.T) {{
        // Given: {given}
        // When: {when}
        // Then: {then}
        {test_body}
    }}

