# E2E Extraction Tests
# Test content extraction
# Text, HTML, attributes

name: e2e_extraction_tests
version: "1.0.0"
language: zig
module: e2e_extraction_tests

types:
  ExtractionTest:
    fields:
      test_id: String
      selector: String
      extract_type: String
      expected_content: String

  TextExtractionTest:
    fields:
      selector: String
      expected_text: String
      trim: Bool

  HTMLExtractionTest:
    fields:
      selector: String
      expected_contains: String

  AttributeTest:
    fields:
      selector: String
      attribute: String
      expected_value: String

behaviors:
  - name: test_extract_text
    given: Selector
    when: Text extraction test
    then: Returns test result

  - name: test_extract_inner_html
    given: Selector
    when: Inner HTML test
    then: Returns test result

  - name: test_extract_outer_html
    given: Selector
    when: Outer HTML test
    then: Returns test result

  - name: test_extract_attribute
    given: Selector and attribute
    when: Attribute test
    then: Returns test result

  - name: test_extract_all_text
    given: Selector
    when: All text test
    then: Returns test result

  - name: test_extract_links
    given: Page
    When: Links extraction test
    then: Returns test result

  - name: test_extract_table
    given: Table selector
    when: Table extraction test
    then: Returns test result
