# VIBEE Specification v12650
# Quantum Circuit - Quantum circuit representation
name: quantum_circuit_v12650
version: "1.0.0"
language: zig
module: quantum_circuit

types:
  GateType:
    fields:
      hadamard: String
      pauli_x: String
      pauli_y: String
      pauli_z: String
      cnot: String
      rotation: String

  Qubit:
    fields:
      id: Int
      state: String
      measured: Bool

  Gate:
    fields:
      type: String
      target_qubits: String
      control_qubits: String
      parameters: String

  Circuit:
    fields:
      id: String
      num_qubits: Int
      gates: String
      depth: Int

  Measurement:
    fields:
      circuit_id: String
      qubit_id: Int
      result: Int
      probability: Float

behaviors:
  - name: create_circuit
    given: Number of qubits
    When: Circuit created
    then: Returns empty circuit

  - name: add_gate
    given: Circuit and gate
    When: Gate added
    then: Returns updated circuit

  - name: measure_qubit
    given: Circuit and qubit
    When: Measurement performed
    then: Returns measurement result

  - name: get_statevector
    given: Circuit
    When: Simulation requested
    then: Returns quantum state
