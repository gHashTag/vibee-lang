# VIBEE Specification v13230
# Swarm Optimization - General swarm-based optimization
name: swarm_optimization_v13230
version: "1.0.0"
language: zig
module: swarm_optimization

types:
  SwarmAlgorithm:
    fields:
      pso: String
      aco: String
      abc: String
      firefly: String
      cuckoo: String

  OptimizationProblem:
    fields:
      id: String
      dimensions: Int
      bounds: String
      objective: String
      constraints: String

  SwarmState:
    fields:
      algorithm: String
      iteration: Int
      best_solution: String
      best_fitness: Float
      diversity: Float

  ConvergenceCurve:
    fields:
      problem_id: String
      fitness_history: String
      iterations: Int
      converged: Bool

  AlgorithmComparison:
    fields:
      problem_id: String
      algorithms: String
      best_algorithm: String
      avg_fitness: String
      avg_time_ms: String

behaviors:
  - name: define_problem
    given: Problem specification
    When: Problem defined
    then: Returns optimization problem

  - name: run_algorithm
    given: Problem and algorithm
    When: Optimization done
    then: Returns swarm state

  - name: track_convergence
    given: Optimization run
    When: Tracking done
    then: Returns convergence curve

  - name: compare_algorithms
    given: Problem and algorithms
    When: Comparison done
    then: Returns algorithm comparison
