# VIBEE Specification v15420
# Genetic Programming - Evolving programs
name: genetic_programming_v15420
version: "1.0.0"
language: zig
module: genetic_programming

types:
  ProgramTree:
    fields:
      root: String
      nodes: String
      depth: Int

  FunctionSet:
    fields:
      functions: String
      terminals: String
      arities: String

  GPOperator:
    fields:
      subtree_crossover: String
      point_mutation: String
      hoist_mutation: String

  GPResult:
    fields:
      best_program: String
      fitness: Float
      complexity: Int

behaviors:
  - name: generate_tree
    given: Function set and depth
    when: Generation done
    then: Returns program tree

  - name: crossover_trees
    given: Two parents
    when: Crossover done
    then: Returns offspring

  - name: mutate_tree
    given: Tree and operator
    when: Mutation done
    then: Returns mutated tree

  - name: evolve_programs
    given: Training data
    when: Evolution done
    then: Returns GP result
