# VIBEE Specification v15460
# Memetic Algorithm - Hybrid evolutionary-local search
name: memetic_algorithm_v15460
version: "1.0.0"
language: zig
module: memetic_algorithm

types:
  Meme:
    fields:
      local_search: String
      application_rate: Float
      intensity: Int

  MemeticIndividual:
    fields:
      genotype: String
      phenotype: String
      local_optimum: Bool

  MemeticConfig:
    fields:
      global_search: String
      local_search: String
      hybridization: Float

  MAResult:
    fields:
      best_solution: String
      fitness: Float
      local_searches: Int

behaviors:
  - name: global_search_step
    given: Population
    when: Global search done
    then: Returns evolved population

  - name: local_search_step
    given: Individual
    when: Local search done
    then: Returns improved individual

  - name: select_for_local
    given: Population
    when: Selection done
    then: Returns selected individuals

  - name: optimize_memetic
    given: Problem
    when: Optimization done
    then: Returns MA result
