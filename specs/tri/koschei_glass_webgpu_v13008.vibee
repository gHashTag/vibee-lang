    given: Multiple layers
    when: Depth sort
    then: Correct z-order
    test_cases:
      - name: test_depth
        input: { layers: 5 }
        expected: { sorted: true }

  - name: glass_webgpu_animate
    given: Animation
    when: Transition
    then: 120fps smooth
    test_cases:
