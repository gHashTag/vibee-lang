# VIBEE Specification v15510
# HyperNEAT - Hypercube-based NEAT
name: hyperneat_v15510
version: "1.0.0"
language: zig
module: hyperneat

types:
  CPPN:
    fields:
      genome: String
      activation_functions: String

  Substrate:
    fields:
      input_layer: String
      hidden_layers: String
      output_layer: String

  HyperConnection:
    fields:
      source: String
      target: String
      weight: Float

  HyperNEATResult:
    fields:
      cppn: String
      substrate_network: String
      fitness: Float

behaviors:
  - name: query_cppn
    given: Source and target coords
    when: Query done
    then: Returns connection weight

  - name: build_substrate
    given: CPPN and substrate
    when: Building done
    then: Returns hyper connections

  - name: evolve_cppn
    given: Population
    when: Evolution done
    then: Returns evolved CPPNs

  - name: evaluate_hyperneat
    given: Substrate network
    when: Evaluation done
    then: Returns HyperNEAT result
