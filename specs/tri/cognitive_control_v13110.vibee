# VIBEE Specification v13110
# Cognitive Control - Executive control processes
name: cognitive_control_v13110
version: "1.0.0"
language: zig
module: cognitive_control

types:
  ControlProcess:
    fields:
      inhibition: String
      shifting: String
      updating: String
      monitoring: String

  ControlSignal:
    fields:
      id: String
      process: String
      target: String
      strength: Float
      timestamp: Timestamp

  ConflictMonitor:
    fields:
      id: String
      conflict_level: Float
      response_options: String
      threshold: Float

  TaskSet:
    fields:
      id: String
      active_rules: String
      preparation_time_ms: Int
      switch_cost_ms: Int

  ControlState:
    fields:
      id: String
      current_task: String
      conflict_level: Float
      control_demand: Float

behaviors:
  - name: inhibit_response
    given: Response to inhibit
    When: Inhibition applied
    then: Returns control signal

  - name: switch_task
    given: New task set
    When: Switch done
    then: Returns task set

  - name: monitor_conflict
    given: Response options
    When: Monitoring done
    then: Returns conflict monitor

  - name: adjust_control
    given: Conflict level
    When: Adjustment done
    then: Returns control state
