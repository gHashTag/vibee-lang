name: yolo_validation_v417
version: "1.0.0"
language: zig
module: yolo_validation_v417

types:
  ValidationSuite:
    fields:
      name: String
      tests: List<String>
      threshold: Float

  ValidationResult:
    fields:
      suite: String
      passed: Int
      failed: Int
      score: Float

  ValidationRule:
    fields:
      name: String
      condition: String
      severity: String

  ValidationReport:
    fields:
      suites: List<ValidationResult>
      overall_score: Float
      recommendations: List<String>

behaviors:
  - name: run_validation_suite
    given: Suite config
    when: Validation runs
    then: Suite executed

  - name: validate_specs
    given: Spec files
    when: Spec validation runs
    then: Specs validated

  - name: validate_code
    given: Generated code
    when: Code validation runs
    then: Code validated

  - name: validate_tests
    given: Test files
    when: Test validation runs
    then: Tests validated

  - name: validate_docs
    given: Doc files
    when: Doc validation runs
    then: Docs validated

  - name: aggregate_results
    given: All results
    when: Aggregation runs
    then: Results combined

  - name: generate_report
    given: Aggregated results
    when: Report runs
    then: Report generated

  - name: recommend_fixes
    given: Validation issues
    when: Recommendation runs
    then: Fixes suggested
