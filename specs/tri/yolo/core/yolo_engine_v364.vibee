name: yolo_engine_v364
version: "1.0.0"
language: zig
module: yolo_engine_v364

types:
  YOLOConfig:
    fields:
      mode: String
      phases: List<String>
      auto_advance: Bool
      max_iterations: Int
      timeout_ms: Int

  YOLOState:
    fields:
      current_phase: String
      completed_phases: List<String>
      pending_phases: List<String>
      status: String
      started_at: Timestamp

  YOLOResult:
    fields:
      success: Bool
      phases_completed: Int
      total_time_ms: Int
      artifacts: List<String>

  YOLOMetrics:
    fields:
      throughput: Float
      accuracy: Float
      coverage: Float
      quality_score: Float

behaviors:
  - name: initialize_yolo
    given: YOLO config
    when: Initialization runs
    then: YOLO engine ready

  - name: start_yolo_run
    given: Engine initialized
    when: Start called
    then: YOLO execution begins

  - name: advance_phase
    given: Phase complete
    when: Auto-advance enabled
    then: Next phase starts automatically

  - name: handle_phase_failure
    given: Phase fails
    when: Error detected
    then: Recovery or rollback triggered

  - name: complete_yolo_run
    given: All phases done
    when: Completion check runs
    then: Final results compiled

  - name: pause_yolo
    given: YOLO running
    when: Pause requested
    then: Execution paused safely

  - name: resume_yolo
    given: YOLO paused
    when: Resume requested
    then: Execution continues

  - name: abort_yolo
    given: YOLO running
    when: Abort requested
    then: Clean shutdown with rollback
