name: yolo_planner_v365
version: "1.0.0"
language: zig
module: yolo_planner_v365

types:
  Plan:
    fields:
      id: String
      phases: List<PlanPhase>
      dependencies: Object
      estimated_time_ms: Int

  PlanPhase:
    fields:
      name: String
      tasks: List<String>
      agent: String
      timeout_ms: Int

  PlanValidation:
    fields:
      valid: Bool
      errors: List<String>
      warnings: List<String>

  PlanOptimization:
    fields:
      original_time: Int
      optimized_time: Int
      parallelizable: List<String>

behaviors:
  - name: generate_plan
    given: Task description
    when: Planning runs
    then: Detailed plan created

  - name: validate_plan
    given: Plan generated
    when: Validation runs
    then: Plan validity confirmed

  - name: optimize_plan
    given: Valid plan
    when: Optimization runs
    then: Plan optimized for speed

  - name: decompose_task
    given: Complex task
    when: Decomposition runs
    then: Task split into subtasks

  - name: estimate_duration
    given: Plan phases
    when: Estimation runs
    then: Time estimates calculated

  - name: identify_dependencies
    given: Plan tasks
    when: Analysis runs
    then: Dependencies mapped

  - name: replan_on_failure
    given: Phase failed
    when: Replanning runs
    then: Alternative plan generated

  - name: merge_plans
    given: Multiple plans
    when: Merge runs
    then: Plans combined efficiently
