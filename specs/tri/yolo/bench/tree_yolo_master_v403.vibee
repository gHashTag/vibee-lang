name: tree_yolo_master_v403
version: "1.0.0"
language: zig
module: tree_yolo_master_v403

types:
  YOLOSkill:
    fields:
      id: String
      name: String
      tier: String
      xp_required: Int
      unlocked: Bool

  YOLOTier:
    fields:
      name: String
      skills: List<YOLOSkill>
      prerequisites: List<String>

  YOLOProgress:
    fields:
      current_tier: String
      total_xp: Int
      skills_unlocked: Int
      next_unlock: String

  YOLOAchievement:
    fields:
      id: String
      name: String
      description: String
      unlocked_at: Option<Timestamp>

behaviors:
  - name: unlock_skill
    given: XP threshold met
    when: Unlock runs
    then: Skill unlocked

  - name: advance_tier
    given: Tier complete
    when: Advancement runs
    then: Next tier unlocked

  - name: earn_xp
    given: Task completed
    when: XP calculation runs
    then: XP awarded

  - name: check_prerequisites
    given: Skill target
    when: Check runs
    then: Prerequisites verified

  - name: grant_achievement
    given: Achievement condition
    when: Grant runs
    then: Achievement unlocked

  - name: display_progress
    given: Progress data
    when: Display runs
    then: Progress shown

  - name: suggest_next
    given: Current progress
    when: Suggestion runs
    then: Next skill suggested

  - name: reset_progress
    given: Reset requested
    when: Reset runs
    then: Progress reset
