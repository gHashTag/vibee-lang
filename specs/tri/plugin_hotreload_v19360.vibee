name: plugin_hotreload_v19360
version: "1.0.0"
language: zig
module: plugin_hotreload_v19360

types:
  HotReloadConfig:
    fields:
      watch_paths: List<String>
      debounce_ms: Int
      preserve_state: Bool

  ReloadEvent:
    fields:
      plugin_id: String
      changed_files: List<String>
      reload_time_ms: Int

behaviors:
  - name: hotreload_watch
    given: "Watch configuration"
    when: "Watcher starts"
    then: "Monitors file changes"

  - name: hotreload_trigger
    given: "File change detected"
    when: "Reloader triggers"
    then: "Reloads plugin"

  - name: hotreload_restore
    given: "Plugin state"
    when: "Reloader restores"
    then: "Restores plugin state"
