# VIBEE Specification v14390
# Lifelong Learning Benchmark - Evaluation protocols
name: lifelong_benchmark_v14390
version: "1.0.0"
language: zig
module: lifelong_benchmark

types:
  BenchmarkType:
    fields:
      split_mnist: String
      permuted_mnist: String
      split_cifar: String
      core50: String

  EvalProtocol:
    fields:
      task_il: String
      class_il: String
      domain_il: String

  LifelongMetrics:
    fields:
      average_accuracy: Float
      forgetting_measure: Float
      forward_transfer: Float
      backward_transfer: Float

  BenchmarkConfig:
    fields:
      benchmark: String
      protocol: String
      num_tasks: Int

behaviors:
  - name: setup_benchmark
    given: Config
    when: Setup done
    then: Returns task sequence

  - name: run_evaluation
    given: Model and tasks
    when: Evaluation done
    then: Returns lifelong metrics

  - name: compute_forgetting
    given: Accuracy matrix
    when: Computation done
    then: Returns forgetting measure

  - name: compare_methods
    given: Multiple results
    when: Comparison done
    then: Returns ranking
