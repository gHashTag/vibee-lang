# VIBEE Specification v14640
# Autonomous Skill Learning - Learning new skills
name: skill_learning_v14640
version: "1.0.0"
language: zig
module: skill_learning

types:
  Skill:
    fields:
      name: String
      preconditions: String
      effects: String
      policy: String

  SkillLibrary:
    fields:
      skills: String
      hierarchy: String
      compositions: String

  LearningGoal:
    fields:
      target_skill: String
      success_criterion: Float
      time_budget: Int

  SkillResult:
    fields:
      learned_skill: String
      proficiency: Float
      practice_episodes: Int

behaviors:
  - name: discover_skill
    given: Environment interaction
    when: Discovery done
    then: Returns skill candidate

  - name: practice_skill
    given: Skill and goal
    when: Practice done
    then: Returns skill result

  - name: compose_skills
    given: Skill set
    when: Composition done
    then: Returns composite skill

  - name: transfer_skill
    given: Skill and new domain
    when: Transfer done
    then: Returns adapted skill
