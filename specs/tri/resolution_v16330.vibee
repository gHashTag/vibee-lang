name: resolution_v16330
version: "1.0.0"
language: zig
module: resolution

types:
  ResolutionClause:
    fields:
      literals: String
      parents: String

  Unifier:
    fields:
      substitutions: String

  ResolutionStep:
    fields:
      clause1: String
      clause2: String
      resolvent: String
      mgu: String

  ResolutionProof:
    fields:
      steps: String
      empty_clause_derived: Bool

behaviors:
  - name: resolve_clauses
    given: Two clauses
    when: Find complementary literals
    then: Return resolvent

  - name: unify_terms
    given: Two terms
    when: Most general unifier
    then: Return substitution

  - name: refutation_proof
    given: Clause set
    when: Derive empty clause
    then: Return proof
