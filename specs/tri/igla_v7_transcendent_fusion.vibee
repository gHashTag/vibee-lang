name: igla_v7_transcendent_fusion
version: "7.0.0"
language: zig
module: igla_v7_transcendent_fusion

types:
  TranscendentConfig:
    fields:
      mamba2: Bool
      griffin: Bool
      xlstm: Bool
      hyena: Bool
      infini_attention: Bool
      kan: Bool
      triforce: Bool
      sequoia: Bool
      megabyte: Bool
      mod_v2: Bool
      
