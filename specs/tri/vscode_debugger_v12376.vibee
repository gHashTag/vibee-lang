# vscode_debugger_v12376.vibee - Debugger UI
# Интерфейс отладчика
# φ² + 1/φ² = 3 | PHOENIX = 999

name: vscode_debugger_v12376
version: "12376.0.0"
language: zig
module: vscode_debugger_v12376

types:
  DebugSession:
    fields:
      session_id: String
      debug_type: String
      name: String
      state: String

  DebugConfig:
    fields:
      config_type: String
      request: String
      program: String
      args: List
      env: Object

  DebugBreakpoint:
    fields:
      breakpoint_id: String
      file: String
      line: Int
      condition: String
      hit_count: Int

  DebugVariable:
    fields:
      name: String
      value: String
      variable_type: String
      children: List

  DebugStackFrame:
    fields:
      frame_id: Int
      name: String
      source: Object
      line: Int
      column: Int

behaviors:
  - name: start_debug
    given: DebugConfig
    when: Debug start
    then: Return DebugSession

  - name: stop_debug
    given: Session ID
    when: Debug stop
    then: Return success

  - name: set_breakpoint
    given: DebugBreakpoint
    when: Breakpoint set
    then: Return breakpoint_id

  - name: get_variables
    given: Frame ID
    when: Variables request
    then: Return DebugVariable list

  - name: evaluate_expression
    given: Expression and frame
    when: Evaluation
    then: Return result

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
