name: logic_tensor_network_v16730
version: "1.0.0"
language: zig
module: logic_tensor_network

types:
  Grounding:
    fields:
      constant: String
      tensor: String

  LTNPredicate:
    fields:
      name: String
      arity: Int
      network: String

  LTNFormula:
    fields:
      formula: String
      satisfaction: Float

  LTNResult:
    fields:
      groundings: String
      satisfaction_degree: Float

behaviors:
  - name: ground_formula
    given: Formula and groundings
    when: Tensor computation
    then: Return satisfaction degree

  - name: optimize_groundings
    given: Formulas and data
    when: Gradient descent
    then: Update groundings

  - name: query_ltn
    given: Query formula
    when: Evaluate grounding
    then: Return truth degree
