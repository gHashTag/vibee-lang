name: repl_highlight_v19230
version: "1.0.0"
language: zig
module: repl_highlight_v19230

types:
  HighlightToken:
    fields:
      text: String
      kind: String
      color: String
      start: Int
      end: Int

  HighlightTheme:
    fields:
      keyword_color: String
      string_color: String
      number_color: String
      comment_color: String

behaviors:
  - name: highlight_line
    given: "Input line"
    when: "Highlighter processes"
    then: "Returns highlighted tokens"

  - name: highlight_error
    given: "Error position"
    when: "Highlighter marks error"
    then: "Returns error highlight"

  - name: highlight_match
    given: "Bracket position"
    when: "Highlighter matches"
    then: "Returns matching bracket"
