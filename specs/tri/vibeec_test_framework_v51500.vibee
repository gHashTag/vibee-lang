name: vibeec_test_framework_v51500
version: "51500.0.0"
language: zig
module: vibeec_test_framework

types:
  TestConfig:
    fields:
      parallel_execution: Bool
      timeout_ms: Int
      verbose_output: Bool
      fail_fast: Bool

  TestCase:
    fields:
      name: String
      module: String
      expected_result: String
      actual_result: String

  TestResult:
    fields:
      passed: Bool
      execution_time_ns: Int
      memory_used: Int
      error_message: String

  TestSuite:
    fields:
      name: String
      total_tests: Int
      passed_tests: Int
      failed_tests: Int

behaviors:
  - name: run_single_test
    given: Test case definition
    when: Test execution triggered
    then: TestResult with pass/fail status

  - name: run_test_suite
    given: Collection of test cases
    when: Suite execution triggered
    then: TestSuite summary with all results

  - name: generate_test_from_behavior
    given: Behavior specification
    when: Test generation triggered
    then: Zig test function generated

  - name: validate_generated_code
    given: Generated Zig file
    when: Validation triggered
    then: Compilation and test results
