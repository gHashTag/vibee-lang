# VIBEE Specification v13290
# Semantic Parsing - Natural language to formal representation
name: semantic_parsing_v13290
version: "1.0.0"
language: zig
module: semantic_parsing

types:
  SemanticRepresentation:
    fields:
      lambda_calculus: String
      amr: String
      sql: String
      sparql: String

  ParseTree:
    fields:
      id: String
      root: String
      nodes: String
      edges: String

  SemanticFrame:
    fields:
      id: String
      predicate: String
      arguments: String
      modifiers: String

  ParsingResult:
    fields:
      input: String
      representation: String
      confidence: Float
      alternatives: String

  SemanticError:
    fields:
      input: String
      error_type: String
      position: Int
      suggestion: String

behaviors:
  - name: parse_utterance
    given: Natural language input
    When: Parsing done
    then: Returns parsing result

  - name: extract_frames
    given: Parse tree
    When: Extraction done
    then: Returns semantic frames

  - name: generate_query
    given: Semantic representation
    When: Generation done
    then: Returns formal query

  - name: handle_error
    given: Failed parse
    When: Error handled
    then: Returns semantic error
