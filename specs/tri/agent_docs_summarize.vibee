name: agent_docs_summarize
version: "1.0.0"
language: zig
module: agent_docs_summarize

description: |
  Agent Docs Summarize - суммаризация страниц
  Perplexity Comet: Summarize this webpage
  VIBEE: безопасная суммаризация
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  SummarizeConfig:
    fields:
      max_length: Int
      style: String
      include_key_points: Bool
      language: String

  Summary:
    fields:
      title: String
      summary_text: String
      key_points: List<String>
      word_count: Int
      reading_time_min: Int

  ContentAnalysis:
    fields:
      content_type: String
      main_topic: String
      sentiment: String
      entities: List<String>

behaviors:
  - name: summarize_page
    given: Текущая страница и SummarizeConfig
    when: Суммаризация страницы
    then: Summary

  - name: summarize_selection
    given: Выделенный текст
    when: Суммаризация выделения
    then: Summary

  - name: extract_key_points
    given: Текст страницы
    when: Извлечение ключевых пунктов
    then: Список key points

  - name: analyze_content
    given: Текст страницы
    when: Анализ контента
    then: ContentAnalysis

  - name: translate_summary
    given: Summary и целевой язык
    when: Перевод summary
    then: Summary на другом языке

  - name: compare_pages
    given: Список URL для сравнения
    when: Сравнительный анализ
    then: Сравнительная Summary
