# VIBEE Specification v13554
# Browser Tool
# KOSCHEI CYCLE 11 - 1000000x SPEEDUP

name: tools_browser
version: "13554"
language: zig
module: tools_browser

types:
  BrowserTool:
    fields:
      id: String
      headless: Bool
      viewport: Object

  BrowserAction:
    fields:
      action_type: String
      selector: String
      value: String
      options: Object

  BrowserResult:
    fields:
      success: Bool
      data: Object
      screenshot: String
      error: Option<String>

  PageState:
    fields:
      url: String
      title: String
      content: String
      cookies: List<Object>

  BrowserMetrics:
    fields:
      pages_visited: Int
      actions_performed: Int
      screenshots_taken: Int

  ElementInfo:
    fields:
      selector: String
      tag: String
      text: String
      attributes: Object

behaviors:
  - name: navigate
    given: URL
    When: Navigation requested
    then: Page loaded

  - name: click
    given: Element selector
    When: Click requested
    then: Element clicked

  - name: type_text
    given: Selector and text
    When: Typing requested
    then: Text typed

  - name: extract_content
    given: Selector
    When: Extraction requested
    then: Content extracted

  - name: screenshot
    given: Page or element
    When: Screenshot requested
    then: Screenshot taken

  - name: wait_for
    given: Condition
    When: Wait requested
    then: Condition awaited

creation_pattern:
  source: BrowserAction
  transformer: BrowserTool
  result: BrowserResult
