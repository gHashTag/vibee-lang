name: agent_social_post
version: "1.0.0"
language: zig
module: agent_social_post

description: |
  Agent Social Post - публикация в соцсетях
  ВАЖНО: требует подтверждение пользователя
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  SocialPlatform:
    fields:
      name: String
      max_length: Int
      supports_images: Bool
      supports_video: Bool

  PostContent:
    fields:
      text: String
      images: List<String>
      video: Option<String>
      hashtags: List<String>
      mentions: List<String>

  PostResult:
    fields:
      success: Bool
      post_url: Option<String>
      post_id: Option<String>
      error: Option<String>

  ScheduledPost:
    fields:
      content: String
      platform: String
      scheduled_time: Timestamp
      status: String

behaviors:
  - name: compose_post
    given: PostContent контент
    when: Подготовка поста
    then: Готовый пост для публикации

  - name: preview_post
    given: PostContent и SocialPlatform
    when: Предпросмотр поста
    then: Как будет выглядеть пост

  - name: request_approval
    given: PostContent для публикации
    when: Запрос одобрения пользователя
    then: Bool одобрено

  - name: publish_post
    given: Одобренный PostContent
    when: Публикация поста
    then: PostResult

  - name: schedule_post
    given: PostContent и время
    when: Планирование публикации
    then: ScheduledPost

  - name: delete_post
    given: post_id для удаления
    when: Удаление поста
    then: Результат удаления
