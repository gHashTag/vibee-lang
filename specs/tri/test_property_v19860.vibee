name: test_property_v19860
version: "1.0.0"
language: zig
module: test_property_v19860

types:
  Property:
    fields:
      name: String
      generator: String
      iterations: Int

  PropertyResult:
    fields:
      passed: Bool
      iterations_run: Int
      counterexample: String
      shrunk_input: String

behaviors:
  - name: property_check
    given: "Property definition"
    when: "Checker checks"
    then: "Returns property result"

  - name: property_generate
    given: "Generator spec"
    when: "Generator generates"
    then: "Returns random input"

  - name: property_shrink
    given: "Failing input"
    when: "Shrinker shrinks"
    then: "Returns minimal counterexample"
