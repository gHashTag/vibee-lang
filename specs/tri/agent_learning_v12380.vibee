# VIBEE Specification v12380
# Agent Learning - Online learning and adaptation
name: agent_learning_v12380
version: "1.0.0"
language: zig
module: agent_learning

types:
  LearningMode:
    fields:
      supervised: String
      reinforcement: String
      imitation: String
      self_supervised: String

  Experience:
    fields:
      id: String
      state: String
      action: String
      reward: Float
      next_state: String
      timestamp: Timestamp

  LearningPolicy:
    fields:
      id: String
      mode: String
      learning_rate: Float
      exploration_rate: Float

  Skill:
    fields:
      id: String
      name: String
      proficiency: Float
      examples_seen: Int
      last_updated: Timestamp

  LearningProgress:
    fields:
      skill_id: String
      initial_proficiency: Float
      current_proficiency: Float
      improvement_rate: Float

behaviors:
  - name: record_experience
    given: Experience data
    when: Experience recorded
    then: Returns stored experience

  - name: learn_from_experience
    given: Experience batch
    when: Learning applied
    then: Returns updated policy

  - name: acquire_skill
    given: Skill examples
    when: Skill learned
    then: Returns new skill

  - name: measure_progress
    given: Skill
    when: Progress measured
    then: Returns learning progress
