# v5703 - Materials Science
# ==========================
# AI для материаловедения
# φ² + 1/φ² = 3 | PHOENIX = 999

name: materials_science
version: "5.7.3"
language: zig
module: materials_science

constants:
  PHI: 1.618033988749895
  ANGSTROM: 0.0000000001
  EV_TO_JOULE: 0.0000000000000000001602

types:
  CrystalStructure:
    fields:
      lattice: List
      atoms: List
      space_group: String
      
  MaterialProperties:
    fields:
      band_gap: Float
      conductivity: Float
      hardness: Float
      
  AtomicConfiguration:
    fields:
      positions: List
      species: List
      cell: List
      
  PotentialEnergySurface:
    fields:
      energies: List
      forces: List
      
  MaterialCandidate:
    fields:
      composition: String
      structure: CrystalStructure
      predicted_properties: MaterialProperties
      
  DFTCalculation:
    fields:
      method: String
      basis_set: String
      
  MLPotential:
    fields:
      model: Object
      training_data: List
      
  PhaseStability:
    fields:
      formation_energy: Float
      hull_distance: Float
      stable: Bool

behaviors:
  - name: predict_properties
    given: Structure
    when: Property prediction
    then: Вернуть material properties
    
  - name: generate_structure
    given: Composition и constraints
    when: Structure generation
    then: Вернуть crystal structure
    
  - name: optimize_structure
    given: Initial structure
    when: Geometry optimization
    then: Вернуть optimized structure
    
  - name: compute_energy
    given: Configuration и potential
    when: Energy calculation
    then: Вернуть energy и forces
    
  - name: train_ml_potential
    given: DFT data
    when: Potential training
    then: Вернуть ML potential
    
  - name: screen_materials
    given: Property targets
    when: High-throughput screening
    then: Вернуть material candidates
    
  - name: compute_phase_diagram
    given: Compositions
    when: Phase diagram
    then: Вернуть phase stability
    
  - name: molecular_dynamics
    given: Structure и potential
    when: MD simulation
    then: Вернуть trajectory
