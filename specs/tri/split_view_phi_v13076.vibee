# Split View PHI v13076
# Golden ratio split layout (Browser|Chat|VSCode)
# VIBEE v13076 | φ² + 1/φ² = 3 | PHOENIX = 999

name: split_view_phi_v13076
version: "13076.0.0"
language: zig
module: split_view_phi

types:
  SplitLayout:
    fields:
      browser_width_percent: Float
      chat_width_percent: Float
      vscode_width_percent: Float
      total_width: Int
      
  Panel:
    fields:
      panel_id: String
      panel_type: String
      x: Int
      y: Int
      width: Int
      height: Int
      visible: Bool
      
  ResizeHandle:
    fields:
      handle_id: String
      position: Int
      min_left: Int
      max_right: Int
      
  LayoutPreset:
    fields:
      name: String
      browser_ratio: Float
      chat_ratio: Float
      vscode_ratio: Float

behaviors:
  - name: apply_phi_layout
    given: "Container dimensions known"
    when: "Layout applied"
    then: "Panels sized by golden ratio"
    
  - name: resize_panel
    given: "Resize handle dragged"
    when: "Resize event"
    then: "Panels resized maintaining ratios"
    
  - name: toggle_panel
    given: "Panel visible"
    when: "Toggle called"
    then: "Panel hidden/shown smoothly"
    
  - name: maximize_panel
    given: "Panel selected"
    when: "Maximize called"
    then: "Panel fills container"
    
  - name: restore_layout
    given: "Layout preset saved"
    when: "Restore called"
    then: "Layout restored exactly"
