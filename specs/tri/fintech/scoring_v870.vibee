name: scoring_v870
version: "8.7.0"
language: zig
module: scoring
types:
  ScoringConfig: { fields: { id: String, enabled: Bool, params: Object } }
  ScoringState: { fields: { status: String, data: Object, timestamp: Timestamp } }
  ScoringResult: { fields: { success: Bool, output: Object, error: Option<String> } }
behaviors:
  - name: init_scoring
    given: Config
    when: Init
    then: State
  - name: process_scoring
    given: State
    when: Process
    then: Result
