# E2E Storage Tests
# Test cookies and storage
# Set, get, clear

name: e2e_storage_tests
version: "1.0.0"
language: zig
module: e2e_storage_tests

types:
  StorageTest:
    fields:
      test_id: String
      storage_type: String
      operation: String

  CookieTest:
    fields:
      cookie_name: String
      cookie_value: String
      domain: String

  LocalStorageTest:
    fields:
      key: String
      value: String
      origin: String

  SessionStorageTest:
    fields:
      key: String
      value: String

behaviors:
  - name: test_set_cookie
    given: Cookie data
    when: Set cookie test
    then: Returns test result

  - name: test_get_cookies
    given: Domain filter
    when: Get cookies test
    then: Returns test result

  - name: test_clear_cookies
    given: Context
    when: Clear cookies test
    then: Returns test result

  - name: test_set_local_storage
    given: Key and value
    when: Set localStorage test
    then: Returns test result

  - name: test_get_local_storage
    given: Key
    When: Get localStorage test
    then: Returns test result

  - name: test_clear_local_storage
    given: Origin
    when: Clear localStorage test
    then: Returns test result

  - name: test_storage_persistence
    given: Storage state
    when: Persistence test
    then: Returns test result
