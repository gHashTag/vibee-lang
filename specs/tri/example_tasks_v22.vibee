name: example_tasks_v22
version: "22.5.0"
language: zig
module: example_tasks_v22

types:
  ExampleTask:
    fields:
      id: String
      name: String
      description: String
      difficulty: String
      category: String
      start_url: String
      goal: String
      expected_steps: Int

  ExampleCategory:
    fields:
      name: String
      description: String
      tasks: List<String>

  TaskTemplate:
    fields:
      name: String
      template: String
      variables: List<String>

  ExampleLibrary:
    fields:
      tasks: List<String>
      categories: List<String>
      templates: List<String>

behaviors:
  - name: create_library
    given: Config
    when: Initialize library
    then: ExampleLibrary instance

  - name: get_task
    given: ExampleLibrary and task_id
    when: Get task by ID
    then: ExampleTask

  - name: get_tasks_by_category
    given: ExampleLibrary and category
    when: Filter by category
    then: Task list

  - name: get_tasks_by_difficulty
    given: ExampleLibrary and difficulty
    when: Filter by difficulty
    then: Task list

  - name: get_beginner_tasks
    given: ExampleLibrary
    when: Get beginner tasks
    then: Beginner task list

  - name: get_advanced_tasks
    given: ExampleLibrary
    When: Get advanced tasks
    then: Advanced task list

  - name: create_from_template
    given: ExampleLibrary and template and vars
    When: Create task from template
    then: ExampleTask

  - name: add_task
    given: ExampleLibrary and ExampleTask
    When: Add new task
    then: Updated library

  - name: list_categories
    given: ExampleLibrary
    When: List all categories
    then: Category list

  - name: export_tasks
    given: ExampleLibrary
    When: Export all tasks
    then: Exported tasks

  - name: validate_task
    given: ExampleTask
    When: Validate task
    then: Validation result
