# VIBEE Specification v14750
# Capability Elicitation - Discovering hidden capabilities
name: capability_elicitation_v14750
version: "1.0.0"
language: zig
module: capability_elicitation

types:
  CapabilityType:
    fields:
      latent: String
      emergent: String
      composed: String

  ElicitationMethod:
    fields:
      prompting: String
      fine_tuning: String
      scaffolding: String

  DiscoveredCapability:
    fields:
      description: String
      reliability: Float
      conditions: String

  ElicitationResult:
    fields:
      capabilities: String
      success_rate: Float
      novel_count: Int

behaviors:
  - name: probe_capability
    given: Capability hypothesis
    when: Probing done
    then: Returns evidence

  - name: elicit_capability
    given: Method and target
    when: Elicitation done
    then: Returns discovered capability

  - name: map_capability_space
    given: Model
    when: Mapping done
    then: Returns capability map

  - name: compose_capabilities
    given: Base capabilities
    when: Composition done
    then: Returns composed capability
