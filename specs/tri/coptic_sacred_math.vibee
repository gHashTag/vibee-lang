      - name: test_basic
        input: { n: 1, k: 0, m: 0, p: 0, q: 0 }
        expected: { result: 1.0 }
      - name: test_trinity
        input: { n: 1, k: 1, m: 0, p: 0, q: 0 }
        expected: { result: 3.0 }
      - name: test_tridevyatitsa
        input: { n: 1, k: 3, m: 0, p: 0, q: 0 }
        expected: { result: 27.0 }
      - name: test_phoenix
        input: { n: 37, k: 3, m: 0, p: 0, q: 0 }
        expected: { result: 999.0 }

