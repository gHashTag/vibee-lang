      - name: fibonacci_sequence

  - name: magic_37
    given: "Multiplier n"
    when: "Magic computed"
    then: "37 × 3n = nnn"
    test_cases:
      - name: trinity_identity

  - name: trinity_power
    given: "Exponent k"
    when: "Power computed"
    then: "3^k"
    test_cases:
      - name: test_3_0
        input: { k: 0 }
        expected: { result: 1 }
      - name: test_3_1
        input: { k: 1 }
        expected: { result: 3 }
      - name: test_3_2
        input: { k: 2 }
        expected: { result: 9 }
      - name: test_3_3
        input: { k: 3 }
        expected: { result: 27 }
      - name: test_3_9
        input: { k: 9 }
        expected: { result: 19683 }

  - name: transcendental_product
    given: "Constants π, φ, e"
    when: "Product computed"
    then: "π × φ × e ≈ 13.82"
    test_cases:
      - name: test_product
        input: {}
        expected: { result: 13.82, tolerance: 0.01 }

  - name: alpha_formula
    given: "PI constant"
    when: "Alpha computed"
    then: "1/α = 4π³ + π² + π ≈ 137.036"
    test_cases:
      - name: test_alpha
        input: {}
        expected: { result: 137.036, tolerance: 0.001 }

  - name: proton_electron_ratio
