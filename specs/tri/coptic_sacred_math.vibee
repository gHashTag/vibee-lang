    given: "PHI constant"
    when: "Identity computed"
    then: "φ² + 1/φ² = 3 exactly"
    test_cases:
      - name: test_identity
        input: { phi: 1.618033988749895 }
        expected: { result: 3.0, tolerance: 1e-14 }

  - name: lucas_number
    given: "Index n"
    when: "Lucas computed"
    then: "L(n) = φⁿ + (-1/φ)ⁿ"
    test_cases:
      - name: lucas_base_cases
