# E2E Error Tests
# Test error handling
# Timeout, not found, recovery

name: e2e_error_tests
version: "1.0.0"
language: zig
module: e2e_error_tests

types:
  ErrorTest:
    fields:
      test_id: String
      error_type: String
      expected_handling: String

  TimeoutTest:
    fields:
      operation: String
      timeout_ms: Int
      expected_error: Bool

  NotFoundTest:
    fields:
      selector: String
      expected_error: Bool

  RecoveryTest:
    fields:
      error_scenario: String
      recovery_action: String
      expected_success: Bool

behaviors:
  - name: test_element_timeout
    given: Slow selector
    when: Timeout test
    then: Returns test result

  - name: test_navigation_timeout
    given: Slow URL
    when: Navigation timeout test
    then: Returns test result

  - name: test_element_not_found
    given: Invalid selector
    when: Not found test
    then: Returns test result

  - name: test_stale_element
    given: Removed element
    when: Stale element test
    then: Returns test result

  - name: test_error_recovery
    given: Error scenario
    When: Recovery test
    then: Returns test result

  - name: test_retry_on_error
    given: Flaky operation
    when: Retry test
    then: Returns test result

  - name: test_graceful_degradation
    given: Partial failure
    when: Degradation test
    then: Returns test result
