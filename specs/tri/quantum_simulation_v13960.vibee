# VIBEE Specification v13960
# Quantum Simulation - Simulating quantum systems
name: quantum_simulation_v13960
version: "1.0.0"
language: zig
module: quantum_simulation

types:
  SimulationType:
    fields:
      hamiltonian: String
      trotter: String
      variational: String
      tensor_network: String

  Hamiltonian:
    fields:
      terms: String
      coefficients: String
      num_sites: Int

  TimeEvolution:
    fields:
      initial_state: String
      final_state: String
      time: Float

  SimulationResult:
    fields:
      observables: String
      energy: Float
      fidelity: Float

  SimConfig:
    fields:
      method: String
      time_steps: Int
      trotter_order: Int

behaviors:
  - name: build_hamiltonian
    given: System parameters
    when: Building done
    then: Returns hamiltonian

  - name: evolve_state
    given: State and time
    when: Evolution done
    then: Returns time evolution

  - name: measure_observable
    given: State and operator
    when: Measurement done
    then: Returns expectation value

  - name: compute_ground_state
    given: Hamiltonian
    when: Computation done
    then: Returns ground state
