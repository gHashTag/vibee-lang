# VIBEE Specification v14760
# In-Context Learning - Learning from context
name: in_context_learning_v14760
version: "1.0.0"
language: zig
module: in_context_learning

types:
  ICLType:
    fields:
      few_shot: String
      zero_shot: String
      chain_of_thought: String

  Demonstration:
    fields:
      input: String
      output: String
      explanation: String

  ICLPrompt:
    fields:
      demonstrations: String
      query: String
      format: String

  ICLResult:
    fields:
      prediction: String
      confidence: Float
      reasoning: String

behaviors:
  - name: select_demonstrations
    given: Task and examples
    when: Selection done
    then: Returns demonstrations

  - name: format_prompt
    given: Demonstrations and query
    when: Formatting done
    then: Returns ICL prompt

  - name: predict_icl
    given: Prompt
    when: Prediction done
    then: Returns ICL result

  - name: analyze_icl
    given: Results
    when: Analysis done
    then: Returns ICL insights
