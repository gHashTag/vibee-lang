# VIBEE Specification v15380
# Collective Decision Making - Group decision processes
name: collective_decision_v15380
version: "1.0.0"
language: zig
module: collective_decision

types:
  DecisionOption:
    fields:
      option_id: String
      quality: Float
      support: Float

  VotingMechanism:
    fields:
      mechanism: String
      quorum: Float
      threshold: Float

  CollectiveChoice:
    fields:
      chosen: String
      confidence: Float
      dissent: Float

  CDMConfig:
    fields:
      mechanism: String
      timeout: Float
      min_participation: Float

behaviors:
  - name: propose_options
    given: Agent proposals
    when: Proposal done
    then: Returns decision options

  - name: evaluate_options
    given: Options
    when: Evaluation done
    then: Returns quality estimates

  - name: vote_collective
    given: Options and mechanism
    when: Voting done
    then: Returns collective choice

  - name: implement_decision
    given: Choice
    when: Implementation done
    then: Returns action plan
