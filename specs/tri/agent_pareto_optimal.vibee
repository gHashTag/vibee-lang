# Pareto-Optimal Agent Selection
# Multi-objective optimization for agent architectures
# Balances accuracy, cost, latency, and capability

name: agent_pareto_optimal
version: "1.0.0"
language: zig
module: agent_pareto_optimal

types:
  AgentMetrics:
    fields:
      agent_name: String
      accuracy: Float
      cost_per_1k_tokens: Float
      latency_ms: Int
      context_window: Int
      multimodal: Bool

  ParetoFrontier:
    fields:
      frontier_id: String
      agents_on_frontier: List<String>
      dominated_agents: List<String>
      optimization_objectives: List<String>

  TradeoffAnalysis:
    fields:
      objective_a: String
      objective_b: String
      correlation: Float
      optimal_balance_point: Float

  SelectionCriteria:
    fields:
      min_accuracy: Float
      max_cost: Float
      max_latency: Int
      required_capabilities: List<String>

  OptimalAgent:
    fields:
      agent_name: String
      selection_reason: String
      expected_performance: Float
      estimated_cost: Float

behaviors:
  - name: compute_pareto_frontier
    given: List of agents with multi-dimensional metrics
    when: Pareto dominance analysis is performed
    then: Returns set of non-dominated optimal agents

  - name: analyze_tradeoffs
    given: Two competing objectives
    when: Correlation and balance analysis runs
    then: Returns optimal tradeoff point

  - name: select_for_task
    given: Task requirements and constraints
    when: Selection criteria are applied to frontier
    then: Returns best agent for specific use case

  - name: rank_by_objective
    given: Single optimization objective
    when: Agents are sorted by that metric
    then: Returns ordered list with rankings

  - name: ensemble_selection
    given: Complex task requiring multiple capabilities
    when: Complementary agents are identified
    then: Returns optimal agent combination

  - name: cost_performance_optimization
    given: Budget constraint and minimum accuracy
    when: Cost-efficiency analysis runs
    then: Returns best value agent within budget
