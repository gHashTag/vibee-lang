    given: Config parameters
    when: Config creation
    then: Returns Plugin_sandboxConfig

  - name: load_plugin_sandbox
    given: Plugin path
    when: Loading
    then: Returns Plugin_sandboxInstance

  - name: execute_plugin_sandbox
    given: Operation
    when: Execution
    then: Returns Plugin_sandboxResult

  - name: get_plugin_sandbox_metrics
    given: Plugin_sandboxInstance
    when: Metrics query
    then: Returns Plugin_sandboxMetrics

  - name: unload_plugin_sandbox
    given: Plugin_sandboxInstance
    when: Unloading
    then: Returns unload status

  - name: update_plugin_sandbox
    given: Plugin_sandboxInstance
    when: Update
    then: Returns updated instance
