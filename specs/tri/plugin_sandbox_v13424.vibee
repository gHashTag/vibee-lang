name: plugin_sandbox
version: "13424.0.0"
language: zig
module: plugin_sandbox

types:
  Plugin_sandboxConfig:
    fields:
      enabled: Bool
      sandbox: Bool
      permissions: String

  Plugin_sandboxInstance:
    fields:
      instance_id: String
      name: String
      version: String
      active: Bool

  Plugin_sandboxResult:
    fields:
      success: Bool
      data: String
      error_message: String

  Plugin_sandboxMetrics:
    fields:
      plugins_loaded: Int
      memory_mb: Int
      api_calls: Int

behaviors:
