# VIBEE v9013: Geometry Foundations
name: geometry_foundations
version: "9013.0.0"
language: zig
module: geometry_foundations

types:
  GeometricSystem:
    fields:
      primitives: List<String>
      axioms: List<String>
      dimension: Int
      metric: Bool

  EuclideanGeometry:
    fields:
      parallel_postulate: Bool
      congruence: String
      similarity: String
      dimension: Int

  NonEuclideanGeometry:
    fields:
      type: String
      curvature: Float
      parallel_lines: String
      model: String

  ProjectiveGeometry:
    fields:
      points_at_infinity: Bool
      duality: Bool
      cross_ratio: String
      dimension: Int

behaviors:
  - name: verify_incidence
    given: "Points and lines"
    when: "Checking incidence"
    then: "Returns incidence status"

  - name: compute_invariant
    given: "Geometric configuration"
    when: "Finding invariant"
    then: "Returns geometric invariant"
