# VIBEE v9040: Gödel First Incompleteness
name: godel_first
version: "9040.0.0"
language: zig
module: godel_first

types:
  IncompletenessResult:
    fields:
      theorem: String
      theory: String
      sentence: String
      unprovable: Bool

  GodelSentence:
    fields:
      encoding: String
      self_referential: Bool
      true_but_unprovable: Bool
      construction: String

  ConsistencyProof:
    fields:
      theory: String
      method: String
      relative: Bool
      strength: Float

behaviors:
  - name: construct_godel_sentence
    given: "Formal theory"
    when: "Building self-reference"
    then: "Returns Gödel sentence"

  - name: analyze_incompleteness
    given: "Theory specification"
    when: "Applying incompleteness"
    then: "Returns incompleteness analysis"
