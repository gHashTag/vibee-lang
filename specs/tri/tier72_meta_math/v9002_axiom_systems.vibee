# VIBEE v9002: Axiom Systems
name: axiom_systems
version: "9002.0.0"
language: zig
module: axiom_systems

types:
  AxiomSchema:
    fields:
      pattern: String
      instances: List<String>
      logical: Bool
      non_logical: Bool

  AxiomaticTheory:
    fields:
      name: String
      axioms: List<String>
      primitive_terms: List<String>
      defined_terms: List<String>

  Independence:
    fields:
      axiom: String
      theory: String
      independent: Bool
      proof_method: String

  Categoricity:
    fields:
      theory: String
      cardinality: String
      categorical: Bool
      models_unique: Bool

behaviors:
  - name: check_independence
    given: "Axiom and theory"
    when: "Testing independence"
    then: "Returns independence result"

  - name: analyze_categoricity
    given: "Theory specification"
    when: "Checking categoricity"
    then: "Returns categoricity analysis"
