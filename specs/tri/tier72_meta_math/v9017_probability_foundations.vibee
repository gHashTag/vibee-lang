# VIBEE v9017: Probability Foundations
name: probability_foundations
version: "9017.0.0"
language: zig
module: probability_foundations

types:
  ProbabilitySpace:
    fields:
      sample_space: String
      sigma_algebra: String
      probability_measure: String
      complete: Bool

  RandomVariable:
    fields:
      name: String
      distribution: String
      expectation: Float
      variance: Float

  ConditionalProbability:
    fields:
      event_a: String
      event_b: String
      probability: Float
      bayes: Bool

  Convergence:
    fields:
      sequence: String
      type: String
      limit: String
      rate: Float

behaviors:
  - name: compute_probability
    given: "Event and space"
    when: "Calculating"
    then: "Returns probability"

  - name: check_independence
    given: "Events"
    when: "Testing independence"
    then: "Returns independence status"
