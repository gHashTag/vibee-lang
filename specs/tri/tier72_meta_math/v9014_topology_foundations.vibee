# VIBEE v9014: Topology Foundations
name: topology_foundations
version: "9014.0.0"
language: zig
module: topology_foundations

types:
  TopologicalSpace:
    fields:
      points: String
      open_sets: String
      axioms: List<String>
      separation: String

  ContinuousMap:
    fields:
      domain: String
      codomain: String
      preimage_open: Bool
      homeomorphism: Bool

  Connectedness:
    fields:
      space: String
      connected: Bool
      path_connected: Bool
      components: Int

  Compactness:
    fields:
      space: String
      compact: Bool
      locally_compact: Bool
      paracompact: Bool

behaviors:
  - name: check_continuity
    given: "Map between spaces"
    when: "Testing continuity"
    then: "Returns continuity status"

  - name: find_components
    given: "Topological space"
    when: "Decomposing"
    then: "Returns connected components"
