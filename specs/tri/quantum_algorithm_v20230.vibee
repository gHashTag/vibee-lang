name: quantum_algorithm_v20230
version: "1.0.0"
language: zig
module: quantum_algorithm_v20230

types:
  QuantumAlgorithm:
    fields:
      name: String
      circuit: String
      complexity: String

  AlgorithmResult:
    fields:
      solution: String
      iterations: Int
      speedup: Float

behaviors:
  - name: algorithm_grover
    given: "Search space"
    when: "Grover search runs"
    then: "Returns marked item"

  - name: algorithm_shor
    given: "Number to factor"
    when: "Shor runs"
    then: "Returns factors"

  - name: algorithm_vqe
    given: "Hamiltonian"
    when: "VQE optimizes"
    then: "Returns ground state"
