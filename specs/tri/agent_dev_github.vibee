name: agent_dev_github
version: "1.0.0"
language: zig
module: agent_dev_github

description: |
  Agent Dev GitHub - работа с GitHub
  OpenAI Operator: поиск кода на GitHub
  φ² + 1/φ² = 3 | PHOENIX = 999

types:
  GitHubRepo:
    fields:
      owner: String
      name: String
      description: String
      stars: Int
      language: String

  GitHubSearch:
    fields:
      query: String
      search_type: String
      language: Option<String>
      sort_by: String

  GitHubFile:
    fields:
      path: String
      content: String
      sha: String
      size_bytes: Int

  GitHubIssue:
    fields:
      number: Int
      title: String
      body: String
      state: String
      labels: List<String>

behaviors:
  - name: search_repos
    given: GitHubSearch запрос
    when: Поиск репозиториев
    then: Список GitHubRepo

  - name: search_code
    given: GitHubSearch запрос
    when: Поиск кода
    then: Список GitHubFile

  - name: get_file_content
    given: GitHubRepo и путь к файлу
    when: Получение содержимого файла
    then: GitHubFile

  - name: list_issues
    given: GitHubRepo репозиторий
    when: Список issues
    then: Список GitHubIssue

  - name: create_issue
    given: GitHubRepo и GitHubIssue
    when: Создание issue
    then: Созданный GitHubIssue

  - name: star_repo
    given: GitHubRepo для star
    when: Добавление в starred
    then: Результат
