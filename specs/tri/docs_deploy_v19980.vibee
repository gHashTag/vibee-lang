name: docs_deploy_v19980
version: "1.0.0"
language: zig
module: docs_deploy_v19980

types:
  DeployConfig:
    fields:
      target: String
      base_url: String
      branch: String

  DeployResult:
    fields:
      success: Bool
      url: String
      duration_ms: Int

behaviors:
  - name: deploy_build
    given: "Deploy config"
    when: "Builder builds"
    then: "Creates deploy bundle"

  - name: deploy_push
    given: "Deploy bundle"
    when: "Pusher pushes"
    then: "Deploys to target"

  - name: deploy_verify
    given: "Deployed docs"
    when: "Verifier verifies"
    then: "Checks deployment"
