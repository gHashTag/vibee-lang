# VIBEE Specification v12360
# Agent Planning - Goal decomposition and task planning
name: agent_planning_v12360
version: "1.0.0"
language: zig
module: agent_planning

types:
  PlanStatus:
    fields:
      pending: String
      executing: String
      completed: String
      failed: String

  Goal:
    fields:
      id: String
      description: String
      priority: Int
      deadline: Timestamp
      status: String

  Task:
    fields:
      id: String
      goal_id: String
      action: String
      dependencies: String
      estimated_duration: Int
      status: String

  Plan:
    fields:
      id: String
      goal_id: String
      tasks: String
      total_steps: Int
      current_step: Int

  PlanExecution:
    fields:
      plan_id: String
      task_id: String
      result: String
      duration_ms: Int
      executed_at: Timestamp

behaviors:
  - name: create_goal
    given: Goal description
    when: Goal created
    then: Returns new goal

  - name: decompose_goal
    given: Goal
    when: Decomposition applied
    then: Returns task list

  - name: create_plan
    given: Goal and tasks
    when: Plan created
    then: Returns execution plan

  - name: execute_step
    given: Plan and current task
    when: Step executed
    then: Returns execution result
