# VIBEE Specification v14680
# Self-Evaluation - Assessing own performance
name: self_evaluation_v14680
version: "1.0.0"
language: zig
module: self_evaluation

types:
  EvaluationDimension:
    fields:
      accuracy: String
      efficiency: String
      creativity: String
      safety: String

  PerformanceMetric:
    fields:
      dimension: String
      value: Float
      trend: String

  EvaluationReport:
    fields:
      metrics: String
      strengths: String
      weaknesses: String

  ImprovementPlan:
    fields:
      targets: String
      actions: String
      timeline: String

behaviors:
  - name: measure_performance
    given: Task results
    when: Measurement done
    then: Returns performance metrics

  - name: compare_to_baseline
    given: Metrics and baseline
    when: Comparison done
    then: Returns relative performance

  - name: generate_report
    given: All metrics
    when: Generation done
    then: Returns evaluation report

  - name: plan_improvement
    given: Report
    when: Planning done
    then: Returns improvement plan
