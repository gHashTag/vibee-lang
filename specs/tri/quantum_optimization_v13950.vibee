# VIBEE Specification v13950
# Quantum Optimization - QAOA and quantum annealing
name: quantum_optimization_v13950
version: "1.0.0"
language: zig
module: quantum_optimization

types:
  OptMethod:
    fields:
      qaoa: String
      vqe: String
      annealing: String
      grover_adaptive: String

  CostHamiltonian:
    fields:
      terms: String
      num_qubits: Int
      max_weight: Float

  QAOAParams:
    fields:
      gamma: String
      beta: String
      p_layers: Int

  OptimizationResult:
    fields:
      solution: String
      cost: Float
      iterations: Int

  OptConfig:
    fields:
      method: String
      max_iterations: Int
      tolerance: Float

behaviors:
  - name: build_cost_hamiltonian
    given: Problem definition
    when: Building done
    then: Returns cost hamiltonian

  - name: run_qaoa
    given: Hamiltonian and params
    when: Optimization done
    then: Returns optimization result

  - name: anneal
    given: Problem and schedule
    when: Annealing done
    then: Returns solution

  - name: sample_solutions
    given: Optimized circuit
    when: Sampling done
    then: Returns solution distribution
