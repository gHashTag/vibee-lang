# iGLA v7 KAN - Kolmogorov-Arnold Networks
# Paper: arXiv:2404.19756 "KAN: Kolmogorov-Arnold Networks"
# φ² + 1/φ² = 3 | КОЩЕЙ БЕССМЕРТЕН

name: igla_v7_kan
version: "7.0.0"
language: zig
module: igla_v7_kan

types:
  KANConfig:
    fields:
      grid_size: Int
      spline_order: Int
      num_layers: Int
      
  KANLayer:
    fields:
      spline_weights: String
      grid_points: String
      
  KANActivation:
    fields:
      basis_functions: String
      coefficients: String

behaviors:
  - name: kan_forward
    given: "Input"
    when: "KAN layer"
    then: "Learnable activation functions"
    
  - name: spline_activation
    given: "Edge weights"
    when: "B-spline evaluation"
    then: "Smooth learnable functions"
    
  - name: grid_extension
    given: "Training progress"
    when: "Grid refinement"
    then: "Increased resolution"
    
  - name: interpretability
    given: "Trained KAN"
    when: "Visualization"
    then: "Interpretable learned functions"
    
  - name: symbolic_regression
    given: "KAN activations"
    when: "Symbolic fitting"
    then: "Discover symbolic formulas"
    
  - name: efficiency_vs_mlp
    given: "Same accuracy"
    when: "Parameter comparison"
    then: "Fewer parameters needed"
