# VIBEE Specification v13180
# Flocking Behavior - Boid-based flocking simulation
name: flocking_behavior_v13180
version: "1.0.0"
language: zig
module: flocking_behavior

types:
  FlockingRule:
    fields:
      separation: String
      alignment: String
      cohesion: String

  Boid:
    fields:
      id: String
      position: String
      velocity: String
      acceleration: String

  Flock:
    fields:
      id: String
      boids: String
      center_of_mass: String
      avg_velocity: String

  FlockingConfig:
    fields:
      id: String
      separation_weight: Float
      alignment_weight: Float
      cohesion_weight: Float
      perception_radius: Float

  FlockingState:
    fields:
      flock_id: String
      dispersion: Float
      polarization: Float
      angular_momentum: Float

behaviors:
  - name: create_flock
    given: Boid count and config
    When: Flock created
    then: Returns flock

  - name: compute_steering
    given: Boid and neighbors
    When: Steering computed
    then: Returns acceleration

  - name: update_flock
    given: Flock
    When: Update done
    then: Returns updated flock

  - name: analyze_flock
    given: Flock
    When: Analysis done
    then: Returns flocking state
