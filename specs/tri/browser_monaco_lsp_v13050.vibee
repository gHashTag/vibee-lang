name: browser_monaco_lsp_v13050
version: "13050.0.0"
language: zig
module: browser_monaco_lsp_v13050

types:
  MonacoLSPConfig:
    fields:
      language: String
      server_url: String
      capabilities: List<String>

  MonacoLSPResult:
    fields:
      connected: Bool
      latency_ms: Int
      completions: List<String>

behaviors:
  - name: monaco_lsp_connect
    given: Server URL
    when: Connection
    then: LSP connected
    test_cases:
      - name: test_connect
        input: { server: "zls" }
        expected: { connected: true }

  - name: monaco_lsp_complete
    given: Cursor position
    when: Completion request
    then: Suggestions
    test_cases:
      - name: test_complete
        input: { position: { line: 10, col: 5 } }
        expected: { suggestions: true }

  - name: monaco_lsp_hover
    given: Symbol
    when: Hover
    then: Documentation
    test_cases:
      - name: test_hover
        input: { symbol: "fn" }
        expected: { docs: true }

  - name: monaco_lsp_diagnostic
    given: File content
    when: Diagnostics
    then: Errors/warnings
    test_cases:
      - name: test_diagnostic
        input: { file: "main.zig" }
        expected: { diagnostics: true }

self_evolution:
  enabled: true
  generation: 13050
