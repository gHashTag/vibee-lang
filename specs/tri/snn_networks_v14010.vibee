# VIBEE Specification v14010
# SNN Networks - Spiking neural network architectures
name: snn_networks_v14010
version: "1.0.0"
language: zig
module: snn_networks

types:
  SNNArchitecture:
    fields:
      feedforward: String
      recurrent: String
      reservoir: String
      convolutional: String

  SNNLayer:
    fields:
      neurons: String
      num_neurons: Int
      neuron_type: String

  SpikeTrains:
    fields:
      spikes: String
      duration: Float
      num_neurons: Int

  SNNState:
    fields:
      potentials: String
      spike_history: String
      time: Float

  SNNConfig:
    fields:
      architecture: String
      num_layers: Int
      connectivity: Float
      dt: Float

behaviors:
  - name: build_network
    given: Architecture config
    when: Building done
    then: Returns SNN

  - name: forward_pass
    given: Input spikes
    when: Propagation done
    then: Returns spike trains

  - name: get_state
    given: Network
    when: Query done
    then: Returns SNN state

  - name: reset_network
    given: Network
    when: Reset done
    then: Returns initial state
