# VIBEE Specification v12870
# STDP Learning - Spike-timing dependent plasticity
name: stdp_learning_v12870
version: "1.0.0"
language: zig
module: stdp_learning

types:
  PlasticityRule:
    fields:
      stdp: String
      triplet_stdp: String
      reward_modulated: String
      homeostatic: String

  STDPConfig:
    fields:
      id: String
      rule: String
      tau_plus_ms: Float
      tau_minus_ms: Float
      a_plus: Float
      a_minus: Float

  WeightUpdate:
    fields:
      synapse_id: String
      delta_weight: Float
      pre_spike_time: Timestamp
      post_spike_time: Timestamp

  LearningTrace:
    fields:
      neuron_id: String
      pre_trace: Float
      post_trace: Float
      eligibility: Float

  PlasticityStats:
    fields:
      config_id: String
      total_updates: Int
      avg_weight_change: Float
      potentiation_count: Int
      depression_count: Int

behaviors:
  - name: configure_stdp
    given: STDP parameters
    when: Config created
    then: Returns STDP config

  - name: compute_weight_update
    given: Pre and post spike times
    when: Update computed
    then: Returns weight update

  - name: update_traces
    given: Spike event
    when: Traces updated
    then: Returns learning trace

  - name: apply_plasticity
    given: Synapse and update
    when: Plasticity applied
    then: Returns new weight
