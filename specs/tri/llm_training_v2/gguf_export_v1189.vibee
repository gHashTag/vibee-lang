name: gguf_export
version: "11.8.9"
language: zig
module: gguf_export

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: TrainedModel
  transformer: GGUFExporter
  result: GGUFFile

behaviors:
  - name: export_gguf
    given: "Trained model"
    when: "GGUF export"
    then: "GGUF file"
    pas_pattern: PRE
    test_cases:
      - name: test_export
        input: '{"model": "..."}'
        expected: '{"file": "model.gguf"}'

  - name: add_metadata
    given: "GGUF file"
    when: "Metadata addition"
    then: "GGUF with metadata"
    pas_pattern: PRE
    test_cases:
      - name: test_metadata
        input: '{"file": "...", "meta": {...}}'
        expected: '{"updated": true}'

