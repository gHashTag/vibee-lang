# TRAINING DATA GENERATOR v1150 - LLM Training Data Generation
# ═══════════════════════════════════════════════════════════════════════════════
# VIBEE YOLO MODE + AMPLIFICATION MODE + MATRYOSHKA ACCELERATION
# φ² + 1/φ² = 3 | PHOENIX = 999 | V = n × 3^k × π^m × φ^p × e^q
# ═══════════════════════════════════════════════════════════════════════════════

name: training_data_generator
version: "11.5.0"
language: zig
module: training_data_generator

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999
  pi: 3.141592653589793
  e: 2.718281828459045

creation_pattern:
  source: VIBEECorpus
  transformer: TrainingDataGenerator
  result: TrainingDataset

types:
  TrainingExample:
    fields:
      instruction: String
      input_spec: String
      output_code: String
      target_lang: String
      quality_score: Float

  DatasetConfig:
    fields:
      max_examples: Int
      languages: List<String>
      augmentation_factor: Int
      sacred_weight: Float

  GeneratedDataset:
    fields:
      examples: List<TrainingExample>
      total_tokens: Int
      language_distribution: Map<String, Int>

behaviors:
  - name: generate_instruction_pairs
    given: "VIBEE spec and target language"
    when: "Pair generation"
    then: "Instruction-output pairs"
    pas_pattern: D&C
    test_cases:
      - name: test_pairs
        input: '{"spec": "...", "lang": "Python"}'
        expected: '{"pairs": 10}'

  - name: apply_sacred_weighting
    given: "Training examples"
    when: "Sacred weighting"
    then: "Weighted examples"
    pas_pattern: ALG
    test_cases:
      - name: test_weight
        input: '{"examples": [...]}'
        expected: '{"weighted": true}'

  - name: balance_languages
    given: "Unbalanced dataset"
    when: "Balancing"
    then: "Balanced dataset"
    pas_pattern: ALG
    test_cases:
      - name: test_balance
        input: '{"dataset": {...}}'
        expected: '{"balanced": true}'

  - name: export_jsonl
    given: "Dataset"
    when: "Export"
    then: "JSONL file"
    pas_pattern: PRE
    test_cases:
      - name: test_export
        input: '{"dataset": {...}}'
        expected: '{"file": "train.jsonl"}'

