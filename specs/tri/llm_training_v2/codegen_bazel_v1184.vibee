name: codegen_bazel
version: "11.8.4"
language: zig
module: codegen_bazel

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: BazelCodeGen
  result: BazelBuild

behaviors:
  - name: generate_build
    given: "VIBEE spec"
    when: "BUILD generation"
    then: "Bazel BUILD"
    pas_pattern: PRE
    test_cases:
      - name: test_build
        input: '{"spec": {...}}'
        expected: '{"code": "load(..."}'

  - name: generate_rule
    given: "VIBEE module"
    when: "Rule generation"
    then: "Bazel rule"
    pas_pattern: PRE
    test_cases:
      - name: test_rule
        input: '{"module": {...}}'
        expected: '{"code": "cc_library(..."}'

