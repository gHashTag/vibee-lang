name: codegen_groovy
version: "11.7.0"
language: zig
module: codegen_groovy

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: GroovyCodeGen
  result: GroovyCode

types:
  GroovyClass:
    fields:
      name: String
      properties: List<String>
      methods: List<String>

behaviors:
  - name: generate_class
    given: "VIBEE type"
    when: "Class generation"
    then: "Groovy class"
    pas_pattern: PRE
    test_cases:
      - name: test_class
        input: '{"type": {...}}'
        expected: '{"code": "class..."}'

  - name: generate_closure
    given: "VIBEE behavior"
    when: "Closure generation"
    then: "Groovy closure"
    pas_pattern: PRE
    test_cases:
      - name: test_closure
        input: '{"behavior": {...}}'
        expected: '{"code": "{ -> ... }"}'

