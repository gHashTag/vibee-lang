name: codegen_prolog
version: "11.6.8"
language: zig
module: codegen_prolog

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: PrologCodeGen
  result: PrologCode

types:
  PrologClause:
    fields:
      head: String
      body: List<String>

behaviors:
  - name: generate_predicate
    given: "VIBEE behavior"
    when: "Predicate generation"
    then: "Prolog predicate"
    pas_pattern: PRE
    test_cases:
      - name: test_pred
        input: '{"behavior": {...}}'
        expected: '{"code": "predicate(X) :- ..."}'

  - name: generate_facts
    given: "VIBEE constants"
    when: "Facts generation"
    then: "Prolog facts"
    pas_pattern: PRE
    test_cases:
      - name: test_facts
        input: '{"constants": [...]}'
        expected: '{"code": "phi(1.618)."}'

