name: codegen_matlab
version: "11.6.4"
language: zig
module: codegen_matlab

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: MATLABCodeGen
  result: MATLABCode

types:
  MATLABFunction:
    fields:
      name: String
      inputs: List<String>
      outputs: List<String>
      body: String

behaviors:
  - name: generate_function
    given: "VIBEE behavior"
    when: "Function generation"
    then: "MATLAB function"
    pas_pattern: PRE
    test_cases:
      - name: test_func
        input: '{"behavior": {...}}'
        expected: '{"code": "function..."}'

  - name: generate_matrix_ops
    given: "Matrix operations"
    when: "Matrix generation"
    then: "MATLAB matrix code"
    pas_pattern: ALG
    test_cases:
      - name: test_matrix
        input: '{"op": "multiply"}'
        expected: '{"code": "A * B"}'

