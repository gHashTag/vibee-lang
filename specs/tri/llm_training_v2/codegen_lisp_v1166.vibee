    fields:
      form_type: String
      content: String

behaviors:
  - name: generate_defun
    given: "VIBEE behavior"
    when: "Defun generation"
    then: "Lisp defun"
    pas_pattern: PRE
    test_cases:
      - name: test_defun
        input: '{"behavior": {...}}'
        expected: '{"code": "(defun...)"}'

  - name: generate_defstruct
    given: "VIBEE type"
    when: "Defstruct generation"
    then: "Lisp defstruct"
    pas_pattern: PRE
    test_cases:
      - name: test_struct
        input: '{"type": {...}}'
        expected: '{"code": "(defstruct...)"}'

