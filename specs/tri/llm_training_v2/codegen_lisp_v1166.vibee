name: codegen_lisp
version: "11.6.6"
language: zig
module: codegen_lisp

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: LispCodeGen
  result: LispCode

types:
