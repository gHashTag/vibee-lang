name: codegen_cobol
version: "11.5.9"
language: zig
module: codegen_cobol

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: COBOLCodeGen
  result: COBOLCode

types:
  COBOLProgram:
    fields:
      identification: String
      environment: String
      data_division: String
      procedure_division: String

  COBOLDataItem:
    fields:
      level: Int
      name: String
      picture: String

behaviors:
  - name: generate_program
    given: "VIBEE spec"
    when: "Program generation"
    then: "COBOL program"
    pas_pattern: PRE
    test_cases:
      - name: test_program
        input: '{"spec": {...}}'
        expected: '{"code": "IDENTIFICATION DIVISION..."}'

  - name: generate_data_division
    given: "VIBEE types"
    when: "Data division generation"
    then: "COBOL data division"
    pas_pattern: PRE
    test_cases:
      - name: test_data
        input: '{"types": [...]}'
        expected: '{"code": "DATA DIVISION..."}'

  - name: generate_procedure
    given: "VIBEE behaviors"
    when: "Procedure generation"
    then: "COBOL procedure"
    pas_pattern: PRE
    test_cases:
      - name: test_proc
        input: '{"behaviors": [...]}'
        expected: '{"code": "PROCEDURE DIVISION..."}'

cobol_type_mappings:
  vibee_string: "PIC X(100)"
  vibee_int: "PIC 9(18)"
  vibee_float: "PIC 9(10)V9(8)"
  vibee_bool: "PIC 9"

