name: codegen_erlang
version: "11.6.9"
language: zig
module: codegen_erlang

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: ErlangCodeGen
  result: ErlangCode

types:
  ErlangModule:
    fields:
      name: String
      exports: List<String>
      functions: List<ErlangFunction>

  ErlangFunction:
    fields:
      name: String
      arity: Int
      clauses: List<String>

behaviors:
  - name: generate_module
    given: "VIBEE spec"
    when: "Module generation"
    then: "Erlang module"
    pas_pattern: PRE
    test_cases:
      - name: test_module
        input: '{"spec": {...}}'
        expected: '{"code": "-module(...)."}'

  - name: generate_function
    given: "VIBEE behavior"
    when: "Function generation"
    then: "Erlang function"
    pas_pattern: PRE
    test_cases:
      - name: test_func
        input: '{"behavior": {...}}'
        expected: '{"code": "func(X) -> ..."}'

  - name: generate_gen_server
    given: "Stateful behavior"
    when: "GenServer generation"
    then: "Erlang gen_server"
    pas_pattern: ALG
    test_cases:
      - name: test_genserver
        input: '{"stateful": true}'
        expected: '{"code": "-behaviour(gen_server)."}'

