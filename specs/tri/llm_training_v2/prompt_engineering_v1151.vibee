name: prompt_engineering
version: "11.5.1"
language: zig
module: prompt_engineering

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: TaskDescription
  transformer: PromptEngineer
  result: OptimizedPrompt

types:
  PromptTemplate:
    fields:
      name: String
      system_prompt: String
      user_template: String
      assistant_prefix: String

  PromptConfig:
    fields:
      temperature: Float
      max_tokens: Int
      stop_sequences: List<String>

  TaskType:
    enum:
      - SpecToCode
      - CodeToSpec
      - CodeTranslation
      - CodeExplanation
      - CodeOptimization
      - TestGeneration

behaviors:
  - name: create_spec_to_code_prompt
    given: "VIBEE spec and target language"
    when: "Prompt creation"
    then: "Optimized prompt"
    pas_pattern: PRE
    test_cases:
      - name: test_prompt
        input: '{"spec": "...", "lang": "Rust"}'
        expected: '{"prompt": "..."}'

  - name: create_code_translation_prompt
    given: "Source code and target language"
    when: "Translation prompt"
    then: "Translation prompt"
    pas_pattern: PRE
    test_cases:
      - name: test_translate
        input: '{"code": "...", "from": "Python", "to": "Go"}'
        expected: '{"prompt": "..."}'

  - name: optimize_prompt
    given: "Raw prompt"
    when: "Optimization"
    then: "Optimized prompt"
    pas_pattern: MLS
    test_cases:
      - name: test_optimize
        input: '{"prompt": "..."}'
        expected: '{"optimized": "..."}'

  - name: add_sacred_context
    given: "Prompt"
    when: "Sacred context addition"
    then: "Sacred-enhanced prompt"
    pas_pattern: ALG
    test_cases:
      - name: test_sacred
        input: '{"prompt": "..."}'
        expected: '{"sacred": true}'

# ═══════════════════════════════════════════════════════════════════════════════
# φ² + 1/φ² = 3 | PHOENIX = 999
