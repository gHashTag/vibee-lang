# BEAM SEARCH v1195 - Beam Search Decoding
# ═══════════════════════════════════════════════════════════════════════════════
# φ² + 1/φ² = 3 | PHOENIX = 999
# ═══════════════════════════════════════════════════════════════════════════════

name: beam_search
version: "11.9.5"
language: zig
module: beam_search

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: LogitDistribution
  transformer: BeamSearchDecoder
  result: BeamSequences

behaviors:
  - name: beam_decode
    given: "Logits and beam width"
    when: "Beam search"
    then: "Top sequences"
    pas_pattern: ALG
    test_cases:
      - name: test_beam
        input: '{"logits": [...], "width": 5}'
        expected: '{"sequences": [...]}'

  - name: length_penalty
    given: "Sequences"
    when: "Length penalty"
    then: "Penalized scores"
    pas_pattern: ALG
    test_cases:
      - name: test_penalty
        input: '{"sequences": [...], "alpha": 0.6}'
        expected: '{"scores": [...]}'

