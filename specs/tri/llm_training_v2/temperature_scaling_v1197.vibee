name: temperature_scaling
version: "11.9.7"
language: zig
module: temperature_scaling

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: RawLogits
  transformer: TemperatureScaler
  result: ScaledLogits

behaviors:
  - name: scale_temperature
    given: "Logits and temperature"
    when: "Temperature scaling"
    then: "Scaled logits"
    pas_pattern: ALG
    test_cases:
      - name: test_scale
        input: '{"logits": [...], "temp": 0.7}'
        expected: '{"scaled": [...]}'

  - name: sacred_temperature
    given: "Logits"
    when: "Sacred temperature (φ)"
    then: "φ-scaled logits"
    pas_pattern: ALG
    test_cases:
      - name: test_sacred
        input: '{"logits": [...]}'
        expected: '{"scaled": [...], "temp": 1.618}'

