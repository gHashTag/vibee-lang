name: codegen_ansible
version: "11.7.9"
language: zig
module: codegen_ansible

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: AnsibleCodeGen
  result: AnsiblePlaybook

behaviors:
  - name: generate_playbook
    given: "VIBEE spec"
    when: "Playbook generation"
    then: "Ansible playbook"
    pas_pattern: PRE
    test_cases:
      - name: test_playbook
        input: '{"spec": {...}}'
        expected: '{"code": "- hosts:..."}'

  - name: generate_role
    given: "VIBEE module"
    when: "Role generation"
    then: "Ansible role"
    pas_pattern: PRE
    test_cases:
      - name: test_role
        input: '{"module": {...}}'
        expected: '{"code": "tasks:..."}'

