name: codegen_vhdl
version: "11.6.2"
language: zig
module: codegen_vhdl

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: VHDLCodeGen
  result: VHDLCode

types:
  VHDLEntity:
    fields:
      name: String
      ports: List<VHDLPort>

  VHDLPort:
    fields:
      name: String
      direction: String
      port_type: String

behaviors:
  - name: generate_entity
    given: "VIBEE type"
    when: "Entity generation"
    then: "VHDL entity"
    pas_pattern: PRE
    test_cases:
      - name: test_entity
        input: '{"type": {...}}'
        expected: '{"code": "entity..."}'

  - name: generate_architecture
    given: "VIBEE behaviors"
    when: "Architecture generation"
    then: "VHDL architecture"
    pas_pattern: PRE
    test_cases:
      - name: test_arch
        input: '{"behaviors": [...]}'
        expected: '{"code": "architecture..."}'

