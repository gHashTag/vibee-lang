name: lora_adapter
version: "11.9.0"
language: zig
module: lora_adapter

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: BaseModel
  transformer: LoRATrainer
  result: LoRAAdapter

types:
  LoRAConfig:
    fields:
      rank: Int
      alpha: Float
      dropout: Float
      target_modules: List<String>

behaviors:
  - name: train_lora
    given: "Base model and dataset"
    when: "LoRA training"
    then: "LoRA adapter"
    pas_pattern: MLS
    test_cases:
      - name: test_train
        input: '{"model": "...", "data": [...]}'
        expected: '{"adapter": "..."}'

  - name: merge_lora
    given: "Base model and adapter"
    when: "LoRA merging"
    then: "Merged model"
    pas_pattern: ALG
    test_cases:
      - name: test_merge
        input: '{"model": "...", "adapter": "..."}'
        expected: '{"merged": true}'

