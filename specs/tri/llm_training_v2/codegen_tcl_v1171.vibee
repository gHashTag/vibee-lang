name: codegen_tcl
version: "11.7.1"
language: zig
module: codegen_tcl

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: TclCodeGen
  result: TclCode

behaviors:
  - name: generate_proc
    given: "VIBEE behavior"
    when: "Proc generation"
    then: "Tcl proc"
    pas_pattern: PRE
    test_cases:
      - name: test_proc
        input: '{"behavior": {...}}'
        expected: '{"code": "proc..."}'

  - name: generate_namespace
    given: "VIBEE module"
    when: "Namespace generation"
    then: "Tcl namespace"
    pas_pattern: PRE
    test_cases:
      - name: test_ns
        input: '{"module": "..."}'
        expected: '{"code": "namespace eval..."}'

