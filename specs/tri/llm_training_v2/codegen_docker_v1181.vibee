name: codegen_docker
version: "11.8.1"
language: zig
module: codegen_docker

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: DockerCodeGen
  result: Dockerfile

behaviors:
  - name: generate_dockerfile
    given: "VIBEE spec"
    when: "Dockerfile generation"
    then: "Dockerfile"
    pas_pattern: PRE
    test_cases:
      - name: test_dockerfile
        input: '{"spec": {...}}'
        expected: '{"code": "FROM..."}'

  - name: generate_compose
    given: "VIBEE modules"
    when: "Compose generation"
    then: "Docker compose"
    pas_pattern: PRE
    test_cases:
      - name: test_compose
        input: '{"modules": [...]}'
        expected: '{"code": "version: 3..."}'

