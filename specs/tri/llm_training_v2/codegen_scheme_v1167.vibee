name: codegen_scheme
version: "11.6.7"
language: zig
module: codegen_scheme

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: SchemeCodeGen
  result: SchemeCode

types:
  SchemeExpression:
    fields:
      expr_type: String
      content: String

behaviors:
  - name: generate_define
    given: "VIBEE behavior"
    when: "Define generation"
    then: "Scheme define"
    pas_pattern: PRE
    test_cases:
      - name: test_define
        input: '{"behavior": {...}}'
        expected: '{"code": "(define...)"}'

  - name: generate_lambda
    given: "Anonymous function"
    when: "Lambda generation"
    then: "Scheme lambda"
    pas_pattern: PRE
    test_cases:
      - name: test_lambda
        input: '{"params": ["x"]}'
        expected: '{"code": "(lambda (x)...)"}'

