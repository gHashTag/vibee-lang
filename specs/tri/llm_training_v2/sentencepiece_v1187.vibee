name: sentencepiece
version: "11.8.7"
language: zig
module: sentencepiece

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: TextCorpus
  transformer: SentencePieceTrainer
  result: SPModel

behaviors:
  - name: train_sp
    given: "Text corpus"
    when: "SP training"
    then: "SP model"
    pas_pattern: ALG
    test_cases:
      - name: test_train
        input: '{"corpus": [...]}'
        expected: '{"model": "..."}'

  - name: encode_sp
    given: "Text"
    when: "SP encoding"
    then: "SP tokens"
    pas_pattern: ALG
    test_cases:
      - name: test_encode
        input: '{"text": "..."}'
        expected: '{"tokens": [...]}'

