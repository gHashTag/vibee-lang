name: codegen_kubernetes
version: "11.8.0"
language: zig
module: codegen_kubernetes

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: KubernetesCodeGen
  result: KubernetesManifest

behaviors:
  - name: generate_deployment
    given: "VIBEE spec"
    when: "Deployment generation"
    then: "K8s deployment"
    pas_pattern: PRE
    test_cases:
      - name: test_deploy
        input: '{"spec": {...}}'
        expected: '{"code": "apiVersion: apps/v1..."}'

  - name: generate_service
    given: "VIBEE behaviors"
    when: "Service generation"
    then: "K8s service"
    pas_pattern: PRE
    test_cases:
      - name: test_service
        input: '{"behaviors": [...]}'
        expected: '{"code": "kind: Service..."}'

