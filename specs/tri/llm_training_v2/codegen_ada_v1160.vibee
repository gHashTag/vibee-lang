name: codegen_ada
version: "11.6.0"
language: zig
module: codegen_ada

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: AdaCodeGen
  result: AdaCode

types:
  AdaPackage:
    fields:
      name: String
      spec: String
      body: String

  AdaType:
    fields:
      name: String
      definition: String

behaviors:
  - name: generate_package
    given: "VIBEE spec"
    when: "Package generation"
    then: "Ada package"
    pas_pattern: PRE
    test_cases:
      - name: test_package
        input: '{"spec": {...}}'
        expected: '{"code": "package..."}'

  - name: generate_procedure
    given: "VIBEE behavior"
    when: "Procedure generation"
    then: "Ada procedure"
    pas_pattern: PRE
    test_cases:
      - name: test_proc
        input: '{"behavior": {...}}'
        expected: '{"code": "procedure..."}'

  - name: generate_task
    given: "Concurrent behavior"
    when: "Task generation"
    then: "Ada task"
    pas_pattern: ALG
    test_cases:
      - name: test_task
        input: '{"concurrent": true}'
        expected: '{"code": "task..."}'

ada_type_mappings:
  vibee_string: "String"
  vibee_int: "Long_Long_Integer"
  vibee_float: "Long_Float"
  vibee_bool: "Boolean"

# ═══════════════════════════════════════════════════════════════════════════════
