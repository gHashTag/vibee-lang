name: codegen_solidity
version: "11.7.4"
language: zig
module: codegen_solidity

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: SolidityCodeGen
  result: SolidityContract

types:
  SolidityContract:
    fields:
      name: String
      state_vars: List<String>
      functions: List<SolidityFunction>
      events: List<String>

  SolidityFunction:
    fields:
      name: String
      visibility: String
      modifiers: List<String>
      params: List<String>

behaviors:
  - name: generate_contract
    given: "VIBEE spec"
    when: "Contract generation"
    then: "Solidity contract"
    pas_pattern: PRE
    test_cases:
      - name: test_contract
        input: '{"spec": {...}}'
        expected: '{"code": "contract..."}'

  - name: generate_erc20
    given: "Token spec"
    when: "ERC20 generation"
    then: "ERC20 contract"
    pas_pattern: PRE
    test_cases:
      - name: test_erc20
        input: '{"token": {...}}'
        expected: '{"code": "contract ERC20..."}'

  - name: generate_modifier
    given: "Access control"
    when: "Modifier generation"
    then: "Solidity modifier"
    pas_pattern: PRE
    test_cases:
      - name: test_modifier
        input: '{"access": "onlyOwner"}'
        expected: '{"code": "modifier onlyOwner..."}'

