name: codegen_assembly
version: "11.6.1"
language: zig
module: codegen_assembly

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: AssemblyCodeGen
  result: AssemblyCode

types:
  AssemblyTarget:
    enum:
      - x86_64
      - ARM64
      - RISCV
      - WASM

  AssemblyModule:
    fields:
      target: AssemblyTarget
      sections: List<AssemblySection>

  AssemblySection:
    fields:
      name: String
      content: String

behaviors:
  - name: generate_code
    given: "VIBEE spec"
    when: "Code generation"
    then: "Assembly code"
    pas_pattern: PRE
    test_cases:
      - name: test_gen
        input: '{"spec": {...}}'
        expected: '{"code": "..."}'

  - name: generate_function
    given: "VIBEE behavior"
    when: "Function generation"
    then: "Assembly function"
    pas_pattern: PRE
    test_cases:
      - name: test_func
        input: '{"behavior": {...}}'
        expected: '{"code": "..."}'

