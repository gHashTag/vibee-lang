name: codegen_cmake
version: "11.8.2"
language: zig
module: codegen_cmake

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: VIBEESpec
  transformer: CMakeCodeGen
  result: CMakeLists

behaviors:
  - name: generate_cmakelists
    given: "VIBEE spec"
    when: "CMakeLists generation"
    then: "CMakeLists.txt"
    pas_pattern: PRE
    test_cases:
      - name: test_cmake
        input: '{"spec": {...}}'
        expected: '{"code": "cmake_minimum_required..."}'

  - name: generate_target
    given: "VIBEE module"
    when: "Target generation"
    then: "CMake target"
    pas_pattern: PRE
    test_cases:
      - name: test_target
        input: '{"module": {...}}'
        expected: '{"code": "add_executable..."}'

