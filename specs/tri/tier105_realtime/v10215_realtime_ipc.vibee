# VIBEE v10215: RT IPC
# TIER 105: Realtime - Real-Time Systems
name: realtime_ipc
version: "10215.0.0"
language: zig
module: realtime_ipc

types:
  Task:
    fields:
      id: String
      priority: Int
      deadline: Timestamp
      wcet: Int

  Schedule:
    fields:
      tasks: List<String>
      timeline: List<String>
      utilization: Float
      feasible: Bool

  RTResult:
    fields:
      success: Bool
      latency_us: Int
      jitter_us: Int
      deadline_met: Bool

behaviors:
  - name: schedule_task
    given: "Task spec"
    when: "Scheduling"
    then: "Returns schedule"

  - name: execute_rt
    given: "Task"
    when: "Executing"
    then: "Returns RT result"

  - name: check_deadline
    given: "Task and time"
    when: "Checking"
    then: "Returns deadline status"
