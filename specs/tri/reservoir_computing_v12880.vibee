# VIBEE Specification v12880
# Reservoir Computing - Echo state networks and liquid state machines
name: reservoir_computing_v12880
version: "1.0.0"
language: zig
module: reservoir_computing

types:
  ReservoirType:
    fields:
      echo_state: String
      liquid_state: String
      delay_line: String
      photonic: String

  Reservoir:
    fields:
      id: String
      type: String
      size: Int
      spectral_radius: Float
      sparsity: Float

  ReservoirState:
    fields:
      reservoir_id: String
      activations: String
      timestamp: Timestamp

  ReadoutLayer:
    fields:
      id: String
      reservoir_id: String
      weights: String
      output_dim: Int

  ReservoirPrediction:
    fields:
      readout_id: String
      input: String
      reservoir_state: String
      output: String

behaviors:
  - name: create_reservoir
    given: Reservoir configuration
    when: Reservoir created
    then: Returns reservoir

  - name: drive_reservoir
    given: Reservoir and input
    when: Input processed
    then: Returns reservoir state

  - name: train_readout
    given: States and targets
    when: Training done
    then: Returns trained readout

  - name: predict
    given: Readout and input
    when: Prediction made
    then: Returns reservoir prediction
