# VIBEE v10039: Spec Versioning
name: spec_versioning
version: "10039.0.0"
language: zig
module: spec_versioning

types:
  SpecVersion:
    fields:
      major: Int
      minor: Int
      patch: Int
      prerelease: String

  VersionHistory:
    fields:
      versions: List<String>
      current: String
      changelog: List<String>
      tags: List<String>

  VersionBump:
    fields:
      type: String
      reason: String
      breaking_changes: List<String>
      new_features: List<String>

behaviors:
  - name: bump_version
    given: "Current version and bump type"
    when: "Bumping"
    then: "Returns new version"

  - name: compare_versions
    given: "Two versions"
    when: "Comparing"
    then: "Returns comparison"

  - name: generate_changelog
    given: "Version history"
    when: "Generating"
    then: "Returns changelog"
