# VIBEE v10037: Spec Merger
name: spec_merger
version: "10037.0.0"
language: zig
module: spec_merger

types:
  MergeConfig:
    fields:
      strategy: String
      conflict_resolution: String
      preserve_comments: Bool
      deduplicate: Bool

  MergeResult:
    fields:
      merged: String
      conflicts: List<String>
      resolved: List<String>
      warnings: List<String>

  MergeConflict:
    fields:
      path: String
      left: String
      right: String
      resolution: String

behaviors:
  - name: merge_specs
    given: "Specifications and config"
    when: "Merging"
    then: "Returns merge result"

  - name: resolve_conflict
    given: "Conflict and strategy"
    when: "Resolving"
    then: "Returns resolution"
