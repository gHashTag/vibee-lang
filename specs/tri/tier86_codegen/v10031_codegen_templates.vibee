# VIBEE v10031: Codegen Templates
name: codegen_templates
version: "10031.0.0"
language: zig
module: codegen_templates

types:
  Template:
    fields:
      name: String
      content: String
      variables: List<String>
      language: String

  TemplateContext:
    fields:
      values: List<String>
      helpers: List<String>
      partials: List<String>
      options: List<String>

  TemplateResult:
    fields:
      output: String
      warnings: List<String>
      variables_used: List<String>
      render_time: Int

behaviors:
  - name: render_template
    given: "Template and context"
    when: "Rendering"
    then: "Returns template result"

  - name: validate_template
    given: "Template"
    when: "Validating"
    then: "Returns validation status"

  - name: compile_template
    given: "Template"
    when: "Compiling"
    then: "Returns compiled template"
