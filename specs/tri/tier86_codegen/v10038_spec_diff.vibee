# VIBEE v10038: Spec Diff
name: spec_diff
version: "10038.0.0"
language: zig
module: spec_diff

types:
  SpecDiff:
    fields:
      additions: List<String>
      deletions: List<String>
      modifications: List<String>
      unchanged: List<String>

  DiffConfig:
    fields:
      ignore_whitespace: Bool
      ignore_comments: Bool
      context_lines: Int
      format: String

  DiffHunk:
    fields:
      start_line: Int
      end_line: Int
      type: String
      content: String

behaviors:
  - name: diff_specs
    given: "Two specifications"
    when: "Diffing"
    then: "Returns spec diff"

  - name: apply_diff
    given: "Spec and diff"
    when: "Applying"
    then: "Returns patched spec"

  - name: format_diff
    given: "Diff and format"
    when: "Formatting"
    then: "Returns formatted diff"
