# VIBEE v10036: Spec Validator
name: spec_validator
version: "10036.0.0"
language: zig
module: spec_validator

types:
  SpecValidation:
    fields:
      valid: Bool
      errors: List<String>
      warnings: List<String>
      schema_version: String

  ValidationSchema:
    fields:
      version: String
      rules: List<String>
      required_fields: List<String>
      optional_fields: List<String>

  SchemaError:
    fields:
      path: String
      message: String
      expected: String
      found: String

behaviors:
  - name: validate_spec
    given: "Specification and schema"
    when: "Validating"
    then: "Returns validation result"

  - name: check_completeness
    given: "Specification"
    when: "Checking"
    then: "Returns completeness status"
