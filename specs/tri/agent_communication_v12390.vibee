# VIBEE Specification v12390
# Agent Communication - Multi-agent messaging and coordination
name: agent_communication_v12390
version: "1.0.0"
language: zig
module: agent_communication

types:
  MessageType:
    fields:
      request: String
      response: String
      broadcast: String
      negotiation: String

  Message:
    fields:
      id: String
      sender_id: String
      receiver_id: String
      type: String
      content: String
      timestamp: Timestamp

  Channel:
    fields:
      id: String
      name: String
      participants: String
      created_at: Timestamp

  Protocol:
    fields:
      id: String
      name: String
      steps: String
      timeout_ms: Int

  Conversation:
    fields:
      id: String
      channel_id: String
      messages: String
      status: String
      started_at: Timestamp

behaviors:
  - name: send_message
    given: Message data
    when: Message sent
    then: Returns delivery status

  - name: create_channel
    given: Channel config
    when: Channel created
    then: Returns new channel

  - name: start_conversation
    given: Channel and protocol
    when: Conversation started
    then: Returns conversation

  - name: negotiate
    given: Agents and proposal
    when: Negotiation executed
    then: Returns agreement or rejection
