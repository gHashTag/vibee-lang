# VIBEE Specification v15930
# Neural Oscillations - Brain rhythms
name: neural_oscillations_v15930
version: "1.0.0"
language: zig
module: neural_oscillations

types:
  FrequencyBand:
    fields:
      delta: String
      theta: String
      alpha: String
      beta: String
      gamma: String

  Oscillation:
    fields:
      frequency: Float
      amplitude: Float
      phase: Float

  PhaseAmplitudeCoupling:
    fields:
      low_freq: Float
      high_freq: Float
      coupling_strength: Float

  OscillationResult:
    fields:
      power_spectrum: String
      dominant_frequency: Float
      phase_coherence: Float

behaviors:
  - name: extract_oscillation
    given: Signal and band
    when: Extraction done
    then: Returns oscillation

  - name: compute_power_spectrum
    given: Signal
    when: Computation done
    then: Returns power spectrum

  - name: measure_pac
    given: Signal
    when: Measurement done
    then: Returns phase amplitude coupling

  - name: analyze_oscillations
    given: Neural signal
    when: Analysis done
    then: Returns oscillation result
