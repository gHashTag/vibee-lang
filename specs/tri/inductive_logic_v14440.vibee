# VIBEE Specification v14440
# Inductive Logic Programming - Learning logical rules
name: inductive_logic_v14440
version: "1.0.0"
language: zig
module: inductive_logic

types:
  ILPSystem:
    fields:
      progol: String
      aleph: String
      metagol: String
      popper: String

  BackgroundKnowledge:
    fields:
      predicates: String
      mode_declarations: String
      constraints: String

  LearnedClause:
    fields:
      head: String
      body: String
      coverage: Float

  ILPResult:
    fields:
      hypothesis: String
      accuracy: Float
      compression: Float

behaviors:
  - name: setup_ilp
    given: Background knowledge
    when: Setup done
    then: Returns ILP system

  - name: learn_clauses
    given: Positive and negative
    when: Learning done
    then: Returns learned clauses

  - name: evaluate_hypothesis
    given: Hypothesis and test
    when: Evaluation done
    then: Returns ILP result

  - name: refine_hypothesis
    given: Current and feedback
    when: Refinement done
    then: Returns refined hypothesis
