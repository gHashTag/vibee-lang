# VIBEE Specification v14860
# Embodied Consciousness - Body-based awareness
name: embodied_consciousness_v14860
version: "1.0.0"
language: zig
module: embodied_consciousness

types:
  BodySchema:
    fields:
      proprioception: String
      interoception: String
      body_image: String

  SelfModel:
    fields:
      bodily_self: String
      minimal_self: String
      narrative_self: String

  EmbodiedState:
    fields:
      body_state: String
      environment: String
      action_possibilities: String

  EmbodimentMetrics:
    fields:
      body_ownership: Float
      agency: Float
      presence: Float

behaviors:
  - name: sense_body
    given: Sensory input
    when: Sensing done
    then: Returns body schema

  - name: model_self
    given: Body schema
    when: Modeling done
    then: Returns self model

  - name: ground_cognition
    given: Abstract concept
    when: Grounding done
    then: Returns embodied meaning

  - name: measure_embodiment
    given: System state
    when: Measurement done
    then: Returns embodiment metrics
