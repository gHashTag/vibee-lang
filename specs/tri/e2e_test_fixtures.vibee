# E2E Test Fixtures
# Setup and teardown helpers
# Test data management

name: e2e_test_fixtures
version: "1.0.0"
language: zig
module: e2e_test_fixtures

types:
  Fixture:
    fields:
      fixture_id: String
      fixture_type: String
      data: Map<String,String>
      scope: String

  BrowserFixture:
    fields:
      browser_type: String
      headless: Bool
      viewport_width: Int
      viewport_height: Int

  PageFixture:
    fields:
      url: String
      wait_until: String
      cookies: List<String>

  DataFixture:
    fields:
      fixture_name: String
      test_data: Map<String,String>

behaviors:
  - name: create_browser_fixture
    given: Browser config
    when: Browser fixture needed
    then: Returns browser fixture

  - name: create_page_fixture
    given: Page config
    when: Page fixture needed
    then: Returns page fixture

  - name: load_data_fixture
    given: Fixture name
    when: Data loading needed
    then: Returns data fixture

  - name: setup_fixture
    given: Fixture definition
    when: Setup needed
    then: Returns setup result

  - name: teardown_fixture
    given: Fixture
    when: Teardown needed
    then: Returns teardown result

  - name: reset_fixture
    given: Fixture
    when: Reset needed
    then: Returns reset result
