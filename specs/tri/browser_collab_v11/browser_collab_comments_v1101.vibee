# VIBEE YOLO MODE XI - browser_collab_comments v1101
# REAL-TIME COLLABORATION - Enhanced
name: browser_collab_comments_v1101
version: "11.0.0"
language: zig
module: browser_collab_comments

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
  yolo_mode: 11

types:
  UserPresence:
    fields:
      user_id: String
      name: String
      avatar: String
      color: String
      cursor_position: String
      last_active: Timestamp

  CursorState:
    fields:
      x: Float
      y: Float
      user_id: String
      visible: Bool

  SelectionRange:
    fields:
      start: Int
      end: Int
      user_id: String
      color: String

  Comment:
    fields:
      id: String
      content: String
      author: String
      position: String
      resolved: Bool
      replies: List<String>

behaviors:
  - name: track_presence
    given: UserPresence
    when: Track
    then: inline comments tracked
  - name: broadcast_cursor
    given: CursorState
    when: Broadcast
    then: Cursor broadcasted
  - name: sync_selection
    given: SelectionRange
    when: Sync
    then: Selection synced
  - name: add_comment
    given: Comment
    when: Add
    then: Comment added
  - name: check_permission
    given: User and action
    when: Check
    then: Permission checked

test_cases:
  - name: test_browser_collab_comments_presence
    input: {user_id: "test"}
    expected: {tracked: true}
  - name: test_browser_collab_comments_cursor
    input: {x: 100, y: 200}
    expected: {broadcasted: true}
  - name: test_browser_collab_comments_selection
    input: {start: 0, end: 10}
    expected: {synced: true}
  - name: test_browser_collab_comments_comment
    input: {content: "test"}
    expected: {added: true}
  - name: test_phi_browser_collab_comments
    input: {phi: 1.618033988749895}
    expected: {golden: true}
