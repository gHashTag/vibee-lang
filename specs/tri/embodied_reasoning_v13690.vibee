# VIBEE Specification v13690
# Embodied Reasoning - Physical world reasoning for robots
name: embodied_reasoning_v13690
version: "1.0.0"
language: zig
module: embodied_reasoning

types:
  ReasoningType:
    fields:
      spatial: String
      physical: String
      causal: String
      affordance: String

  SceneGraph:
    fields:
      objects: String
      relations: String
      affordances: String

  PhysicsInference:
    fields:
      prediction: String
      confidence: Float
      uncertainty: String

  ActionAffordance:
    fields:
      object: String
      possible_actions: String
      success_probability: Float

  ReasoningConfig:
    fields:
      reasoning_type: String
      use_physics_sim: Bool
      max_depth: Int

behaviors:
  - name: build_scene_graph
    given: Perception data
    when: Building done
    then: Returns scene graph

  - name: infer_physics
    given: Scene and action
    when: Inference done
    then: Returns physics inference

  - name: detect_affordances
    given: Object observation
    when: Detection done
    then: Returns action affordance

  - name: plan_with_reasoning
    given: Goal and scene
    when: Planning done
    then: Returns reasoned plan
