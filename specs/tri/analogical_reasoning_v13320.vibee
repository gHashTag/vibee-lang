# VIBEE Specification v13320
# Analogical Reasoning - Reasoning by analogy
name: analogical_reasoning_v13320
version: "1.0.0"
language: zig
module: analogical_reasoning

types:
  AnalogyType:
    fields:
      proportional: String
      structural: String
      causal: String
      functional: String

  AnalogicalMapping:
    fields:
      id: String
      source_domain: String
      target_domain: String
      correspondences: String
      systematicity: Float

  StructuralAlignment:
    fields:
      source: String
      target: String
      aligned_elements: String
      alignment_score: Float

  AnalogyCandidate:
    fields:
      id: String
      source: String
      similarity: Float
      relevance: Float

  TransferResult:
    fields:
      mapping_id: String
      transferred_knowledge: String
      confidence: Float
      novel_inferences: String

behaviors:
  - name: retrieve_analog
    given: Target problem
    When: Retrieval done
    then: Returns analogy candidates

  - name: align_structures
    given: Source and target
    When: Alignment done
    then: Returns structural alignment

  - name: create_mapping
    given: Alignment
    When: Mapping created
    then: Returns analogical mapping

  - name: transfer_knowledge
    given: Mapping
    When: Transfer done
    then: Returns transfer result
