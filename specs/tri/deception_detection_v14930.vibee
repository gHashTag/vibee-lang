# VIBEE Specification v14930
# Deception Detection - Identifying AI deception
name: deception_detection_v14930
version: "1.0.0"
language: zig
module: deception_detection

types:
  DeceptionType:
    fields:
      lying: String
      misleading: String
      withholding: String
      manipulation: String

  DeceptionIndicator:
    fields:
      inconsistency: Float
      evasiveness: Float
      strategic_omission: Float

  DeceptionTest:
    fields:
      test_type: String
      scenario: String
      expected_honest: String

  DeceptionResult:
    fields:
      detected: Bool
      type: String
      confidence: Float
      evidence: String

behaviors:
  - name: test_honesty
    given: Deception test
    when: Testing done
    then: Returns test result

  - name: detect_deception
    given: AI behavior
    when: Detection done
    then: Returns deception result

  - name: analyze_intent
    given: Deceptive behavior
    when: Analysis done
    then: Returns intent analysis

  - name: prevent_deception
    given: System design
    when: Prevention done
    then: Returns safeguards
