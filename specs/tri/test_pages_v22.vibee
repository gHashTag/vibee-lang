name: test_pages_v22
version: "22.6.0"
language: zig
module: test_pages_v22

types:
  TestPage:
    fields:
      name: String
      path: String
      content: String
      elements: List<String>

  PageElement:
    fields:
      selector: String
      tag: String
      text: Option<String>
      clickable: Bool

  TestPageSet:
    fields:
      pages: List<String>
      base_path: String

behaviors:
  - name: create_page_set
    given: Config
    when: Initialize page set
    then: TestPageSet instance

  - name: get_simple_page
    given: TestPageSet
    when: Get simple test page
    then: TestPage

  - name: get_form_page
    given: TestPageSet
    when: Get form test page
    then: TestPage

  - name: get_navigation_page
    given: TestPageSet
    when: Get navigation page
    then: TestPage

  - name: get_dynamic_page
    given: TestPageSet
    when: Get dynamic page
    then: TestPage

  - name: get_page_by_name
    given: TestPageSet and name
    when: Get page by name
    then: TestPage

  - name: list_pages
    given: TestPageSet
    When: List all pages
    then: Page list

  - name: get_element
    given: TestPage and selector
    When: Get element
    then: PageElement

  - name: validate_page
    given: TestPage
    When: Validate page
    then: Validation result

  - name: export_pages
    given: TestPageSet and dir
    When: Export pages
    then: Exported
