# E2E ReAct Agent Tests
# Test full ReAct loop
# Thought-Action-Observation cycle

name: e2e_react_agent_tests
version: "1.0.0"
language: zig
module: e2e_react_agent_tests

types:
  ReActTest:
    fields:
      test_id: String
      task: String
      max_iterations: Int
      expected_success: Bool

  ThoughtTest:
    fields:
      context: String
      expected_reasoning: String

  ActionTest:
    fields:
      thought: String
      expected_action: String
      expected_params: Map<String,String>

  ObservationTest:
    fields:
      action_result: String
      expected_observation: String

  LoopTest:
    fields:
      task: String
      expected_iterations: Int
      expected_answer: String

behaviors:
  - name: test_thought_generation
    given: Context
    when: Thought test
    then: Returns test result

  - name: test_action_selection
    given: Thought
    when: Action test
    then: Returns test result

  - name: test_observation_processing
    given: Action result
    when: Observation test
    then: Returns test result

  - name: test_full_loop
    given: Task
    when: Full loop test
    then: Returns test result

  - name: test_termination
    given: Goal state
    When: Termination test
    then: Returns test result

  - name: test_error_recovery
    given: Error scenario
    when: Recovery test
    then: Returns test result

  - name: test_reflexion
    given: Failed attempt
    when: Reflexion test
    then: Returns test result
