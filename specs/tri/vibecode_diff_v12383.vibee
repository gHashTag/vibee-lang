# vibecode_diff_v12383.vibee - Diff Viewer
# Просмотр различий
# φ² + 1/φ² = 3 | PHOENIX = 999

name: vibecode_diff_v12383
version: "12383.0.0"
language: zig
module: vibecode_diff_v12383

types:
  DiffHunk:
    fields:
      old_start: Int
      old_lines: Int
      new_start: Int
      new_lines: Int
      content: String

  DiffResult:
    fields:
      hunks: List
      additions: Int
      deletions: Int
      file_path: String

  DiffOptions:
    fields:
      context_lines: Int
      ignore_whitespace: Bool
      word_diff: Bool

  InlineDiff:
    fields:
      line_number: Int
      old_text: String
      new_text: String
      changes: List

  DiffNavigation:
    fields:
      current_hunk: Int
      total_hunks: Int
      position: Object

behaviors:
  - name: compute_diff
    given: Old and new content
    when: Diff computation
    then: Return DiffResult

  - name: render_diff
    given: DiffResult and options
    when: Rendering
    then: Return rendered HTML

  - name: navigate_hunk
    given: Direction
    when: Navigation
    then: Return DiffNavigation

  - name: accept_change
    given: Hunk index
    when: Accept
    then: Return updated content

  - name: reject_change
    given: Hunk index
    when: Reject
    then: Return original content

sacred_constants:
  phi: 1.618033988749895
  phoenix: 999
