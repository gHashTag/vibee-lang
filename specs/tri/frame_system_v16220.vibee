name: frame_system_v16220
version: "1.0.0"
language: zig
module: frame_system

types:
  Frame:
    fields:
      name: String
      slots: String
      parent: String
      defaults: String

  Slot:
    fields:
      name: String
      value: String
      facets: String
      constraints: String

  FrameInstance:
    fields:
      frame_type: String
      slot_values: String

  FrameSystem:
    fields:
      frames: String
      instances: String
      inheritance: String

behaviors:
  - name: instantiate_frame
    given: Frame type and values
    when: Fill slots with defaults
    then: Return instance

  - name: inherit_slots
    given: Frame with parent
    when: Traverse hierarchy
    then: Return inherited slots

  - name: match_frame
    given: Partial description
    when: Find matching frames
    then: Return candidates
