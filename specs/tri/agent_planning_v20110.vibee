name: agent_planning_v20110
version: "1.0.0"
language: zig
module: agent_planning_v20110

types:
  Plan:
    fields:
      goal: String
      steps: List<String>
      constraints: List<String>
      estimated_cost: Float

  PlanResult:
    fields:
      success: Bool
      plan: String
      alternatives: List<String>

behaviors:
  - name: plan_hierarchical
    given: "High-level goal"
    when: "Planner decomposes"
    then: "Returns hierarchical plan"

  - name: plan_contingent
    given: "Uncertain environment"
    when: "Planner handles uncertainty"
    then: "Returns contingent plan"

  - name: plan_optimize
    given: "Multiple plans"
    when: "Optimizer selects"
    then: "Returns optimal plan"
