# File Operations Tools Module
# File system as extended context
# Manus insight: Unlimited, persistent memory

name: agent_tool_file
version: "1.0.0"
language: zig
module: agent_tool_file

types:
  FileOperation:
    fields:
      operation_id: String
      operation_type: String
      path: String
      content: Option<String>

  FileInfo:
    fields:
      path: String
      name: String
      size_bytes: Int
      is_directory: Bool
      modified_at: Timestamp

  FileContent:
    fields:
      content_id: String
      path: String
      content: String
      encoding: String
      line_count: Int

  DirectoryListing:
    fields:
      listing_id: String
      path: String
      entries: List<String>
      total_size: Int

  FileSearch:
    fields:
      search_id: String
      pattern: String
      results: List<String>
      total_matches: Int

  FileWatch:
    fields:
      watch_id: String
      path: String
      events: List<String>
      is_active: Bool

behaviors:
  - name: file_read
    given: File path
    when: File reading needed
    then: Returns file content

  - name: file_write
    given: Path and content
    when: File writing needed
    then: Returns write result

  - name: file_append
    given: Path and content
    when: Appending needed
    then: Returns append result

  - name: file_delete
    given: File path
    when: Deletion needed
    then: Returns delete result

  - name: file_list
    given: Directory path
    when: Listing needed
    then: Returns directory listing

  - name: file_search
    given: Search pattern and path
    when: File search needed
    then: Returns search results

  - name: file_move
    given: Source and destination
    When: Moving needed
    then: Returns move result

  - name: file_exists
    given: File path
    when: Existence check needed
    then: Returns existence status
