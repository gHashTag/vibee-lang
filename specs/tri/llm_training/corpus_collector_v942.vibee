# ═══════════════════════════════════════════════════════════════════════════════

name: corpus_collector
version: "9.4.2"
language: zig
module: corpus_collector

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: SourceRepositories
  transformer: CorpusCollector
  result: UnifiedCorpus

types:
  SourceType:
    enum:
      - vibee_specs
      - github_code
      - documentation
      - test_cases

  CollectionConfig:
    fields:
      sources: List<SourceType>
      max_files: Int
      languages: List<String>

  UnifiedCorpus:
    fields:
      total_files: Int
      total_tokens: Int
      languages: List<String>

behaviors:
  - name: collect_vibee_specs
    given: "Specs directory"
    when: "Collection"
    then: "Collected specs"
    pas_pattern: D&C
    test_cases:
      - name: test_collect
        input: '{"path": "specs/tri"}'
        expected: '{"collected": 1425}'

  - name: collect_generated_code
    given: "Output directory"
    when: "Collection"
    then: "Collected code"
    pas_pattern: D&C
    test_cases:
      - name: test_code
        input: '{"path": "trinity/output"}'
        expected: '{"collected": 1300}'

  - name: deduplicate_corpus
    given: "Raw corpus"
    when: "Deduplication"
    then: "Unique corpus"
    pas_pattern: HSH
    test_cases:
      - name: test_dedup
        input: '{"corpus": [...]}'
        expected: '{"unique": [...]}'

  - name: verify_sacred_constants
    given: "Corpus"
    when: "Verification"
    then: "Constants verified"
    pas_pattern: ALG
    test_cases:
      - name: test_phi
        input: '{"phi": 1.618}'
        expected: '{"trinity": 3.0}'

# ═══════════════════════════════════════════════════════════════════════════════
