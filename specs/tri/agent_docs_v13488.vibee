# VIBEE Specification v13488
# Documentation Agent
# KOSCHEI CYCLE 11 - 1000000x SPEEDUP

name: agent_docs
version: "13488"
language: zig
module: agent_docs

types:
  DocsAgent:
    fields:
      id: String
      doc_style: String
      output_format: String
      include_examples: Bool

  DocRequest:
    fields:
      target: String
      doc_type: String
      audience: String
      detail_level: String

  GeneratedDoc:
    fields:
      title: String
      content: String
      sections: List<Object>
      examples: List<String>
      references: List<String>

  APIDoc:
    fields:
      endpoint: String
      method: String
      parameters: List<Object>
      response: Object
      examples: List<Object>

  CodeDoc:
    fields:
      file: String
      functions: List<Object>
      classes: List<Object>
      modules: List<Object>

  DocsMetrics:
    fields:
      docs_generated: Int
      pages_created: Int
      examples_added: Int
      coverage: Float

behaviors:
  - name: generate_api_docs
    given: API endpoints
    when: API documentation requested
    then: OpenAPI-style docs generated

  - name: generate_code_docs
    given: Source code
    when: Code documentation requested
    then: Inline and external docs generated

  - name: generate_readme
    given: Project structure
    when: README requested
    then: Comprehensive README generated

  - name: generate_tutorial
    given: Feature to document
    when: Tutorial requested
    then: Step-by-step tutorial created

  - name: update_changelog
    given: Recent changes
    when: Changelog update requested
    then: Changelog entries added

  - name: generate_examples
    given: API or function
    when: Examples requested
    then: Working examples generated

creation_pattern:
  source: DocRequest
  transformer: DocsAgent
  result: GeneratedDoc
