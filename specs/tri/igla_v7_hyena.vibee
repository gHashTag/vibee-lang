# iGLA v7 Hyena - Long Convolutions
# Paper: arXiv:2302.10866 "Hyena Hierarchy"
# φ² + 1/φ² = 3 | КОЩЕЙ БЕССМЕРТЕН

name: igla_v7_hyena
version: "7.0.0"
language: zig
module: igla_v7_hyena

types:
  HyenaConfig:
    fields:
      d_model: Int
      order: Int
      filter_order: Int
      
  HyenaFilter:
    fields:
      implicit_filter: String
      positional_encoding: String
      
  HyenaOperator:
    fields:
      short_filter: String
      long_conv: String

behaviors:
  - name: hyena_operator
    given: "Input sequence"
    when: "Hyena operator"
    then: "O(n log n) via FFT"
    
  - name: implicit_filter
    given: "Learned filter"
    when: "Implicit parameterization"
    then: "Data-dependent convolution"
    
  - name: fft_convolution
    given: "Long sequence"
    when: "FFT-based conv"
    then: "Subquadratic complexity"
    
  - name: gating_mechanism
    given: "Hyena output"
    when: "Element-wise gating"
    then: "Selective information flow"
    
  - name: hierarchical_hyena
    given: "Multiple orders"
    when: "Stacked operators"
    then: "Increased expressivity"
    
  - name: long_range
    given: "Very long sequences"
    when: "Hyena processing"
    then: "Efficient long-range modeling"
