name: type_directed_v16440
version: "1.0.0"
language: zig
module: type_directed

types:
  TypeSignature:
    fields:
      input_types: String
      output_type: String
      polymorphic: Bool

  Component:
    fields:
      name: String
      signature: String
      implementation: String

  TypedHole:
    fields:
      expected_type: String
      context: String

  TypeDirectedResult:
    fields:
      program: String
      type_correct: Bool
      components_used: String

behaviors:
  - name: synthesize_typed
    given: Type signature and components
    when: Type-guided search
    then: Return well-typed program

  - name: fill_typed_hole
    given: Hole with type context
    when: Find matching components
    then: Return candidates

  - name: compose_components
    given: Components and target type
    when: Type unification
    then: Return composition
