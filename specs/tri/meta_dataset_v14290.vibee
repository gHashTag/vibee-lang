# VIBEE Specification v14290
# Meta-Dataset - Benchmark for meta-learning
name: meta_dataset_v14290
version: "1.0.0"
language: zig
module: meta_dataset

types:
  DatasetSource:
    fields:
      imagenet: String
      omniglot: String
      aircraft: String
      quickdraw: String

  MetaDatasetConfig:
    fields:
      sources: String
      ways_range: String
      shots_range: String

  MetaBatch:
    fields:
      episodes: String
      source_ids: String
      batch_size: Int

  BenchmarkResult:
    fields:
      per_source_acc: String
      mean_acc: Float
      confidence_interval: String

behaviors:
  - name: load_sources
    given: Source list
    When: Loading done
    then: Returns dataset sources

  - name: sample_episode
    given: Config
    when: Sampling done
    then: Returns meta batch

  - name: evaluate_model
    given: Model and episodes
    when: Evaluation done
    then: Returns benchmark result

  - name: cross_domain_eval
    given: Model and held-out
    when: Evaluation done
    then: Returns transfer accuracy
