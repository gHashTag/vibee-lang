# v5603 - Human-Robot Interaction
# ================================
# Взаимодействие человек-робот
# φ² + 1/φ² = 3 | PHOENIX = 999

name: human_robot_interaction
version: "5.6.3"
language: zig
module: human_robot_interaction

constants:
  PHI: 1.618033988749895
  SAFETY_DISTANCE: 0.5
  RESPONSE_TIME: 0.1

types:
  HumanPose:
    fields:
      skeleton: List
      face_landmarks: List
      
  Gesture:
    fields:
      gesture_type: String
      confidence: Float
      
  SpeechCommand:
    fields:
      text: String
      intent: String
      
  SafetyZone:
    fields:
      zone_type: String
      boundaries: List
      
  InteractionState:
    fields:
      human_present: Bool
      attention_on_robot: Bool
      
  RobotResponse:
    fields:
      speech: String
      gesture: String
      action: Object
      
  CollaborativeTask:
    fields:
      task: String
      human_role: String
      robot_role: String
      
  TrustLevel:
    fields:
      trust_score: Float
      history: List

behaviors:
  - name: detect_human
    given: Sensor data
    when: Human detection
    then: Вернуть human pose
    
  - name: recognize_gesture
    given: Human pose sequence
    when: Gesture recognition
    then: Вернуть gesture
    
  - name: understand_speech
    given: Audio input
    when: Speech understanding
    then: Вернуть speech command
    
  - name: ensure_safety
    given: Human pose и robot state
    when: Safety check
    then: Вернуть safety action
    
  - name: generate_response
    given: Interaction state
    when: Response generation
    then: Вернуть robot response
    
  - name: handover_object
    given: Object и human pose
    when: Object handover
    then: Вернуть handover trajectory
    
  - name: collaborative_manipulation
    given: Task и human input
    when: Collaboration
    then: Вернуть collaborative plan
    
  - name: adapt_to_human
    given: Human behavior history
    when: Adaptation
    then: Вернуть adapted policy
