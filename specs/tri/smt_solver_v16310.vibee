name: smt_solver_v16310
version: "1.0.0"
language: zig
module: smt_solver

types:
  SMTFormula:
    fields:
      assertions: String
      logic: String

  Theory:
    fields:
      name: String
      sorts: String
      functions: String
      axioms: String

  SMTResult:
    fields:
      status: String
      model: String
      unsat_core: String

  SMTContext:
    fields:
      theories: String
      solver_state: String

behaviors:
  - name: check_sat
    given: SMT formula
    when: DPLL(T) algorithm
    then: Return satisfiability

  - name: theory_propagation
    given: Partial assignment
    when: Theory solver check
    then: Return implied literals

  - name: get_model
    given: Satisfiable formula
    when: Extract values
    then: Return model
