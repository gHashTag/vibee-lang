# ═══════════════════════════════════════════════════════════════════════════════
# CONFIDENCE CALCULATION
# ═══════════════════════════════════════════════════════════════════════════════

confidence_model:
  formula: "confidence = base_rate × time_factor × gap_factor × ml_boost × evidence_factor"
  
  parameters:
    base_rate: "sum(pattern.success_rate) / num_patterns"
    time_factor: "min(1.0, years_since_improvement / 50)"
    gap_factor: "min(1.0, gap / current_exponent)"
    ml_boost: 1.3  # ML tools available
    evidence_factor: "papers_supporting / papers_total"
    
  calibration:
    historical_accuracy: 0.72  # Based on 200+ paper analysis
    mendeleev_comparison: 0.98  # Target accuracy

