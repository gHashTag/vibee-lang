name: hive_integration
version: "1.0.0"
language: 999
module: ⲥⲓⲥⲧⲉⲙⲁ.ⲭⲁⲓⲃ

creation_pattern:
  source: LocalTask
  transformer: HiveDistributor
  result: DistributedResult

pas_analysis:
  current: "O(n) sequential"
  target: "O(n/p) parallel"
  speedup: "p (workers)"
  confidence: 0.80
  patterns: ["D&C", "PRB"]

components:
  coordinator:
    name: "ⲔⲞⲞⲢⲆⲒⲚⲀⲦⲞⲢ"
    description: "Координация узлов"
  worker:
    name: "ⲢⲀⲂⲞⲦⲚⲒⲔ"
    description: "Исполнитель задач"
  aggregator:
    name: "ⲀⲄⲢⲈⲄⲀⲦⲞⲢ"
    description: "Сборка результатов"

behaviors:
  - name: distribute_task
    given: "Задача для распределения"
    when: "Отправка в Hive"
    then: "Задача распределена по узлам"
  - name: collect_results
    given: "Частичные результаты"
    when: "Агрегация"
    then: "Объединённый результат"
