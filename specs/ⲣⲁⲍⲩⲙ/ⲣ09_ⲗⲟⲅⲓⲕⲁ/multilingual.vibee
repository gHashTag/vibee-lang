# =============================================================================
# КОМПОНЕНТЫ
# =============================================================================

components:
  # Детектор языка
  language_detector:
    name: "ⲆⲈⲦⲈⲔⲦⲞⲢ.ⲀⲌⲨⲔⲀ"
    description: "Автоматическое определение языка"
    accuracy: "99%+ для 100 языков"
    method: "Character n-grams + neural classifier"
  
  # Универсальный токенизатор
  universal_tokenizer:
    name: "ⲦⲞⲔⲈⲚⲒⲌⲀⲦⲞⲢ.ⲨⲚⲒⲂⲈⲢⲤⲀⲖ"
    description: "SentencePiece для всех языков"
    vocab_size: 250000
    method: "Unigram + BPE hybrid"
  
  # Мультиязычный энкодер
  multilingual_encoder:
    name: "ⲈⲚⲔⲞⲆⲈⲢ.ⲘⲨⲖⲦⲒ"
    description: "Единое пространство эмбеддингов"
    dimensions: 1024
    method: "Transformer with language adapters"
  
  # Переводчик
  translator:
    name: "ⲠⲈⲢⲈⲂⲞⲆⲬⲒⲔ"
    description: "Zero-shot перевод между языками"
    pairs: "500 × 500 = 250,000"
    method: "Pivot through universal space"
  
  # Генератор ответов
  response_generator:
    name: "ⲄⲈⲚⲈⲢⲀⲦⲞⲢ.ⲞⲦⲂⲈⲦⲞⲂ"
    description: "Генерация на языке пользователя"
    method: "Language-conditioned decoding"

# =============================================================================
# ПОВЕДЕНИЯ
# =============================================================================

behaviors:
  - name: detect_language
    given: "Текст на любом языке"
    when: "Получен ввод"
    then: "Язык определён с 99%+ точностью"
    pas_optimization: "HSH - быстрый lookup по n-grams"
  
  - name: understand_any_language
    given: "Текст на одном из 500+ языков"
    when: "Обработка запроса"
    then: "Понимание в едином пространстве"
    pas_optimization: "ALG - unified embeddings"
  
  - name: respond_in_user_language
    given: "Понятый запрос"
    when: "Генерация ответа"
    then: "Ответ на языке пользователя"
    pas_optimization: "PRE - language-specific decoders"
  
  - name: translate_on_demand
    given: "Запрос на перевод"
    when: "Пользователь просит перевести"
    then: "Zero-shot перевод через universal space"
    pas_optimization: "TEN - low-rank adapters"

