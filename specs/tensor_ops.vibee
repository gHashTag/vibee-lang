# Tensor Operations - Тензорные операции
# PAS: SIMD + GPU ускорение
# Author: Dmitrii Vasilev
# Version: 1.0.0

name: tensor_ops
version: "1.0.0"
language: 999
module: ⲙⲗ.ⲧⲉⲛⲍⲟⲣⲩ

creation_pattern:
  source: Tensors
  transformer: TensorOps
  result: ResultTensor

pas_analysis:
  current: "Naive O(n³) matmul"
  target: "Strassen/SIMD O(n^2.37)"
  speedup: "3x for large matrices"
  confidence: 0.85
  patterns: ["ALG", "TEN", "D&C"]

components:
  matmul:
    name: "ⲘⲀⲦⲘⲨⲖ"
    description: "Матричное умножение"
  conv:
    name: "ⲔⲞⲚⲂⲞⲖⲨⲤⲒⲀ"
    description: "Свёртка"
  elementwise:
    name: "ⲠⲞⲈⲖⲈⲘⲈⲚⲦⲚⲞ"
    description: "Поэлементные операции"
  reduce:
    name: "ⲢⲈⲆⲨⲔⲤⲒⲀ"
    description: "Редукции (sum, mean, max)"
  broadcast:
    name: "ⲂⲢⲞⲀⲆⲔⲀⲤⲦ"
    description: "Broadcasting"

behaviors:
  - name: matmul
    given: "A[m,k], B[k,n]"
    when: "Умножение"
    then: "C[m,n]"
  - name: conv2d
    given: "Input[b,c,h,w], Kernel[o,c,kh,kw]"
    when: "Свёртка"
    then: "Output[b,o,h',w']"
  - name: softmax
    given: "Tensor + axis"
    when: "Softmax"
    then: "Нормализованный тензор"
