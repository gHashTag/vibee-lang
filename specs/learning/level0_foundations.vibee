# ═══════════════════════════════════════════════════════════════════════════════
# LEVEL 0: FOUNDATIONS - Zig, YAML, Git
# ═══════════════════════════════════════════════════════════════════════════════
#
# Prerequisites for VIBEE development
# Time: 2-4 weeks
#
# φ² + 1/φ² = 3 | PHOENIX = 999
#
# ═══════════════════════════════════════════════════════════════════════════════

name: level0_foundations
version: "1.0.0"
language: zig
module: foundations

sacred_constants:
  phi: 1.618033988749895
  trinity: 3.0
  phoenix: 999

creation_pattern:
  source: Beginner
  transformer: FoundationsTraining
  result: ZigYamlGitProficient

# ═══════════════════════════════════════════════════════════════════════════════
# TYPES
# ═══════════════════════════════════════════════════════════════════════════════

types:
  - name: ZigSkill
    description: "Zig programming skill level"
    fields:
      - name: syntax_knowledge
        type: Int
      - name: memory_management
        type: Int
      - name: testing_ability
        type: Int
      - name: error_handling
        type: Int

  - name: YamlSkill
    description: "YAML format skill level"
    fields:
      - name: basic_syntax
        type: Int
      - name: nested_structures
        type: Int
      - name: lists_and_maps
        type: Int

  - name: GitSkill
    description: "Git version control skill level"
    fields:
      - name: basic_commands
        type: Int
      - name: branching
        type: Int
      - name: hooks
        type: Int

  - name: FoundationLevel
    description: "Overall foundation level"
    fields:
      - name: zig
        type: ZigSkill
      - name: yaml
        type: YamlSkill
      - name: git
        type: GitSkill
      - name: total_score
        type: Int

# ═══════════════════════════════════════════════════════════════════════════════
# BEHAVIORS
# ═══════════════════════════════════════════════════════════════════════════════

behaviors:
  - name: learn_zig_basics
    given: "New developer with programming experience"
    when: "Zig basics tutorial is completed"
    then: "Developer can write basic Zig programs"
    pas_pattern: PRE
    test_cases:
      - name: test_hello_world
        input: '{"code": "pub fn main() void {}"}'
        expected: '{"compiles": true}'
      - name: test_variables
        input: '{"code": "const x: i32 = 42;"}'
        expected: '{"compiles": true}'

  - name: learn_zig_testing
    given: "Developer knows Zig basics"
    when: "Testing tutorial is completed"
    then: "Developer can write and run Zig tests"
    pas_pattern: PRE
    test_cases:
      - name: test_simple_test
        input: '{"code": "test \"example\" { try std.testing.expect(true); }"}'
        expected: '{"passes": true}'

  - name: learn_yaml_syntax
    given: "Developer needs to write specs"
    when: "YAML tutorial is completed"
    then: "Developer can write valid YAML"
    pas_pattern: PRE
    test_cases:
      - name: test_basic_yaml
        input: '{"yaml": "name: test\\nversion: 1.0.0"}'
        expected: '{"valid": true}'

  - name: learn_git_workflow
    given: "Developer needs version control"
    when: "Git tutorial is completed"
    then: "Developer can use git for VIBEE development"
    pas_pattern: PRE
    test_cases:
      - name: test_commit
        input: '{"command": "git commit -m \"test\""}'
        expected: '{"success": true}'

  - name: assess_foundation_level
    given: "Developer completed all tutorials"
    when: "Assessment is run"
    then: "Return foundation level score"
    pas_pattern: MLS
    test_cases:
      - name: test_full_assessment
        input: '{"zig": 80, "yaml": 90, "git": 85}'
        expected: '{"total": 255, "passed": true}'

# ═══════════════════════════════════════════════════════════════════════════════
# EXERCISES
# ═══════════════════════════════════════════════════════════════════════════════

exercises:
  - name: zig_hello_world
    description: "Write a hello world program in Zig"
    difficulty: 1
    expected_time: "10 minutes"

  - name: zig_fibonacci
    description: "Implement Fibonacci function with tests"
    difficulty: 2
    expected_time: "30 minutes"

  - name: yaml_spec_creation
    description: "Create a .vibee specification file"
    difficulty: 2
    expected_time: "20 minutes"

  - name: git_feature_branch
    description: "Create feature branch and merge"
    difficulty: 2
    expected_time: "15 minutes"

