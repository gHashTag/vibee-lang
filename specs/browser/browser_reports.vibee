# VIBEE Browser Reports v0.0.1
name: browser_reports
version: "0.0.1"
language: zig
module: browser_reports

types:
  Report:
    fields:
      id: String
      title: String
      sections: List<ReportSection>
      charts: List<Chart>
      generated_at: Timestamp

  ReportSection:
    fields:
      title: String
      content: String
      order: Int

  Chart:
    fields:
      type: String
      title: String
      data: Object
      options: Object

  ExportOptions:
    fields:
      format: String
      include_charts: Bool
      styling: Object

behaviors:
  - name: create_report
    given: "Data and template"
    when: "Create"
    then: "Return report"

  - name: add_chart
    given: "Report and chart data"
    when: "Add"
    then: "Insert chart"

  - name: generate_comparison_table
    given: "Items to compare"
    when: "Generate"
    then: "Return comparison table"

  - name: export_pdf
    given: "Report"
    when: "Export"
    then: "Return PDF"

  - name: export_markdown
    given: "Report"
    when: "Export"
    then: "Return Markdown"

  - name: share_report
    given: "Report and recipients"
    when: "Share"
    then: "Send report"

test_cases:
  - name: test_report_creation
    input: { title: "Research Report" }
    expected: { created: true }
  - name: test_chart_generation
    input: { type: "bar", data: [1,2,3] }
    expected: { chart_created: true }
