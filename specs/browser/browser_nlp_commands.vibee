# VIBEE Browser NLP Commands v0.0.1
name: browser_nlp_commands
version: "0.0.1"
language: zig
module: browser_nlp_commands

types:
  NLCommand:
    fields:
      raw_text: String
      intent: String
      entities: Object
      confidence: Float

  CommandResult:
    fields:
      command: String
      success: Bool
      response: String
      actions_taken: List<String>

  ConversationContext:
    fields:
      history: List<String>
      current_page: String
      user_preferences: Object

behaviors:
  - name: parse_command
    given: "Natural language input"
    when: "Parse"
    then: "Return structured command"

  - name: execute_command
    given: "Parsed command"
    when: "Execute"
    then: "Perform browser action"

  - name: suggest_commands
    given: "Partial input"
    when: "Autocomplete"
    then: "Return suggestions"

  - name: explain_action
    given: "Action"
    when: "Explain"
    then: "Return human-readable explanation"

  - name: handle_ambiguity
    given: "Ambiguous command"
    when: "Clarify"
    then: "Ask clarifying question"

test_cases:
  - name: test_parse_click
    input: { text: "click the login button" }
    expected: { intent: "click", target: "login button" }
  - name: test_parse_navigate
    input: { text: "go to google" }
    expected: { intent: "navigate", url: "google.com" }
