{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../../",
    "distDir": "../../"
  },
  "package": {
    "productName": "TRINITY",
    "version": "24.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$DOCUMENT/*", "$DOWNLOAD/*", "$HOME/.trinity/*"]
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "notification": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true,
        "create": true,
        "center": true,
        "setTitle": true,
        "setFullscreen": true,
        "setMinSize": true,
        "setMaxSize": true,
        "setResizable": true,
        "setAlwaysOnTop": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Education",
      "copyright": "© 2024 TRINITY Project",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.trinity.app",
      "longDescription": "TRINITY - φ-Optimized Data Structures Visualization. Scientific exploration of Golden Ratio mathematics applied to computer science.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "φ-Optimized Data Structures",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' https://trinity-vibee.fly.dev wss://trinity-vibee.fly.dev"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://trinity-vibee.fly.dev/api/updates/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": ""
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "TRINITY v24.φ",
        "width": 1440,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "fileDropEnabled": true,
        "visible": true
      }
    ]
  }
}
