{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "999 Language",
  "scopeName": "source.999",
  "fileTypes": ["999"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.999",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.999",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.999",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "keyword.control.999",
          "match": "\\b(Ⲕ|Ⲉ|Ⲏ|Ⲙ|Ⲇ|Ⲯ|Ⲑ|Ⲟ)\\b"
        },
        {
          "name": "constant.language.999",
          "match": "\\b(Ⲁ|Ⲃ|Ⲅ|Ⲅ|Ⲅ)\\b"
        },
        {
          "name": "constant.character.entity.999",
          "match": "[Ⲁ-Ⲡ]"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.999",
          "match": "\\b(ⲆⲀ|ⲆⲂ|ⲒⲚ|ⲒⲘⲨ|ⲂⲀ)\\b"
        },
        {
          "name": "keyword.operator.999",
          "match": "\\b(Ⲁ|ⲒⲈ)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.999",
          "match": "\\b(Ⲥ|Ⲅ|Ⲃ|Ⲥ\\?|\\[Ⲥ\\]|\\[Ⲕⲟⲙⲙⲓⲧ\\]|\\{Ⲥ:\\s*Ⲥ\\})\\b"
        },
        {
          "name": "storage.type.builtin.999",
          "match": "\\b(Ⲥ|Ⲅ|Ⲃ)(?:\\[|\\{|\\?)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.999",
          "match": "(?<=Ⲇ\\s)\\w+(?=\\s*\\()"
        },
        {
          "name": "support.function.builtin.999",
          "match": "\\b(ⲡⲉⲭⲁⲧⲓ)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.999",
          "match": "(ⲆⲀ|ⲆⲂ|ⲂⲀ|Ⲁ|ⲒⲚ|ⲒⲈ|ⲒⲘⲨ)"
        },
        {
          "name": "punctuation.operator.999",
          "match": "[(){},\\[\\]:]"
        },
        {
          "name": "punctuation.accessor.999",
          "match": "\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.999",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.999",
          "match": "\\b[ⲁ-ⲧⲁ-ⲣ_][ⲁ-ⲧⲁ-ⲣ_0-9]*\\b"
        }
      ]
    }
  }
}
