{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "VIBEE",
  "scopeName": "source.vibee",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.vibee",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.vibee",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vibee",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vibee",
          "match": "\\b(if|else|for|while|match|case|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.vibee",
          "match": "\\b(fn|let|var|const|type|struct|enum|import|pub|test)\\b"
        },
        {
          "name": "keyword.operator.vibee",
          "match": "\\b(in|as|and|or|not)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vibee",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vibee",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.vibee",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.vibee",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.vibee",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.vibee",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.vibee",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.float.vibee",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.vibee",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.vibee",
          "match": "\\b(Int|Float|Bool|String|Void|Char)\\b"
        },
        {
          "name": "support.type.builtin.vibee",
          "match": "\\b(Array|Option|Result|HashMap|HashSet)\\b"
        },
        {
          "name": "entity.name.type.vibee",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vibee",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.vibee",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.vibee",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.vibee",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.vibee",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.arrow.vibee",
          "match": "(->|=>)"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.vibee",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.vibee",
          "match": "\\b(None|Some)\\b"
        }
      ]
    }
  }
}
