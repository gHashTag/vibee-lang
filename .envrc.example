# Automatically load environment variables when entering directory
# Install direnv: https://direnv.net/
#
# Setup:
# 1. Copy this file: cp .envrc.example .envrc
# 2. Fill in your values
# 3. Run: direnv allow

# Telegram MTProto credentials (from my.telegram.org)
export TELEGRAM_SESSION_ID=your_session_id
export TELEGRAM_API_ID=your_api_id
export TELEGRAM_API_HASH=your_api_hash

# OpenRouter API key (for LLM)
export OPENROUTER_API_KEY=sk-or-v1-xxx

# Neon PostgreSQL (IMPORTANT: use direct endpoint, NOT pooler!)
# Correct:   ep-xxx.region.aws.neon.tech
# Wrong:     ep-xxx-pooler.region.aws.neon.tech (causes socket errors)
export DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# VIBEE API key (for bridge authentication)
export VIBEE_API_KEY=your_api_key

# Bridge URL
export VIBEE_BRIDGE_URL=https://vibee-telegram-bridge.fly.dev

echo "âœ“ VIBEE environment variables loaded"
