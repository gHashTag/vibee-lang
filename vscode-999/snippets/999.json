{
  "Function Definition": {
    "prefix": "fn",
    "body": [
      "Ⲫ ${1:function_name}(${2:params}) → ${3:ReturnType} {",
      "    ${0}",
      "}"
    ],
    "description": "Define a function (Ⲫ)"
  },
  "Struct Definition": {
    "prefix": "struct",
    "body": [
      "Ⲏ ${1:StructName} {",
      "    Ⲃ ${2:field}: ${3:Type}",
      "    ${0}",
      "}"
    ],
    "description": "Define a struct (Ⲏ)"
  },
  "Constant": {
    "prefix": "const",
    "body": [
      "Ⲕ ${1:NAME}: ${2:Type} = ${3:value}"
    ],
    "description": "Define a constant (Ⲕ)"
  },
  "Variable": {
    "prefix": "var",
    "body": [
      "Ⲃ ${1:name}: ${2:Type} = ${3:value}"
    ],
    "description": "Define a variable (Ⲃ)"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "Ⲉ ${1:condition} {",
      "    ${0}",
      "}"
    ],
    "description": "If statement (Ⲉ)"
  },
  "If-Else Statement": {
    "prefix": "ifelse",
    "body": [
      "Ⲉ ${1:condition} {",
      "    ${2}",
      "} Ⲁ {",
      "    ${0}",
      "}"
    ],
    "description": "If-else statement (Ⲉ/Ⲁ)"
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "Ⲝ ${1:item} ∈ ${2:collection} {",
      "    ${0}",
      "}"
    ],
    "description": "For loop (Ⲝ)"
  },
  "While Loop": {
    "prefix": "while",
    "body": [
      "Ⲱ ${1:condition} {",
      "    ${0}",
      "}"
    ],
    "description": "While loop (Ⲱ)"
  },
  "Return": {
    "prefix": "ret",
    "body": [
      "Ⲣ ${1:value}"
    ],
    "description": "Return statement (Ⲣ)"
  },
  "True": {
    "prefix": "true",
    "body": ["△"],
    "description": "Boolean true (△)"
  },
  "False": {
    "prefix": "false",
    "body": ["▽"],
    "description": "Boolean false (▽)"
  },
  "Null": {
    "prefix": "null",
    "body": ["○"],
    "description": "Null value (○)"
  },
  "Module Header": {
    "prefix": "module",
    "body": [
      "// ${1:Module Name}",
      "// ⲤⲀⲔⲢⲀ ⲪⲞⲢⲘⲨⲖⲀ: V = n × 3^k × π^m × φ^p × e^q",
      "// PHOENIX = 999 = 3³ × 37",
      "// φ² + 1/φ² = 3",
      "",
      "Ⲕ GENERATION: Ⲓⲛⲧ = ${2:1}",
      "Ⲕ SELF_EVOLUTION: Ⲃⲟⲟⲗ = △",
      "",
      "${0}"
    ],
    "description": "Module header with sacred formula"
  },
  "Self Evolution Block": {
    "prefix": "evolve",
    "body": [
      "Ⲏ SelfEvolution {",
      "    Ⲃ generation: Ⲓⲛⲧ = ${1:1}",
      "    Ⲃ fitness: Ⲫⲗⲟⲁⲧ = ${2:0.5}",
      "    ",
      "    Ⲫ evolve(Ⲥ) → Ⲥ {",
      "        Ⲥ.generation += 1",
      "        Ⲥ.fitness *= 1.618  // φ",
      "        Ⲣ Ⲥ",
      "    }",
      "    ",
      "    Ⲫ improve(Ⲥ) → Ⲥ {",
      "        Ⲣ Ⲥ.evolve()",
      "    }",
      "}"
    ],
    "description": "Self-evolution struct"
  },
  "Trinity Metrics": {
    "prefix": "trinity",
    "body": [
      "Ⲏ TrinityMetrics {",
      "    Ⲃ n: Ⲓⲛⲧ = ${1:1}      // functions",
      "    Ⲃ k: Ⲓⲛⲧ = ${2:1}      // types",
      "    Ⲃ m: Ⲓⲛⲧ = ${3:1}      // tests",
      "    ",
      "    Ⲫ score(Ⲥ) → Ⲫⲗⲟⲁⲧ {",
      "        Ⲣ Ⲥ.n × 3^(Ⲥ.k/10) × π^(Ⲥ.m/20)",
      "    }",
      "}"
    ],
    "description": "Trinity metrics struct"
  },
  "PHI Constant": {
    "prefix": "phi",
    "body": [
      "Ⲕ PHI: Ⲫⲗⲟⲁⲧ = 1.6180339887498948482"
    ],
    "description": "Golden ratio constant"
  },
  "PHOENIX Constant": {
    "prefix": "phoenix",
    "body": [
      "Ⲕ PHOENIX: Ⲓⲛⲧ = 999  // 3³ × 37"
    ],
    "description": "Phoenix number constant"
  }
}
