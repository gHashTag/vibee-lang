{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "VIBEE",
  "scopeName": "source.vibee",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#sacred" },
    { "include": "#types" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.vibee",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vibee",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vibee",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.vibee",
          "begin": "'",
          "end": "'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.vibee",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vibee",
          "match": "\\b(name|version|language|module|creation_pattern|source|transformer|result|behaviors|given|when|then|test_cases|input|expected|types|constants|metrics)\\b"
        },
        {
          "name": "keyword.other.vibee",
          "match": "\\b(sacred_formula|golden_identity|phoenix|trinity_score|self_evolution)\\b"
        },
        {
          "name": "constant.language.boolean.vibee",
          "match": "\\b(true|false|enabled|disabled)\\b"
        }
      ]
    },
    "sacred": {
      "patterns": [
        {
          "name": "constant.other.sacred.vibee",
          "match": "(PHOENIX|PHI|TRINITY|GOLDEN_IDENTITY)"
        },
        {
          "name": "constant.numeric.sacred.vibee",
          "match": "\\b(999|3|1\\.618[0-9]*)\\b"
        },
        {
          "name": "string.other.formula.vibee",
          "match": "(φ²|π|×|³)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.vibee",
          "match": "\\b(zig|python|rust|go|gleam|typescript|wasm)\\b"
        },
        {
          "name": "entity.name.type.coptic.vibee",
          "match": "(Ⲓⲛⲧ|Ⲫⲗⲟⲁⲧ|Ⲥⲧⲣⲓⲛⲅ|Ⲃⲟⲟⲗ|Ⲗⲓⲥⲧ|Ⲙⲁⲡ|Ⲣⲉⲥⲩⲗⲧ|Ⲟⲡⲧⲓⲟⲛ)"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.vibee",
          "match": "(→|:)"
        },
        {
          "name": "punctuation.definition.list.vibee",
          "match": "^\\s*-\\s"
        }
      ]
    }
  }
}
