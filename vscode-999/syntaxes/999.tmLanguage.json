{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Language 999",
  "scopeName": "source.999",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#ternary" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.999",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.999",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.999",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "ternary": {
      "patterns": [
        {
          "name": "constant.language.true.999",
          "match": "△|TRUE"
        },
        {
          "name": "constant.language.unknown.999",
          "match": "○|UNKNOWN|NULL"
        },
        {
          "name": "constant.language.false.999",
          "match": "▽|FALSE"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.999",
          "match": "\\b(Ⲉ|Ⲝ|Ⲣ|if|else|loop|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.999",
          "match": "\\b(Ⲫ|◬|Ⲏ|⬡|⬢|Ⲕ|◇|Ⲃ|Ⲯ|func|struct|enum|const|var|import)\\b"
        },
        {
          "name": "keyword.other.999",
          "match": "\\b(Ⲥ|self|test|⊡)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.999",
          "match": "\\b(Ⲧⲉⲝⲧ|Ⲓⲛⲧ|Ⲫⲗⲟⲁⲧ|Ⲃⲟⲟⲗ|Ⲁⲛⲩ|Ⲙⲁⲡ|Trit|Int|Float|Bool|String|List|Map|Any)\\b"
        },
        {
          "name": "support.class.999",
          "match": "\\b(SelfEvolution|TrinityMetrics|FormalVerifier|ExternalOracle|Tekum)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.999",
          "match": "\\b(trit_and|trit_or|trit_not|trit_implies|trit_consensus|trit_majority)\\b"
        },
        {
          "name": "entity.name.function.999",
          "match": "\\b(cache_get|cache_set|cache_clear|parallel_map|parallel_filter)\\b"
        },
        {
          "name": "entity.name.function.999",
          "match": "\\b(evolve|improve|verify|validate)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.999",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.999",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.999",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.999",
          "match": "=|\\+=|-=|\\*=|/="
        },
        {
          "name": "keyword.operator.arrow.999",
          "match": "→|->|⟵"
        },
        {
          "name": "keyword.operator.special.999",
          "match": "∈|⊛|⊜!|⊜|⊝"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.999",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.999",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.999",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
