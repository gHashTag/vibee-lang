# ============================================
# EVOLVER 999 - Конфигурация Сервиса
# Паттерн: n × 3^k × π^m
# ============================================

[general]
# Целевая директория для мониторинга
target = /workspaces/vibee-lang/999

# Уровень логирования: debug, info, warn, error
log_level = info

# Файл логов
log_file = /tmp/evolver-999.log

# PID файл
pid_file = /tmp/evolver-999.pid

[evolution]
# Порог качества для автоисправления (0.0 - 1.0)
# Файлы с качеством ниже этого порога будут исправлены
quality_threshold = 0.6

# Режим исправления:
#   disabled   - только мониторинг, без исправлений
#   suggest    - предлагать исправления в логах
#   auto-minor - автоматически исправлять мелкие проблемы
#   auto-all   - автоматически исправлять все проблемы
fix_mode = auto-minor

# Только безопасные исправления (лексические замены)
# Если false - также применяются структурные изменения
safe_only = true

# Автоматический git commit после исправлений
auto_commit = false

# Максимальное количество поколений эволюции
max_generations = 27

[watcher]
# Интервал проверки изменений файлов (миллисекунды)
poll_interval = 1000

# Задержка для группировки событий (миллисекунды)
# Предотвращает множественные срабатывания при быстрых изменениях
debounce = 300

# Паттерны файлов для мониторинга
patterns = *.999, *.md, *.vibee

# Игнорируемые директории и файлы
ignore = .git, node_modules, __pycache__, .cache, zig-out, *.bak

# Рекурсивный мониторинг поддиректорий
recursive = true

[daemon]
# Интервал полного сканирования всех файлов (секунды)
full_scan_interval = 300

# Интервал проверки консистентности между файлами (секунды)
consistency_interval = 600

# Автоматический перезапуск при критических ошибках
auto_restart = true

# Максимальное количество перезапусков перед остановкой
max_restarts = 3

[trinity]
# Параметры формулы эволюции: E(k, m, n) = n × 3^k × π^m

# Базовый множитель n (обычно 1 или 37)
base_n = 1

# Начальное поколение k
initial_k = 0

# Фактор трансцендентности m (степень π)
pi_factor = 0

# Целевое качество (0.999 = 99.9%)
target_quality = 0.999

# ============================================
# ПРИМЕРЫ ЗНАЧЕНИЙ ФОРМУЛЫ:
#
# E(0, 0, 1) = 1        # Начальное состояние
# E(1, 0, 1) = 3        # Первое поколение
# E(2, 0, 1) = 9        # Второе поколение
# E(3, 0, 1) = 27       # Тридевятое
# E(3, 0, 37) = 999     # Полное число
# E(2, 1, 1) = 9π ≈ 28  # С трансцендентностью
# ============================================
