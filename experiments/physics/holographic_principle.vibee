    println("  A_P = l_P² = {} м²", A_PLANCK)
    
    println("\n▸ Площадь на 1 бит:")
    println("  A_bit = l_P² × ln(2) = {} м²", A_PLANCK * ln(2.0))
    println("  A_bit = l_P² × φ⁵/16 = {} м²", AREA_PER_BIT)
    
    println("\n▸ Горизонт Хаббла:")
    println("  r_H = {} м", hubble_radius())
    println("  A_H = {} м²", hubble_area())
    println("  S_H = {} Дж/К", hubble_entropy())
    println("  N_bits = {}", hubble_bits())
    
    println("\n▸ Энтропия Вселенной:")
    println("  S_U ≈ φ^{} k", UNIVERSE_ENTROPY_PHI_POWER)
}

