+// Sacred constants
+constexpr double kPhi = 1.618033988749895;
+constexpr double kPhiInverse = 0.618033988749895;
+constexpr double kPhiSquared = 2.618033988749895;
+constexpr double kTrinity = 3.0;  // φ² + 1/φ² = 3
+constexpr int kPhoenix = 999;
+
+// Snap threshold in pixels
+constexpr int kSnapThreshold = 25;
