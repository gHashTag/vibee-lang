+// Copyright 2026 VIBEE. All rights reserved.
+// φ² + 1/φ² = 3 | PHOENIX = 999
+
+#include "chrome/browser/ui/views/frame/vibee_phi_layout.h"
+
+#include <cmath>
+
+namespace vibee {
+
+VibeePhiLayout::VibeePhiLayout() = default;
+VibeePhiLayout::~VibeePhiLayout() = default;
+
+void VibeePhiLayout::Layout(views::View* host) {
+  if (host->children().size() < 2) return;
+
+  const gfx::Rect bounds = host->GetContentsBounds();
+  const int total_width = bounds.width();
+  
+  if (split_position_ == 0) {
+    // Initialize to φ ratio
+    split_position_ = static_cast<int>(total_width * kPhiInverse);
+  }
+
+  // Layout first child (main content)
+  views::View* main_view = host->children()[0];
+  main_view->SetBounds(bounds.x(), bounds.y(), 
+                       split_position_, bounds.height());
+
+  // Layout second child (sidebar)
+  views::View* sidebar = host->children()[1];
+  sidebar->SetBounds(bounds.x() + split_position_, bounds.y(),
+                     total_width - split_position_, bounds.height());
+}
+
+gfx::Size VibeePhiLayout::GetPreferredSize(const views::View* host) const {
+  return gfx::Size(1280, 720);  // Default size
+}
+
+void VibeePhiLayout::SetSplitPosition(int position) {
+  split_position_ = position;
+}
+
+int VibeePhiLayout::SnapToPhiPoint(int position, int total_width) const {
+  auto snap_points = GetSnapPoints(total_width);
+  
+  for (int snap : snap_points) {
+    if (std::abs(position - snap) < kSnapThreshold) {
+      return snap;
+    }
+  }
+  
+  return position;
+}
+
+std::vector<int> VibeePhiLayout::GetSnapPoints(int total_width) const {
+  return {
+    static_cast<int>(total_width * kPhiInverse),      // 0.618
+    static_cast<int>(total_width * (1.0 - kPhiInverse)),  // 0.382
+    total_width / 2,                                   // 0.5
+    static_cast<int>(total_width * 0.75),             // 0.75
+    static_cast<int>(total_width * 0.25)              // 0.25
+  };
+}
+
+void VibeePhiLayout::ResetToPhiRatio(int total_width) {
+  split_position_ = static_cast<int>(total_width * kPhiInverse);
+  mode_ = SplitMode::kPhiRatio;
+}
+
+}  // namespace vibee
