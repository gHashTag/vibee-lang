+// φ-based layout manager for browser panels
+class VibeePhiLayout : public views::LayoutManager {
+ public:
+  enum class SplitMode {
+    kPhiRatio,      // 61.8% / 38.2%
+    kInverseRatio,  // 38.2% / 61.8%
+    kEqual,         // 50% / 50%
+    kCustom
+  };
+
+  VibeePhiLayout();
+  ~VibeePhiLayout() override;
+
+  // LayoutManager overrides
+  void Layout(views::View* host) override;
+  gfx::Size GetPreferredSize(const views::View* host) const override;
