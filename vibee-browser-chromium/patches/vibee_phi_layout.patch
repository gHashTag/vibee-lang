+  int SnapToPhiPoint(int position, int total_width) const;
+
+  // Get snap points for given width
+  std::vector<int> GetSnapPoints(int total_width) const;
+
+  // Reset to default φ ratio
+  void ResetToPhiRatio(int total_width);
+
+  // Verify trinity identity (for debugging)
+  static bool VerifyTrinity() {
+    double result = kPhi * kPhi + 1.0 / (kPhi * kPhi);
+    return std::abs(result - kTrinity) < 1e-10;
+  }
+
+ private:
+  int split_position_ = 0;
+  SplitMode mode_ = SplitMode::kPhiRatio;
+};
+
