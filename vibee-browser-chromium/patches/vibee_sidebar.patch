+// Copyright 2026 VIBEE. All rights reserved.
+// φ² + 1/φ² = 3 | PHOENIX = 999
+
+#include "chrome/browser/ui/views/side_panel/vibee_side_panel.h"
+
+#include "base/strings/utf_string_conversions.h"
+#include "ui/views/layout/fill_layout.h"
+
+namespace vibee {
+
+BEGIN_METADATA(VibeeSidePanel)
+END_METADATA
+
+VibeeSidePanel::VibeeSidePanel(content::BrowserContext* browser_context) {
+  SetLayoutManager(std::make_unique<views::FillLayout>());
+  
+  // Create WebView for chat UI
+  chat_webview_ = AddChildView(
+      std::make_unique<views::WebView>(browser_context));
+  
+  // Load VIBEE chat HTML
+  chat_webview_->LoadInitialURL(GURL("chrome://vibee-chat/"));
+  
+  InitializeChat();
+}
+
+VibeeSidePanel::~VibeeSidePanel() = default;
+
+void VibeeSidePanel::InitializeChat() {
+  // Initialize AI connection
+  // API key from settings or environment
+  api_key_ = GetVibeeSetting("ai_api_key");
+}
+
+void VibeeSidePanel::SendMessage(const std::u16string& message) {
+  if (is_streaming_) return;
+  
+  is_streaming_ = true;
+  
+  // Send to AI API
+  auto request = CreateAIRequest(base::UTF16ToUTF8(message));
+  
+  // Stream response
+  network_service_->SendRequest(
+      std::move(request),
+      base::BindRepeating(&VibeeSidePanel::OnStreamChunk,
+                          base::Unretained(this)),
+      base::BindOnce(&VibeeSidePanel::OnMessageReceived,
+                     base::Unretained(this)));
+}
+
+void VibeeSidePanel::OnStreamChunk(const std::string& chunk) {
+  // Update chat UI with streaming chunk
+  chat_webview_->ExecuteJavaScript(
+      base::UTF8ToUTF16("appendChunk('" + chunk + "')"));
+}
+
+void VibeeSidePanel::OnMessageReceived(const std::string& response) {
+  is_streaming_ = false;
+  
+  // Finalize message in UI
+  chat_webview_->ExecuteJavaScript(
+      base::UTF8ToUTF16("finalizeMessage()"));
+}
+
+}  // namespace vibee
