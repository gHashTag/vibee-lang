const PI: Float = 3.14159

fn add(a: Int, b: Int) -> Int {
    return a + b
}

fn abs(x: Float) -> Float {
    if x < 0.0 {
        return -x
    }
    return x
}

fn factorial(n: Int) -> Int {
    if n <= 1 {
        return 1
    }
    return n * factorial(n - 1)
}

fn main() {
    let result = add(2, 3)
    let pi_abs = abs(-PI)
    let fact5 = factorial(5)
}
